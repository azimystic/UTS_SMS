@{
    ViewData["Title"] = "Create Substitution";
    var classes = ViewData["Classes"] as IEnumerable<Class>;
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">ðŸ”„ Create Substitution</h1>
            <p class="text-neutral-600 mt-2">Select class, section, and date to view timetable and assign substitute</p>
        </div>

        <!-- Selection Panel -->
        <div class="bg-white rounded-2xl shadow-sms-xl p-6 mb-8">
            <h2 class="text-xl font-semibold text-primary-800 mb-4">Select Class, Section & Date</h2>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Class</label>
                    <select id="classSelect" class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                        <option value="">Select Class</option>
                        @if (classes != null)
                        {
                            foreach (var cls in classes)
                            {
                                <option value="@cls.Id">@cls.Name</option>
                            }
                        }
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Section</label>
                    <select id="sectionSelect" class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" disabled>
                        <option value="">Select Class First</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Date</label>
                    <input type="date" id="dateSelect" class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <div class="flex items-end">
                    <button type="button" id="loadTimetableBtn" class="w-full bg-primary-500 hover:bg-primary-600 text-white px-6 py-2 rounded-lg transition-all duration-300">
                        Load Timetable
                    </button>
                </div>
            </div>
        </div>

        <!-- Timetable Display -->
        <div id="timetableSection" class="hidden bg-white rounded-2xl shadow-sms-xl p-6 mb-8">
            <h2 class="text-xl font-semibold text-primary-800 mb-4" id="timetableHeader">Timetable</h2>
            <div id="timetableContent" class="overflow-x-auto">
                <!-- Timetable will be loaded here -->
            </div>
        </div>
    </div>
</div>

<!-- Assign Substitute Modal -->
<div id="assignModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div class="p-6 border-b border-primary-200">
            <div class="flex justify-between items-center">
                <h3 class="text-2xl font-bold text-primary-800">Assign Substitute</h3>
                <button type="button" id="closeModalBtn" class="text-neutral-500 hover:text-neutral-700">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
        <div class="p-6">
            <div id="slotInfo" class="bg-neutral-50 p-4 rounded-lg mb-6">
                <!-- Slot information will be loaded here -->
            </div>
            
            <form id="substitutionForm" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="timetableSlotId" name="timetableSlotId">
                <input type="hidden" id="date" name="date">
                
                <div class="mb-4">
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Select Substitute Employee *</label>
                    <select id="substituteEmployeeId" name="substituteEmployeeId" required class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                        <option value="">Loading...</option>
                    </select>
                    <p class="text-xs text-neutral-500 mt-1">Available employees who are free during this time slot</p>
                </div>
                
                <div class="mb-6">
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Reason</label>
                    <textarea name="reason" rows="3" class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" placeholder="Optional: Reason for substitution"></textarea>
                </div>
                
                <div class="flex justify-end space-x-4">
                    <button type="button" id="cancelBtn" class="px-6 py-2 border border-neutral-300 rounded-lg text-neutral-700 hover:bg-neutral-50 transition-colors">
                        Cancel
                    </button>
                    <button type="submit" class="bg-gradient-primary hover:shadow-sms-lg text-white px-6 py-2 rounded-lg transition-all duration-300">
                        Create Substitution
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            let selectedSlotId = null;
            let selectedDate = null;

            // Dynamic Section Loading based on Class selection
            $('#classSelect').change(function() {
                const classId = $(this).val();
                const sectionSelect = $('#sectionSelect');
                
                // Clear and disable section dropdown
                sectionSelect.html('<option value="">Loading...</option>').prop('disabled', true);
                
                if (!classId) {
                    sectionSelect.html('<option value="">Select Section</option>').prop('disabled', false);
                    return;
                }
                
                // Fetch sections via AJAX
                $.ajax({
                    url: '@Url.Action("GetSectionsByClass", "Substitutions")',
                    type: 'GET',
                    data: { classId: classId },
                    success: function(sections) {
                        let html = '<option value="">Select Section</option>';
                        sections.forEach(function(section) {
                            html += `<option value="${section.id}">${section.name}</option>`;
                        });
                        sectionSelect.html(html).prop('disabled', false);
                    },
                    error: function() {
                        sectionSelect.html('<option value="">Error loading sections</option>').prop('disabled', false);
                        alert('Error loading sections. Please try again.');
                    }
                });
            });

            // Load Timetable
            $('#loadTimetableBtn').click(function() {
                const classId = $('#classSelect').val();
                const sectionId = $('#sectionSelect').val();
                const date = $('#dateSelect').val();

                if (!classId || !sectionId || !date) {
                    alert('Please select class, section, and date');
                    return;
                }

                $.ajax({
                    url: '@Url.Action("GetTimetable", "Substitutions")',
                    type: 'GET',
                    data: { classId, sectionId, date },
                    success: function(response) {
                        if (response.success) {
                            displayTimetable(response);
                            selectedDate = date;
                        } else {
                            alert(response.message);
                            $('#timetableSection').addClass('hidden');
                        }
                    },
                    error: function() {
                        alert('Error loading timetable');
                        $('#timetableSection').addClass('hidden');
                    }
                });
            });

            function displayTimetable(data) {
                $('#timetableHeader').text(`Timetable - ${data.className} ${data.sectionName}`);
                
                let html = '<table class="w-full">';
                html += '<thead class="bg-neutral-50">';
                html += '<tr>';
                html += '<th class="px-6 py-4 text-left text-sm font-medium text-neutral-700 uppercase">Period</th>';
                html += '<th class="px-6 py-4 text-left text-sm font-medium text-neutral-700 uppercase">Time</th>';
                html += '<th class="px-6 py-4 text-left text-sm font-medium text-neutral-700 uppercase">Subject</th>';
                html += '<th class="px-6 py-4 text-left text-sm font-medium text-neutral-700 uppercase">Teacher</th>';
                html += '<th class="px-6 py-4 text-left text-sm font-medium text-neutral-700 uppercase">Action</th>';
                html += '</tr>';
                html += '</thead>';
                html += '<tbody class="divide-y divide-primary-100">';

                data.slots.forEach(function(slot) {
                    const hasSubstitution = data.existingSubstitutions.includes(slot.id);
                    const rowClass = hasSubstitution ? 'bg-yellow-50' : '';
                    
                    html += `<tr class="${rowClass} hover:bg-primary-50 transition-all duration-300">`;
                    html += `<td class="px-6 py-4 whitespace-nowrap"><span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Period ${slot.periodNumber}</span></td>`;
                    html += `<td class="px-6 py-4 whitespace-nowrap text-sm text-primary-800">${slot.startTime} - ${slot.endTime}</td>`;
                    html += `<td class="px-6 py-4 whitespace-nowrap text-sm text-primary-800">${slot.subjectName}</td>`;
                    html += `<td class="px-6 py-4 whitespace-nowrap text-sm text-primary-800">${slot.teacherName}</td>`;
                    html += '<td class="px-6 py-4 whitespace-nowrap text-sm font-medium">';
                    
                    if (hasSubstitution) {
                        html += '<span class="text-yellow-600">Already Substituted</span>';
                    } else if (slot.hasAssignment) {
                        html += `<button type="button" class="assign-btn bg-gradient-primary hover:shadow-sms-lg text-white px-4 py-2 rounded-lg transition-all duration-300" data-slot-id="${slot.id}">Assign Substitute</button>`;
                    } else {
                        html += '<span class="text-neutral-400">No Teacher Assigned</span>';
                    }
                    
                    html += '</td>';
                    html += '</tr>';
                });

                html += '</tbody>';
                html += '</table>';

                $('#timetableContent').html(html);
                $('#timetableSection').removeClass('hidden');

                // Attach click handlers to assign buttons
                $('.assign-btn').click(function() {
                    const slotId = $(this).data('slot-id');
                    openAssignModal(slotId);
                });
            }

            function openAssignModal(slotId) {
                selectedSlotId = slotId;
                $('#timetableSlotId').val(slotId);
                $('#date').val(selectedDate);

                // Load available employees
                $.ajax({
                    url: '@Url.Action("GetAvailableEmployees", "Substitutions")',
                    type: 'GET',
                    data: { timetableSlotId: slotId, date: selectedDate },
                    success: function(response) {
                        if (response.success) {
                            displaySlotInfo(response.slotInfo);
                            populateEmployeeDropdown(response.availableEmployees);
                            $('#assignModal').removeClass('hidden');
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Error loading available employees');
                    }
                });
            }

            function displaySlotInfo(info) {
                let html = '<div class="grid grid-cols-2 gap-4">';
                html += `<div><span class="font-medium text-neutral-700">Period:</span> <span class="text-primary-800">${info.periodNumber}</span></div>`;
                html += `<div><span class="font-medium text-neutral-700">Time:</span> <span class="text-primary-800">${info.startTime} - ${info.endTime}</span></div>`;
                html += `<div class="col-span-2"><span class="font-medium text-neutral-700">Original Teacher:</span> <span class="text-primary-800">${info.originalTeacher}</span></div>`;
                html += '</div>';
                $('#slotInfo').html(html);
            }

            function populateEmployeeDropdown(employees) {
                let html = '<option value="">Select Employee</option>';
                employees.forEach(function(emp) {
                    html += `<option value="${emp.id}">${emp.fullName} (${emp.role}) - ${emp.onTime} to ${emp.offTime}</option>`;
                });
                $('#substituteEmployeeId').html(html);
            }

            // Close modal
            $('#closeModalBtn, #cancelBtn').click(function() {
                $('#assignModal').addClass('hidden');
            });

            // Close modal on outside click
            $('#assignModal').click(function(e) {
                if (e.target === this) {
                    $(this).addClass('hidden');
                }
            });
        });
    </script>

    <style>
        .animate-fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }

        @@@@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}
