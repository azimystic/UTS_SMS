@using UTS_SMS.Models
@model UTS_SMS.Models.Expense

@{
    ViewData["Title"] = "Edit Expense";
}

<div class="min-h-screen bg-neutral-50 p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
            <div>
                <h1 class="text-2xl font-bold text-primary-800">âœï¸ Edit Expense</h1>
                <p class="text-neutral-600 mt-1">Update expense information</p>
            </div>
            <a asp-action="Index" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-xl transition-all duration-300 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to List
            </a>
        </div>

        <!-- Edit Form -->
        <div class="bg-white rounded-2xl shadow-sms-lg overflow-hidden">
            <form asp-action="Edit" method="post" class="p-6 space-y-6">
                @Html.AntiForgeryToken()
                <input asp-for="Id" type="hidden" />

                <!-- Basic Information Section -->
                <div class="border-b border-primary-100 pb-6">
                    <h3 class="text-lg font-semibold text-primary-800 mb-4">Basic Information</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="Name" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                            <input asp-for="Name" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" />
                            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="Category" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                            <input asp-for="Category" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" placeholder="e.g., Office Supplies, Utilities" />
                            <span asp-validation-for="Category" class="text-red-500 text-sm"></span>
                        </div>
                    </div>

                    <div class="mt-4">
                        <label asp-for="Description" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                        <textarea asp-for="Description" rows="3" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" placeholder="Brief description of the expense..."></textarea>
                        <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <!-- Financial Information -->
                <div class="border-b border-primary-100 pb-6">
                    <h3 class="text-lg font-semibold text-primary-800 mb-4">Financial Information</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div>
                            <label asp-for="Amount" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                            <input asp-for="Amount" type="number" step="0.01" min="0" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" />
                            <span asp-validation-for="Amount" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="ExpenseDate" class="block text-sm font-medium text-neutral-700 mb-1">Expense Date</label>
                            <input asp-for="ExpenseDate" type="date" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" />
                            <span asp-validation-for="ExpenseDate" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="Reference" class="block text-sm font-medium text-neutral-700 mb-1">Reference Number</label>
                            <input asp-for="Reference" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" placeholder="Invoice/Receipt number" />
                            <span asp-validation-for="Reference" class="text-red-500 text-sm"></span>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
                        <div>
                            <label asp-for="Month" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                            <select asp-for="Month" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400">
                                <option value="1">January</option>
                                <option value="2">February</option>
                                <option value="3">March</option>
                                <option value="4">April</option>
                                <option value="5">May</option>
                                <option value="6">June</option>
                                <option value="7">July</option>
                                <option value="8">August</option>
                                <option value="9">September</option>
                                <option value="10">October</option>
                                <option value="11">November</option>
                                <option value="12">December</option>
                            </select>
                            <span asp-validation-for="Month" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="Year" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                            <select asp-for="Year" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400">
                                @for (int year = DateTime.Now.Year - 2; year <= DateTime.Now.Year + 1; year++)
                                {
                                    <option value="@year">@year</option>
                                }
                            </select>
                            <span asp-validation-for="Year" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="AccountId" class="block text-sm font-medium text-neutral-700 mb-1">Bank Account</label>
                            <select asp-for="AccountId" asp-items="ViewBag.AccountId" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400">
                                <option value="">-- Select Account --</option>
                            </select>
                            <span asp-validation-for="AccountId" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                </div>

                <!-- Campus Information -->
                <div class="pb-6">
                    <h3 class="text-lg font-semibold text-primary-800 mb-4">Location Information</h3>
                    <div>
                        <label asp-for="CampusId" class="block text-sm font-medium text-neutral-700 mb-1">Campus</label>
                        <select asp-for="CampusId" asp-items="ViewBag.CampusId" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400">
                            <option value="">-- Select Campus --</option>
                        </select>
                        <span asp-validation-for="CampusId" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-3 pt-4">
                    <button type="submit" class="flex-1 bg-gradient-primary hover:bg-primary-700 text-white py-3 px-6 rounded-xl font-medium transition-all duration-300 flex items-center justify-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Update Expense
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="flex-1 bg-gray-600 hover:bg-gray-700 text-white text-center py-3 px-6 rounded-xl font-medium transition-all duration-300 flex items-center justify-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        View Details
                    </a>
                    <a asp-action="Index" class="flex-1 bg-error hover:bg-red-700 text-white text-center py-3 px-6 rounded-xl font-medium transition-all duration-300 flex items-center justify-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
