@model SMS.Models.Expense

@{
    ViewData["Title"] = "Expense Details";
}

<div class="min-h-screen bg-neutral-50 p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
            <div>
                <h1 class="text-2xl font-bold text-primary-800">ðŸ’° Expense Details</h1>
                <p class="text-neutral-600 mt-1">@Model.Name - @Model.ExpenseDate.ToString("MMM dd, yyyy")</p>
            </div>
            <div class="flex space-x-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-gradient-primary hover:bg-primary-700 text-white px-4 py-2 rounded-xl transition-all duration-300 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit
                </a>
                <a asp-action="Index" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-xl transition-all duration-300 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Back to List
                </a>
            </div>
        </div>

        <!-- Amount Highlight -->
        <div class="bg-gradient-to-r from-red-500 to-red-600 rounded-2xl p-6 mb-6 text-white">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-3xl font-bold">@Model.Amount.ToString("C")</h2>
                    <p class="text-red-100">Total Expense Amount</p>
                </div>
                <div class="text-right">
                    @if (!string.IsNullOrEmpty(Model.Category))
                    {
                        <span class="bg-red-400 bg-opacity-50 px-3 py-1 rounded-full text-sm font-medium">
                            @Model.Category
                        </span>
                    }
                </div>
            </div>
        </div>

        <!-- Main Details Card -->
        <div class="bg-white rounded-2xl shadow-sms-lg overflow-hidden mb-6">
            <div class="px-6 py-4 bg-gradient-to-r from-primary-600 to-blue-700">
                <h2 class="text-xl font-semibold text-white">Expense Information</h2>
            </div>
            
            <div class="p-6">
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Expense Name</dt>
                        <dd class="mt-1 text-base text-primary-800 font-semibold">@Model.Name</dd>
                    </div>
                    
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Amount</dt>
                        <dd class="mt-1 text-base text-error font-bold text-lg">@Model.Amount.ToString("C")</dd>
                    </div>
                    
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Expense Date</dt>
                        <dd class="mt-1 text-base text-primary-800">@Model.ExpenseDate.ToString("MMMM dd, yyyy")</dd>
                    </div>
                    
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Month/Year</dt>
                        <dd class="mt-1 text-base text-primary-800">@Model.Month/@Model.Year</dd>
                    </div>
                    
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Category</dt>
                        <dd class="mt-1 text-base text-primary-800">
                            @if (!string.IsNullOrEmpty(Model.Category))
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800">
                                    @Model.Category
                                </span>
                            }
                            else
                            {
                                <span class="text-neutral-500">Not categorized</span>
                            }
                        </dd>
                    </div>
                    
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Reference</dt>
                        <dd class="mt-1 text-base text-primary-800">@(Model.Reference ?? "Not specified")</dd>
                    </div>
                    
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Bank Account</dt>
                        <dd class="mt-1 text-base text-primary-800">@(Model.Account?.AccountTitle ?? "Not specified")</dd>
                    </div>
                    
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Campus</dt>
                        <dd class="mt-1 text-base text-primary-800">@(Model.Campus?.Name ?? "Not specified")</dd>
                    </div>
                </dl>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mt-6 border-t border-primary-100 pt-6">
                        <dt class="text-sm font-medium text-neutral-700 mb-2">Description</dt>
                        <dd class="mt-1 text-base text-primary-800 bg-neutral-50 p-4 rounded-lg">@Model.Description</dd>
                    </div>
                }
            </div>
        </div>

        <!-- Additional Information Card -->
        <div class="bg-white rounded-2xl shadow-sms-lg overflow-hidden mb-6">
            <div class="px-6 py-4 bg-gradient-to-r from-green-600 to-green-700">
                <h2 class="text-xl font-semibold text-white">Record Information</h2>
            </div>
            
            <div class="p-6">
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Created Date</dt>
                        <dd class="mt-1 text-base text-primary-800">@Model.CreatedDate.ToString("MMMM dd, yyyy 'at' h:mm tt")</dd>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.CreatedBy))
                    {
                        <div>
                            <dt class="text-sm font-medium text-neutral-700">Created By</dt>
                            <dd class="mt-1 text-base text-primary-800">@Model.CreatedBy</dd>
                        </div>
                    }
                </dl>
            </div>
        </div>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-3 mt-6">
            <a asp-action="Edit" asp-route-id="@Model.Id" 
               class="flex-1 bg-gradient-primary hover:bg-primary-700 text-white text-center py-3 px-6 rounded-xl font-medium transition-all duration-300">
                Edit Expense
            </a>
            <a asp-action="Index" 
               class="flex-1 bg-gray-600 hover:bg-gray-700 text-white text-center py-3 px-6 rounded-xl font-medium transition-all duration-300">
                Back to Expenses
            </a>
        </div>
    </div>
</div>