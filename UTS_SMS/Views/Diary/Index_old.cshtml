@using UTS_SMS.Models
@* Views/Diary/Index.cshtml *@
@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Diary Entries";
    var selectedDate = ViewBag.SelectedDate as string;
    var today = ViewBag.Today as string;
    var isAdmin = (bool?)ViewBag.IsAdmin ?? false;
    var classes = ViewBag.Classes as SelectList;
    var sections = ViewBag.Sections as SelectList;
    var selectedClassId = ViewBag.SelectedClassId;
    var selectedSectionId = ViewBag.SelectedSectionId;
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-primary-800">📓 Daily Diary</h1>
                <p class="text-neutral-600 mt-2">Manage daily lesson entries</p>
            </div>
            <div class="mt-4 md:mt-0">
                <form method="get" class="flex flex-col md:flex-row items-start md:items-center space-y-2 md:space-y-0 md:space-x-2">
                    <input type="date" name="date" value="@selectedDate" class="px-4 py-2 border border-primary-200 rounded-lg" max="@today" />
                    
                    @if (isAdmin)
                    {
                        <select name="classId" class="px-4 py-2 border border-primary-200 rounded-lg">
                            <option value="">All Classes</option>
                            @foreach (var item in classes)
                            {
                                <option value="@item.Value" selected="@(item.Value == selectedClassId?.ToString())">@item.Text</option>
                            }
                        </select>
                        
                        <select name="sectionId" class="px-4 py-2 border border-primary-200 rounded-lg">
                            <option value="">All Sections</option>
                            @foreach (var item in sections)
                            {
                                <option value="@item.Value" selected="@(item.Value == selectedSectionId?.ToString())">@item.Text</option>
                            }
                        </select>
                    }
                    
                    <button type="submit" class="bg-gradient-primary hover:bg-primary-700 text-white px-4 py-2 rounded-lg">Filter</button>
                </form>
            </div>
        </div>

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-success-light border-l-4 border-success text-success p-4 mb-6 rounded-xl">
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- Diary Table -->
        <div class="bg-white rounded-2xl shadow-sms-xl overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-neutral-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-medium text-neutral-700 uppercase">Assignment</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-neutral-700 uppercase">Lesson Summary</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-neutral-700 uppercase">Homework</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-neutral-700 uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-primary-100">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-primary-50 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="font-medium text-primary-800">
                                        @item.Assignment.Class.Name - @item.Assignment.Section.Name - @item.Assignment.Subject.Name
                                    </div>
                                    <div class="text-sm text-neutral-500">Teacher: @item.Assignment.Teacher.FullName</div>
                                </td>
                                <td class="px-6 py-4 text-primary-800 max-w-md truncate" title="@item.Diary?.LessonSummary">
                                    @(item.Diary?.LessonSummary ?? "No summary")
                                </td>
                                <td class="px-6 py-4 text-primary-800">
                                    @(item.Diary?.HomeworkGiven ?? "—")
                                </td>
                                <td class="px-6 py-4 text-sm font-medium">
                                    <div class="flex space-x-2">
                                        @if (item.Diary == null)
                                        {
                                            <a asp-action="Create" asp-route-date="@selectedDate" 
                                               asp-route-classId="@item.Assignment.ClassId"
                                               asp-route-sectionId="@item.Assignment.SectionId"
                                               asp-route-subjectId="@item.Assignment.SubjectId"
                                               class="bg-primary-500 hover:bg-gradient-primary text-white px-3 py-1.5 rounded-lg text-sm flex items-center">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                                </svg>
                                                Add
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Details" asp-route-id="@item.Diary.Id"
                                               class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1.5 rounded-lg text-sm flex items-center">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                                </svg>
                                                View
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Diary.Id"
                                               class="bg-indigo-500 hover:bg-indigo-600 text-white px-3 py-1.5 rounded-lg text-sm flex items-center">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                </svg>
                                                Edit
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@item.Diary.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to delete this diary?');">
                                                <button type="submit" class="bg-error-light0 hover:bg-error text-white px-3 py-1.5 rounded-lg text-sm flex items-center">
                                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                    </svg>
                                                    Delete
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
