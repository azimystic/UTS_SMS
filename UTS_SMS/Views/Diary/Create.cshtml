@using UTS_SMS.Models
@* Views/Diary/Create.cshtml *@
@model Diary

@{
    ViewData["Title"] = "Add Diary Entry";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="w-full max-w-[1600px] mx-auto px-1 md:px-2">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">📝 Add Diary Entry</h1>
            <p class="text-neutral-600 mt-2">Record today's lesson details</p>
        </div>

        <div class="bg-white rounded-2xl shadow-sms-xl p-6">
            <form asp-action="Create" method="post" enctype="multipart/form-data" class="space-y-6">
                @Html.AntiForgeryToken()

                <input type="hidden" name="date" value="@ViewBag.Date" />

                <div asp-validation-summary="ModelOnly" class="bg-error-light border-l-4 border-error text-error p-4 rounded-lg"></div>

                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Assignment</label>
                    <select name="TeacherAssignmentId" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400" required>
                        <option value="">-- Select Class-Section-Subject --</option>
                        @foreach (var item in ViewBag.TeacherAssignmentId as SelectList)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>

                <div>
                    <label asp-for="LessonSummary" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                    <textarea asp-for="LessonSummary" rows="4" class="w-full px-4 py-3 border border-primary-200 rounded-lg"></textarea>
                    <span asp-validation-for="LessonSummary" class="text-error text-sm"></span>
                </div>

                <div>
                    <label asp-for="HomeworkGiven" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                    <textarea asp-for="HomeworkGiven" rows="3" class="w-full px-4 py-3 border border-primary-200 rounded-lg"></textarea>
                </div>

                <div>
                    <label asp-for="Notes" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                    <textarea asp-for="Notes" rows="2" class="w-full px-4 py-3 border border-primary-200 rounded-lg"></textarea>
                </div>

                <!-- Chapter Linking (Optional) -->
                <div class="border-t border-primary-200 pt-6">
                    <h3 class="text-lg font-semibold text-neutral-800 mb-4">📚 Link to Academic Material (Optional)</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="ChapterId" class="block text-sm font-medium text-neutral-700 mb-2">Chapter</label>
                            <select asp-for="ChapterId" class="w-full px-4 py-3 border border-primary-200 rounded-lg" id="chapterSelect">
                                <option value="">-- No Chapter --</option>
                                @foreach (var item in ViewBag.Chapters as SelectList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                        
                        <div>
                            <label asp-for="ChapterSectionId" class="block text-sm font-medium text-neutral-700 mb-2">Section (Optional)</label>
                            <select asp-for="ChapterSectionId" class="w-full px-4 py-3 border border-primary-200 rounded-lg" id="sectionSelect">
                                <option value="">-- No Section --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Image Upload Section -->
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">
                        📷 Upload Images (Optional)
                    </label>
                    <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-primary-200 border-dashed rounded-lg hover:border-gray-400 transition-colors">
                        <div class="space-y-1 text-center">
                            <svg class="mx-auto h-12 w-12 text-neutral-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            <div class="flex text-sm text-neutral-600">
                                <label for="images" class="relative cursor-pointer bg-white rounded-md font-medium text-info hover:text-indigo-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500">
                                    <span>Upload images</span>
                                    <input id="images" name="images" type="file" class="sr-only" multiple accept="image/*">
                                </label>
                                <p class="pl-1">or drag and drop</p>
                            </div>
                            <p class="text-xs text-neutral-500">PNG, JPG, GIF up to 10MB each</p>
                        </div>
                    </div>
                    <div id="image-preview" class="mt-4 grid grid-cols-2 gap-4" style="display: none;"></div>
                </div>

                <div class="flex space-x-4 pt-6">
                    <button type="submit" class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-medium py-3 px-8 rounded-xl flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Save Diary
                    </button>
                    <a asp-action="Index" asp-route-date="@ViewBag.Date" class="bg-neutral-100 hover:bg-primary-100 text-primary-800 font-medium py-3 px-8 rounded-xl flex items-center">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('images').addEventListener('change', function(e) {
            const files = e.target.files;
            const preview = document.getElementById('image-preview');
            
            if (files.length > 0) {
                preview.style.display = 'grid';
                preview.innerHTML = '';
                
                Array.from(files).forEach(file => {
                    if (file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            const div = document.createElement('div');
                            div.className = 'relative';
                            div.innerHTML = `
                                <img src="${e.target.result}" class="w-full h-32 object-cover rounded-lg border">
                                <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white text-xs p-2 rounded-b-lg truncate">
                                    ${file.name}
                                </div>
                            `;
                            preview.appendChild(div);
                        };
                        reader.readAsDataURL(file);
                    }
                });
            } else {
                preview.style.display = 'none';
            }
        });
        
        // Load chapter sections when chapter is selected
        document.getElementById('chapterSelect')?.addEventListener('change', async function(e) {
            const chapterId = e.target.value;
            const sectionSelect = document.getElementById('sectionSelect');
            
            sectionSelect.innerHTML = '<option value="">-- No Section --</option>';
            
            if (chapterId) {
                try {
                    const response = await fetch(`/api/chapters/${chapterId}/sections`);
                    const sections = await response.json();
                    
                    sections.forEach(section => {
                        const option = document.createElement('option');
                        option.value = section.id;
                        option.textContent = section.name;
                        sectionSelect.appendChild(option);
                    });
                } catch (error) {
                    console.error('Error loading sections:', error);
                }
            }
        });
    </script>
}
