@model SMS.Models.ExamMarks

@{
    ViewData["Title"] = "Edit Exam Marks";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">✏️ Edit Exam Marks</h1>
            <p class="text-neutral-600 mt-2">Update student exam marks</p>
        </div>

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-success-light border-l-4 border-success text-success p-4 mb-6 rounded-xl">
                <div class="flex items-center">
                    <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    @TempData["SuccessMessage"]
                </div>
            </div>
        }

        <!-- Form -->
        <div class="bg-white rounded-2xl shadow-sms-xl p-6">
            <form asp-action="Edit" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="SectionId" />
                <input type="hidden" asp-for="ClassId" />
                <input type="hidden" asp-for="ExamId" />
                <input type="hidden" asp-for="StudentId" />
                <input type="hidden" asp-for="SubjectId" />
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Student Info -->
                    <div class="md:col-span-2">
                        <h3 class="text-lg font-semibold text-primary-800 mb-4">Student Information</h3>
                        <div class="bg-neutral-50 p-4 rounded-lg">
                            <p class="text-sm text-neutral-600"><strong>Name:</strong> @Model.Student?.StudentName</p>
                            <p class="text-sm text-neutral-600"><strong>Class:</strong> @Model.Class?.Name</p>
                            <p class="text-sm text-neutral-600"><strong>Section:</strong> @Model.Section?.Name</p>
                        </div>
                    </div>

                    <!-- Exam Info -->
                    <div class="md:col-span-2">
                        <h3 class="text-lg font-semibold text-primary-800 mb-4">Exam Information</h3>
                        <div class="bg-neutral-50 p-4 rounded-lg">
                            <p class="text-sm text-neutral-600"><strong>Exam:</strong> @Model.Exam?.Name</p>
                            <p class="text-sm text-neutral-600"><strong>Subject:</strong> @Model.Subject?.Name</p>
                            <p class="text-sm text-neutral-600"><strong>Date:</strong> @Model.ExamDate.ToString("dd MMM yyyy")</p>
                        </div>
                    </div>

                    <!-- Marks -->
                    <div>
                        <label asp-for="TotalMarks" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="TotalMarks" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" />
                        <span asp-validation-for="TotalMarks" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="PassingMarks" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="PassingMarks" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" />
                        <span asp-validation-for="PassingMarks" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="ObtainedMarks" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="ObtainedMarks" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" />
                        <span asp-validation-for="ObtainedMarks" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Percentage -->
                    <div>
                        <label asp-for="Percentage" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <!-- Hidden input: bound to model, submitted -->
                        <input type="hidden" id="PercentageHidden" asp-for="Percentage" />
                        <!-- Display input: shows formatted percentage -->
                        <input id="PercentageDisplay"
                               value="@(Model.Percentage.ToString("0.##") + "%")"
                               class="w-full px-4 py-3 border border-primary-200 rounded-lg bg-neutral-50"
                               readonly />
                    </div>

                    <div>
                        <label asp-for="Grade" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="Grade" class="w-full px-4 py-3 border border-primary-200 rounded-lg bg-neutral-50" readonly />
                        <input type="hidden" asp-for="Grade" />
                    </div>

                    <div>
                        <label asp-for="Status" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="Status" class="w-full px-4 py-3 border border-primary-200 rounded-lg bg-neutral-50" readonly />
                        <input type="hidden" asp-for="Status" />
                    </div>


                    <div class="md:col-span-2">
                        <label asp-for="Remarks" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <textarea asp-for="Remarks" rows="3" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400"></textarea>
                        <span asp-validation-for="Remarks" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex space-x-4 pt-6">
                    <button type="submit" class="bg-gradient-to-r from-blue-500 to-blue-600 hover:from-primary-600 hover:to-blue-700 text-white font-medium py-3 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-sms-lg flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Update Marks
                    </button>
                    <a asp-action="Analysis" class="bg-neutral-100 hover:bg-primary-100 text-primary-800 font-medium py-3 px-8 rounded-xl transition-all duration-300 flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-calculate percentage, grade, and status when marks change
            const obtainedMarksInput = document.getElementById('ObtainedMarks');
            const totalMarksInput = document.getElementById('TotalMarks');
            const passingMarksInput = document.getElementById('PassingMarks');

            function calculateResults() {
                const obtained = parseFloat(obtainedMarksInput.value) || 0;
                const total = parseFloat(totalMarksInput.value) || 100;
                const passing = parseFloat(passingMarksInput.value) || 40;

                // Calculate percentage
                const percentage = total > 0 ? (obtained / total) * 100 : 0;

                // Calculate grade and status
                let grade = '-';
                let status = 'Fail';

                if (obtained >= passing) {
                    if (percentage >= 90) { grade = 'A+'; status = '1st Division'; }
                    else if (percentage >= 80) { grade = 'A'; status = '1st Division'; }
                    else if (percentage >= 75) { grade = 'B+'; status = '2nd Division'; }
                    else if (percentage >= 70) { grade = 'B'; status = '2nd Division'; }
                    else if (percentage >= 50) { grade = 'C'; status = '3rd Division'; }
                    else { grade = 'D'; status = 'Pass'; }
                } else {
                    grade = 'F';
                    status = 'Fail';
                }

                       // Update the readonly visible fields
                  document.getElementById("PercentageDisplay").value = percentage.toFixed(2) + "%";
        document.getElementById("PercentageHidden").value = percentage.toFixed(2);
         document.getElementById("Grade").value = grade;
        document.getElementById("Status").value = status;

        // Update hidden inputs so they are submitted
         document.querySelector('input[type="hidden"][name="Grade"]').value = grade;
        document.querySelector('input[type="hidden"][name="Status"]').value = status;

            }

            obtainedMarksInput.addEventListener('input', calculateResults);
            totalMarksInput.addEventListener('input', calculateResults);
            passingMarksInput.addEventListener('input', calculateResults);
        });
    </script>
}