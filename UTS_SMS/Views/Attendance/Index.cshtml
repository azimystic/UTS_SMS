@using UTS_SMS.Models
@model List<UTS_SMS.Models.AttendanceViewModel>
@{
    ViewData["Title"] = "Mark Attendance";
    var today = ViewBag.Today as DateTime? ?? DateTime.Today;
    var selectedDate = ViewBag.Date as DateTime? ?? DateTime.Today;
    var selectedClass = ViewBag.Class as string;
    var selectedSection = ViewBag.Section as string;

    // FIX: Cast to the correct type
    var campuses = ViewBag.Campuses as IEnumerable<dynamic> ?? new List<dynamic>();
    var classes = ViewBag.Classes as IEnumerable<dynamic> ?? new List<dynamic>();
    var sections = ViewBag.Sections as IEnumerable<dynamic> ?? new List<dynamic>();

    var hasSelection = !string.IsNullOrEmpty(selectedClass) && !string.IsNullOrEmpty(selectedSection);
    var campusId = ViewBag.CampusId as int?;
    var classId = ViewBag.ClassId as int?;
    var sectionId = ViewBag.SectionId as int?;

}

<div class="min-h-screen bg-gradient-subtle p-2 md:p-6">
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 md:mb-8">
            <div>
                <h1 class="text-2xl md:text-3xl font-bold text-primary-800">Mark Attendance</h1>
                
            </div>
          
        </div>
        <div class="bg-white rounded-xl md:rounded-2xl shadow-sms-lg p-4 md:p-6 mb-6 md:mb-8">
            <h2 class="text-lg md:text-xl font-semibold text-primary-800 mb-3 md:mb-4">Select Class & Section</h2>
            <form asp-action="Index" method="get" class="space-y-4 md:space-y-6" id="reload">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1 md:mb-2">Campus</label>
                        <select name="campusId" id="campusFilter" required
                                class="w-full px-3 py-2 md:px-4 md:py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300 text-sm md:text-base">
                            <option value="">-- Select Campus --</option>
                            @foreach (var cmps in campuses)
                            {
                                <option value="@cmps.Id" selected="@(campusId.HasValue && cmps.Id == campusId.Value ? "selected" : null)">
                                    @cmps.Name
                                </option>
                            }
                        </select>
                    </div>
                    <!-- Class and Section Selection -->
                    <!-- Class Selection Dropdown - Fixed -->
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1 md:mb-2">Class</label>
                        <select name="classId" id="classFilter" required
                                class="w-full px-3 py-2 md:px-4 md:py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300 text-sm md:text-base">
                            <option value="">-- Select Class --</option>
                            @foreach (var cls in classes)
                            {
                                <option value="@cls.Id" selected="@(classId.HasValue && cls.Id == classId.Value ? "selected" : null)">
                                    @cls.Name
                                </option>
                            }
                        </select>
                    </div>

                    <!-- Section Selection Dropdown - Fixed -->
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1 md:mb-2">Section</label>
                        <select name="sectionId" required id="sectionFilter"
                                class="w-full px-3 py-2 md:px-4 md:py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300 text-sm md:text-base">
                            <option value="">-- Select Section --</option>
                            @foreach (var sec in sections)
                            {
                                <option value="@sec.Id" selected="@(sectionId.HasValue && sec.Id == sectionId.Value ? "selected" : null)">
                                    @sec.Name
                                </option>
                            }
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1 md:mb-2">Date</label>
                        <input type="date" name="date" value="@selectedDate.ToString("yyyy-MM-dd")"
                               max="@DateTime.Today.ToString("yyyy-MM-dd")"
                               class="w-full px-3 py-2 md:px-4 md:py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300 text-sm md:text-base" />
                    </div>
                </div>

                <div class="pt-2 md:pt-4 flex flex-col sm:flex-row gap-3">
                    <button type="submit" class="bg-gradient-primary hover:bg-primary-700 text-white px-4 py-2 md:px-6 md:py-2 rounded-lg transition-all duration-300 flex items-center text-sm md:text-base w-full sm:w-auto justify-center">
                        <svg class="w-4 h-4 md:w-5 md:h-5 mr-1 md:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                        Load Attendance
                    </button>
                    
                    <button type="button" id="viewSummaryBtn"
                           class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 md:px-6 md:py-2 rounded-lg transition-all duration-300 flex items-center text-sm md:text-base w-full sm:w-auto justify-center">
                        <svg class="w-4 h-4 md:w-5 md:h-5 mr-1 md:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                        View Summary
                    </button>
                </div>
            </form>
        </div>

        @if (!hasSelection)
        {
            <div class="bg-warning-light border-l-4 border-yellow-500 text-yellow-700 p-3 md:p-4 rounded-xl mb-6 md:mb-8">
                <div class="flex items-center">
                    <svg class="w-5 h-5 md:w-6 md:h-6 mr-2 md:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                    <span class="text-sm md:text-base">Please select a class and section to view and mark attendance.</span>
                </div>
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-success-light border-l-4 border-success text-success p-3 md:p-4 mb-4 md:mb-6 rounded-xl animate-fade-in">
                <div class="flex items-center">
                    <svg class="w-5 h-5 md:w-6 md:h-6 mr-2 md:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span class="text-sm md:text-base">@TempData["SuccessMessage"]</span>
                </div>
            </div>
        }

        @if (hasSelection)
        {
            <!-- Attendance Form -->
            <form asp-action="Save" method="post" class="bg-white rounded-xl md:rounded-2xl shadow-sms-lg md:shadow-sms-xl overflow-hidden mb-6 md:mb-8">
                @Html.AntiForgeryToken()
                <input type="hidden" name="campusId" value="@(campusId)" />
                <input type="hidden" name="classId" value="@(classId)" />
                <input type="hidden" name="sectionId" value="@(sectionId)" />
                <input type="hidden" name="date" value="@selectedDate.ToString("yyyy-MM-dd")" />

                <!-- Header -->
                <div class="bg-gradient-primary px-4 py-3 md:px-6 md:py-4 text-white">
                    <h2 class="text-lg md:text-xl font-semibold text-white">Student Attendance</h2>
                    <p class="text-blue-100 text-sm md:text-base">Mark attendance for @selectedDate.ToString("dddd, MMMM dd, yyyy")</p>
                    @if (selectedDate.Date != today.Date)
                    {
                        <p class="text-blue-200 text-xs md:text-sm mt-1">⚠️ Editing attendance for a past date</p>
                    }
                </div>

                <div class="overflow-x-auto">
                    <table class="w-full min-w-full">
                        <thead class="bg-neutral-50">
                            <tr>
                                <th class="px-4 py-3 md:px-6 md:py-4 text-left text-xs md:text-sm font-medium text-neutral-700 uppercase tracking-wider">Roll #</th>
                                <th class="px-4 py-3 md:px-6 md:py-4 text-left text-xs md:text-sm font-medium text-neutral-700 uppercase tracking-wider">Student Name</th>
                                <th class="px-4 py-3 md:px-6 md:py-4 text-left text-xs md:text-sm font-medium text-neutral-700 uppercase tracking-wider">Status</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-primary-100">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr class="transition-all duration-300 hover:bg-primary-50 group">
                                    <td class="px-4 py-3 md:px-6 md:py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="w-7 h-7 md:w-8 md:h-8 bg-primary-100 rounded-full flex items-center justify-center mr-2 md:mr-3">
                                                <span class="text-xs md:text-sm font-medium text-blue-700">@(i + 1)</span>
                                            </div>
                                            <input type="hidden" asp-for="@Model[i].StudentId" />
                                        </div>
                                    </td>
                                    <td class="px-4 py-3 md:px-6 md:py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="w-8 h-8 md:w-10 md:h-10 bg-gradient-to-r from-purple-400 to-blue-500 rounded-full flex items-center justify-center text-white font-semibold text-xs md:text-sm mr-2 md:mr-3">
                                                @(string.IsNullOrEmpty(Model[i].StudentName)
                                                                                        ? ""
                                                                                        : Model[i].StudentName
                                                                                        .Split(' ', StringSplitOptions.RemoveEmptyEntries)
                                                                                        .Select(n => n[0])
                                                                                        .Take(2)
                                                                                        .Aggregate("", (a, b) => a + b))
                                    </div>
                                    <span class="text-xs md:text-sm font-medium text-primary-800">@Model[i].StudentName</span>
                                </div>
                            </td>
                            <td class="px-4 py-3 md:px-6 md:py-4 whitespace-nowrap">
                                <div class="flex flex-wrap gap-2 md:gap-3">
                                    <!-- Present Button -->
                                    <label class="attendance-btn present @(Model[i].Status == "P" ? "active" : "")">
                                        <input type="radio" asp-for="@Model[i].Status" value="P" class="hidden" />
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0114 0z"></path>
                                        </svg>
                                        <span class="ml-2 font-medium">Present</span>
                                    </label>

                                    <!-- Absent Button -->
                                    <label class="attendance-btn absent @(Model[i].Status == "A" ? "active" : "")">
                                        <input type="radio" asp-for="@Model[i].Status" value="A" class="hidden" />
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                        </svg>
                                        <span class="ml-2 font-medium">Absent</span>
                                    </label>

                                    <!-- Leave Button -->
                                    <label class="attendance-btn leave @(Model[i].Status == "L" ? "active" : "")">
                                        <input type="radio" asp-for="@Model[i].Status" value="L" class="hidden" />
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                        <span class="ml-2 font-medium">On Leave</span>
                                    </label>

                                    <!-- Late Button -->
                                    <label class="attendance-btn late @(Model[i].Status == "T" ? "active" : "")">
                                        <input type="radio" asp-for="@Model[i].Status" value="T" class="hidden" />
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span class="ml-2 font-medium">Late</span>
                                    </label>
                                </div>
                            </td>
                        </tr>
                                                }
                        </tbody>
                    </table>
                </div>

                <!-- Footer -->
                <div class="px-4 py-3 md:px-6 md:py-4 bg-neutral-50 border-t border-primary-100 flex flex-col md:flex-row justify-between items-center space-y-3 md:space-y-0">
                    <div class="text-xs md:text-sm text-neutral-600">
                        Total Students: <span class="font-semibold">@Model.Count</span>
                    </div>
                    <button type="submit" class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-medium py-2 px-6 md:py-3 md:px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-sms-lg flex items-center w-full md:w-auto justify-center">
                        <svg class="w-4 h-4 md:w-5 md:h-5 mr-1 md:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Save Attendance
                    </button>
                </div>
            </form>

          
        }
    </div>
</div>

@section Scripts {
    <script src="~/lib/chartjs/chart.min.js" asp-append-version="true"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Attendance button interactions
            const attendanceButtons = document.querySelectorAll('.attendance-btn');
            attendanceButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    const row = this.closest('tr');
                    row.classList.add('bg-primary-50');
                    setTimeout(() => row.classList.remove('bg-primary-50'), 300);

                    const group = this.closest('.flex.flex-wrap');
                    group.querySelectorAll('.attendance-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');

                    const radio = this.querySelector('input[type="radio"]');
                    radio.checked = true;
                });
            });

            const viewSummaryBtn = document.getElementById('viewSummaryBtn');
            viewSummaryBtn.addEventListener('click', function() {
                const classId = document.getElementsByName('classId')[0].value;
                const sectionId = document.getElementsByName('sectionId')[0].value;
                const date = document.getElementsByName('date')[0].value;

                if (classId && sectionId && date) {
                    const url = '@Url.Action("Summary", "Attendance")' + '?classId=' + classId + '&sectionId=' + sectionId + '&date=' + date;
                    window.location.href = url;
                } else {
                    alert('Please select class, section, and date to view summary.');
                }
            });
        });

        $(document).ready(function() {
            // View Summary button handler
            $('#viewSummaryBtn').on('click', function() {
                var classId = $('#classFilter').val();
                var sectionId = $('#sectionFilter').val();
                var date = $('input[name="date"]').val();
                
                if (!classId || !sectionId) {
                    alert('Please select both Class and Section to view summary.');
                    return;
                }
                
                if (!date) {
                    date = '@DateTime.Today.ToString("yyyy-MM-dd")';
                }
                
                // Build the URL and navigate
                var url = '@Url.Action("Summary", "Attendance")' + 
                          '?classId=' + encodeURIComponent(classId) + 
                          '&sectionId=' + encodeURIComponent(sectionId) + 
                          '&date=' + encodeURIComponent(date);
                
                window.location.href = url;
            });

            // Load sections when class changes
            $('#classFilter').on('change', function() {
                var selectedClassId = $(this).val();
                if (selectedClassId) {
                    $.get('@Url.Action("GetSectionsByClass", "Attendance")', { classId: selectedClassId }, function(data) {
                        var sectionDropdown = $('#sectionFilter');
                        sectionDropdown.empty();
                        sectionDropdown.append($('<option></option>').val('').text('-- Select Section --'));

                        $.each(data, function(index, section) {
                            sectionDropdown.append($('<option></option>').val(section.id).text(section.name));
                        });
                    });
                } else {
                    $('#sectionFilter').empty().append($('<option></option>').val('').text('-- Select Section --'));
                }
            });
            
            // Load classes when campus changes
            $('#campusFilter').on('change', function() {
                var selectedClassId = $(this).val();
                if (selectedClassId) {
                    $.get('@Url.Action("GetClassesByCampus", "Attendance")', { campusId: selectedClassId }, function(data) {
                        var sectionDropdown = $('#classFilter');
                        sectionDropdown.empty();
                        sectionDropdown.append($('<option></option>').val('').text('-- Select Class --'));

                        $.each(data, function(index, section) {
                            sectionDropdown.append($('<option></option>').val(section.id).text(section.name));
                        });
                    });
                } else {
                    $('#classFilter').empty().append($('<option></option>').val('').text('-- Select Class --'));
                }
            });
        });
    </script>
}

<style>
    .animate-fade-in {
        animation: fadeIn 0.5s ease-in-out;
    }

    .attendance-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.625rem 1rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.875rem;
        font-weight: 500;
        white-space: nowrap;
        min-width: 120px;
        background: white;
    }

    @@media (max-width: 640px) {
        .attendance-btn {
            min-width: 100px;
            padding: 0.5rem 0.75rem;
            font-size: 0.8125rem;
        }
    }

    .attendance-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.12);
    }

    .attendance-btn.present {
        color: #059669;
        border-color: rgba(16, 185, 129, 0.3);
    }
    
    .attendance-btn.present:hover {
        border-color: rgb(16, 185, 129);
        background-color: rgba(16, 185, 129, 0.05);
    }
    
    .attendance-btn.present.active {
        border-color: rgb(16, 185, 129);
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(16, 185, 129, 0.15) 100%);
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }

    .attendance-btn.absent {
        color: #dc2626;
        border-color: rgba(239, 68, 68, 0.3);
    }
    
    .attendance-btn.absent:hover {
        border-color: rgb(239, 68, 68);
        background-color: rgba(239, 68, 68, 0.05);
    }
    
    .attendance-btn.absent.active {
        border-color: rgb(239, 68, 68);
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.1) 0%, rgba(239, 68, 68, 0.15) 100%);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
    }

    .attendance-btn.leave {
        color: #d97706;
        border-color: rgba(245, 158, 11, 0.3);
    }
    
    .attendance-btn.leave:hover {
        border-color: rgb(245, 158, 11);
        background-color: rgba(245, 158, 11, 0.05);
    }
    
    .attendance-btn.leave.active {
        border-color: rgb(245, 158, 11);
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.1) 0%, rgba(245, 158, 11, 0.15) 100%);
        box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
    }

    .attendance-btn.late {
        color: #2563eb;
        border-color: rgba(59, 130, 246, 0.3);
    }
    
    .attendance-btn.late:hover {
        border-color: rgb(59, 130, 246);
        background-color: rgba(59, 130, 246, 0.05);
    }
    
    .attendance-btn.late.active {
        border-color: rgb(59, 130, 246);
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(59, 130, 246, 0.15) 100%);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    }

    .attendance-btn svg {
        flex-shrink: 0;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Extra small devices (phones, less than 475px) */
    @@media (max-width: 474px) {
        .xs\:hidden

    {
        display: none;
    }

    }
</style>
