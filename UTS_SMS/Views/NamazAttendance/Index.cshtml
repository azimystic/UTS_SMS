@model IEnumerable<SMS.Models.NamazAttendanceViewModel>

@{
    ViewData["Title"] = "Namaz Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
        <div class="border-4 border-dashed border-primary-100 rounded-lg p-8">
            
            <!-- Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-primary-800">Namaz Attendance</h1>
                <p class="mt-2 text-sm text-neutral-600">Manage daily namaz attendance for students and employees</p>
            </div>

            <!-- Filters -->
            <form method="get" class="mb-6">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <!-- Date Filter -->
                    <div>
                        <label for="date" class="block text-sm font-medium text-neutral-700">Date</label>
                        <input type="date" id="date" name="date" value="@ViewBag.Date?.ToString("yyyy-MM-dd")" 
                               class="mt-1 block w-full rounded-md border-primary-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                    </div>

                    <!-- Person Type Filter -->
                    <div>
                        <label for="personType" class="block text-sm font-medium text-neutral-700">Person Type</label>
                        <select id="personType" name="personType" 
                                class="mt-1 block w-full rounded-md border-primary-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                            <option value="">All</option>
                            <option value="Student" selected="@(ViewBag.PersonType == "Student")">Students</option>
                            <option value="Employee" selected="@(ViewBag.PersonType == "Employee")">Employees</option>
                        </select>
                    </div>

                    <!-- Search -->
                    <div>
                        <label for="searchString" class="block text-sm font-medium text-neutral-700">Search</label>
                        <input type="text" id="searchString" name="searchString" value="@ViewBag.SearchString" 
                               placeholder="Search by name..."
                               class="mt-1 block w-full rounded-md border-primary-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                    </div>

                    <!-- Campus Filter (only if user can see multiple campuses) -->
                    @if (ViewBag.UserCampusId == null)
                    {
                        <div>
                            <label for="campusFilter" class="block text-sm font-medium text-neutral-700">Campus</label>
                            <select id="campusFilter" name="campusFilter"
                                    class="mt-1 block w-full rounded-md border-primary-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                <option value="">All Campuses</option>
                                @foreach (var campus in ViewBag.Campuses)
                                {
                                    <option value="@campus.Id" selected="@(ViewBag.CampusFilter?.ToString() == campus.Id.ToString())">
                                        @campus.Name
                                    </option>
                                }
                            </select>
                        </div>
                    }
                </div>

                <div class="mt-4">
                    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Filter
                    </button>
                    <a asp-action="DailySummary" asp-route-date="@ViewBag.Date?.ToString("yyyy-MM-dd")" 
                       class="ml-3 inline-flex items-center px-4 py-2 border border-primary-200 text-sm font-medium rounded-md text-neutral-700 bg-white hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        View Summary
                    </a>
                </div>
            </form>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="rounded-md bg-success-light p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-success">@TempData["SuccessMessage"]</p>
                        </div>
                    </div>
                </div>
            }

            <!-- Attendance Form -->
            <form asp-action="Save" method="post">
                <input type="hidden" name="date" value="@ViewBag.Date?.ToString("yyyy-MM-dd")" />
                <input type="hidden" name="campusFilter" value="@ViewBag.CampusFilter" />
                
                <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
                    <table class="min-w-full divide-y divide-primary-200">
                        <thead class="bg-neutral-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">
                                    Type
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">
                                    Name
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">
                                    Status
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">
                                    Remarks
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-primary-100">
                            @{
                                int index = 0;
                            }
                            @foreach (var person in Model)
                            {
                                <tr class="@(index % 2 == 0 ? "bg-white" : "bg-neutral-50")">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-primary-800">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(person.PersonType == "Student" ? "bg-primary-100 text-primary-800" : "bg-success-light text-success")">
                                            @person.PersonType
                                        </span>
                                        <input type="hidden" name="[@index].StudentId" value="@person.StudentId" />
                                        <input type="hidden" name="[@index].EmployeeId" value="@person.EmployeeId" />
                                        <input type="hidden" name="[@index].PersonName" value="@person.PersonName" />
                                        <input type="hidden" name="[@index].PersonType" value="@person.PersonType" />
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-primary-800">@person.PersonName</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex space-x-2">
                                            <input type="hidden" name="[@index].Status" value="@person.Status" id="status_@index" />
                                            <button type="button" 
                                                    class="status-btn flex-1 px-3 py-2 text-xs font-medium rounded-lg transition-all duration-300 @(person.Status == "WJ" ? "bg-success text-white shadow-sms-lg" : "bg-neutral-100 text-neutral-700 hover:bg-success-light hover:text-success")"
                                                    data-status="WJ" 
                                                    data-index="@index"
                                                    title="With Jamat">
                                                <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                                </svg>
                                                <span class="block text-xs mt-1">With Jamat</span>
                                            </button>
                                            <button type="button" 
                                                    class="status-btn flex-1 px-3 py-2 text-xs font-medium rounded-lg transition-all duration-300 @(person.Status == "QZ" ? "bg-yellow-600 text-white shadow-sms-lg" : "bg-neutral-100 text-neutral-700 hover:bg-warning-light hover:text-yellow-700")"
                                                    data-status="QZ" 
                                                    data-index="@index"
                                                    title="Qaza">
                                                <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                                <span class="block text-xs mt-1">Qaza</span>
                                            </button>
                                            <button type="button" 
                                                    class="status-btn flex-1 px-3 py-2 text-xs font-medium rounded-lg transition-all duration-300 @(person.Status == "WOJ" ? "bg-error text-white shadow-sms-lg" : "bg-neutral-100 text-neutral-700 hover:bg-error-light hover:text-error")"
                                                    data-status="WOJ" 
                                                    data-index="@index"
                                                    title="Without Jamat">
                                                <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                                </svg>
                                                <span class="block text-xs mt-1">Without Jamat</span>
                                            </button>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <input type="text" name="[@index].Remarks" value="@person.Remarks" 
                                               class="block w-full rounded-md border-primary-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                                               placeholder="Optional remarks">
                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.Any())
                {
                    <div class="mt-6">
                        <button type="submit" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Save Attendance
                        </button>
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <svg class="mx-auto h-12 w-12 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <h3 class="mt-2 text-sm font-medium text-primary-800">No records found</h3>
                        <p class="mt-1 text-sm text-neutral-500">Try adjusting your search criteria.</p>
                    </div>
                }
            </form>

        </div>
    </div>
</div>

<script>
    // Handle status button clicks
    document.addEventListener('DOMContentLoaded', function() {
        const statusButtons = document.querySelectorAll('.status-btn');
        
        statusButtons.forEach(button => {
            button.addEventListener('click', function() {
                const status = this.getAttribute('data-status');
                const index = this.getAttribute('data-index');
                
                // Update hidden input
                document.getElementById('status_' + index).value = status;
                
                // Update button styles for this row
                const rowButtons = document.querySelectorAll('[data-index="' + index + '"]');
                rowButtons.forEach(btn => {
                    btn.classList.remove('bg-success', 'bg-yellow-600', 'bg-error', 'text-white', 'shadow-sms-lg');
                    btn.classList.add('bg-neutral-100', 'text-neutral-700');
                    
                    // Add hover classes back
                    if (btn.getAttribute('data-status') === 'WJ') {
                        btn.classList.add('hover:bg-success-light', 'hover:text-success');
                    } else if (btn.getAttribute('data-status') === 'QZ') {
                        btn.classList.add('hover:bg-warning-light', 'hover:text-yellow-700');
                    } else if (btn.getAttribute('data-status') === 'WOJ') {
                        btn.classList.add('hover:bg-error-light', 'hover:text-error');
                    }
                });
                
                // Style the selected button
                this.classList.remove('bg-neutral-100', 'text-neutral-700', 'hover:bg-success-light', 'hover:text-success', 'hover:bg-warning-light', 'hover:text-yellow-700', 'hover:bg-error-light', 'hover:text-error');
                
                if (status === 'WJ') {
                    this.classList.add('bg-success', 'text-white', 'shadow-sms-lg');
                } else if (status === 'QZ') {
                    this.classList.add('bg-yellow-600', 'text-white', 'shadow-sms-lg');
                } else if (status === 'WOJ') {
                    this.classList.add('bg-error', 'text-white', 'shadow-sms-lg');
                }
                
                // Add a small animation
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                }, 100);
            });
        });
    });
</script>