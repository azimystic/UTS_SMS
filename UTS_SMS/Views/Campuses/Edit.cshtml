@model UTS_SMS.Models.Campus

@{
    ViewData["Title"] = "Edit Campus";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">🏫 Edit Campus</h1>
            <p class="text-neutral-600 mt-2">Update campus information and contact details</p>
        </div>

        <!-- Form -->
        <div class="bg-white rounded-2xl shadow-sms-xl p-6">
            <form asp-action="Edit" class="space-y-6" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="bg-error-light border-l-4 border-error text-error p-4 rounded-lg"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Name -->
                    <div>
                        <label asp-for="Name" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="Name" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" />
                        <span asp-validation-for="Name" class="text-error text-sm"></span>
                    </div>

                    <!-- Code -->
                    <div>
                        <label asp-for="Code" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="Code" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" />
                        <span asp-validation-for="Code" class="text-error text-sm"></span>
                    </div>

                    <!-- Phone -->
                    <div>
                        <label asp-for="Phone" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="Phone" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" />
                        <span asp-validation-for="Phone" class="text-error text-sm"></span>
                    </div>

                    <!-- Email -->
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="Email" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" />
                        <span asp-validation-for="Email" class="text-error text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="StartTime" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                        <input asp-for="StartTime" type="time" class="w-full px-4 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400 transition-all" />
                        <span asp-validation-for="StartTime" class="text-error text-sm mt-1"></span>
                    </div>
                    <div>
                        <label asp-for="EndTime" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                        <input asp-for="EndTime" type="time" class="w-full px-4 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400 transition-all" />
                        <span asp-validation-for="EndTime" class="text-error text-sm mt-1"></span>
                    </div>
                    <!-- Email -->
                    <div>
                        <label asp-for="Longitudes" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="Longitudes" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" />
                        <span asp-validation-for="Longitudes" class="text-error text-sm"></span>
                    </div>
                    <!-- Email -->
                    <div>
                        <label asp-for="Latitudes" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="Latitudes" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" />
                        <span asp-validation-for="Latitudes" class="text-error text-sm"></span>
                    </div>
                    <!-- Address -->
                    <div class="md:col-span-2">
                        <label asp-for="Address" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <textarea asp-for="Address" rows="3" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300"></textarea>
                        <span asp-validation-for="Address" class="text-error text-sm"></span>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1">Profile Picture</label>
                        <div class="relative">
                            <input type="file" id="Logo" name="Logo" class="opacity-0 absolute inset-0 w-full h-full cursor-pointer">
                            <div class="flex items-center justify-between px-4 py-2 border border-primary-200 rounded-md bg-white">
                                <span class="text-neutral-500" id="profilePictureLabel">Choose file</span>
                                <svg class="w-5 h-5 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                                </svg>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Logo))
                        {
                            <div class="mt-2">
                                <span class="text-sm text-neutral-600">Current: </span>
                                <a href="/@Model.Logo" target="_blank" class="text-sm text-primary-600 hover:text-primary-800 transition-colors">View</a>
                            </div>
                        }
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex space-x-4 pt-6">
                    <button type="submit" class="bg-gradient-to-r from-blue-500 to-blue-600 hover:from-primary-600 hover:to-blue-700 text-white font-medium py-3 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-sms-lg flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Save Changes
                    </button>
                    <a asp-action="Index" class="bg-neutral-100 hover:bg-primary-100 text-primary-800 font-medium py-3 px-8 rounded-xl transition-all duration-300 flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Show file names in file inputs
            $('input[type="file"]').on('change', function() {
                var fileName = $(this).val().split('\\').pop();
                if (fileName) {
                    $(this).siblings('div').find('span').html(fileName);
                }
            });
    </script>
}