@model IEnumerable<SMS.Models.AppMenuParent>

@{
    ViewData["Title"] = "App Menu Management";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-bars"></i> App Menu Management</h4>
                        <div>
                            <a asp-controller="UserRoles" asp-action="Index" class="btn btn-light btn-sm me-2">
                                <i class="fas fa-user-shield"></i> Manage Role Assignments
                            </a>
                            <a asp-action="CreateParent" class="btn btn-light btn-sm">
                                <i class="fas fa-plus"></i> Add Parent Menu
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle"></i> 
                        <strong>Tip:</strong> Drag the <i class="fas fa-grip-vertical"></i> icon to reorder menus. 
                        Role assignments are now managed in the <a asp-controller="UserRoles" asp-action="Index" class="alert-link">User Roles</a> section.
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover table-bordered" id="menuTable">
                            <thead style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);">
                                <tr>
                                    <th width="40" class="text-center">Order</th>
                                    <th width="60">Icon</th>
                                    <th>Display Name</th>
                                    <th>Controller</th>
                                    <th width="80" class="text-center">Clickable</th>
                                    <th width="100" class="text-center">Children</th>
                                    <th width="80" class="text-center">Status</th>
                                    <th width="220" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="sortableParents">
                                @foreach (var item in Model)
                                {
                                    <tr data-id="@item.Id" style="cursor: move;">
                                        <td class="text-center align-middle">
                                            <i class="fas fa-grip-vertical text-muted handle me-2" style="cursor: grab;"></i>
                                            <span class="badge bg-secondary">@item.DisplayOrder</span>
                                        </td>
                                        <td class="align-middle">
                                            @if (!string.IsNullOrEmpty(item.IconClass))
                                            {
                                                <i class="@item.IconClass fa-2x" style="color: #667eea;"></i>
                                            }
                                        </td>
                                        <td class="align-middle">
                                            <strong style="font-size: 1.1em;">@item.DisplayName</strong>
                                        </td>
                                        <td class="align-middle">
                                            <code style="background-color: #f0f0f0; padding: 4px 8px; border-radius: 4px;">@item.ControllerName</code>
                                        </td>
                                        <td class="text-center align-middle">
                                            @if (item.IsClickable)
                                            {
                                                <span class="badge bg-success" style="font-size: 0.9em;">
                                                    <i class="fas fa-check"></i> Yes
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary" style="font-size: 0.9em;">
                                                    <i class="fas fa-times"></i> No
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">
                                            @if (item.HasChildren)
                                            {
                                                <span class="badge bg-info" style="font-size: 0.9em;">
                                                    <i class="fas fa-sitemap"></i> @item.Children.Count
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary" style="font-size: 0.9em;">0</span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">
                                            @if (item.IsActive)
                                            {
                                                <span class="badge bg-success" style="font-size: 0.9em;">
                                                    <i class="fas fa-check-circle"></i> Active
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger" style="font-size: 0.9em;">
                                                    <i class="fas fa-times-circle"></i> Inactive
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="ManageChildren" asp-route-id="@item.Id" 
                                                   class="btn btn-info" 
                                                   title="Manage Children"
                                                   style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                                                    <i class="fas fa-list"></i>
                                                </a>
                                                <a asp-action="EditParent" asp-route-id="@item.Id" 
                                                   class="btn btn-warning" 
                                                   title="Edit"
                                                   style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); border: none; color: white;">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" 
                                                        class="btn btn-danger" 
                                                        onclick="deleteParent(@item.Id)" 
                                                        title="Delete"
                                                        style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); border: none;">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/sortablejs/Sortable.min.js" asp-append-version="true"></script>
    <script>
        // Initialize Sortable for parent menus
        const sortableParents = document.getElementById('sortableParents');
        if (sortableParents) {
            new Sortable(sortableParents, {
                handle: '.handle',
                animation: 150,
                ghostClass: 'sortable-ghost',
                onEnd: function(evt) {
                    const orderedIds = [];
                    document.querySelectorAll('#sortableParents tr').forEach(row => {
                        orderedIds.push(parseInt(row.dataset.id));
                    });
                    
                    fetch('/AppMenus/ReorderParents', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                        },
                        body: JSON.stringify(orderedIds)
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Update order badges
                            document.querySelectorAll('#sortableParents tr').forEach((row, index) => {
                                const badge = row.querySelector('.badge.bg-secondary');
                                if (badge) {
                                    badge.textContent = (index + 1);
                                }
                            });
                            console.log('Order updated successfully');
                        } else {
                            alert('Error updating order: ' + data.message);
                            location.reload();
                        }
                    })
                    .catch(error => {
                        alert('Error updating order');
                        location.reload();
                    });
                }
            });
        }

        function deleteParent(id) {
            if (!confirm('Are you sure you want to delete this parent menu and all its children?')) {
                return;
            }
            
            fetch('/AppMenus/DeleteParent/' + id, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                alert('Error deleting menu');
            });
        }
    </script>
    <style>
        .sortable-ghost {
            opacity: 0.4;
            background: #f0f0f0;
        }
        
        .table tbody tr:hover {
            background-color: #f8f9fa;
            transition: background-color 0.2s ease;
        }
        
        .handle:hover {
            color: #667eea !important;
            cursor: grab;
        }
        
        .handle:active {
            cursor: grabbing;
        }
    </style>
}
