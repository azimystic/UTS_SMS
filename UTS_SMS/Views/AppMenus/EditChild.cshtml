@using UTS_SMS.Models
@model UTS_SMS.Models.AppMenuChild

@{
    ViewData["Title"] = "Edit Child Menu";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Edit Child Menu for <strong>@ViewBag.ParentName</strong>
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditChild" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ParentMenuId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ActionName" class="form-label"></label>
                                <input asp-for="ActionName" class="form-control" />
                                <span asp-validation-for="ActionName" class="text-danger"></span>
                                <small class="form-text text-muted">Controller action name</small>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="DisplayName" class="form-label"></label>
                                <input asp-for="DisplayName" class="form-control" />
                                <span asp-validation-for="DisplayName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="IconClass" class="form-label"></label>
                                <input asp-for="IconClass" class="form-control" placeholder="e.g., fas fa-list" />
                                <span asp-validation-for="IconClass" class="text-danger"></span>
                                <small class="form-text text-muted">Use Font Awesome icon classes</small>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="DisplayOrder" class="form-label"></label>
                                <input asp-for="DisplayOrder" type="number" class="form-control" />
                                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Url" class="form-label"></label>
                            <input asp-for="Url" class="form-control" placeholder="e.g., /@ViewBag.ControllerName/Index" />
                            <span asp-validation-for="Url" class="text-danger"></span>
                            <small class="form-text text-muted">Leave empty to auto-generate from controller and action</small>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle"></i> 
                            <strong>Note:</strong> Role assignments are now managed separately in the 
                            <a asp-controller="UserRoles" asp-action="Index" class="alert-link">User Roles</a> section.
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input asp-for="IsIncluded" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsIncluded" class="form-check-label"></label>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="ManageChildren" asp-route-id="@Model.ParentMenuId" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
