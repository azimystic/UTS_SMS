@model SMS.Models.AppMenuParent

@{
    ViewData["Title"] = "Manage Children - " + ViewBag.ParentName;
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-list"></i> Manage Children for: <strong>@ViewBag.ParentName</strong>
                        </h4>
                        <div>
                            <a asp-action="CreateChild" asp-route-parentId="@ViewBag.ParentId" class="btn btn-light btn-sm">
                                <i class="fas fa-plus"></i> Add Child Menu
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-sm">
                                <i class="fas fa-arrow-left"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle"></i> 
                        <strong>Tip:</strong> Drag the <i class="fas fa-grip-vertical"></i> icon to reorder child menus.
                        Role assignments are managed in the <a asp-controller="UserRoles" asp-action="Index" class="alert-link">User Roles</a> section.
                    </div>

                    @if (Model.Children.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered">
                                <thead style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);">
                                    <tr>
                                        <th width="40" class="text-center">Order</th>
                                        <th width="60">Icon</th>
                                        <th>Display Name</th>
                                        <th>Action</th>
                                        <th>URL</th>
                                        <th width="80" class="text-center">Included</th>
                                        <th width="80" class="text-center">Status</th>
                                        <th width="150" class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="sortableChildren">
                                    @foreach (var child in Model.Children.OrderBy(c => c.DisplayOrder))
                                    {
                                        <tr data-id="@child.Id" style="cursor: move;">
                                            <td class="text-center align-middle">
                                                <i class="fas fa-grip-vertical text-muted handle me-2" style="cursor: grab;"></i>
                                                <span class="badge bg-secondary">@child.DisplayOrder</span>
                                            </td>
                                            <td class="align-middle">
                                                @if (!string.IsNullOrEmpty(child.IconClass))
                                                {
                                                    <i class="@child.IconClass fa-lg" style="color: #667eea;"></i>
                                                }
                                            </td>
                                            <td class="align-middle"><strong>@child.DisplayName</strong></td>
                                            <td class="align-middle">
                                                <code style="background-color: #f0f0f0; padding: 4px 8px; border-radius: 4px;">@child.ActionName</code>
                                            </td>
                                            <td class="align-middle">
                                                <small class="text-muted">@child.Url</small>
                                            </td>
                                            <td class="text-center align-middle">
                                                @if (child.IsIncluded)
                                                {
                                                    <span class="badge bg-success" style="font-size: 0.9em;">
                                                        <i class="fas fa-check"></i> Yes
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary" style="font-size: 0.9em;">
                                                        <i class="fas fa-times"></i> No
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-center align-middle">
                                                @if (child.IsActive)
                                                {
                                                    <span class="badge bg-success" style="font-size: 0.9em;">
                                                        <i class="fas fa-check-circle"></i> Active
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger" style="font-size: 0.9em;">
                                                        <i class="fas fa-times-circle"></i> Inactive
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-center align-middle">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="EditChild" asp-route-id="@child.Id" 
                                                       class="btn btn-warning" 
                                                       title="Edit"
                                                       style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); border: none; color: white;">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" 
                                                            class="btn btn-danger" 
                                                            onclick="deleteChild(@child.Id)" 
                                                            title="Delete"
                                                            style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); border: none;">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-info-circle fa-2x mb-2"></i>
                            <p class="mb-2">No child menus found for this parent menu.</p>
                            <a asp-action="CreateChild" asp-route-parentId="@ViewBag.ParentId" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add First Child Menu
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/sortablejs/Sortable.min.js" asp-append-version="true"></script>
    <script>
        // Initialize Sortable for child menus
        const sortableChildren = document.getElementById('sortableChildren');
        if (sortableChildren) {
            new Sortable(sortableChildren, {
                handle: '.handle',
                animation: 150,
                ghostClass: 'sortable-ghost',
                onEnd: function(evt) {
                    const orderedIds = [];
                    document.querySelectorAll('#sortableChildren tr').forEach(row => {
                        orderedIds.push(parseInt(row.dataset.id));
                    });
                    
                    fetch('/AppMenus/ReorderChildren', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                        },
                        body: JSON.stringify(orderedIds)
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Update order badges
                            document.querySelectorAll('#sortableChildren tr').forEach((row, index) => {
                                const badge = row.querySelector('.badge.bg-secondary');
                                if (badge) {
                                    badge.textContent = (index + 1);
                                }
                            });
                            console.log('Order updated successfully');
                        } else {
                            alert('Error updating order: ' + data.message);
                            location.reload();
                        }
                    })
                    .catch(error => {
                        alert('Error updating order');
                        location.reload();
                    });
                }
            });
        }

        function deleteChild(id) {
            if (!confirm('Are you sure you want to delete this child menu?')) {
                return;
            }
            
            fetch('/AppMenus/DeleteChild/' + id, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                alert('Error deleting child menu');
            });
        }
    </script>
    <style>
        .sortable-ghost {
            opacity: 0.4;
            background: #f0f0f0;
        }
        
        .table tbody tr:hover {
            background-color: #f8f9fa;
            transition: background-color 0.2s ease;
        }
        
        .handle:hover {
            color: #667eea !important;
            cursor: grab;
        }
        
        .handle:active {
            cursor: grabbing;
        }
    </style>
}
