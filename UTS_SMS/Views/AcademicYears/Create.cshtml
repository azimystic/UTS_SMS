@using UTS_SMS.Models
@model UTS_SMS.Models.AcademicYear

@{
    ViewData["Title"] = "Create Academic Year";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">ðŸ“… Create Academic Year</h1>
            <p class="text-neutral-600 mt-2">Add a new academic year to the system</p>
        </div>

        <!-- Form -->
        <div class="bg-white rounded-2xl shadow-sms-xl p-6">
            <form asp-action="Create" class="space-y-6">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="bg-error-light border-l-4 border-error text-error p-4 rounded-lg"></div>

                <div class="grid grid-cols-1 gap-6">
                    <!-- Year -->
                    <div>
                        <label asp-for="Year" class="block text-sm font-medium text-neutral-700 mb-2">Academic Year</label>
                        <input asp-for="Year" type="number" min="2000" max="2100" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" placeholder="e.g., 2024" />
                        <span asp-validation-for="Year" class="text-error text-sm"></span>
                        <p class="text-sm text-neutral-500 mt-1">Enter the year (e.g., 2024 for academic year 2024)</p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex justify-end space-x-3 pt-4 border-t border-primary-100">
                    <a asp-action="Index" class="px-6 py-3 bg-neutral-100 hover:bg-neutral-200 text-neutral-700 rounded-lg transition-all duration-300 flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back to List
                    </a>
                    <button type="submit" class="bg-gradient-primary hover:shadow-sms-lg text-white px-8 py-3 rounded-lg transition-all duration-300 flex items-center shadow-sms-md hover:shadow-sms-lg">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Create Academic Year
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
