@model UTS_SMS.Models.AcademicYear

@{
    ViewData["Title"] = "Academic Year Details";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">ðŸ“… Academic Year Details</h1>
            <p class="text-neutral-600 mt-2">View academic year information</p>
        </div>

        <!-- Details Card -->
        <div class="bg-white rounded-2xl shadow-sms-xl p-6">
            <div class="space-y-6">
                <div class="flex items-center p-6 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl">
                    <div class="w-20 h-20 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full flex items-center justify-center text-white mr-6">
                        <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-neutral-600 mb-1">Academic Year</dt>
                        <dd class="text-4xl font-bold text-primary-800">@Model.Year</dd>
                    </div>
                </div>

                <div class="bg-neutral-50 rounded-xl p-6">
                    <dl class="grid grid-cols-1 gap-4">
                        <div>
                            <dt class="text-sm font-medium text-neutral-500 mb-1">Record ID</dt>
                            <dd class="text-lg font-semibold text-primary-800">@Model.Id</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-neutral-500 mb-1">Year Value</dt>
                            <dd class="text-lg font-semibold text-primary-800">@Model.Year</dd>
                        </div>
                    </dl>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-end space-x-3 pt-6 border-t border-primary-100 mt-6">
                <a asp-action="Index" class="px-6 py-3 bg-neutral-100 hover:bg-neutral-200 text-neutral-700 rounded-lg transition-all duration-300 flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Back to List
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-gradient-to-r from-indigo-500 to-indigo-600 hover:from-indigo-600 hover:to-primary-400 text-white px-6 py-3 rounded-lg transition-all duration-300 flex items-center shadow-sms-md hover:shadow-sms-lg">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit
                </a>
            </div>
        </div>
    </div>
</div>
