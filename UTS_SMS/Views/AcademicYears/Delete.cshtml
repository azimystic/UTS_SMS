@using UTS_SMS.Models
@model UTS_SMS.Models.AcademicYear

@{
    ViewData["Title"] = "Delete Academic Year";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-danger">âš ï¸ Delete Academic Year</h1>
            <p class="text-neutral-600 mt-2">Are you sure you want to delete this academic year?</p>
        </div>

        <!-- Confirmation Card -->
        <div class="bg-white rounded-2xl shadow-sms-xl p-6">
            <div class="bg-danger-light border-l-4 border-danger p-4 rounded-lg mb-6">
                <div class="flex items-center">
                    <svg class="w-6 h-6 mr-3 text-danger" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                    <div>
                        <p class="font-semibold text-danger">Warning</p>
                        <p class="text-sm text-danger">This action cannot be undone. Please confirm deletion.</p>
                    </div>
                </div>
            </div>

            <div class="space-y-4 mb-6">
                <div class="flex items-center p-4 bg-neutral-50 rounded-lg">
                    <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full flex items-center justify-center text-white mr-4">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-neutral-500">Academic Year</dt>
                        <dd class="text-2xl font-bold text-primary-800">@Model.Year</dd>
                    </div>
                </div>
            </div>

            <form asp-action="Delete">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                
                <div class="flex justify-end space-x-3 pt-4 border-t border-primary-100">
                    <a asp-action="Index" class="px-6 py-3 bg-neutral-100 hover:bg-neutral-200 text-neutral-700 rounded-lg transition-all duration-300 flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Cancel
                    </a>
                    <button type="submit" class="bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white px-8 py-3 rounded-lg transition-all duration-300 flex items-center shadow-sms-md hover:shadow-sms-lg">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Delete Academic Year
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
