@model List<Diary>

@{
    ViewData["Title"] = "Daily Diary";
    var student = ViewBag.Student as Student;
    var selectedDate = (DateTime)ViewBag.SelectedDate;
}

<div class="min-h-screen bg-neutral-50 p-3 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
            <div>
                <h1 class="text-2xl md:text-3xl font-bold text-primary-800">ðŸ“š Daily Diary</h1>
                <p class="text-neutral-600 mt-1">@student?.StudentName - @student?.ClassObj?.Name @student?.SectionObj?.Name</p>
                <p class="text-sm text-neutral-500">@selectedDate.ToString("dddd, MMMM dd, yyyy")</p>
            </div>
            
            <div class="flex flex-col md:flex-row items-start md:items-center space-y-2 md:space-y-0 md:space-x-2 mt-4 md:mt-0">
                <!-- Date Selector -->
                <form method="get" class="flex items-center space-x-2">
                    <input type="hidden" name="studentId" value="@student?.Id" />
                    <input type="date" name="date" value="@selectedDate.ToString("yyyy-MM-dd")" class="px-3 py-2 border border-primary-200 rounded-md text-sm" />
                    <button type="submit" class="bg-gradient-primary hover:bg-primary-700 text-white px-4 py-2 rounded-md text-sm transition-colors">Update</button>
                </form>
                
                <a asp-action="StudentDetails" asp-route-id="@student?.Id" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md text-sm transition-colors flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Back to Dashboard
                </a>
            </div>
        </div>

        @if (Model.Any())
        {
            <!-- Diary Entries -->
            <div class="space-y-6">
                @foreach (var diary in Model)
                {
                    <div class="bg-white rounded-2xl shadow-sms-lg overflow-hidden hover:shadow-sms-xl transition-all duration-300">
                        <!-- Subject Header -->
                        <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-4 text-white">
                            <div class="flex justify-between items-center">
                                <div>
                                    <h2 class="text-xl font-bold">@diary.TeacherAssignment.Subject.Name</h2>
                                    <p class="text-blue-100">Teacher: @diary.TeacherAssignment.Teacher.FullName</p>
                                </div>
                                <div class="text-right">
                                    <p class="text-sm text-blue-200">@diary.Date.ToString("MMM dd, yyyy")</p>
                                    <p class="text-xs text-accent-400">@diary.CreatedAt.ToString("hh:mm tt")</p>
                                </div>
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="p-6">
                            <!-- Lesson Summary -->
                            <div class="mb-6">
                                <h3 class="text-lg font-semibold text-primary-800 mb-3 flex items-center">
                                    <svg class="w-5 h-5 text-success mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                    </svg>
                                    Lesson Summary
                                </h3>
                                <div class="bg-neutral-50 rounded-lg p-4">
                                    <p class="text-neutral-700 leading-relaxed">@diary.LessonSummary</p>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(diary.HomeworkGiven))
                            {
                                <!-- Homework -->
                                <div class="mb-6">
                                    <h3 class="text-lg font-semibold text-primary-800 mb-3 flex items-center">
                                        <svg class="w-5 h-5 text-warning mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                                        </svg>
                                        Homework Assignment
                                    </h3>
                                    <div class="bg-orange-50 border-l-4 border-orange-400 rounded-lg p-4">
                                        <p class="text-neutral-700 leading-relaxed">@diary.HomeworkGiven</p>
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(diary.Notes))
                            {
                                <!-- Additional Notes -->
                                <div class="mb-4">
                                    <h3 class="text-lg font-semibold text-primary-800 mb-3 flex items-center">
                                        <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                                        </svg>
                                        Teacher's Notes
                                    </h3>
                                    <div class="bg-primary-50 rounded-lg p-4">
                                        <p class="text-neutral-700 leading-relaxed">@diary.Notes</p>
                                    </div>
                                </div>
                            }

                            <!-- Metadata -->
                            <div class="border-t pt-4">
                                <div class="flex flex-wrap justify-between items-center text-sm text-neutral-500">
                                    <div>
                                        <span class="font-medium">Created by:</span> @diary.CreatedBy
                                    </div>
                                    <div>
                                        <span class="font-medium">Created:</span> @diary.CreatedAt.ToString("MMM dd, yyyy at hh:mm tt")
                                    </div>
                                </div>
                                @if (diary.ModifiedAt.HasValue)
                                {
                                    <div class="text-sm text-neutral-500 mt-1">
                                        <span class="font-medium">Last modified:</span> @diary.ModifiedAt?.ToString("MMM dd, yyyy at hh:mm tt") by @diary.ModifiedBy
                                    </div>
                                }
                            </div>

                            @if (diary.DiaryImages != null && diary.DiaryImages.Any())
                            {
                                <!-- Diary Images -->
                                <div class="border-t pt-4 mt-4">
                                    <h3 class="text-lg font-semibold text-primary-800 mb-3 flex items-center">
                                        <svg class="w-5 h-5 text-info mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 2h12a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V4a2 2 0 012-2z"></path>
                                        </svg>
                                        Attached Images (@diary.DiaryImages.Count)
                                    </h3>
                                    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                                        @foreach (var image in diary.DiaryImages.OrderBy(di => di.DisplayOrder))
                                        {
                                            <div class="relative group bg-neutral-100 rounded-lg overflow-hidden aspect-square">
                                                <img src="/@image.ImagePath" 
                                                     alt="@image.Description" 
                                                     class="w-full h-full object-cover cursor-pointer hover:opacity-90 transition-opacity"
                                                     onclick="openImageModal('/@image.ImagePath', '@image.Description', @image.Id)" />
                                                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-40 transition-all flex items-center justify-center">
                                                    <div class="opacity-0 group-hover:opacity-100 transition-opacity flex space-x-2">
                                                        <button onclick="openImageModal('/@image.ImagePath', '@image.Description', @image.Id)" 
                                                               class="bg-white bg-opacity-90 hover:bg-opacity-100 text-primary-800 p-2 rounded-full transition-all">
                                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                                                            </svg>
                                                        </button>
                                                        <a href="@Url.Action("DownloadDiaryImage", "ParentDashboard", new { id = image.Id })" 
                                                           class="bg-white bg-opacity-90 hover:bg-opacity-100 text-primary-800 p-2 rounded-full transition-all">
                                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                                            </svg>
                                                        </a>
                                                    </div>
                                                </div>
                                                @if (!string.IsNullOrEmpty(image.Description))
                                                {
                                                    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent p-2">
                                                        <p class="text-white text-xs truncate">@image.Description</p>
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- No Entries -->
            <div class="bg-white rounded-2xl shadow-sms-lg p-12 text-center">
                <svg class="w-24 h-24 text-neutral-400 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                <h3 class="text-xl font-medium text-primary-800 mb-2">No Diary Entries</h3>
                <p class="text-neutral-500 mb-6">No diary entries have been recorded for @selectedDate.ToString("MMMM dd, yyyy").</p>
                
                <!-- Quick Date Navigation -->
                <div class="flex flex-col sm:flex-row justify-center items-center space-y-2 sm:space-y-0 sm:space-x-4">
                    <a href="?studentId=@student?.Id&date=@selectedDate.AddDays(-1).ToString("yyyy-MM-dd")" 
                       class="bg-neutral-100 hover:bg-primary-100 text-neutral-700 px-4 py-2 rounded-lg transition-colors flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                        Previous Day
                    </a>
                    <a href="?studentId=@student?.Id&date=@DateTime.Today.ToString("yyyy-MM-dd")" 
                       class="bg-gradient-primary hover:bg-primary-700 text-white px-4 py-2 rounded-lg transition-colors">
                        Today
                    </a>
                    <a href="?studentId=@student?.Id&date=@selectedDate.AddDays(1).ToString("yyyy-MM-dd")" 
                       class="bg-neutral-100 hover:bg-primary-100 text-neutral-700 px-4 py-2 rounded-lg transition-colors flex items-center">
                        Next Day
                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>
        }

        <!-- Navigation Footer -->
        <div class="mt-8 bg-white rounded-2xl shadow-sms-lg p-6">
            <div class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
                <div class="flex space-x-2">
                    <a href="?studentId=@student?.Id&date=@selectedDate.AddDays(-1).ToString("yyyy-MM-dd")" 
                       class="bg-neutral-100 hover:bg-primary-100 text-neutral-700 px-4 py-2 rounded-lg transition-colors flex items-center text-sm">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                        @selectedDate.AddDays(-1).ToString("MMM dd")
                    </a>
                    <a href="?studentId=@student?.Id&date=@selectedDate.AddDays(1).ToString("yyyy-MM-dd")" 
                       class="bg-neutral-100 hover:bg-primary-100 text-neutral-700 px-4 py-2 rounded-lg transition-colors flex items-center text-sm">
                        @selectedDate.AddDays(1).ToString("MMM dd")
                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
                
                <a href="?studentId=@student?.Id&date=@DateTime.Today.ToString("yyyy-MM-dd")" 
                   class="bg-gradient-primary hover:bg-primary-700 text-white px-6 py-2 rounded-lg transition-colors flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    Go to Today
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Image Modal -->
<div id="imageModal" class="fixed inset-0 bg-black bg-opacity-75 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg max-w-4xl max-h-full overflow-hidden">
        <div class="flex justify-between items-center p-4 border-b">
            <h3 id="modalImageTitle" class="text-lg font-semibold text-primary-800">Image</h3>
            <div class="flex items-center space-x-2">
                <a id="downloadImageLink" href="#" 
                   class="bg-gradient-primary hover:bg-primary-700 text-white px-3 py-1 rounded text-sm flex items-center transition-colors">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    Download
                </a>
                <button onclick="closeImageModal()" class="text-neutral-400 hover:text-neutral-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
        <div class="p-4">
            <img id="modalImage" src="" alt="" class="max-w-full max-h-96 mx-auto rounded" />
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Image Modal Functions
        window.openImageModal = function(imagePath, description, imageId) {
            document.getElementById('modalImage').src = imagePath;
            document.getElementById('modalImageTitle').textContent = description || 'Diary Image';
            document.getElementById('downloadImageLink').href = '@Url.Action("DownloadDiaryImage", "ParentDashboard")?id=' + imageId;
            document.getElementById('imageModal').classList.remove('hidden');
        };
        
        window.closeImageModal = function() {
            document.getElementById('imageModal').classList.add('hidden');
        };
        
        // Close modal when clicking outside
        document.getElementById('imageModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeImageModal();
            }
        });
        
        // Close modal with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeImageModal();
            }
        });
    </script>
}