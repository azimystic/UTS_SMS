@section Scripts {
    <script src="~/lib/chartjs/chart.min.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Attendance Pie Chart
            const attendanceCtx = document.getElementById('attendanceChart');
            if (attendanceCtx) {
                new Chart(attendanceCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Present', 'Absent', 'Late', 'Leave'],
                        datasets: [{
                            data: [@presentDays, @absentDays, @lateDays, @leaveDays],
                            backgroundColor: [
                                'rgba(16, 185, 129, 0.8)',
                                'rgba(239, 68, 68, 0.8)',
                                'rgba(245, 158, 11, 0.8)',
                                'rgba(156, 163, 175, 0.8)'
                            ],
                            borderColor: [
                                'rgb(16, 185, 129)',
                                'rgb(239, 68, 68)',
                                'rgb(245, 158, 11)',
                                'rgb(156, 163, 175)'
                            ],
                            borderWidth: 2,
                            hoverOffset: 15
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    font: {
                                        size: 12
                                    },
                                    usePointStyle: true,
                                    padding: 20
                                }
                            }
                        },
                        animation: {
                            animateScale: true,
                            animateRotate: true,
                            duration: 1000
                        }
                    }
                });
            }

            // Test Results Chart
            const testCtx = document.getElementById('testResultsChart');
            if (testCtx && @Model.TestResults.Any().ToString().ToLower()) {
                const testData = @Html.Raw(Json.Serialize(Model.TestResults.Select(tr => new { 
                    ExamName = tr.Exam.Name ?? "Test",
                    Percentage = tr.Percentage 
                })));

                new Chart(testCtx, {
                    type: 'bar',
                    data: {
                        labels: testData.map(t => t.ExamName),
                        datasets: [{
                            label: 'Percentage',
                            data: testData.map(t => t.Percentage),
                            backgroundColor: 'rgba(59, 130, 246, 0.8)',
                            borderColor: 'rgb(59, 130, 246)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100,
                                ticks: {
                                    callback: function(value) {
                                        return value + '%';
                                    }
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            }
        });
        
        // Image Modal Functions
        window.openImageModal = function(imagePath, description, imageId) {
            document.getElementById('modalImage').src = imagePath;
            document.getElementById('modalImageTitle').textContent = description || 'Diary Image';
            document.getElementById('downloadImageLink').href = '@Url.Action("DownloadDiaryImage", "ParentDashboard")?id=' + imageId;
            document.getElementById('imageModal').classList.remove('hidden');
        };
        
        window.closeImageModal = function() {
            document.getElementById('imageModal').classList.add('hidden');
        };
        
        // Close modal when clicking outside
        document.getElementById('imageModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeImageModal();
            }
        });
        
        // Fee Details Functions
        window.toggleFeeDetails = function() {
            // This would expand to show more detailed breakdown
            alert('Fee details would be expanded here');
        };
        
        window.toggleTransactionHistory = function() {
            // This would show transaction history
            alert('Transaction history would be shown here');
        };
        
        window.openFeeDetails = function() {
            // Redirect to detailed fee page
            window.location.href = '@Url.Action("FeeDetails", "ParentDashboard", new { id = Model.Student.Id })';
        };
        
        window.printFeeVoucher = function() {
            // Open print dialog for fee voucher
            var printWindow = window.open('@Url.Action("PrintFeeVoucher", "ParentDashboard", new { id = Model.Student.Id })', 'FeeVoucher', 'width=800,height=600');
            if (printWindow) {
                printWindow.focus();
            }
        };
        
        // Student Duties Functions
        window.showAllDuties = function() {
            // This would show all duties in a modal or redirect to a detailed view
            window.location.href = '@Url.Action("StudentDuties", "ParentDashboard", new { id = Model.Student.Id })';
        };
    </script>
}
