@using UTS_SMS.Models
@model UTS_SMS.Controllers.ParentDashboardController.ParentDashboardViewModel

@{
    ViewData["Title"] = "Parent Dashboard";
}

<div class="min-h-screen bg-gray-900 p-3 md:p-4">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4">
            <div>
                <h1 class="text-xl md:text-2xl font-bold text-white">ðŸ‘¨â€ðŸ‘©â€ðŸ‘§â€ðŸ‘¦ Parent Portal</h1>
                <p class="text-gray-400 mt-1 text-sm">Welcome, @Model.Family.FatherName</p>
            </div>
            <div class="flex items-center space-x-2 mt-4 md:mt-0">
                <div class="bg-blue-600/20 text-blue-400 px-3 py-1 rounded-full text-xs border border-blue-600/30">
                    @Model.Students.Count Student@(Model.Students.Count != 1 ? "s" : "")
                </div>
            </div>
        </div>

        <!-- Family Information Card -->
        <div class="bg-white rounded-2xl shadow-sms-lg p-6 mb-8">
            <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.196-2.12 3 3 0 01-5.196 2.12 3 3 0 00-5.196-2.12A3 3 0 002 18v2h5zm0 0v-2a3 3 0 015.196-2.12 3 3 0 015.196 2.12V20H17z"></path>
                    </svg>
                </div>
                <div class="ml-4">
                    <h2 class="text-xl font-semibold text-primary-800">Family Information</h2>
                    <p class="text-neutral-600">@Model.Family.FatherCNIC</p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 text-sm">
                <div>
                    <span class="font-medium text-neutral-700">Father Name:</span>
                    <p class="text-primary-800">@Model.Family.FatherName</p>
                </div>
                <div>
                    <span class="font-medium text-neutral-700">Phone:</span>
                    <p class="text-primary-800">@Model.Family.FatherPhone</p>
                </div>
                <div>
                    <span class="font-medium text-neutral-700">Address:</span>
                    <p class="text-primary-800">@Model.Family.HomeAddress</p>
                </div>
                @if (!string.IsNullOrEmpty(Model.Family.GuardianName))
                {
                    <div>
                        <span class="font-medium text-neutral-700">Guardian:</span>
                        <p class="text-primary-800">@Model.Family.GuardianName</p>
                    </div>
                    <div>
                        <span class="font-medium text-neutral-700">Guardian Phone:</span>
                        <p class="text-primary-800">@Model.Family.GuardianPhone</p>
                    </div>
                }
            </div>
        </div>

        <!-- Students Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
            @foreach (var student in Model.Students)
            {
                <div class="bg-white rounded-2xl shadow-sms-lg overflow-hidden hover:shadow-sms-xl transition-all duration-300">
                    <!-- Student Header -->
                    <div class="relative bg-gradient-to-r from-blue-500 to-purple-600 p-6 text-white">
                        <div class="flex items-center">
                            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center">
                                @if (!string.IsNullOrEmpty(student.ProfilePicture))
                                {
                                    <img src="/@student.ProfilePicture" alt="@student.StudentName" class="w-16 h-16 rounded-full object-cover" />
                                }
                                else
                                {
                                    <span class="text-xl font-bold">@student.StudentName.First()</span>
                                }
                            </div>
                            <div class="ml-4">
                                <h3 class="text-xl font-bold">@student.StudentName</h3>
                                <p class="text-blue-100">@student.ClassObj?.Name - @student.SectionObj?.Name</p>
                                @if (!string.IsNullOrEmpty(student.PersonalTitle))
                                {
                                    <div class="flex items-center mt-2">
                                        <svg class="w-4 h-4 text-yellow-300 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                        </svg>
                                        <span class="text-accent-100 text-sm font-medium">@student.PersonalTitle</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Student Stats -->
                    <div class="p-6">
                        <div class="grid grid-cols-2 gap-4 mb-6">
                            <div class="text-center">
                                <div class="text-2xl font-bold text-success">85%</div>
                                <div class="text-sm text-neutral-500">Attendance</div>
                            </div>
                            <div class="text-center">
                                <div class="text-2xl font-bold text-primary-600">78%</div>
                                <div class="text-sm text-neutral-500">Performance</div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="space-y-3">
                            <a asp-action="StudentDetails" asp-route-id="@student.Id" 
                               class="block w-full bg-gradient-primary hover:bg-primary-700 text-white py-3 px-4 rounded-xl text-center font-medium transition-all duration-300 transform hover:scale-105">
                                ðŸ“Š View Dashboard
                            </a>
                            
                            <div class="grid grid-cols-2 gap-2">
                                <a asp-action="DiaryDetails" asp-route-studentId="@student.Id" 
                                   class="bg-success-light hover:bg-success-light text-success py-2 px-3 rounded-lg text-center text-sm font-medium transition-colors">
                                    ðŸ“” Diary
                                </a>
                                <button class="bg-warning-light hover:bg-warning-light text-yellow-700 py-2 px-3 rounded-lg text-sm font-medium transition-colors">
                                    ðŸ’° Fees
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Students.Any())
        {
            <div class="text-center py-12">
                <svg class="w-24 h-24 text-neutral-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                </svg>
                <h3 class="text-xl font-medium text-primary-800 mb-2">No Active Students</h3>
                <p class="text-neutral-500">No students are currently active in your family.</p>
            </div>
        }

        <!-- Quick Actions -->
        <div class="mt-8 bg-white rounded-2xl shadow-sms-lg p-6">
            <h2 class="text-lg font-semibold text-primary-800 mb-4">Quick Actions</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <button class="flex flex-col items-center p-4 bg-primary-50 hover:bg-primary-100 rounded-xl transition-colors">
                    <svg class="w-8 h-8 text-primary-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v4a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                    <span class="text-sm font-medium text-blue-700">Attendance</span>
                </button>
                
                <button class="flex flex-col items-center p-4 bg-success-light hover:bg-success-light rounded-xl transition-colors">
                    <svg class="w-8 h-8 text-success mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span class="text-sm font-medium text-success">Fees</span>
                </button>
                
                <button class="flex flex-col items-center p-4 bg-purple-50 hover:bg-purple-100 rounded-xl transition-colors">
                    <svg class="w-8 h-8 text-primary-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                    </svg>
                    <span class="text-sm font-medium text-purple-700">Messages</span>
                </button>
                
                <button class="flex flex-col items-center p-4 bg-error-light hover:bg-error-light rounded-xl transition-colors">
                    <svg class="w-8 h-8 text-error mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.865-.833-2.634 0L4.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                    <span class="text-sm font-medium text-error">Complaints</span>
                </button>
            </div>
        </div>
    </div>
</div>
