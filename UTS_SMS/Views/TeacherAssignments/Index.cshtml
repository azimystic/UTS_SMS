@model IEnumerable<TeacherAssignment>

@{
    ViewData["Title"] = "Teacher Assignments";
    var showInactive = ViewBag.ShowInactive ?? false;
    var groupedByTeacher = Model.GroupBy(ta => new { ta.TeacherId, ta.Teacher })
                                .OrderBy(g => g.Key.Teacher?.FullName);
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-primary-800">üë®‚Äçüè´ Teacher Assignments</h1>
                <p class="text-neutral-600 mt-2">Manage teacher assignments for classes and subjects</p>
            </div>
            <div class="flex space-x-3 mt-4 md:mt-0">
                <!-- Toggle Inactive Button -->
                <a asp-action="Index" asp-route-showInactive="@(!showInactive)"
                   class="@(showInactive ? "bg-gradient-to-r from-green-500 to-green-600" : "bg-gradient-to-r from-gray-500 to-gray-600") hover:shadow-sms-lg text-white px-6 py-3 rounded-xl transition-all duration-300 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        @if (showInactive)
                        {
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        }
                        else
                        {
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                        }
                    </svg>
                    @(showInactive ? "View Active Only" : "View All (Active & Inactive)")
                </a>
                
                <a asp-action="Create" class="bg-gradient-primary hover:shadow-sms-lg text-white px-6 py-3 rounded-xl transition-all duration-300 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    New Assignment
                </a>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-success-light border-l-4 border-success text-success p-4 mb-6 rounded-xl animate-fade-in">
                <div class="flex items-center">
                    <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    @TempData["SuccessMessage"]
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-error-light border-l-4 border-error text-error p-4 mb-6 rounded-xl animate-fade-in">
                <div class="flex items-center">
                    <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    @TempData["ErrorMessage"]
                </div>
            </div>
        }

        <!-- Grouped Teacher List -->
        <div class="bg-white rounded-2xl shadow-sms-xl overflow-hidden">
            @if (groupedByTeacher.Any())
            {
                <div class="divide-y divide-primary-100">
                    @foreach (var teacherGroup in groupedByTeacher)
                    {
                        var teacher = teacherGroup.Key.Teacher;
                        var teacherId = teacherGroup.Key.TeacherId;
                        var subjectGroups = teacherGroup.GroupBy(ta => new { ta.SubjectId, ta.Subject }).OrderBy(sg => sg.Key.Subject?.Name);
                        
                        <div class="teacher-group">
                            <!-- Teacher Row (Clickable) -->
                            <div class="teacher-header px-6 py-4 hover:bg-primary-50 transition-all duration-300 cursor-pointer flex justify-between items-center" 
                                 onclick="toggleTeacher(this)">
                                <div class="flex items-center flex-1">
                                    <div class="w-12 h-12 bg-gradient-to-r from-purple-400 to-blue-500 rounded-full flex items-center justify-center text-white font-semibold text-base mr-4">
                                        @(teacher?.FullName?.Split(' ', StringSplitOptions.RemoveEmptyEntries)
                                                            .Select(n => n[0])
                                                            .Take(2)
                                                            .Aggregate("", (a, b) => a + b) ?? "T")
                                    </div>
                                    <div>
                                        <div class="text-lg font-semibold text-primary-800">@teacher?.FullName</div>
                                        <div class="text-sm text-neutral-500">
                                            @teacherGroup.Count() assignment(s) across @subjectGroups.Count() subject(s)
                                        </div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-3">
                                    <!-- Deactivate All Assignments for Teacher -->
                                    @if (!showInactive)
                                    {
                                        <form asp-action="DeactivateAllForTeacher" asp-route-teacherId="@teacherId" method="post" class="inline" onclick="event.stopPropagation();">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" 
                                                    class="bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white px-3 py-1.5 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-sm hover:shadow-sms-md flex items-center text-xs"
                                                    onclick="return confirm('Are you sure you want to deactivate all assignments for this teacher?');">
                                                <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                                                </svg>
                                                Deactivate All
                                            </button>
                                        </form>
                                    }
                                    <div class="toggle-icon transition-transform duration-300">
                                        <svg class="w-6 h-6 text-neutral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                        </svg>
                                    </div>
                                </div>
                            </div>

                            <!-- Expandable Subject Groups -->
                            <div class="teacher-details hidden bg-neutral-50">
                                @foreach (var subjectGroup in subjectGroups)
                                {
                                    var subject = subjectGroup.Key.Subject;
                                    var subjectId = subjectGroup.Key.SubjectId;
                                    
                                    <div class="subject-group px-6 py-4 border-t border-primary-100">
                                        <!-- Subject Header with Edit Button -->
                                        <div class="flex justify-between items-center mb-3">
                                            <div class="flex items-center">
                                                <div class="w-8 h-8 bg-gradient-to-r from-indigo-400 to-purple-500 rounded-lg flex items-center justify-center text-white font-semibold text-xs mr-3">
                                                    @(subject?.Code?.Length > 0 ? subject.Code.Substring(0, Math.Min(2, subject.Code.Length)) : "S")
                                                </div>
                                                <div>
                                                    <div class="text-base font-semibold text-primary-800">@subject?.Name</div>
                                                    <div class="text-xs text-neutral-500">@subject?.Code - @subjectGroup.Count() class(es)</div>
                                                </div>
                                            </div>
                                            <div class="flex items-center space-x-2">
                                                <!-- Deactivate All Assignments for Subject -->
                                                @if (!showInactive)
                                                {
                                                    <form asp-action="DeactivateAllForSubject" asp-route-subjectId="@subjectId" method="post" class="inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" 
                                                                class="bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white px-3 py-1.5 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-sm hover:shadow-sms-md flex items-center text-xs"
                                                                onclick="return confirm('Are you sure you want to deactivate all assignments for this subject?');">
                                                            <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                                                            </svg>
                                                            Deactivate All
                                                        </button>
                                                    </form>
                                                }
                                                <a asp-action="Edit" asp-route-teacherId="@teacherId" asp-route-subjectId="@subjectId"
                                                   class="bg-gradient-to-r from-indigo-500 to-indigo-600 hover:from-indigo-600 hover:to-primary-400 text-white px-4 py-2 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-sm hover:shadow-sms-md flex items-center text-sm">
                                                    <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                    </svg>
                                                    Edit Subject
                                                </a>
                                            </div>
                                        </div>

                                        <!-- Assignment Rows -->
                                        <div class="ml-11 space-y-2">
                                            @foreach (var assignment in subjectGroup.OrderBy(a => a.Class?.Name).ThenBy(a => a.Section?.Name))
                                            {
                                                <div class="flex justify-between items-center bg-white px-4 py-3 rounded-lg shadow-sm hover:shadow-md transition-all duration-300">
                                                    <div class="flex items-center space-x-4">
                                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                                            @assignment.Class?.Name
                                                        </span>
                                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800">
                                                            Section @assignment.Section?.Name
                                                        </span>
                                                        @if (!assignment.IsActive)
                                                        {
                                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                                                                Inactive
                                                            </span>
                                                        }
                                                    </div>
                                                    <div class="flex items-center space-x-2">
                                                        @if (!assignment.IsActive)
                                                        {
                                                            <!-- Mark as Active Button -->
                                                            <form asp-action="ToggleActive" asp-route-id="@assignment.Id" method="post" class="inline">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" 
                                                                        class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white px-3 py-1.5 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-sm hover:shadow-sms-md flex items-center text-sm">
                                                                    <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                                    </svg>
                                                                    Activate
                                                                </button>
                                                            </form>
                                                        }
                                                        else
                                                        {
                                                            <!-- Mark as Inactive Button -->
                                                            <form asp-action="ToggleActive" asp-route-id="@assignment.Id" method="post" class="inline">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" 
                                                                        class="bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white px-3 py-1.5 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-sm hover:shadow-sms-md flex items-center text-sm"
                                                                        onclick="return confirm('Are you sure you want to mark this assignment as inactive?');">
                                                                    <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                                                                    </svg>
                                                                    Deactivate
                                                                </button>
                                                            </form>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="p-8 text-center">
                    <svg class="w-16 h-16 text-neutral-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                    </svg>
                    <h3 class="text-lg font-medium text-primary-800 mb-2">No @(showInactive ? "inactive" : "active") assignments yet</h3>
                    <p class="text-neutral-500 mb-4">
                        @if (showInactive)
                        {
                            <text>There are no inactive assignments at the moment.</text>
                        }
                        else
                        {
                            <text>Get started by creating your first teacher assignment.</text>
                        }
                    </p>
                    @if (!showInactive)
                    {
                        <a asp-action="Create" class="bg-gradient-primary hover:shadow-sms-lg text-white px-6 py-2 rounded-lg transition-all duration-300 inline-flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            Create Assignment
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .animate-fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .teacher-group .teacher-header.expanded .toggle-icon {
            transform: rotate(180deg);
        }
    </style>

    <script>
        function toggleTeacher(element) {
            const teacherGroup = element.closest('.teacher-group');
            const detailsSection = teacherGroup.querySelector('.teacher-details');
            const header = teacherGroup.querySelector('.teacher-header');
            
            if (detailsSection.classList.contains('hidden')) {
                detailsSection.classList.remove('hidden');
                header.classList.add('expanded');
            } else {
                detailsSection.classList.add('hidden');
                header.classList.remove('expanded');
            }
        }
    </script>
}
