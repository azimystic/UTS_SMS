@model SMS.Models.TestReturn

@{
    ViewData["Title"] = "Test Return Details";
}

<div class="min-h-screen bg-neutral-50">
    <!-- Header Section -->
    <div class="bg-white shadow-sm border-b border-primary-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div class="flex-1 min-w-0">
                    <h1 class="text-2xl font-bold text-primary-800 sm:text-3xl">Test Return Details</h1>
                    <p class="mt-1 text-sm text-neutral-500">View test return information and checking quality</p>
                </div>
                <div class="mt-4 flex flex-col sm:flex-row sm:space-x-3 md:mt-0">
                    <a asp-action="Edit" asp-route-id="@Model.Id" 
                       class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-primary hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Edit
                    </a>
                    <a asp-action="Index" 
                       class="inline-flex items-center px-4 py-2 border border-primary-200 rounded-lg shadow-sm text-sm font-medium text-neutral-700 bg-white hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                        <svg class="-ml-1 mr-2 h-5 w-5 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Details Section -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Main Information Card -->
        <div class="bg-white shadow-sm rounded-lg border border-primary-100 mb-8">
            <div class="px-6 py-4 border-b border-primary-100">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="text-lg font-medium text-primary-800">@Model.Exam?.Name</h2>
                        <p class="mt-1 text-sm text-neutral-600">@Model.Subject?.Name</p>
                    </div>
                    
                    <!-- Status Badges -->
                    <div class="flex space-x-2">
                        @if (Model.IsReturnedOnTime)
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-success-light text-success">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                On Time
                            </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-error-light text-error">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Late Return
                            </span>
                        }
                        
                        @{
                            var qualityClass = Model.CheckingQuality switch
                            {
                                "Better" => "bg-success-light text-success",
                                "Good" => "bg-primary-100 text-primary-800",
                                "Bad" => "bg-error-light text-error",
                                _ => "bg-neutral-100 text-primary-800"
                            };
                        }
                        <span class="inline-flex px-3 py-1 text-sm font-medium rounded-full @qualityClass">
                            @Model.CheckingQuality Quality
                        </span>
                    </div>
                </div>
            </div>

            <div class="px-6 py-6">
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
                    <!-- Class & Section -->
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Class & Section</dt>
                        <dd class="mt-1 text-sm text-primary-800">@Model.Class?.Name - @Model.Section?.Name</dd>
                    </div>

                    <!-- Teacher -->
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Teacher</dt>
                        <dd class="mt-1 text-sm text-primary-800">@Model.Teacher?.FullName</dd>
                    </div>

                    <!-- Exam Date -->
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Exam Date</dt>
                        <dd class="mt-1 text-sm text-primary-800">@Model.ExamDate.ToString("MMMM dd, yyyy")</dd>
                    </div>

                    <!-- Return Date -->
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Return Date</dt>
                        <dd class="mt-1 text-sm text-primary-800">
                            @if (Model.ReturnDate.HasValue)
                            {
                                @Model.ReturnDate.Value.ToString("MMMM dd, yyyy")
                            }
                            else
                            {
                                <span class="text-neutral-400">Not specified</span>
                            }
                        </dd>
                    </div>

                    <!-- Campus -->
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Campus</dt>
                        <dd class="mt-1 text-sm text-primary-800">@Model.Campus?.Name</dd>
                    </div>

                    <!-- Checking Quality -->
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Checking Quality</dt>
                        <dd class="mt-1">
                            <div class="flex items-center">
                                @if (Model.CheckingQuality == "Better")
                                {
                                    <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                    </svg>
                                    <span class="text-success font-medium">Better</span>
                                }
                                else if (Model.CheckingQuality == "Good")
                                {
                                    <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <span class="text-blue-700 font-medium">Good</span>
                                }
                                else
                                {
                                    <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                                    </svg>
                                    <span class="text-error font-medium">Bad</span>
                                }
                            </div>
                        </dd>
                    </div>
                </dl>

                <!-- Remarks -->
                @if (!string.IsNullOrWhiteSpace(Model.Remarks))
                {
                    <div class="mt-6 pt-6 border-t border-primary-100">
                        <dt class="text-sm font-medium text-neutral-700 mb-2">Remarks</dt>
                        <dd class="text-sm text-primary-800 bg-neutral-50 p-4 rounded-lg">
                            @Model.Remarks
                        </dd>
                    </div>
                }
            </div>
        </div>

        <!-- Metadata Card -->
        <div class="bg-white shadow-sm rounded-lg border border-primary-100">
            <div class="px-6 py-4 border-b border-primary-100">
                <h3 class="text-lg font-medium text-primary-800">Record Information</h3>
            </div>
            
            <div class="px-6 py-6">
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
                    <!-- Created By -->
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Created By</dt>
                        <dd class="mt-1 text-sm text-primary-800">
                            @if (!string.IsNullOrWhiteSpace(Model.CreatedBy))
                            {
                                @Model.CreatedBy
                            }
                            else
                            {
                                <span class="text-neutral-400">System</span>
                            }
                        </dd>
                    </div>

                    <!-- Created Date -->
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Created Date</dt>
                        <dd class="mt-1 text-sm text-primary-800">@Model.CreatedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt")</dd>
                    </div>

                    <!-- Modified By -->
                    @if (Model.ModifiedDate.HasValue)
                    {
                        <div>
                            <dt class="text-sm font-medium text-neutral-700">Last Modified By</dt>
                            <dd class="mt-1 text-sm text-primary-800">
                                @if (!string.IsNullOrWhiteSpace(Model.ModifiedBy))
                                {
                                    @Model.ModifiedBy
                                }
                                else
                                {
                                    <span class="text-neutral-400">System</span>
                                }
                            </dd>
                        </div>

                        <!-- Modified Date -->
                        <div>
                            <dt class="text-sm font-medium text-neutral-700">Last Modified Date</dt>
                            <dd class="mt-1 text-sm text-primary-800">@Model.ModifiedDate.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")</dd>
                        </div>
                    }
                </dl>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-8 flex flex-col sm:flex-row sm:justify-end sm:space-x-3 space-y-3 sm:space-y-0">
            <a asp-action="Delete" asp-route-id="@Model.Id" 
               class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-lg text-error bg-white hover:bg-error-light focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" 
               class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-gradient-primary hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Edit Record
            </a>
        </div>
    </div>
</div>