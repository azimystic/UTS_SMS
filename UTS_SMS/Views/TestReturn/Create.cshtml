@model UTS_SMS.Models.TestReturn

@{
    ViewData["Title"] = "Add Test Return";
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
}

<div class="min-h-screen bg-neutral-50">
    <!-- Header Section -->
    <div class="bg-white shadow-sm border-b border-primary-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div class="flex-1 min-w-0">
                    <h1 class="text-2xl font-bold text-primary-800 sm:text-3xl">Add Test Return</h1>
                    <p class="mt-1 text-sm text-neutral-500">Record test return status and checking quality</p>
                </div>
                <div class="mt-4 md:mt-0">
                    <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-primary-200 rounded-lg shadow-sm text-sm font-medium text-neutral-700 bg-white hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400">
                        <svg class="-ml-1 mr-2 h-5 w-5 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="bg-white shadow-sm rounded-lg border border-primary-100">
            <div class="px-6 py-4 border-b border-primary-100">
                <h2 class="text-lg font-medium text-primary-800">Test Return Information</h2>
                <p class="mt-1 text-sm text-neutral-600">Fill in the details for the test return record</p>
            </div>

            <form asp-action="Create" method="post" class="p-6 space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-error"></div>

                <!-- Row 1: Exam Category and Exam -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="ExamCategoryId" class="block text-sm font-medium text-neutral-700 mb-2">Exam Category *</label>
                        <select asp-for="ExamCategoryId" asp-items="ViewBag.ExamCategoryId" id="ExamCategoryId"
                                class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                            <option value="">Select Exam Category</option>
                        </select>
                        <span asp-validation-for="ExamCategoryId" class="text-error text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="ExamId" class="block text-sm font-medium text-neutral-700 mb-2">Exam *</label>
                        <select asp-for="ExamId" id="ExamId"
                                class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                            <option value="">Select Exam Category First</option>
                        </select>
                        <span asp-validation-for="ExamId" class="text-error text-sm"></span>
                    </div>
                </div>

                <!-- Row 2: Subject and Class -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="SubjectId" class="block text-sm font-medium text-neutral-700 mb-2">Subject *</label>
                        <select asp-for="SubjectId" asp-items="ViewBag.SubjectId" 
                                class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                            <option value="">Select Subject</option>
                        </select>
                        <span asp-validation-for="SubjectId" class="text-error text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="ClassId" class="block text-sm font-medium text-neutral-700 mb-2">Class *</label>
                        <select asp-for="ClassId" asp-items="ViewBag.ClassId" id="ClassId"
                                class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                            <option value="">Select Class</option>
                        </select>
                        <span asp-validation-for="ClassId" class="text-error text-sm"></span>
                    </div>
                </div>

                <!-- Row 3: Section and Teacher (conditional) -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="SectionId" class="block text-sm font-medium text-neutral-700 mb-2">Section *</label>
                        <select asp-for="SectionId" asp-items="ViewBag.SectionId" id="SectionId"
                                class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                            <option value="">Select Section</option>
                        </select>
                        <span asp-validation-for="SectionId" class="text-error text-sm"></span>
                    </div>

                    @if (isAdmin)
                    {
                        <div>
                            <label asp-for="TeacherId" class="block text-sm font-medium text-neutral-700 mb-2">Teacher *</label>
                            <select asp-for="TeacherId" asp-items="ViewBag.TeacherId" 
                                    class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                                <option value="">Select Teacher</option>
                            </select>
                            <span asp-validation-for="TeacherId" class="text-error text-sm"></span>
                        </div>
                    }
                    else
                    {
                        <input asp-for="TeacherId" type="hidden" />
                    }
                </div>

                <!-- Row 3.5: Campus (if applicable) -->
                @if (ViewBag.CampusId != null && isAdmin)
                {
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="CampusId" class="block text-sm font-medium text-neutral-700 mb-2">Campus *</label>
                            <select asp-for="CampusId" asp-items="ViewBag.CampusId" 
                                    class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                                <option value="">Select Campus</option>
                            </select>
                            <span asp-validation-for="CampusId" class="text-error text-sm"></span>
                        </div>
                        <div></div>
                    </div>
                }
                else
                {
                    <input asp-for="CampusId" type="hidden" />
                }

                <!-- Row 4: Return Date and Quality -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="ReturnDate" class="block text-sm font-medium text-neutral-700 mb-2">Return Date</label>
                        <input asp-for="ReturnDate" type="date" 
                               class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" />
                        <span asp-validation-for="ReturnDate" class="text-error text-sm"></span>
                        <p class="mt-1 text-xs text-neutral-500">Leave blank if not yet returned</p>
                    </div>

                    <div>
                        <label asp-for="CheckingQuality" class="block text-sm font-medium text-neutral-700 mb-2">Checking Quality *</label>
                        <select asp-for="CheckingQuality" 
                                class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                            <option value="">Select Quality</option>
                            <option value="Better">Better</option>
                            <option value="Good">Good</option>
                            <option value="Bad">Bad</option>
                        </select>
                        <span asp-validation-for="CheckingQuality" class="text-error text-sm"></span>
                    </div>
                </div>

                <!-- Row 5: Remarks -->
                <div>
                    <label asp-for="Remarks" class="block text-sm font-medium text-neutral-700 mb-2">Remarks</label>
                    <textarea asp-for="Remarks" rows="3" 
                              class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" 
                              placeholder="Additional comments or notes..."></textarea>
                    <span asp-validation-for="Remarks" class="text-error text-sm"></span>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row sm:justify-end sm:space-x-3 space-y-3 sm:space-y-0 pt-6 border-t border-primary-100">
                    <a asp-action="Index" 
                       class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-primary-200 shadow-sm text-sm font-medium rounded-lg text-neutral-700 bg-white hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                        Cancel
                    </a>
                    <button type="submit" 
                            class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-gradient-primary hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Save Test Return
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Load exams when category is selected
        document.getElementById('ExamCategoryId').addEventListener('change', function() {
            var categoryId = this.value;
            var examSelect = document.getElementById('ExamId');
            
            // Clear existing options
            examSelect.innerHTML = '<option value="">Select Exam</option>';
            
            if (categoryId) {
                fetch('@Url.Action("GetExamsByCategory")?categoryId=' + categoryId)
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(function(exam) {
                            var option = new Option(exam.name, exam.id);
                            examSelect.add(option);
                        });
                    })
                    .catch(error => {
                        console.error('Error loading exams:', error);
                    });
            }
        });

        // Load sections when class is selected
        document.getElementById('ClassId').addEventListener('change', function() {
            var classId = this.value;
            var sectionSelect = document.getElementById('SectionId');
            
            // Clear existing options
            sectionSelect.innerHTML = '<option value="">Select Section</option>';
            
            if (classId) {
                fetch('@Url.Action("GetSectionsByClass")?classId=' + classId)
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(function(section) {
                            var option = new Option(section.name, section.id);
                            sectionSelect.add(option);
                        });
                    })
                    .catch(error => {
                        console.error('Error loading sections:', error);
                    });
            }
        });
    </script>
}