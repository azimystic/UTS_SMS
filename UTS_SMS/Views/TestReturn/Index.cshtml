@using UTS_SMS.Models
@model IEnumerable<UTS_SMS.Models.TestReturn>

@{
    ViewData["Title"] = "Test Return & Quality";
    var currentMonth = ViewBag.CurrentMonth as int? ?? DateTime.Now.Month;
    var currentYear = ViewBag.CurrentYear as int? ?? DateTime.Now.Year;
    var monthOptions = ViewBag.MonthOptions as List<SelectListItem> ?? new List<SelectListItem>();
    var yearOptions = ViewBag.YearOptions as List<SelectListItem> ?? new List<SelectListItem>();
    var campusList = ViewBag.CampusList as List<UTS_SMS.Models.Campus> ?? new List<UTS_SMS.Models.Campus>();
}

<div class="min-h-screen  ">
    <!-- Header Section -->
    <div class=" shadow-sm border-b border-primary-100">
        <div class=" mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div class="flex-1 min-w-0">
                    <h1 class="text-2xl font-bold text-primary-800 sm:text-3xl">Test Return & Quality</h1>
                    <p class="mt-1 text-sm text-neutral-500">
                        Track test return status and checking quality for @(new DateTime(currentYear, currentMonth, 1).ToString("MMMM yyyy"))
                    </p>
                </div>
                
                <div class="mt-4 flex flex-col sm:flex-row sm:items-center sm:space-x-3 md:mt-0">
                    <a asp-action="Create" 
                       class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-primary hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Add Test Return
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class=" border-b border-primary-100">
        <div class="  mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <!-- Mobile filter toggle -->
            <div class="md:hidden mb-4">
                <button type="button" id="mobile-filter-toggle" 
                        class="w-full flex items-center justify-center px-4 py-2 border border-primary-200 rounded-lg text-sm font-medium text-neutral-700 bg-white hover:bg-neutral-50">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                    </svg>
                    Filter Options
                </button>
            </div>

            <!-- Filter Panel -->
            <div id="filter-panel" class="hidden md:block">
                <form method="get" class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-4 items-end">
                    
                    <!-- Month Filter -->
                    <div>
                        <label for="month" class="block text-sm font-medium text-neutral-700 mb-1">Month</label>
                        <select name="month" id="month" class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 text-sm">
                            @foreach (var monthOption in monthOptions)
                            {
                                <option value="@monthOption.Value" selected="@(monthOption.Value == currentMonth.ToString())">
                                    @monthOption.Text
                                </option>
                            }
                        </select>
                    </div>

                    <!-- Year Filter -->
                    <div>
                        <label for="year" class="block text-sm font-medium text-neutral-700 mb-1">Year</label>
                        <select name="year" id="year" class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 text-sm">
                            @foreach (var yearOption in yearOptions)
                            {
                                <option value="@yearOption.Value" selected="@(yearOption.Value == currentYear.ToString())">
                                    @yearOption.Text
                                </option>
                            }
                        </select>
                    </div>

                    <!-- Campus Filter (only for admin) -->
                    @if (campusList.Any())
                    {
                        <div>
                            <label for="campus-filter" class="block text-sm font-medium text-neutral-700 mb-1">Campus</label>
                            <select id="campus-filter" name="campusFilter" class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 text-sm">
                                <option value="">All Campuses</option>
                                @foreach (var campus in campusList)
                                {
                                    <option value="@campus.Id">@campus.Name</option>
                                }
                            </select>
                        </div>
                    }

                    <!-- Search Filter -->
                    <div>
                        <label for="search-filter" class="block text-sm font-medium text-neutral-700 mb-1">Search</label>
                        <input type="text" id="search-filter" 
                               class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 text-sm" 
                               placeholder="Search by exam, subject, or teacher">
                    </div>

                    <!-- Filter Button -->
                    <div>
                        <button type="submit" class="w-full px-4 py-2 bg-gradient-primary text-white rounded-lg hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 transition-colors duration-200 text-sm font-medium">
                            Apply Filters
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <div class=" mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white p-6 rounded-lg shadow-sm border border-primary-100">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-primary-100">
                        <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-neutral-600">Total Tests</p>
                        <p class="text-2xl font-bold text-primary-800">@Model.Count()</p>
                    </div>
                </div>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-sm border border-primary-100">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-success-light">
                        <svg class="w-8 h-8 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-neutral-600">Returned On Time</p>
                        <p class="text-2xl font-bold text-primary-800">@Model.Count(t => t.IsReturnedOnTime)</p>
                    </div>
                </div>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-sm border border-primary-100">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-warning-light">
                        <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-neutral-600">Late Returns</p>
                        <p class="text-2xl font-bold text-primary-800">@Model.Count(t => !t.IsReturnedOnTime)</p>
                    </div>
                </div>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-sm border border-primary-100">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-purple-100">
                        <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-neutral-600">Good Checking</p>
                        <p class="text-2xl font-bold text-primary-800">@Model.Count(t => t.CheckingQuality == "Good" || t.CheckingQuality == "Better")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Test Returns Table -->
        <div class="bg-white shadow-sm rounded-lg border border-primary-100 overflow-hidden">
            <!-- Desktop Table -->
            <div class="hidden lg:block">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-primary-100">
                        <thead class="bg-neutral-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Exam Details</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Class & Section</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Teacher</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Exam Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Return Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Checking Quality</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-primary-100" id="test-return-table-body">
                            @if (Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr class="hover:bg-neutral-50 test-return-row" 
                                        data-campus-id="@item.CampusId" 
                                        data-search-text="@($"{item.Exam?.Name} {item.Subject?.Name} {item.Teacher?.FullName}".ToLower())">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div>
                                                <div class="text-sm font-medium text-primary-800">@item.Exam?.Name</div>
                                                <div class="text-sm text-neutral-500">@item.Subject?.Name</div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-primary-800">@item.Class?.Name - @item.Section?.Name</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-primary-800">@item.Teacher?.FullName</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-primary-800">@item.ExamDate.ToString("MMM dd, yyyy")</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            @if (item.IsReturnedOnTime)
                                            {
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-success-light text-success">
                                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                                    </svg>
                                                    On Time
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-error-light text-error">
                                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                    </svg>
                                                    Late
                                                </span>
                                            }
                                            @if (item.ReturnDate.HasValue)
                                            {
                                                <div class="text-xs text-neutral-500 mt-1">@item.ReturnDate.Value.ToString("MMM dd")</div>
                                            }
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            @{
                                                var qualityClass = item.CheckingQuality switch
                                                {
                                                    "Better" => "bg-success-light text-success",
                                                    "Good" => "bg-primary-100 text-primary-800",
                                                    "Bad" => "bg-error-light text-error",
                                                    _ => "bg-neutral-100 text-primary-800"
                                                };
                                            }
                                            <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full @qualityClass">
                                                @item.CheckingQuality
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="text-primary-600 hover:text-primary-800">View</a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-info hover:text-indigo-900">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-error hover:text-error">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="px-6 py-12 text-center">
                                        <div class="text-neutral-500">
                                            <svg class="mx-auto h-12 w-12 text-neutral-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                            </svg>
                                            <p class="text-lg font-medium">No test returns found</p>
                                            <p class="text-sm">No test returns recorded for the selected month.</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Mobile Cards -->
            <div class="lg:hidden">
                @if (Model.Any())
                {
                    <div class="divide-y divide-primary-100">
                        @foreach (var item in Model)
                        {
                            <div class="p-4 test-return-card" 
                                 data-campus-id="@item.CampusId" 
                                 data-search-text="@($"{item.Exam?.Name} {item.Subject?.Name} {item.Teacher?.FullName}".ToLower())">
                                
                                <div class="flex items-start justify-between mb-3">
                                    <div class="flex-1">
                                        <h3 class="text-lg font-medium text-primary-800">@item.Exam?.Name</h3>
                                        <p class="text-sm text-neutral-600">@item.Subject?.Name</p>
                                    </div>
                                    
                                    <div class="flex space-x-1">
                                        @if (item.IsReturnedOnTime)
                                        {
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-success-light text-success">
                                                On Time
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-error-light text-error">
                                                Late
                                            </span>
                                        }
                                    </div>
                                </div>

                                <div class="grid grid-cols-2 gap-3 text-sm mb-4">
                                    <div>
                                        <span class="font-medium text-neutral-700">Class:</span> @item.Class?.Name - @item.Section?.Name
                                    </div>
                                    <div>
                                        <span class="font-medium text-neutral-700">Teacher:</span> @item.Teacher?.FullName
                                    </div>
                                    <div>
                                        <span class="font-medium text-neutral-700">Exam Date:</span> @item.ExamDate.ToString("MMM dd, yyyy")
                                    </div>
                                    <div>
                                        <span class="font-medium text-neutral-700">Quality:</span> 
                                        @{
                                            var mobileQualityClass = item.CheckingQuality switch
                                            {
                                                "Better" => "text-success",
                                                "Good" => "text-primary-600", 
                                                "Bad" => "text-error",
                                                _ => "text-neutral-600"
                                            };
                                        }
                                        <span class="@mobileQualityClass font-medium">@item.CheckingQuality</span>
                                    </div>
                                </div>
                                
                                <div class="flex space-x-3">
                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                       class="flex-1 bg-gradient-primary hover:bg-primary-700 text-white text-center py-2 px-4 rounded-lg text-sm transition-all duration-300">
                                        Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                       class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white text-center py-2 px-4 rounded-lg text-sm transition-all duration-300">
                                        Edit
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="p-8 text-center">
                        <svg class="mx-auto h-12 w-12 text-neutral-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <p class="text-lg font-medium text-neutral-500 mb-2">No test returns found</p>
                        <p class="text-sm text-neutral-500">No test returns recorded for the selected month.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    // Mobile filter toggle
    document.getElementById('mobile-filter-toggle').addEventListener('click', function() {
        const filterPanel = document.getElementById('filter-panel');
        filterPanel.classList.toggle('hidden');
    });

    // Search and filter functionality
    function applyFilters() {
        const searchTerm = document.getElementById('search-filter').value.toLowerCase();
        const campusFilter = document.getElementById('campus-filter')?.value || '';

        // Desktop table rows
        document.querySelectorAll('.test-return-row').forEach(row => {
            const searchText = row.getAttribute('data-search-text');
            const campusId = row.getAttribute('data-campus-id');
            
            let showRow = true;
            
            // Apply search filter
            if (searchTerm && !searchText.includes(searchTerm)) {
                showRow = false;
            }
            
            // Apply campus filter
            if (campusFilter && campusId !== campusFilter) {
                showRow = false;
            }
            
            row.style.display = showRow ? '' : 'none';
        });

        // Mobile cards
        document.querySelectorAll('.test-return-card').forEach(card => {
            const searchText = card.getAttribute('data-search-text');
            const campusId = card.getAttribute('data-campus-id');
            
            let showCard = true;
            
            // Apply search filter
            if (searchTerm && !searchText.includes(searchTerm)) {
                showCard = false;
            }
            
            // Apply campus filter
            if (campusFilter && campusId !== campusFilter) {
                showCard = false;
            }
            
            card.style.display = showCard ? '' : 'none';
        });
    }

    // Event listeners
    document.getElementById('search-filter').addEventListener('input', applyFilters);
    
    const campusFilter = document.getElementById('campus-filter');
    if (campusFilter) {
        campusFilter.addEventListener('change', applyFilters);
    }
</script>
