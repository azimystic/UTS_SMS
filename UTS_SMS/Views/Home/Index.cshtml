@using UTS_SMS.Models
@{
    ViewData["Title"] = "Home Page";
}

<div class="min-h-screen bg-gradient-subtle p-6 md:p-12">
    <div class="max-w-4xl mx-auto text-center">
        <div class="mb-8">
            <div class="w-24 h-24 bg-gradient-primary rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-sms-lg">
                <i class="fas fa-graduation-cap text-4xl text-white"></i>
            </div>
            <h1 class="text-4xl md:text-5xl font-bold text-primary-800 mb-4">Welcome to SMS</h1>
            <p class="text-xl text-neutral-600">School Management System</p>
        </div>
        
        <div class="bg-white rounded-2xl shadow-sms-md p-8 border border-primary-100">
            <p class="text-lg text-neutral-700 mb-6">
                Your comprehensive platform for managing academic excellence.
            </p>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="p-4 bg-primary-50 rounded-xl border border-primary-100">
                    <i class="fas fa-users text-2xl text-primary-600 mb-3"></i>
                    <h3 class="font-semibold text-primary-800">Student Management</h3>
                    <p class="text-sm text-neutral-600">Track student records and performance</p>
                </div>
                <div class="p-4 bg-accent-100 rounded-xl border border-accent-400">
                    <i class="fas fa-chalkboard-teacher text-2xl text-accent-600 mb-3"></i>
                    <h3 class="font-semibold text-primary-800">Staff Management</h3>
                    <p class="text-sm text-neutral-600">Manage teachers and staff efficiently</p>
                </div>
                <div class="p-4 bg-success-light rounded-xl border border-success">
                    <i class="fas fa-chart-line text-2xl text-success mb-3"></i>
                    <h3 class="font-semibold text-primary-800">Reports & Analytics</h3>
                    <p class="text-sm text-neutral-600">Comprehensive reporting tools</p>
                </div>
            </div>
            <a href="/Admin/Dashboard" class="inline-flex items-center gap-2 bg-gradient-primary text-white px-6 py-3 rounded-lg font-semibold shadow-sms-md hover:shadow-sms-lg transition-all duration-300 transform hover:scale-105">
                <span>Go to Dashboard</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
</div>
