@model SMS.Models.SurveyQuestion

@{
    ViewData["Title"] = "Delete Survey Question";
    var totalResponses = Model.StudentResponses.Count;
}

<div class="min-h-screen bg-neutral-50">
    <!-- Header Section -->
    <div class="bg-white shadow-sm border-b border-primary-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div class="flex-1 min-w-0">
                    <h1 class="text-2xl font-bold text-error sm:text-3xl">Delete Survey Question</h1>
                    <p class="mt-1 text-sm text-neutral-500">Are you sure you want to delete this survey question?</p>
                </div>
                <div class="mt-4 md:mt-0">
                    <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-primary-200 rounded-lg shadow-sm text-sm font-medium text-neutral-700 bg-white hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400">
                        <svg class="-ml-1 mr-2 h-5 w-5 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Section -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Warning Alert -->
        <div class="mb-8 bg-error-light border border-red-200 rounded-lg p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-error">Warning</h3>
                    <div class="mt-2 text-sm text-error">
                        <p>This action will permanently delete the survey question and all associated student responses. This action cannot be undone.</p>
                        @if (totalResponses > 0)
                        {
                            <p class="mt-1"><strong>@totalResponses student responses will also be deleted.</strong></p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Question Details Card -->
        <div class="bg-white shadow-sm rounded-lg border border-primary-100 mb-8">
            <div class="px-6 py-4 border-b border-primary-100">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="text-lg font-medium text-primary-800">Question #@Model.QuestionOrder</h2>
                        <p class="mt-1 text-sm text-neutral-600">@Model.Campus?.Name</p>
                    </div>
                    
                    <!-- Status Badge -->
                    <div>
                        @if (Model.IsActive)
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-success-light text-success">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Active
                            </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-error-light text-error">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                                Inactive
                            </span>
                        }
                    </div>
                </div>
            </div>

            <div class="px-6 py-6">
                <!-- Question Text -->
                <div class="mb-6">
                    <dt class="text-sm font-medium text-neutral-700 mb-2">Question</dt>
                    <dd class="bg-neutral-50 p-4 rounded-lg">
                        <p class="text-base text-primary-800">@Model.QuestionText</p>
                    </dd>
                </div>

                <!-- Question Details -->
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Display Order</dt>
                        <dd class="mt-1 text-sm text-primary-800">@Model.QuestionOrder</dd>
                    </div>

                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Campus</dt>
                        <dd class="mt-1 text-sm text-primary-800">@Model.Campus?.Name</dd>
                    </div>

                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Total Responses</dt>
                        <dd class="mt-1 text-sm text-primary-800">
                            @if (totalResponses > 0)
                            {
                                <span class="font-medium text-error">@totalResponses</span>
                            }
                            else
                            {
                                <span>0</span>
                            }
                        </dd>
                    </div>

                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Created By</dt>
                        <dd class="mt-1 text-sm text-primary-800">
                            @if (!string.IsNullOrWhiteSpace(Model.CreatedBy))
                            {
                                @Model.CreatedBy
                            }
                            else
                            {
                                <span class="text-neutral-400">System</span>
                            }
                        </dd>
                    </div>

                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Created Date</dt>
                        <dd class="mt-1 text-sm text-primary-800">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>
                    </div>
                </dl>

                <!-- Response Breakdown -->
                @if (totalResponses > 0)
                {
                    var yesResponses = Model.StudentResponses.Count(r => r.Response);
                    var noResponses = totalResponses - yesResponses;
                    
                    <div class="mt-6 pt-6 border-t border-primary-100">
                        <h4 class="text-sm font-medium text-neutral-700 mb-3">Response Breakdown</h4>
                        <div class="grid grid-cols-2 gap-4">
                            <div class="text-center p-3 bg-success-light rounded-lg">
                                <div class="text-lg font-medium text-success">@yesResponses</div>
                                <div class="text-sm text-success">Yes Responses</div>
                            </div>
                            <div class="text-center p-3 bg-error-light rounded-lg">
                                <div class="text-lg font-medium text-error">@noResponses</div>
                                <div class="text-sm text-error">No Responses</div>
                            </div>
                        </div>
                        
                        <div class="mt-4 p-3 bg-warning-light rounded-lg">
                            <div class="flex items-center">
                                <svg class="h-5 w-5 text-yellow-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                                </svg>
                                <span class="text-sm text-yellow-800">All @totalResponses student responses will be permanently deleted.</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Confirmation Form -->
        <div class="bg-white shadow-sm rounded-lg border border-primary-100">
            <form asp-action="Delete" method="post" class="p-6">
                <div class="flex flex-col sm:flex-row sm:justify-end sm:space-x-3 space-y-3 sm:space-y-0">
                    <a asp-action="Index" 
                       class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-primary-200 shadow-sm text-sm font-medium rounded-lg text-neutral-700 bg-white hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                        <svg class="-ml-1 mr-2 h-5 w-5 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        Cancel
                    </a>
                    
                    <a asp-action="Details" asp-route-id="@Model.Id" 
                       class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-primary-200 shadow-sm text-sm font-medium rounded-lg text-neutral-700 bg-white hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                        <svg class="-ml-1 mr-2 h-5 w-5 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        View Details
                    </a>
                    
                    <button type="submit" 
                            class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-error hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200"
                            onclick="return confirm('Are you absolutely sure you want to delete this survey question?@(totalResponses > 0 ? $" This will also delete {totalResponses} student responses." : "") This action cannot be undone.');">
                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Yes, Delete Question
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>