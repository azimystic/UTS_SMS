@model UTS_SMS.Models.SurveyQuestion

@{
    ViewData["Title"] = "Survey Question Details";
    var totalResponses = ViewBag.TotalResponses as int? ?? 0;
    var yesResponses = ViewBag.YesResponses as int? ?? 0;
    var noResponses = ViewBag.NoResponses as int? ?? 0;
    var yesPercentage = ViewBag.YesPercentage as double? ?? 0;
    var noPercentage = ViewBag.NoPercentage as double? ?? 0;
}

<div class="min-h-screen bg-neutral-50">
    <!-- Header Section -->
    <div class="bg-white shadow-sm border-b border-primary-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div class="flex-1 min-w-0">
                    <h1 class="text-2xl font-bold text-primary-800 sm:text-3xl">Survey Question Details</h1>
                    <p class="mt-1 text-sm text-neutral-500">View question information and response analytics</p>
                </div>
                <div class="mt-4 flex flex-col sm:flex-row sm:space-x-3 md:mt-0">
                    <a asp-action="Edit" asp-route-id="@Model.Id" 
                       class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-primary hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Edit
                    </a>
                    <a asp-action="Index" 
                       class="inline-flex items-center px-4 py-2 border border-primary-200 rounded-lg shadow-sm text-sm font-medium text-neutral-700 bg-white hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                        <svg class="-ml-1 mr-2 h-5 w-5 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Details Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Question Information Card -->
        <div class="bg-white shadow-sm rounded-lg border border-primary-100 mb-8">
            <div class="px-6 py-4 border-b border-primary-100">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="text-lg font-medium text-primary-800">Question #@Model.QuestionOrder</h2>
                        <p class="mt-1 text-sm text-neutral-600">@Model.Campus?.Name</p>
                    </div>
                    
                    <!-- Status Badge -->
                    <div>
                        @if (Model.IsActive)
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-success-light text-success">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Active
                            </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-error-light text-error">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                                Inactive
                            </span>
                        }
                    </div>
                </div>
            </div>

            <div class="px-6 py-6">
                <!-- Question Text -->
                <div class="mb-6">
                    <dt class="text-sm font-medium text-neutral-700 mb-2">Question</dt>
                    <dd class="bg-neutral-50 p-4 rounded-lg">
                        <p class="text-base text-primary-800">@Model.QuestionText</p>
                    </dd>
                </div>

                <!-- Basic Information -->
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Display Order</dt>
                        <dd class="mt-1 text-sm text-primary-800">@Model.QuestionOrder</dd>
                    </div>

                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Campus</dt>
                        <dd class="mt-1 text-sm text-primary-800">@Model.Campus?.Name</dd>
                    </div>

                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Total Responses</dt>
                        <dd class="mt-1 text-sm text-primary-800">@totalResponses</dd>
                    </div>

                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Status</dt>
                        <dd class="mt-1">
                            @if (Model.IsActive)
                            {
                                <span class="text-success font-medium">Active</span>
                            }
                            else
                            {
                                <span class="text-error font-medium">Inactive</span>
                            }
                        </dd>
                    </div>
                </dl>
            </div>
        </div>

        <!-- Response Analytics Card -->
        <div class="bg-white shadow-sm rounded-lg border border-primary-100 mb-8">
            <div class="px-6 py-4 border-b border-primary-100">
                <h3 class="text-lg font-medium text-primary-800">Response Analytics</h3>
                <p class="mt-1 text-sm text-neutral-600">Student response breakdown and statistics</p>
            </div>
            
            <div class="px-6 py-6">
                @if (totalResponses > 0)
                {
                    <!-- Response Summary -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                        <div class="text-center">
                            <div class="text-3xl font-bold text-primary-800">@totalResponses</div>
                            <div class="text-sm text-neutral-600">Total Responses</div>
                        </div>
                        
                        <div class="text-center">
                            <div class="text-3xl font-bold text-success">@yesResponses</div>
                            <div class="text-sm text-neutral-600">Yes (@Math.Round(yesPercentage, 1)%)</div>
                        </div>
                        
                        <div class="text-center">
                            <div class="text-3xl font-bold text-error">@noResponses</div>
                            <div class="text-sm text-neutral-600">No (@Math.Round(noPercentage, 1)%)</div>
                        </div>
                    </div>

                    <!-- Visual Chart -->
                    <div class="mb-6">
                        <h4 class="text-md font-medium text-primary-800 mb-4">Response Distribution</h4>
                        <div class="space-y-4">
                            <!-- Yes Bar -->
                            <div>
                                <div class="flex justify-between text-sm text-neutral-700 mb-1">
                                    <span>Yes</span>
                                    <span>@yesResponses (@Math.Round(yesPercentage, 1)%)</span>
                                </div>
                                <div class="w-full bg-primary-100 rounded-full h-4">
                                    <div class="bg-success-light0 h-4 rounded-full transition-all duration-500" style="width: @yesPercentage%"></div>
                                </div>
                            </div>

                            <!-- No Bar -->
                            <div>
                                <div class="flex justify-between text-sm text-neutral-700 mb-1">
                                    <span>No</span>
                                    <span>@noResponses (@Math.Round(noPercentage, 1)%)</span>
                                </div>
                                <div class="w-full bg-primary-100 rounded-full h-4">
                                    <div class="bg-error-light0 h-4 rounded-full transition-all duration-500" style="width: @noPercentage%"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Pie Chart -->
                    <div class="flex justify-center">
                        <div class="relative w-48 h-48">
                            <canvas id="responseChart" width="192" height="192"></canvas>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <svg class="mx-auto h-16 w-16 text-neutral-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                        <h3 class="text-lg font-medium text-primary-800 mb-2">No Responses Yet</h3>
                        <p class="text-neutral-600">This question hasn't received any student responses yet.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Metadata Card -->
        <div class="bg-white shadow-sm rounded-lg border border-primary-100">
            <div class="px-6 py-4 border-b border-primary-100">
                <h3 class="text-lg font-medium text-primary-800">Record Information</h3>
            </div>
            
            <div class="px-6 py-6">
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
                    <!-- Created By -->
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Created By</dt>
                        <dd class="mt-1 text-sm text-primary-800">
                            @if (!string.IsNullOrWhiteSpace(Model.CreatedBy))
                            {
                                @Model.CreatedBy
                            }
                            else
                            {
                                <span class="text-neutral-400">System</span>
                            }
                        </dd>
                    </div>

                    <!-- Created Date -->
                    <div>
                        <dt class="text-sm font-medium text-neutral-700">Created Date</dt>
                        <dd class="mt-1 text-sm text-primary-800">@Model.CreatedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt")</dd>
                    </div>

                    <!-- Modified By -->
                    @if (Model.ModifiedDate.HasValue)
                    {
                        <div>
                            <dt class="text-sm font-medium text-neutral-700">Last Modified By</dt>
                            <dd class="mt-1 text-sm text-primary-800">
                                @if (!string.IsNullOrWhiteSpace(Model.ModifiedBy))
                                {
                                    @Model.ModifiedBy
                                }
                                else
                                {
                                    <span class="text-neutral-400">System</span>
                                }
                            </dd>
                        </div>

                        <!-- Modified Date -->
                        <div>
                            <dt class="text-sm font-medium text-neutral-700">Last Modified Date</dt>
                            <dd class="mt-1 text-sm text-primary-800">@Model.ModifiedDate.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")</dd>
                        </div>
                    }
                </dl>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-8 flex flex-col sm:flex-row sm:justify-end sm:space-x-3 space-y-3 sm:space-y-0">
            <a asp-action="Delete" asp-route-id="@Model.Id" 
               class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-lg text-error bg-white hover:bg-error-light focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" 
               class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-gradient-primary hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Edit Question
            </a>
        </div>
    </div>
</div>

@if (totalResponses > 0)
{
    @section Scripts {
        <script src="~/lib/chartjs/chart.min.js" asp-append-version="true"></script>
        <script>
            // Create pie chart
            const ctx = document.getElementById('responseChart').getContext('2d');
            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Yes', 'No'],
                    datasets: [{
                        data: [@yesResponses, @noResponses],
                        backgroundColor: [
                            '#10B981', // Green for Yes
                            '#EF4444'  // Red for No
                        ],
                        borderWidth: 2,
                        borderColor: '#ffffff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                font: {
                                    size: 14
                                }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.parsed;
                                    const percentage = ((value / @totalResponses) * 100).toFixed(1);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        </script>
    }
}