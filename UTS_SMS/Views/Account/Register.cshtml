@using UTS_SMS.Models
@model SMS.Controllers.AccountController.RegisterViewModel

@{
    ViewData["Title"] = "Register New User";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-md mx-auto">
        <!-- Header -->
        <div class="mb-8 text-center">
            <h1 class="text-3xl font-bold text-primary-800">👤 Register New User</h1>
            <p class="text-neutral-600 mt-2">Create a new custom user account</p>
        </div>

        <!-- Form Card -->
        <div class="bg-white rounded-2xl shadow-sms-lg p-6">
            @if (TempData["Success"] != null)
            {
                <div class="mb-4 p-3 bg-success-light text-success rounded-lg">
                    @TempData["Success"]
                </div>
            }

            <form asp-action="Register" method="post">
                <div class="space-y-4">
                    <!-- Full Name -->
                    <div>
                        <label asp-for="FullName" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                        <input asp-for="FullName"
                               class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300"
                               placeholder="Enter full name" />
                        <span asp-validation-for="FullName" class="text-error text-sm"></span>
                    </div>

                    <!-- Email -->
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                        <input asp-for="Email"
                               class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300"
                               placeholder="Enter email address" />
                        <span asp-validation-for="Email" class="text-error text-sm"></span>
                    </div>

                    <!-- Username -->
                    <div>
                        <label asp-for="Username" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                        <input asp-for="Username"
                               class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300"
                               placeholder="Enter username" />
                        <span asp-validation-for="Username" class="text-error text-sm"></span>
                    </div>

                    <!-- Password -->
                    <div>
                        <label asp-for="Password" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                        <input asp-for="Password" type="password"
                               class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300"
                               placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-error text-sm"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                        <input asp-for="ConfirmPassword" type="password"
                               class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300"
                               placeholder="Confirm password" />
                        <span asp-validation-for="ConfirmPassword" class="text-error text-sm"></span>
                    </div>

                    <!-- Role -->
                    <div>
                        <label asp-for="Role" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                        <select asp-for="Role"
                                class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300">
                            <option value="">Select a role</option>
                            <option value="Admin">Admin</option>
                            <option value="Accountant">Accountant</option>
                        </select>
                        <span asp-validation-for="Role" class="text-error text-sm"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="pt-4">
                        <button type="submit"
                                class="w-full bg-gradient-primary hover:bg-primary-700 text-white font-medium py-2 px-4 rounded-lg transition-all duration-300 flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            Create User
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Back Link -->
        <div class="mt-6 text-center">
            <a asp-action="Users" class="text-primary-600 hover:text-primary-800 font-medium flex items-center justify-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Users List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
