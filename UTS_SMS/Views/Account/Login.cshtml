@model SMS.Controllers.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SMS - Login</title>
    
    <!-- Tailwind CSS - Offline -->
    <link rel="stylesheet" href="~/lib/tailwindcss/tailwind.min.css" asp-append-version="true" />
    
    <!-- Outfit Font - Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
                sans: ['Outfit', 'sans-serif'],
            },
            colors: {
              brand: {
                50: '#fffbeb', 100: '#fef3c7', 200: '#fde68a', 300: '#fcd34d', 
                400: '#fbbf24', 500: '#f59e0b', 600: '#d97706', 700: '#b45309', 
                800: '#92400e', 900: '#78350f', 950: '#451a03',
              }
            }
          }
        }
      }
    </script>
    
    <style>
      @@keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-8px); }
      }
      @@keyframes fadeInSlide {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
      }
      @@keyframes pulseGlow {
        0%, 100% { opacity: 0.2; transform: scale(1); }
        50% { opacity: 0.35; transform: scale(1.1); }
      }
      @@keyframes slideInDown {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
      }
      
      .animate-float {
        animation: float 6s ease-in-out infinite;
      }
      .animate-load {
        animation: fadeInSlide 700ms ease-out forwards;
        opacity: 0;
      }
      .animate-pulse-glow {
        animation: pulseGlow 4s infinite ease-in-out;
      }
      .animate-slide-down {
        animation: slideInDown 600ms ease-out;
      }
      .input-icon-color {
        color: #9CA3AF;
        transition: color 200ms ease-in-out;
      }
      .input-focus-ring:focus-within .input-icon-color {
        color: #d97706;
      }
      .form-transition {
          transition: all 250ms ease-in-out;
      }
      
      button[type="submit"] {
        -webkit-tap-highlight-color: transparent;
      }
      
      input[type="email"],
      input[type="password"],
      input[type="checkbox"] {
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
      }
      
      input[type="checkbox"] {
        cursor: pointer;
      }
      
      a {
        -webkit-touch-callout: none;
      }
      
      html {
        scroll-behavior: smooth;
      }

      /* Custom checkbox styling */
      input[type="checkbox"]:checked {
        background-color: #d97706;
        border-color: #d97706;
      }

      input[type="checkbox"]:checked::after {
        content: '✓';
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
      }
      
      @@media (prefers-reduced-motion: reduce) {
        * {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
        }
      }

      @@media (max-width: 768px) {
        .shield-container {
          transform: scale(0.85);
        }
      }

      @@media (max-width: 640px) {
        .shield-container {
          transform: scale(0.7);
        }
      }

      /* Mobile-first ordering */
      .mobile-order-first {
        order: -1;
      }

      @@media (min-width: 1024px) {
        .mobile-order-first {
          order: 0;
        }
      }
    </style>
</head>

<body class="bg-gray-50 text-gray-900 overflow-x-hidden">
    
    <!-- NO Page Loading Overlay on Login Page -->
    
    <!-- Main container with reversed order on mobile -->
    <div class="min-h-screen w-full flex flex-col lg:flex-row-reverse gap-0">
      
      <!-- RIGHT SECTION - LOGIN FORM (appears first on mobile, right on desktop) -->
      <div class="w-full lg:w-1/2 flex items-center justify-center bg-gray-50 min-h-screen px-4 py-12 sm:px-6 md:px-8 lg:px-12 relative mobile-order-first">
        <div 
          class="w-full max-w-xs sm:max-w-sm md:max-w-md space-y-4 sm:space-y-6 md:space-y-8 animate-load" 
          style="animation-delay: 100ms;"
        >
          
          <!-- Header -->
          <div class="flex flex-col items-center text-center space-y-2 sm:space-y-3 animate-slide-down">
            <div class="p-2.5 sm:p-3 md:p-3.5 bg-amber-100 rounded-full mb-1 sm:mb-2 md:mb-3 form-transition hover:scale-110 hover:shadow-lg cursor-default">
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-amber-600 sm:w-8 sm:h-8 md:w-9 md:h-9">
                 <path d="M22 10v6M2 10l10-5 10 5-10 5z"></path>
                 <path d="M6 12v5c3 3 9 3 12 0v-5"></path>
               </svg>
            </div>
            <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-gray-900 leading-snug">Sign In</h2>
            <p class="text-xs sm:text-sm text-gray-600 font-medium">Welcome back! Access your account securely.</p>
          </div>

          <!-- Error Message -->
          @if (ViewData.ModelState.ErrorCount > 0)
          {
              <div class="rounded-lg bg-red-50 border border-red-200 p-2.5 sm:p-3 md:p-4 text-center animate-slide-down">
                  <div class="flex items-center justify-center space-x-2 text-red-800 font-semibold text-xs uppercase tracking-wider mb-1 sm:mb-2">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path><line x1="12" y1="9" x2="12" y2="13"></line><line x1="12" y1="17" x2="12.01" y2="17"></line></svg>
                      <span>Error</span>
                  </div>
                  <div class="text-xs text-red-700/80 leading-relaxed space-y-1">
                      @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                      {
                          <div>@error.ErrorMessage</div>
                      }
                  </div>
              </div>
          }

          <!-- Login Form -->
          <form asp-action="Login" method="post" class="space-y-3 sm:space-y-4 md:space-y-5">
            
            <!-- Username Field -->
            <div class="space-y-1.5 sm:space-y-2">
              <label asp-for="Username" class="text-xs sm:text-sm font-semibold text-gray-700 block">Username</label>
              <div class="relative group input-focus-ring">
                <div class="absolute inset-y-0 left-0 pl-3 sm:pl-3.5 flex items-center pointer-events-none">
                  <svg class="h-4 w-4 sm:h-5 sm:w-5 input-icon-color" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="4"></circle>
                    <path d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-3.92 7.94"></path>
                  </svg>
                </div>
                <input 
                  asp-for="Username"
                  class="block w-full pl-10 sm:pl-11 pr-3 sm:pr-4 py-2 sm:py-2.5 md:py-3 text-sm sm:text-base border border-gray-300 rounded-lg bg-gray-50 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all duration-200 shadow-sm hover:shadow-md focus:shadow-lg ring-offset-2 ring-offset-gray-50" 
                  placeholder="username or email"
                  required
                >
              </div>
            </div>

            <!-- Password Field -->
            <div class="space-y-1.5 sm:space-y-2">
              <label asp-for="Password" class="text-xs sm:text-sm font-semibold text-gray-700 block">Password</label>
              <div class="relative group input-focus-ring">
                <div class="absolute inset-y-0 left-0 pl-3 sm:pl-3.5 flex items-center pointer-events-none">
                  <svg class="h-4 w-4 sm:h-5 sm:w-5 input-icon-color" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                  </svg>
                </div>
                <input 
                  asp-for="Password"
                  type="password"
                  id="password"
                  class="block w-full pl-10 sm:pl-11 pr-10 sm:pr-11 py-2 sm:py-2.5 md:py-3 text-sm sm:text-base border border-gray-300 rounded-lg bg-gray-50 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all duration-200 shadow-sm hover:shadow-md focus:shadow-lg ring-offset-2 ring-offset-gray-50" 
                  placeholder="your password"
                  required
                >
                <button type="button" onclick="togglePassword()" class="absolute inset-y-0 right-0 pr-3 sm:pr-3.5 flex items-center text-gray-400 hover:text-gray-600 focus:outline-none form-transition">
                  <svg id="toggleIcon" class="h-4 w-4 sm:h-5 sm:w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                    <circle cx="12" cy="12" r="3"></circle>
                  </svg>
                </button>
              </div>
            </div>

            <!-- Remember Me & Forgot Password -->
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 sm:gap-3 pt-1 sm:pt-2">
              <div class="flex items-center">
                <input asp-for="RememberMe" type="checkbox" id="rememberMe" class="h-4 w-4 text-amber-600 focus:ring-amber-500 border border-gray-300 rounded cursor-pointer form-transition">
                <label asp-for="RememberMe" class="ml-2 block text-xs sm:text-sm text-gray-700 cursor-pointer font-medium" for="rememberMe">Remember me</label>
              </div>
              <div class="text-xs sm:text-sm">
                <a asp-action="ForgotPassword" class="font-semibold text-amber-700 hover:text-amber-800 form-transition">Forgot password?</a>
              </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="w-full flex justify-center items-center py-2.5 sm:py-3 px-4 border border-transparent rounded-lg shadow-md text-xs sm:text-sm font-semibold text-white bg-gradient-to-r from-amber-600 via-amber-500 to-amber-600 hover:from-amber-700 hover:to-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transform transition-all duration-200 hover:-translate-y-1 active:translate-y-0 active:shadow-sm active:scale-[0.99] mt-1 sm:mt-2 md:mt-3">
              <span>Sign In</span>
            </button>
            
            <!-- Sign Up Link -->
            <div class="text-center pt-1 sm:pt-2">
               <span class="text-xs sm:text-sm text-gray-600">Don't have an account? <a href="#" class="font-semibold text-amber-700 hover:text-amber-800 form-transition">Sign up</a></span>
            </div>

          </form>

          <!-- Info Box -->
          <div class="rounded-lg bg-amber-50 border border-amber-200 p-2.5 sm:p-3 md:p-4 text-center form-transition hover:shadow-md hover:border-amber-300 mt-4 sm:mt-6 md:mt-8">
              <div class="flex items-center justify-center space-x-2 text-amber-800 font-semibold text-xs uppercase tracking-wider mb-1 sm:mb-2">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2L2 7L2 12C2 18 12 22 12 22C12 22 22 18 22 12V7L12 2Z"></path></svg>
                <span>Secure Portal</span>
              </div>
              <p class="text-xs text-amber-700/80 leading-relaxed">Your credentials are encrypted and secure</p>
          </div>
          
          <!-- Footer -->
          <footer class="text-center text-xs text-gray-500 mt-4 sm:mt-6 md:mt-8 font-medium pb-4 sm:pb-6">
            &copy; 2025 School Management System. All Rights Reserved.
          </footer>

        </div>
      </div>

      <!-- LEFT SECTION - WELCOME (appears second on mobile, left on desktop) -->
      <div 
        class="w-full lg:w-1/2 min-h-screen lg:min-h-screen relative overflow-hidden flex flex-col items-center justify-center px-4 py-12 sm:px-6 md:px-8 text-center bg-[#3d2514] animate-load" 
        style="animation-delay: 200ms;"
      >
        
        <div class="absolute inset-0 bg-gradient-to-br from-[#5c3a1e] via-[#3d2514] to-[#26150a] z-0"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] sm:w-[400px] md:w-[500px] h-[300px] sm:h-[400px] md:h-[500px] bg-amber-500/20 blur-[80px] sm:blur-[120px] rounded-full z-0 animate-pulse-glow"></div>
        
        <svg class="absolute inset-0 w-full h-full opacity-10 pointer-events-none z-0" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
          <defs>
            <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
              <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="0.5"/>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#grid)" />
        </svg>

        <div class="relative z-10 max-w-2xl mx-auto flex flex-col items-center px-4 py-8 sm:py-12">
          <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-3 sm:mb-4 md:mb-6 drop-shadow-lg tracking-tight leading-tight">
            Elevating Education Management
          </h1>
          
          <p class="text-xs sm:text-sm md:text-base lg:text-lg text-amber-100/80 mb-6 sm:mb-8 md:mb-12 font-light max-w-sm sm:max-w-md mx-auto leading-relaxed">
            Log in to access our integrated platform for students, faculty, and administration.
          </p>

          <div class="relative flex flex-col items-center justify-center mt-2 sm:mt-4 md:mt-6 shield-container">
            
            <div class="relative w-32 sm:w-40 md:w-48 h-32 sm:h-40 md:h-56 z-20 animate-float">
              <div class="absolute inset-0 bg-amber-500/30 blur-xl sm:blur-2xl rounded-full transform scale-90"></div>
              
              <svg viewBox="0 0 24 24" fill="none" class="w-full h-full drop-shadow-2xl" preserveAspectRatio="xMidYMid meet">
                <defs>
                  <linearGradient id="shieldGradient" x1="0" y1="0" x2="0" y2="1">
                    <stop offset="0%" stop-color="#fbbf24" />
                    <stop offset="50%" stop-color="#d97706" />
                    <stop offset="100%" stop-color="#92400e" />
                  </linearGradient>
                  <linearGradient id="shieldRim" x1="0" y1="0" x2="1" y2="1">
                     <stop offset="0%" stop-color="#fffbeb" />
                     <stop offset="100%" stop-color="#f59e0b" />
                  </linearGradient>
                </defs>
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" fill="url(#shieldGradient)" stroke="url(#shieldRim)" stroke-width="0.5" />
                
                <path d="M12 22s-8-4-8-10V5l8-3v20z" fill="black" fill-opacity="0.1" />
                <path d="M12 2c0 0 7 3 7 9s-7 9-7 9" fill="white" fill-opacity="0.1" />
              </svg>

              <div class="absolute inset-0 flex items-center justify-center">
                 <svg width="100%" height="100%" viewBox="0 0 24 24" fill="currentColor" class="text-[#3d2514] opacity-80 drop-shadow-sm w-12 sm:w-16 md:w-20">
                    <path d="M22 10v6M2 10l10-5 10 5-10 5z"/>
                    <path d="M6 12v5c3 3 9 3 12 0v-5"/>
                 </svg>
              </div>
            </div>

            <div class="flex flex-col items-center -mt-4 sm:-mt-6 md:-mt-8 z-10 space-y-0.5 sm:space-y-1">
                <div class="w-24 sm:w-32 h-3 sm:h-4 bg-gradient-to-r from-[#92400e] via-[#b45309] to-[#92400e] rounded-sm shadow-lg border-t border-white/10"></div>
                <div class="w-28 sm:w-40 h-4 sm:h-6 bg-gradient-to-r from-[#78350f] via-[#92400e] to-[#78350f] rounded-sm shadow-lg border-t border-white/5"></div>
                <div class="w-32 sm:w-48 h-5 sm:h-8 bg-gradient-to-r from-[#451a03] via-[#78350f] to-[#451a03] rounded-sm shadow-lg border-t border-white/5"></div>
            </div>

          </div>
        </div>
      </div>
      
    </div>

    <!-- NO page loader script on login page -->

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.innerHTML = '<path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.98 9.98 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line>';
            } else {
                passwordInput.type = 'password';
                toggleIcon.innerHTML = '<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle>';
            }
        }
    </script>
</body>
</html>