@model List<SMS.Controllers.AccountController.UserWithRolesViewModel>

@{
    ViewData["Title"] = "User Management";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-primary-800">👥 User Management</h1>
                <p class="text-neutral-600 mt-2">Manage all system users</p>
            </div>
            <div class="flex space-x-3 mt-4 md:mt-0">
                <a asp-action="Register"
                   class="bg-gradient-primary hover:bg-primary-700 text-white px-4 py-2 rounded-xl transition-all duration-300 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Add New User
                </a>
            </div>
        </div>

        <!-- Success Message -->
        @if (TempData["Success"] != null)
        {
            <div class="mb-6 p-4 bg-success-light text-success rounded-lg">
                @TempData["Success"]
            </div>
        }

        <!-- Search and Filters -->
        <div class="bg-white rounded-2xl shadow-sms-lg p-6 mb-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <!-- Search -->
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Search Users</label>
                    <input type="text" id="searchInput"
                           class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300"
                           placeholder="Search by name, email, or username" />
                </div>

                <!-- Role Filter -->
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Filter by Role</label>
                    <select id="roleFilter"
                            class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300">
                        <option value="">All Roles</option>
                        <option value="Admin">Admin</option>
                        <option value="Teacher">Teacher</option>
                        <option value="Student">Student</option>
                    </select>
                </div>

                <!-- Status Filter -->
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Filter by Status</label>
                    <select id="statusFilter"
                            class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300">
                        <option value="">All Status</option>
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Users Table -->
        <div class="bg-white rounded-2xl shadow-sms-lg overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-gray-800 to-gray-900 text-white">
                <h2 class="text-xl font-semibold">All Users</h2>
                <p class="text-gray-300">@Model.Count users found</p>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-neutral-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">User</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Username</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Email</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Roles</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-primary-100" id="usersTable">
                        @foreach (var userWithRoles in Model)
                        {
                            var user = userWithRoles.User;
                            <tr class="transition-all duration-300 hover:bg-neutral-50 user-row">
                                <td class="px-6 py-4">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center mr-3">
                                            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <div class="font-medium text-primary-800">@user.FullName</div>
                                            <div class="text-sm text-neutral-500">ID: @user.Id.Substring(0, 8)...</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-sm text-neutral-500">
                                    @user.UserName
                                </td>
                                <td class="px-6 py-4 text-sm text-neutral-500">
                                    @user.Email
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex flex-wrap gap-2">
                                        @foreach (var role in userWithRoles.Roles)
                                        {
                                            <span class="px-2 py-1 text-xs font-medium rounded-full
                                                        @(role == "Admin" ? "bg-purple-100 text-purple-800" :
                                                                                                    role == "Teacher" ? "bg-success-light text-success" :
                                                                                                    "bg-primary-100 text-primary-800")">
                                        @role
                                    </span>
                                                                        }
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    @if (user.IsActive)
                                    {
                                        <span class="px-2 py-1 bg-success-light text-success text-xs font-medium rounded-full">Active</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 bg-error-light text-error text-xs font-medium rounded-full">Inactive</span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-sm text-neutral-500">
                                    <div class="flex space-x-2">
                                        @if (user.IsActive)
                                        {
                                            <form asp-action="DeactivateUser" method="post" style="display:inline;">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <button type="submit"
                                                        class="text-error hover:text-error transition-colors duration-300 flex items-center"
                                                        onclick="return confirm('Are you sure you want to deactivate this user?')">
                                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                    </svg>
                                                    Deactivate
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="ReactivateUser" method="post" style="display:inline;">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <button type="submit"
                                                        class="text-success hover:text-green-800 transition-colors duration-300 flex items-center"
                                                        onclick="return confirm('Are you sure you want to reactivate this user?')">
                                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                    </svg>
                                                    Reactivate
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Empty State -->
        @if (!Model.Any())
        {
            <div class="bg-white rounded-2xl shadow-sms-lg p-12 text-center mt-8">
                <svg class="w-16 h-16 mx-auto text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                <h3 class="mt-4 text-lg font-medium text-primary-800">No users found</h3>
                <p class="mt-2 text-neutral-500">Get started by creating a new user.</p>
                <div class="mt-6">
                    <a asp-action="Register" class="bg-gradient-primary hover:bg-primary-700 text-white px-4 py-2 rounded-lg transition-all duration-300 inline-flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Add New User
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const roleFilter = document.getElementById('roleFilter');
            const statusFilter = document.getElementById('statusFilter');
            const userRows = document.querySelectorAll('.user-row');

            function filterUsers() {
                const searchText = searchInput.value.toLowerCase();
                const roleValue = roleFilter.value;
                const statusValue = statusFilter.value;

                userRows.forEach(row => {
                    const name = row.querySelector('.font-medium').textContent.toLowerCase();
                    const username = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
                    const email = row.querySelector('td:nth-child(3)').textContent.toLowerCase();
                    const roles = row.querySelector('td:nth-child(4)').textContent.toLowerCase();
                    const status = row.querySelector('td:nth-child(5)').textContent.toLowerCase();

                    const matchesSearch = name.includes(searchText) ||
                                         username.includes(searchText) ||
                                         email.includes(searchText);

                    const matchesRole = !roleValue || roles.includes(roleValue.toLowerCase());

                    const matchesStatus = !statusValue ||
                                         (statusValue === 'Active' && status.includes('active')) ||
                                         (statusValue === 'Inactive' && status.includes('inactive'));

                    if (matchesSearch && matchesRole && matchesStatus) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            }

            searchInput.addEventListener('input', filterUsers);
            roleFilter.addEventListener('change', filterUsers);
            statusFilter.addEventListener('change', filterUsers);
        });
    </script>
}