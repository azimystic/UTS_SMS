@using UTS_SMS.Models
@{
    ViewData["Title"] = "Password Reset Success";
}

<div class="min-h-screen bg-gradient-subtle flex items-center justify-center p-4">
    <div class="max-w-md w-full">
        <!-- Success Card -->
        <div class="bg-white rounded-2xl shadow-sms-lg p-8 text-center">
            <!-- Success Icon -->
            <div class="inline-flex items-center justify-center w-20 h-20 bg-success-light rounded-full mb-6">
                <svg class="w-10 h-10 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
            </div>

            <h1 class="text-3xl font-bold text-primary-800 mb-4">Password Reset Successful!</h1>
            
            @if (TempData["NewPassword"] != null)
            {
                <div class="bg-amber-50 border-2 border-amber-200 rounded-xl p-6 mb-6">
                    <p class="text-sm text-gray-600 mb-3">Your temporary password is:</p>
                    <div class="bg-white border border-amber-300 rounded-lg p-4 mb-3">
                        <code class="text-2xl font-mono font-bold text-primary-800 tracking-wider">@TempData["NewPassword"]</code>
                    </div>
                    <p class="text-xs text-amber-700">
                        <svg class="inline w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                        </svg>
                        Please copy this password and change it immediately after login
                    </p>
                </div>
            }

            <p class="text-gray-600 mb-6">
                You have been automatically logged in. Please change your password in your profile settings for security.
            </p>

            <!-- Action Buttons -->
            <div class="space-y-3">
                <a asp-controller="Profile" asp-action="Index" 
                   class="block w-full bg-gradient-primary hover:bg-primary-700 text-white font-bold py-3 px-6 rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl">
                    <svg class="inline w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                    </svg>
                    Go to Profile & Change Password
                </a>

                <a asp-controller="Home" asp-action="Index" 
                   class="block w-full bg-neutral-100 hover:bg-neutral-200 text-primary-800 font-semibold py-3 px-6 rounded-xl transition-all duration-300">
                    Go to Dashboard
                </a>
            </div>
        </div>

        <!-- Security Notice -->
        <div class="mt-6 bg-amber-50 border border-amber-200 rounded-xl p-4">
            <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                </svg>
                <div class="text-sm text-amber-800">
                    <p class="font-semibold mb-1">Security Reminder</p>
                    <ul class="list-disc list-inside space-y-1 text-xs">
                        <li>Change your password immediately</li>
                        <li>Use a strong password with mixed characters</li>
                        <li>Don't share your password with anyone</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
