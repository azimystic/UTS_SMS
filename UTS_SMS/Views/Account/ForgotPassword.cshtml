@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SMS - Forgot Password</title>
    
    <!-- Tailwind CSS - Offline -->
    <link rel="stylesheet" href="~/lib/tailwindcss/tailwind.min.css" asp-append-version="true" />
    
    <!-- Inter Font - Offline -->
    <link rel="stylesheet" href="~/fonts/inter-all.css" asp-append-version="true" />
    
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              sans: ['Inter', 'sans-serif'],
            },
            colors: {
              brand: {
                50: '#fffbeb', 100: '#fef3c7', 200: '#fde68a', 300: '#fcd34d', 
                400: '#fbbf24', 500: '#f59e0b', 600: '#d97706', 700: '#b45309', 
                800: '#92400e', 900: '#78350f', 950: '#451a03',
              }
            }
          }
        }
      }
    </script>
    
    <style>
      .form-transition {
          transition: all 250ms ease-in-out;
      }
      
      .animate-slide-down {
        animation: slideInDown 600ms ease-out;
      }
      
      @@keyframes slideInDown {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
      }
    </style>
</head>

<body class="bg-gray-50 text-gray-900">
    <div class="min-h-screen flex items-center justify-center px-4 py-12">
        <div class="w-full max-w-md space-y-8">
            
            <!-- Header -->
            <div class="flex flex-col items-center text-center space-y-3 animate-slide-down">
                <div class="p-3 bg-amber-100 rounded-full mb-3">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-amber-600">
                        <path d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                    </svg>
                </div>
                <h2 class="text-3xl font-bold text-gray-900">Forgot Password</h2>
                <p class="text-sm text-gray-600 font-medium">Enter your email to receive a password reset OTP</p>
            </div>

            <!-- Success/Error Message -->
            @if (TempData["Success"] != null)
            {
                <div class="rounded-lg bg-green-50 border border-green-200 p-4 animate-slide-down">
                    <div class="flex items-center space-x-2 text-green-800">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        <span>@TempData["Success"]</span>
                    </div>
                </div>
            }

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="rounded-lg bg-red-50 border border-red-200 p-4 animate-slide-down">
                    <div class="flex items-center justify-center space-x-2 text-red-800 font-semibold text-xs uppercase mb-2">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                            <line x1="12" y1="9" x2="12" y2="13"></line>
                            <line x1="12" y1="17" x2="12.01" y2="17"></line>
                        </svg>
                        <span>Error</span>
                    </div>
                    <div class="text-xs text-red-700 leading-relaxed space-y-1">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                </div>
            }

            <!-- Forgot Password Form -->
            <form asp-action="ForgotPassword" method="post" class="space-y-6 bg-white rounded-2xl shadow-lg p-8">
                
                <!-- Email Field -->
                <div class="space-y-2">
                    <label for="email" class="text-sm font-semibold text-gray-700 block">Email Address</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                            </svg>
                        </div>
                        <input 
                            type="email"
                            id="email"
                            name="email"
                            class="block w-full pl-11 pr-4 py-3 text-base border border-gray-300 rounded-lg bg-gray-50 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent transition-all duration-200 shadow-sm hover:shadow-md focus:shadow-lg ring-offset-2" 
                            placeholder="your.email@example.com"
                            required
                        >
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="w-full flex justify-center items-center py-3 px-4 border border-transparent rounded-lg shadow-md text-sm font-semibold text-white bg-gradient-to-r from-amber-600 via-amber-500 to-amber-600 hover:from-amber-700 hover:to-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transform transition-all duration-200 hover:-translate-y-1 active:translate-y-0 active:shadow-sm active:scale-[0.99]">
                    <span>Send OTP</span>
                </button>

                <!-- Back to Login -->
                <div class="text-center pt-2">
                    <a asp-action="Login" class="text-sm font-semibold text-amber-700 hover:text-amber-800 form-transition">
                        ‚Üê Back to Login
                    </a>
                </div>

            </form>

            <!-- Info Box -->
            <div class="rounded-lg bg-amber-50 border border-amber-200 p-4 text-center form-transition hover:shadow-md hover:border-amber-300">
                <div class="flex items-center justify-center space-x-2 text-amber-800 font-semibold text-xs uppercase tracking-wider mb-2">
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="16" x2="12" y2="12"></line>
                        <line x1="12" y1="8" x2="12.01" y2="8"></line>
                    </svg>
                    <span>Note</span>
                </div>
                <p class="text-xs text-amber-700 leading-relaxed">The OTP will be valid for 10 minutes only</p>
            </div>

        </div>
    </div>
</body>
</html>
