@using UTS_SMS.Models
@model Family

@{
    ViewData["Title"] = "Edit Family";
}

<div class="min-h-screen bg-neutral-50 p-3 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
            <div>
                <h1 class="text-2xl md:text-3xl font-bold text-primary-800 mb-2">Edit Family</h1>
                <p class="text-neutral-600">Update family information</p>
            </div>
            <a asp-action="Details" asp-route-id="@Model.Id" 
               class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition-all duration-300 mt-4 md:mt-0">
                Back to Details
            </a>
        </div>

        <!-- Form -->
        <div class="bg-white rounded-lg shadow-sm p-6">
            <form asp-action="Edit" method="post" class="space-y-6">
                <input asp-for="Id" type="hidden" />
                <input asp-for="FatherCNIC" type="hidden" /> <!-- CNIC cannot be changed -->
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Father Name -->
                    <div>
                        <label asp-for="FatherName" class="block text-sm font-medium text-neutral-700 mb-2">Father Name</label>
                        <input asp-for="FatherName" type="text" 
                               class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" 
                               placeholder="Enter father's name">
                        <span asp-validation-for="FatherName" class="text-error text-sm"></span>
                    </div>

                    <!-- Father Phone -->
                    <div>
                        <label asp-for="FatherPhone" class="block text-sm font-medium text-neutral-700 mb-2">Father Phone</label>
                        <input asp-for="FatherPhone" type="text" 
                               class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" 
                               placeholder="03XXXXXXXXX">
                        <span asp-validation-for="FatherPhone" class="text-error text-sm"></span>
                    </div>
                </div>

                <!-- Home Address -->
                <div>
                    <label asp-for="HomeAddress" class="block text-sm font-medium text-neutral-700 mb-2">Home Address</label>
                    <textarea asp-for="HomeAddress" rows="3"
                              class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" 
                              placeholder="Enter complete home address"></textarea>
                    <span asp-validation-for="HomeAddress" class="text-error text-sm"></span>
                </div>

                <!-- Father Source of Income -->
                <div>
                    <label asp-for="FatherSourceOfIncome" class="block text-sm font-medium text-neutral-700 mb-2">Father's Source of Income</label>
                    <input asp-for="FatherSourceOfIncome" type="text" 
                           class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" 
                           placeholder="e.g. Business, Job, etc.">
                    <span asp-validation-for="FatherSourceOfIncome" class="text-error text-sm"></span>
                </div>

                <!-- Father Deceased Checkbox -->
                <div class="flex items-center">
                    <input asp-for="IsFatherDeceased" type="checkbox" 
                           class="h-4 w-4 text-primary-600 focus:ring-primary-400 border-primary-200 rounded" 
                           onchange="toggleGuardianFields()">
                    <label asp-for="IsFatherDeceased" class="ml-2 block text-sm text-neutral-700">Father is deceased</label>
                    <span asp-validation-for="IsFatherDeceased" class="text-error text-sm ml-2"></span>
                </div>

                <!-- Guardian Information (Hidden by default) -->
                <div id="guardian-fields" class="space-y-6" style="display: @(Model.IsFatherDeceased ? "block" : "none")">
                    <div class="bg-warning-light border border-yellow-200 rounded-lg p-4">
                        <h3 class="text-sm font-medium text-yellow-800 mb-4">Guardian Information</h3>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Guardian Name -->
                            <div>
                                <label asp-for="GuardianName" class="block text-sm font-medium text-neutral-700 mb-2">Guardian Name</label>
                                <input asp-for="GuardianName" type="text" 
                                       class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" 
                                       placeholder="Enter guardian's name">
                                <span asp-validation-for="GuardianName" class="text-error text-sm"></span>
                            </div>

                            <!-- Guardian Phone -->
                            <div>
                                <label asp-for="GuardianPhone" class="block text-sm font-medium text-neutral-700 mb-2">Guardian Phone</label>
                                <input asp-for="GuardianPhone" type="text" 
                                       class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" 
                                       placeholder="03XXXXXXXXX">
                                <span asp-validation-for="GuardianPhone" class="text-error text-sm"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Campus -->
                <div>
                    <label asp-for="CampusId" class="block text-sm font-medium text-neutral-700 mb-2">Campus</label>
                    <select asp-for="CampusId" asp-items="ViewBag.CampusId" 
                            class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                        <option value="">Select Campus</option>
                    </select>
                    <span asp-validation-for="CampusId" class="text-error text-sm"></span>
                </div>

                <!-- Submit Buttons -->
                <div class="flex flex-col sm:flex-row justify-end space-y-3 sm:space-y-0 sm:space-x-3 pt-6 border-t border-primary-100">
                    <a asp-action="Details" asp-route-id="@Model.Id" 
                       class="w-full sm:w-auto bg-neutral-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg transition-all duration-300 text-center">
                        Cancel
                    </a>
                    <button type="submit" 
                            class="w-full sm:w-auto bg-gradient-primary hover:bg-primary-700 text-white px-6 py-2 rounded-lg transition-all duration-300">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function toggleGuardianFields() {
            const checkbox = document.querySelector('input[name="IsFatherDeceased"]');
            const guardianFields = document.getElementById('guardian-fields');
            
            if (checkbox.checked) {
                guardianFields.style.display = 'block';
            } else {
                guardianFields.style.display = 'none';
                // Clear guardian fields when father is not deceased
                document.querySelector('input[name="GuardianName"]').value = '';
                document.querySelector('input[name="GuardianPhone"]').value = '';
            }
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            toggleGuardianFields();
        });
    </script>
}
