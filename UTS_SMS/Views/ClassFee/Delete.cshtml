@model ClassFee

@{
    ViewData["Title"] = "Fee Details";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">📄 Fee Structure Details</h1>
            <p class="text-neutral-600 mt-2">View full details of class fee</p>
        </div>

        <!-- Details Card -->
        <div class="bg-white rounded-2xl shadow-sms-xl overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-primary px-6 py-4 text-white">
                <h2 class="text-xl font-semibold">Fee for @Model.Class?.Name</h2>
                <p class="text-blue-100">ID: @Model.Id</p>
            </div>

            <!-- Content -->
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Class Info -->
                    <div class="bg-primary-50 rounded-xl p-4">
                        <h3 class="text-sm font-medium text-primary-800 uppercase tracking-wider mb-3">Class</h3>
                        <div class="flex items-center">
                            <div class="w-12 h-12 bg-gradient-to-r from-green-400 to-teal-500 rounded-full flex items-center justify-center text-white font-semibold text-lg mr-3">
                                @Model.Class?.GradeLevel
                            </div>
                            <div>
                                <div class="text-lg font-semibold text-primary-800">@Model.Class?.Name</div>
                                <div class="text-sm text-neutral-600">Campus: @Model.Class?.Campus?.Name</div>
                            </div>
                        </div>
                    </div>

                    <!-- Fee Summary -->
                    <div class="bg-success-light rounded-xl p-4">
                        <h3 class="text-sm font-medium text-success uppercase tracking-wider mb-3">Fee Summary</h3>
                        <div class="space-y-2">
                            <div class="flex justify-between">
                                <span class="font-medium">Tuition Fee:</span>
                                <span class="text-primary-800">@Model.TuitionFee.ToString("C")</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="font-medium">Admission Fee:</span>
                                <span class="text-primary-800">@Model.AdmissionFee.ToString("C")</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="font-medium">Optional Charges:</span>
                                <span class="text-primary-800">
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="text-blue-600 hover:underline">View Details</a>
                                </span>
                            </div>
                            <div class="flex justify-between pt-2 border-t border-green-200">
                                <span class="font-bold">Total (Base Fees):</span>
                                <span class="font-bold text-success">
                                    @( (Model.TuitionFee + Model.AdmissionFee).ToString("C") )
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Dates -->
                    <div class="bg-purple-50 rounded-xl p-4">
                        <h3 class="text-sm font-medium text-purple-800 uppercase tracking-wider mb-3">Dates</h3>
                        <div class="space-y-2">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <span class="font-medium">Created:</span>
                                <span class="ml-2">@Model.CreatedDate.ToString("MMM dd, yyyy")</span>
                            </div>
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span class="font-medium">Modified:</span>
                                <span class="ml-2">
                                    @(Model.ModifiedDate == DateTime.MinValue
                                                                        ? "—"
                                                                        : Model.ModifiedDate.ToString("MMM dd, yyyy"))
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Created By -->
                    <div class="bg-orange-50 rounded-xl p-4">
                        <h3 class="text-sm font-medium text-orange-800 uppercase tracking-wider mb-3">Created By</h3>
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-warning mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <span>@Model.CreatedBy</span>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex space-x-4 mt-8 pt-6 border-t border-primary-100">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-gradient-to-r from-blue-500 to-blue-600 hover:from-primary-600 hover:to-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-all duration-300 flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Edit
                    </a>
                    <a asp-action="Index" class="bg-neutral-100 hover:bg-primary-100 text-primary-800 font-medium py-2 px-6 rounded-lg transition-all duration-300 flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>