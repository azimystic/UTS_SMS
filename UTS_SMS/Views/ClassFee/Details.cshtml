@model UTS_SMS.Models.ClassFee

@{
    ViewData["Title"] = "Fee Details";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">📄 Fee Structure Details</h1>
            <p class="text-neutral-600 mt-2">View full details of class fee</p>
        </div>

        <!-- Details Card -->
        <div class="bg-white rounded-2xl shadow-sms-xl overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-primary px-6 py-4 text-white">
                <h2 class="text-xl font-semibold">Fee for @Model.Class?.Name</h2>
                <p class="text-blue-100">ID: @Model.Id</p>
            </div>

            <!-- Content -->
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Class Info -->
                    <div class="bg-primary-50 rounded-xl p-4">
                        <h3 class="text-sm font-medium text-primary-800 uppercase tracking-wider mb-3">Class</h3>
                        <div class="flex items-center">
                            <div class="w-12 h-12 bg-gradient-to-r from-green-400 to-teal-500 rounded-full flex items-center justify-center text-white font-semibold text-lg mr-3">
                                @Model.Class?.GradeLevel
                            </div>
                            <div>
                                <div class="text-lg font-semibold text-primary-800">@Model.Class?.Name</div>
                                <div class="text-sm text-neutral-600">Campus: @Model.Class?.Campus?.Name</div>
                            </div>
                        </div>
                    </div>

                    <!-- Fee Summary -->
                    <div class="bg-success-light rounded-xl p-4">
                        <h3 class="text-sm font-medium text-success uppercase tracking-wider mb-3">Fee Summary</h3>
                        <div class="space-y-2">
                            <div class="flex justify-between">
                                <span class="font-medium">Tuition Fee:</span>
                                <span class="text-primary-800">@Model.TuitionFee.ToString("C")</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="font-medium">Admission Fee:</span>
                                <span class="text-primary-800">@Model.AdmissionFee.ToString("C")</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="font-medium">Misc (Optional Charges):</span>
                                <span class="text-primary-800" id="totalOptionalCharges">Calculating...</span>
                            </div>
                            <div class="flex justify-between pt-2 border-t border-green-200">
                                <span class="font-bold">Total:</span>
                                <span class="font-bold text-success" id="grandTotal">
                                    Calculating...
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Dates -->
                    <div class="bg-purple-50 rounded-xl p-4">
                        <h3 class="text-sm font-medium text-purple-800 uppercase tracking-wider mb-3">Dates</h3>
                        <div class="space-y-2">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <span class="font-medium">Created:</span>
                                <span class="ml-2">@Model.CreatedDate.ToString("MMM dd, yyyy")</span>
                            </div>
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span class="font-medium">Modified:</span>
                                <span class="ml-2">
                                    @(Model.ModifiedDate == DateTime.MinValue
                                                                        ? "—"
                                                                        : Model.ModifiedDate.ToString("MMM dd, yyyy"))
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Created By -->
                    <div class="bg-orange-50 rounded-xl p-4">
                        <h3 class="text-sm font-medium text-orange-800 uppercase tracking-wider mb-3">Created By</h3>
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-warning mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <span>@Model.CreatedBy</span>
                        </div>
                    </div>
                </div>

                <!-- Extra Charges Section -->
                <div class="mt-8 border-t pt-6">
                    <h3 class="text-xl font-semibold text-primary-800 mb-4">📋 Extra Charges</h3>
                    <div id="extraChargesSection" class="space-y-4">
                        <div class="text-neutral-600">Loading extra charges...</div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex space-x-4 mt-8 pt-6 border-t border-primary-100">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-gradient-to-r from-blue-500 to-blue-600 hover:from-primary-600 hover:to-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-all duration-300 flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Edit
                    </a>
                    <a asp-action="Index" class="bg-neutral-100 hover:bg-primary-100 text-primary-800 font-medium py-2 px-6 rounded-lg transition-all duration-300 flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load extra charges on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadExtraCharges();
        });
        
        function loadExtraCharges() {
            const classFeeId = @Model.Id;
            const container = document.getElementById('extraChargesSection');
            const tuitionFee = @Model.TuitionFee;
            const admissionFee = @Model.AdmissionFee;
            
            fetch(`/ClassFee/GetExtraChargesWithAssignments?classFeeId=${classFeeId}`)
                .then(response => response.json())
                .then(charges => {
                    // Calculate total optional charges
                    let totalOptionalCharges = 0;
                    charges.forEach(charge => {
                        totalOptionalCharges += charge.amount;
                    });
                    
                    // Update summary
                    document.getElementById('totalOptionalCharges').textContent = 'Rs. ' + totalOptionalCharges.toFixed(2);
                    const grandTotal = tuitionFee + admissionFee + totalOptionalCharges;
                    document.getElementById('grandTotal').textContent = 'Rs. ' + grandTotal.toFixed(2);
                    
                    if (charges.length === 0) {
                        container.innerHTML = '<p class="text-neutral-600">No extra charges configured for this class.</p>';
                        return;
                    }
                    
                    let html = '<div class="grid grid-cols-1 gap-4">';
                    charges.forEach(charge => {
                        const categoryBadge = getCategoryBadge(charge.category);
                        const statusBadge = charge.isActive 
                            ? '<span class="px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full">Active</span>'
                            : '<span class="px-2 py-1 bg-neutral-100 text-neutral-600 text-xs rounded-full">Inactive</span>';
                        
                        html += `
                            <div class="border border-primary-200 rounded-lg p-4 bg-neutral-50">
                                <div class="flex justify-between items-start mb-3">
                                    <div>
                                        <h4 class="font-semibold text-primary-700 text-lg">${charge.chargeName}</h4>
                                        <p class="text-2xl font-bold text-success mt-1">Rs. ${charge.amount.toFixed(2)}</p>
                                    </div>
                                    <div class="flex gap-2">
                                        ${categoryBadge}
                                        ${statusBadge}
                                    </div>
                                </div>
                                
                                <div class="border-t border-primary-100 pt-3 mt-3">
                                    <div class="flex items-center justify-between mb-2">
                                        <span class="text-sm font-medium text-neutral-700">Assigned Students:</span>
                                        <span class="text-sm font-semibold text-primary-600">${charge.assignedStudentCount} of ${charge.totalStudents}</span>
                                    </div>
                                    
                                    ${charge.assignedStudentCount > 0 ? `
                                        <button type="button" onclick="showAssignedStudents(${charge.id}, '${charge.chargeName}')" class="text-sm text-primary-600 hover:text-primary-800 underline">
                                            View assigned students
                                        </button>
                                    ` : '<span class="text-sm text-neutral-600">No students assigned yet</span>'}
                                </div>
                            </div>
                        `;
                    });
                    html += '</div>';
                    container.innerHTML = html;
                })
                .catch(error => {
                    container.innerHTML = '<p class="text-error">Error loading extra charges</p>';
                    document.getElementById('totalOptionalCharges').textContent = 'Rs. 0.00';
                    const grandTotal = tuitionFee + admissionFee;
                    document.getElementById('grandTotal').textContent = 'Rs. ' + grandTotal.toFixed(2);
                    console.error('Error:', error);
                });
        }
        
        function getCategoryBadge(category) {
            switch(category) {
                case 'OncePerClass':
                    return '<span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">Once Per Class</span>';
                case 'OncePerLifetime':
                    return '<span class="px-2 py-1 bg-purple-100 text-purple-800 text-xs rounded-full">Once Per Lifetime</span>';
                case 'MonthlyCharges':
                    return '<span class="px-2 py-1 bg-orange-100 text-orange-800 text-xs rounded-full">Monthly Charges</span>';
                default:
                    return '<span class="px-2 py-1 bg-neutral-100 text-neutral-600 text-xs rounded-full">' + category + '</span>';
            }
        }
        
        function showAssignedStudents(chargeId, chargeName) {
            const classId = @Model.ClassId;
            
            fetch(`/ClassFee/GetAssignedStudents?chargeId=${chargeId}&classId=${classId}`)
                .then(response => response.json())
                .then(data => {
                    const modal = document.createElement('div');
                    modal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50';
                    modal.innerHTML = `
                        <div class="bg-white rounded-lg p-6 max-w-4xl w-full max-h-[80vh] overflow-y-auto m-4">
                            <div class="flex justify-between items-center mb-4">
                                <h3 class="text-lg font-semibold text-primary-800">Students Assigned to: ${chargeName}</h3>
                                <button type="button" onclick="this.closest('.fixed').remove()" class="text-neutral-500 hover:text-neutral-700">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                </button>
                            </div>
                            <div class="space-y-2">
                                ${data.sections.map(section => `
                                    <div class="border-b pb-2">
                                        <div class="font-semibold text-primary-700 mb-2">
                                            Section ${section.sectionName} 
                                            <span class="text-sm font-normal text-neutral-600">(${section.students.length} students)</span>
                                        </div>
                                        <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
                                            ${section.students.map(student => `
                                                <div class="text-sm text-neutral-700 flex items-center">
                                                    <svg class="w-4 h-4 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                                    </svg>
                                                    ${student.name}
                                                </div>
                                            `).join('')}
                                        </div>
                                    </div>
                                `).join('')}
                            </div>
                            <div class="flex justify-end mt-4">
                                <button type="button" onclick="this.closest('.fixed').remove()" class="bg-neutral-100 hover:bg-neutral-200 text-neutral-800 px-4 py-2 rounded-lg">
                                    Close
                                </button>
                            </div>
                        </div>
                    `;
                    document.body.appendChild(modal);
                })
                .catch(error => {
                    console.error('Error loading assigned students:', error);
                    alert('Error loading assigned students');
                });
        }
    </script>
}