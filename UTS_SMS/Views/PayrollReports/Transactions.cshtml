@model IEnumerable<SMS.Models.PayrollTransaction>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payroll Transactions Report</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> 
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" asp-append-version="true" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#3b82f6',
                        secondary: '#10b981',
                        dark: '#1f2937',
                        light: '#f9fafb'
                    }
                }
            }
        }
    </script>
    <style>
        .print-only {
            display: none;
        }
        @@media print {
            .no-print

        {
            display: none;
        }

        .print-only {
            display: block;
        }

        body {
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
        }

        }
    </style>
</head>
<body class="bg-neutral-50">
    <div class="min-h-screen">
        <!-- Header -->
        <header class="bg-white shadow-sm">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
                <h1 class="text-2xl font-bold text-primary-800">
                    <i class="fas fa-receipt mr-2 text-primary"></i>
                    Payroll Transactions Report
                </h1>
                <div class="flex items-center space-x-4">
                    <button onclick="window.print()" class="bg-primary hover:bg-primary-700 text-white px-4 py-2 rounded-lg flex items-center no-print">
                        <i class="fas fa-print mr-2"></i> Print Report
                    </button>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Filters Section -->
            <div class="bg-white rounded-xl shadow-sms-md p-6 mb-8 no-print">
                <h2 class="text-lg font-semibold text-primary-800 mb-4">Filter Transactions</h2>
                <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1">Start Date</label>
                        <input type="date" name="startDate" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-primary focus:border-primary">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1">End Date</label>
                        <input type="date" name="endDate" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-primary focus:border-primary">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1">Campus</label>
                        <select name="campusFilter" class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-primary focus:border-primary">
                            <option value="0">All Campuses</option>
                            @foreach (var campus in ViewBag.Campuses)
                            {
                                <option value="@campus.Id" selected="@(ViewBag.CampusFilter == campus.Id)">@campus.Name</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1">Role</label>
                        <select name="roleFilter" class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-primary focus:border-primary">
                            <option value="All" selected="@(ViewBag.RoleFilter == "All")">All Roles</option>
                            @foreach (var role in ViewBag.Roles)
                            {
                                <option value="@role" selected="@(ViewBag.RoleFilter == role)">@role</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1">Sort By</label>
                        <select name="sortBy" class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-primary focus:border-primary">
                            <option value="Date" selected="@(ViewBag.SortBy == "Date")">Payment Date</option>
                            <option value="Employee" selected="@(ViewBag.SortBy == "Employee")">Employee Name</option>
                            <option value="Amount" selected="@(ViewBag.SortBy == "Amount")">Amount</option>
                            <option value="Role" selected="@(ViewBag.SortBy == "Role")">Role</option>
                            <option value="Campus" selected="@(ViewBag.SortBy == "Campus")">Campus</option>
                        </select>
                    </div>
                    <div class="md:col-span-3 flex justify-end space-x-3 pt-4">
                        <button type="submit" class="bg-primary hover:bg-primary-700 text-white px-6 py-2 rounded-lg flex items-center">
                            <i class="fas fa-filter mr-2"></i> Apply Filters
                        </button>
                        <a href="@Url.Action("Transactions")" class="bg-gray-300 hover:bg-gray-400 text-primary-800 px-6 py-2 rounded-lg flex items-center">
                            <i class="fas fa-sync mr-2"></i> Reset
                        </a>
                    </div>
                </form>
            </div>

            <!-- Summary Cards -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8 no-print">
                <div class="bg-white rounded-xl shadow-sms-md p-6 flex items-center">
                    <div class="rounded-full bg-primary-100 p-3 mr-4">
                        <i class="fas fa-receipt text-primary-600 text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm text-neutral-600">Total Transactions</p>
                        <h3 class="text-2xl font-bold text-primary-800">@Model.Count()</h3>
                    </div>
                </div>
                <div class="bg-white rounded-xl shadow-sms-md p-6 flex items-center">
                    <div class="rounded-full bg-success-light p-3 mr-4">
                        <i class="fas fa-money-bill-wave text-success text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm text-neutral-600">Total Amount</p>
                        <h3 class="text-xl font-bold text-primary-800">₨@Model.Sum(t => t.AmountPaid).ToString("N0")</h3>
                    </div>
                </div>
                <div class="bg-white rounded-xl shadow-sms-md p-6 flex items-center">
                    <div class="rounded-full bg-purple-100 p-3 mr-4">
                        <i class="fas fa-hand-holding-usd text-primary-600 text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm text-neutral-600">Cash Payments</p>
                        <h3 class="text-xl font-bold text-primary-800">₨@Model.Sum(t => t.CashPaid).ToString("N0")</h3>
                    </div>
                </div>
                <div class="bg-white rounded-xl shadow-sms-md p-6 flex items-center">
                    <div class="rounded-full bg-indigo-100 p-3 mr-4">
                        <i class="fas fa-credit-card text-info text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm text-neutral-600">Online Payments</p>
                        <h3 class="text-xl font-bold text-primary-800">₨@Model.Sum(t => t.OnlinePaid).ToString("N0")</h3>
                    </div>
                </div>
            </div>

            <!-- Transactions Table -->
            <div class="bg-white rounded-xl shadow-sms-md overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-neutral-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Transaction</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Employee</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Role/Campus</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Payment Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Amount</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Payment Mode</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">For Month</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider no-print">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-primary-100">
                            @foreach (var transaction in Model)
                            {
                                <tr class="hover:bg-neutral-50 transition-colors duration-150">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div>
                                            <div class="text-sm font-medium text-primary-800">SPR-@transaction.Id.ToString("D6")</div>
                                            @if (!string.IsNullOrEmpty(transaction.TransactionReference))
                                            {
                                                <div class="text-xs text-neutral-500">Ref: @transaction.TransactionReference</div>
                                            }
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-10 w-10 bg-primary-100 rounded-full flex items-center justify-center">
                                                <span class="font-medium text-primary-800">@transaction.PayrollMaster.Employee.FullName.Substring(0, 1)</span>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-primary-800">@transaction.PayrollMaster.Employee.FullName</div>
                                                <div class="text-sm text-neutral-500">@transaction.PayrollMaster.Employee.CNIC</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-primary-800">@transaction.PayrollMaster.Employee.Role</div>
                                        <div class="text-sm text-neutral-500">@transaction.Campus.Name</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-primary-800">
                                        @transaction.PaymentDate.ToString("dd MMM yyyy")
                                        <div class="text-xs text-neutral-500">@transaction.PaymentDate.ToString("hh:mm tt")</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-primary-800">₨@transaction.AmountPaid.ToString("N0")</div>
                                        @if (transaction.CashPaid > 0 && transaction.OnlinePaid > 0)
                                        {
                                            <div class="text-xs text-neutral-500">
                                                Cash: ₨@transaction.CashPaid.ToString("N0")<br>
                                                Online: ₨@transaction.OnlinePaid.ToString("N0")
                                            </div>
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @if (transaction.CashPaid > 0 && transaction.OnlinePaid > 0)
                                        {
                                            <span class="px-2 py-1 text-xs font-semibold bg-purple-100 text-purple-800 rounded-full">Mixed</span>
                                        }
                                        else if (transaction.CashPaid > 0)
                                        {
                                            <span class="px-2 py-1 text-xs font-semibold bg-success-light text-success rounded-full">Cash</span>
                                        }
                                        else
                                        {
                                            <span class="px-2 py-1 text-xs font-semibold bg-primary-100 text-primary-800 rounded-full">Online</span>
                                        }
                                        @if (transaction.Account != null)
                                        {
                                            <div class="text-xs text-neutral-500 mt-1">@transaction.Account.AccountTitle</div>
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-primary-800">
                                        @(new DateTime(transaction.PayrollMaster.ForYear, transaction.PayrollMaster.ForMonth, 1).ToString("MMM yyyy"))
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium no-print">
                                        <a href="@Url.Action("TransactionReceipt", new { id = transaction.Id })" target="_blank"
                                           class="text-primary-600 hover:text-primary-800 mr-3">
                                            <i class="fas fa-receipt mr-1"></i> Receipt
                                        </a>
                                        <a href="@Url.Action("Details", new { id = transaction.PayrollMaster.EmployeeId })"
                                           class="text-success hover:text-success">
                                            <i class="fas fa-user mr-1"></i> Employee
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Print Header (only shows when printing) -->
            <div class="print-only mt-8">
                <div class="text-center mb-6">
                    <h1 class="text-2xl font-bold">Payroll Transactions Report</h1>
                    <p class="text-neutral-600">@ViewBag.StartDate?.ToString("MMM dd, yyyy") to @ViewBag.EndDate?.ToString("MMM dd, yyyy")</p>
                    <p class="text-neutral-600">Generated on: @DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")</p>
                    <div class="mt-4 grid grid-cols-4 gap-4 text-sm">
                        <div>Total Transactions: @Model.Count()</div>
                        <div>Total Amount: ₨@Model.Sum(t => t.AmountPaid).ToString("N0")</div>
                        <div>Cash Payments: ₨@Model.Sum(t => t.CashPaid).ToString("N0")</div>
                        <div>Online Payments: ₨@Model.Sum(t => t.OnlinePaid).ToString("N0")</div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Simple animation for filter section
        document.addEventListener('DOMContentLoaded', function() {
            const filterSection = document.querySelector('.bg-white.rounded-xl');
            filterSection.classList.add('transform', 'transition', 'duration-300');
            filterSection.classList.add('translate-y-0');

            // Add animation to summary cards
            const cards = document.querySelectorAll('.bg-white.rounded-xl.shadow-sms-md');
            cards.forEach((card, index) => {
                card.classList.add('transform', 'transition', 'duration-300', 'delay-' + (index * 100));
                card.classList.add('translate-y-0');
            });
        });
    </script>
</body>
</html>