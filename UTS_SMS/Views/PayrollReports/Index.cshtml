@using UTS_SMS.Models
@model IEnumerable<UTS_SMS.ViewModels.PayrollReportViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payroll Reports Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> 
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" asp-append-version="true" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#3b82f6',
                        secondary: '#10b981',
                        dark: '#1f2937',
                        light: '#f9fafb'
                    }
                }
            }
        }
    </script>
    <style>
        .status-badge {
            @@apply px-3 py-1 rounded-full text-xs font-semibold;
        }

        .status-paid {
            @@apply bg-success-light text-success;
        }

        .status-partial {
            @@apply bg-warning-light text-yellow-800;
        }

        .status-notpaid {
            @@apply bg-error-light text-error;
        }

        .print-only {
            display: none;
        }
        @@media print {
            .no-print

        {
            display: none;
        }

        .print-only {
            display: block;
        }

        body {
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
        }

        }
    </style>
</head>
<body class="bg-neutral-50">
    <div class="min-h-screen">
        <!-- Header -->
        <header class="bg-white shadow-sm">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
                <h1 class="text-2xl font-bold text-primary-800">
                    <i class="fas fa-money-check-alt mr-2 text-primary"></i>
                    Payroll Reports
                </h1>
               <div class="flex items-center space-x-4">
    <a href='@Url.Action("PrintReports", "PayrollReports", new { 
            forMonth = ViewBag.ForMonth, 
            forYear = ViewBag.ForYear, 
            roleFilter = ViewBag.RoleFilter, 
            campusFilter = ViewBag.CampusFilter })' 
       target="_blank"
       class="bg-success hover:bg-green-700 text-white px-4 py-2 rounded-lg flex items-center">
        <i class="fas fa-print mr-2"></i> Print
    </a>
 
</div>

            </div>
        </header>

        <!-- Main Content -->
        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Filters Section -->
            <div class="bg-white rounded-xl shadow-sms-md p-6 mb-8 no-print">
                <h2 class="text-lg font-semibold text-primary-800 mb-4">Filter Reports</h2>
                <form method="get" id="filtersForm" class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1">Month & Year</label>
                        <input type="month" id="monthPicker"
                               value="@(ViewBag.ForYear != null && ViewBag.ForMonth != null ? $"{ViewBag.ForYear:D4}-{ViewBag.ForMonth:D2}" : "")"
                               max="@DateTime.Now.ToString("yyyy-MM")"
                               class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-primary focus:border-primary" />
                    </div>
                    
                    <div style="display:none">
                        <input type="hidden" name="forMonth" id="forMonthHidden" value="@ViewBag.ForMonth" />
                    </div>
                    <div style="display:none">
                        <input type="hidden" name="forYear" id="forYearHidden" value="@ViewBag.ForYear" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1">Campus</label>
                        <select name="campusFilter" class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-primary focus:border-primary">
                            <option value="0">All Campuses</option>
                            @foreach (var campus in ViewBag.Campuses)
                            {
                                <option value="@campus.Id" selected="@(ViewBag.CampusFilter == campus.Id)">@campus.Name</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1">Role</label>
                        <select name="roleFilter" class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-primary focus:border-primary">
                            <option value="All" selected="@(ViewBag.RoleFilter == "All")">All Roles</option>
                            @foreach (var role in ViewBag.Roles)
                            {
                                <option value="@role" selected="@(ViewBag.RoleFilter == role)">@role</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1">Status</label>
                        <select name="statusFilter" class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-primary focus:border-primary">
                            <option value="All" selected="@(ViewBag.StatusFilter == "All")">All Status</option>
                            <option value="Paid" selected="@(ViewBag.StatusFilter == "Paid")">Paid</option>
                            <option value="Partial" selected="@(ViewBag.StatusFilter == "Partial")">Partial</option>
                            <option value="NotPaid" selected="@(ViewBag.StatusFilter == "NotPaid")">Not Paid</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1">Sort By</label>
                        <select name="sortBy" class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-primary focus:border-primary">
                            <option value="Name" selected="@(ViewBag.SortBy == "Name")">Employee Name</option>
                            <option value="Role" selected="@(ViewBag.SortBy == "Role")">Role</option>
                            <option value="Campus" selected="@(ViewBag.SortBy == "Campus")">Campus</option>
                            <option value="Status" selected="@(ViewBag.SortBy == "Status")">Status</option>
                            <option value="Balance" selected="@(ViewBag.SortBy == "Balance")">Balance</option>
                            <option value="Salary" selected="@(ViewBag.SortBy == "Salary")">Salary</option>
                        </select>
                    </div>
                    <div class="md:col-span-3 flex justify-end space-x-3 pt-4">
                        <button type="submit" class="bg-primary hover:bg-primary-700 text-white px-6 py-2 rounded-lg flex items-center">
                            <i class="fas fa-filter mr-2"></i> Apply Filters
                        </button>
                        <a href="@Url.Action("Index")" class="bg-gray-300 hover:bg-gray-400 text-primary-800 px-6 py-2 rounded-lg flex items-center">
                            <i class="fas fa-sync mr-2"></i> Reset
                        </a>
                    </div>
                </form>
            </div>


            <!-- Summary Cards -->
            <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8 no-print">
                <div class="bg-white rounded-xl shadow-sms-md p-6 flex items-center">
                    <div class="rounded-full bg-primary-100 p-3 mr-4">
                        <i class="fas fa-users text-primary-600 text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm text-neutral-600">Total Employees</p>
                        <h3 class="text-2xl font-bold text-primary-800">@Model.Count()</h3>
                    </div>
                </div>
                <div class="bg-white rounded-xl shadow-sms-md p-6 flex items-center">
                    <div class="rounded-full bg-success-light p-3 mr-4">
                        <i class="fas fa-check-circle text-success text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm text-neutral-600">Paid</p>
                        <h3 class="text-2xl font-bold text-primary-800">@Model.Count(s => s.Status == "Paid")</h3>
                    </div>
                </div>
                <div class="bg-white rounded-xl shadow-sms-md p-6 flex items-center">
                    <div class="rounded-full bg-warning-light p-3 mr-4">
                        <i class="fas fa-exclamation-circle text-accent-600 text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm text-neutral-600">Partial</p>
                        <h3 class="text-2xl font-bold text-primary-800">@Model.Count(s => s.Status == "Partial")</h3>
                    </div>
                </div>
                <div class="bg-white rounded-xl shadow-sms-md p-6 flex items-center">
                    <div class="rounded-full bg-error-light p-3 mr-4">
                        <i class="fas fa-times-circle text-error text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm text-neutral-600">Not Paid</p>
                        <h3 class="text-2xl font-bold text-primary-800">@Model.Count(s => s.Status == "NotPaid")</h3>
                    </div>
                </div>
                <div class="bg-white rounded-xl shadow-sms-md p-6 flex items-center">
                    <div class="rounded-full bg-purple-100 p-3 mr-4">
                        <i class="fas fa-dollar-sign text-primary-600 text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm text-neutral-600">Total Payable</p>
                        <h3 class="text-xl font-bold text-primary-800">₨@Model.Sum(s => s.TotalPayable).ToString("N0")</h3>
                    </div>
                </div>
            </div>

            <!-- Reports Table -->
            <div class="bg-white rounded-xl shadow-sms-md overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-neutral-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Employee</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider hidden md:table-cell">Role/Campus</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider hidden lg:table-cell">Phone</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Net Salary</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider hidden sm:table-cell">Paid</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Balance</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider hidden sm:table-cell">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider no-print">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-primary-100">
                            @foreach (var item in Model)
                            {
                                <tr class="hover:bg-neutral-50 transition-colors duration-150">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-10 w-10 bg-primary-100 rounded-full flex items-center justify-center">
                                                <span class="font-medium text-primary-800">@item.Employee.FullName.Substring(0, 1)</span>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-primary-800">@item.Employee.FullName</div>
                                                <div class="text-sm text-neutral-500 md:hidden">@item.Employee.Role - @item.Campus.Name</div>
                                                <div class="text-sm text-neutral-500 md:hidden">₨@item.TotalPaid.ToString("N0") paid</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap hidden md:table-cell">
                                        <div class="text-sm text-primary-800">@item.Employee.Role</div>
                                        <div class="text-sm text-neutral-500">@item.Campus.Name</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-primary-800 hidden lg:table-cell">
                                        @item.Employee.PhoneNumber
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-primary-800">
                                        ₨@item.TotalPayable.ToString("N0")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-primary-800 hidden sm:table-cell">
                                        ₨@item.TotalPaid.ToString("N0")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        @if (item.Balance > 0)
                                        {
                                            <span class="text-error">₨@item.Balance.ToString("N0")</span>
                                        }
                                        else if (item.Balance < 0)
                                        {
                                            <span class="text-primary-600">₨@Math.Abs(item.Balance).ToString("N0")</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">₨0</span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap hidden sm:table-cell">
                                        @switch (item.Status)
                                        {
                                            case "Paid":
                                                <span class="status-badge status-paid">Paid</span>
                                                ;
                                                break;
                                            case "Partial":
                                                <span class="status-badge status-partial">Partial</span>
                                                ;
                                                break;
                                            case "NotPaid":
                                                <span class="status-badge status-notpaid">Not Paid</span>
                                                ;
                                                break;
                                            default:
                                                <span class="status-badge status-notpaid">Not Paid</span>
                                                ;
                                                break;
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium no-print">
                                        <a href="@Url.Action("Details", new { id = item.Employee.Id, startDate = ViewBag.StartDate, endDate = ViewBag.EndDate })" class="text-primary hover:text-primary-800 mr-3">
                                            <i class="fas fa-eye mr-1"></i> Details
                                        </a>
                                     <a href="@Url.Action("TransactionReceipt", "PayrollReports", new { id = item.PayrollMaster?.Id })" 
   class="text-success hover:text-success"
   target="_blank" rel="noopener noreferrer">
    <i class="fas fa-print mr-1"></i> Print
</a>



                                    </td>
                                </tr>
                            }
           
                        </tbody>

                    </table>
                </div>
            </div>

            <!-- Print Header (only shows when printing) -->
            <div class="print-only mt-8">
                <div class="text-center mb-6">
                    <h1 class="text-2xl font-bold">Payroll Report</h1>
                    <p class="text-neutral-600">@ViewBag.StartDate?.ToString("MMM dd, yyyy") to @ViewBag.EndDate?.ToString("MMM dd, yyyy")</p>
                    <p class="text-neutral-600">Generated on: @DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")</p>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Simple animation for filter section
        document.addEventListener('DOMContentLoaded', function() {
            const filterSection = document.querySelector('.bg-white.rounded-xl');
            filterSection.classList.add('transform', 'transition', 'duration-300');
            filterSection.classList.add('translate-y-0');

            // Add animation to summary cards
            const cards = document.querySelectorAll('.bg-white.rounded-xl.shadow-sms-md');
            cards.forEach((card, index) => {
                card.classList.add('transform', 'transition', 'duration-300', 'delay-' + (index * 100));
                card.classList.add('translate-y-0');
            });
        });
        
        // Month picker logic
        function setMonthYear(monthValue) {
            if (!monthValue) return;
            
            // Split YYYY-MM into year and month
            let parts = monthValue.split('-');
            let year = parseInt(parts[0], 10);
            let month = parseInt(parts[1], 10);
            
            // Set hidden field values
            $('#forMonthHidden').val(month);
            $('#forYearHidden').val(year);
        }
        
        // Initialize month picker
        var monthPickerEl = document.getElementById("monthPicker");
        if (monthPickerEl) {
            // Set hidden fields from initial month picker value
            if (monthPickerEl.value) {
                setMonthYear(monthPickerEl.value);
            }
            
            // Update hidden fields when month picker changes
            monthPickerEl.addEventListener("change", function () {
                if (this.value) {
                    setMonthYear(this.value);
                }
            });
        }
        
        // Ensure hidden fields are set before form submit
        $('#filtersForm').on('submit', function(e) {
            var mp = document.getElementById('monthPicker');
            if (mp && mp.value) {
                setMonthYear(mp.value);
            }
        });
    </script>
</body>
</html>
