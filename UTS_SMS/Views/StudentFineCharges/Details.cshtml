@model List<StudentFineCharge>

@{
    ViewData["Title"] = "Student Charges Details";
    var student = ViewBag.Student as Student;
}

<div class="min-h-screen  p-4 md:p-6">
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="flex justify-between items-start mb-6">
            <div>
                <h1 class="text-3xl font-bold text-primary-800">Student Charges</h1>
                <p class="text-neutral-600 mt-2">Manage charges for @student.StudentName</p>
            </div>
            <a asp-action="Index" class="bg-neutral-100 hover:bg-neutral-200 text-neutral-800 px-4 py-2 rounded-lg transition-all duration-300">
                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to List
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-success-light border-l-4 border-success text-success p-4 mb-6 rounded-lg">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-error-light border-l-4 border-error text-error p-4 mb-6 rounded-lg">
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Student Info Card -->
        <div class="bg-white rounded-xl shadow-sms-md p-6 mb-6">
            <div class="flex items-center">
                <div class="w-20 h-20 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-2xl mr-4">
                    @student.StudentName.Substring(0, 1)
                </div>
                <div class="flex-1">
                    <h2 class="text-2xl font-bold text-primary-800">@student.StudentName</h2>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-2 text-sm">
                        <div>
                            <span class="text-neutral-600">Class:</span>
                            <span class="font-medium text-primary-800">@student.ClassObj?.Name</span>
                        </div>
                        <div>
                            <span class="text-neutral-600">Section:</span>
                            <span class="font-medium text-primary-800">@student.SectionObj?.Name</span>
                        </div>
                        <div>
                            <span class="text-neutral-600">Father:</span>
                            <span class="font-medium text-primary-800">@student.FatherName</span>
                        </div>
                        <div>
                            <span class="text-neutral-600">CNIC:</span>
                            <span class="font-medium text-primary-800">@student.StudentCNIC</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Cards -->
        @{
            var totalCharges = Model.Sum(m => m.Amount);
            var paidCharges = Model.Where(m => m.IsPaid).Sum(m => m.Amount);
            var unpaidCharges = Model.Where(m => !m.IsPaid).Sum(m => m.Amount);
        }

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="bg-white p-4 rounded-xl shadow-sms-md">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs text-neutral-600">Total Charges</p>
                        <p class="text-2xl font-bold text-primary-800">Rs. @totalCharges.ToString("N0")</p>
                    </div>
                </div>
            </div>
            <div class="bg-white p-4 rounded-xl shadow-sms-md">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-success-light rounded-lg flex items-center justify-center mr-3">
                        <svg class="w-6 h-6 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs text-neutral-600">Paid</p>
                        <p class="text-2xl font-bold text-success">Rs. @paidCharges.ToString("N0")</p>
                    </div>
                </div>
            </div>
            <div class="bg-white p-4 rounded-xl shadow-sms-md">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-error-light rounded-lg flex items-center justify-center mr-3">
                        <svg class="w-6 h-6 text-error" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs text-neutral-600">Unpaid</p>
                        <p class="text-2xl font-bold text-error">Rs. @unpaidCharges.ToString("N0")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charges List -->
        <div class="bg-white rounded-xl shadow-sms-md p-6 mb-6">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-xl font-semibold text-primary-800">All Charges</h3>
                <button onclick="showAddChargeModal()" class="bg-gradient-primary hover:shadow-sms-lg text-white px-4 py-2 rounded-lg transition-all duration-300 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Add New Charge
                </button>
            </div>

            @if (Model.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-primary-100">
                        <thead class="bg-gradient-dark text-white">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-medium uppercase">Charge Name</th>
                                <th class="px-4 py-3 text-left text-xs font-medium uppercase">Amount</th>
                                <th class="px-4 py-3 text-left text-xs font-medium uppercase">Date</th>
                                <th class="px-4 py-3 text-left text-xs font-medium uppercase">Description</th>
                                <th class="px-4 py-3 text-left text-xs font-medium uppercase">Status</th>
                                <th class="px-4 py-3 text-left text-xs font-medium uppercase">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-primary-100">
                            @foreach (var charge in Model.OrderByDescending(c => c.ChargeDate))
                            {
                                <tr class="hover:bg-primary-50 transition-colors">
                                    <td class="px-4 py-4 text-sm font-medium text-primary-800">@charge.ChargeName</td>
                                    <td class="px-4 py-4 text-sm font-semibold text-primary-600">Rs. @charge.Amount.ToString("N0")</td>
                                    <td class="px-4 py-4 text-sm text-neutral-600">@charge.ChargeDate.ToString("dd MMM yyyy")</td>
                                    <td class="px-4 py-4 text-sm text-neutral-600">
                                        @(string.IsNullOrEmpty(charge.Description) ? "-" : charge.Description)
                                    </td>
                                    <td class="px-4 py-4 text-sm">
                                        @if (charge.IsPaid)
                                        {
                                            <span class="px-3 py-1 bg-success-light text-success rounded-full text-xs font-medium">
                                                Paid @(charge.PaidDate.HasValue ? charge.PaidDate.Value.ToString("dd MMM yyyy") : "")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="px-3 py-1 bg-error-light text-error rounded-full text-xs font-medium">Unpaid</span>
                                        }
                                    </td>
                                    <td class="px-4 py-4 text-sm">
                                        <div class="flex gap-2">
                                            @if (!charge.IsPaid)
                                            {
                                                <form asp-action="DeleteCharge" asp-route-id="@charge.Id" method="post" class="inline" 
                                                      onsubmit="return confirm('Are you sure you want to delete this charge?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="text-error hover:text-red-700" title="Delete">
                                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                        </svg>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-12">
                    <svg class="w-16 h-16 text-neutral-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    <p class="text-neutral-500 text-lg">No charges found for this student</p>
                    <button onclick="showAddChargeModal()" class="mt-4 text-primary-600 hover:text-primary-800 font-medium">
                        + Add first charge
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Add Charge Modal -->
<div id="addChargeModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-[9999]">
    <div class="bg-white rounded-lg p-6 max-w-2xl w-full m-4">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-xl font-semibold text-primary-800">Add New Charge</h3>
            <button onclick="closeAddChargeModal()" class="text-neutral-500 hover:text-neutral-700">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <form asp-action="AddCharge" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="studentId" value="@student.Id" />

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Charge Name *</label>
                    <div class="relative">
                        <input type="text" name="chargeName" id="modalChargeName" required
                               class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 pr-10" />
                        <button type="button" onclick="showTemplateList()" 
                                class="absolute right-2 top-2 text-purple-600 hover:text-purple-800" title="Use Template">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                        </button>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Amount *</label>
                    <input type="number" name="amount" id="modalAmount" step="0.01" min="0" required
                           class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Description</label>
                    <textarea name="description" id="modalDescription" rows="3"
                              class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400"></textarea>
                </div>

                <!-- Template List (Hidden by default) -->
                <div id="templateListDiv" class="hidden">
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Select Template</label>
                    <div class="space-y-2 max-h-48 overflow-y-auto">
                        @foreach (var template in ViewBag.Templates as IEnumerable<FineChargeTemplate>)
                        {
                            <div class="border border-primary-200 rounded-lg p-3 hover:bg-primary-50 cursor-pointer transition-colors" 
                                 onclick="applyModalTemplate('@template.Name', @template.Amount, '@template.Description')">
                                <div class="flex justify-between items-center">
                                    <div>
                                        <h4 class="font-semibold text-primary-800 text-sm">@template.Name</h4>
                                        @if (!string.IsNullOrEmpty(template.Description))
                                        {
                                            <p class="text-xs text-neutral-600">@template.Description</p>
                                        }
                                    </div>
                                    <span class="text-sm font-bold text-primary-600">Rs. @template.Amount.ToString("N0")</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="flex gap-4 mt-6">
                <button type="submit" class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white px-6 py-2 rounded-lg">
                    Save Charge
                </button>
                <button type="button" onclick="closeAddChargeModal()" class="bg-neutral-100 hover:bg-neutral-200 text-neutral-800 px-6 py-2 rounded-lg">
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function showAddChargeModal() {
            document.getElementById('addChargeModal').classList.remove('hidden');
            document.getElementById('addChargeModal').classList.add('flex');
        }

        function closeAddChargeModal() {
            document.getElementById('addChargeModal').classList.add('hidden');
            document.getElementById('addChargeModal').classList.remove('flex');
            document.getElementById('modalChargeName').value = '';
            document.getElementById('modalAmount').value = '';
            document.getElementById('modalDescription').value = '';
            document.getElementById('templateListDiv').classList.add('hidden');
        }

        function showTemplateList() {
            const templateDiv = document.getElementById('templateListDiv');
            templateDiv.classList.toggle('hidden');
        }

        function applyModalTemplate(name, amount, description) {
            document.getElementById('modalChargeName').value = name;
            document.getElementById('modalAmount').value = amount;
            if (description) {
                document.getElementById('modalDescription').value = description;
            }
            document.getElementById('templateListDiv').classList.add('hidden');
        }
    </script>
}
