@model List<FineChargeTemplate>

@{
    ViewData["Title"] = "Charge Templates";
}

<div class="min-h-screen   p-4 md:p-6">
    <div class="max-w-5xl mx-auto">
        <!-- Header -->
        <div class="flex justify-between items-start mb-6">
            <div>
                <h1 class="text-3xl font-bold text-primary-800">Charge Templates</h1>
                <p class="text-neutral-600 mt-2">Manage reusable charge templates for quick entry</p>
            </div>
            <div class="flex gap-2">
                <button onclick="showCreateModal()" class="bg-gradient-primary hover:shadow-sms-lg text-white px-4 py-2 rounded-lg transition-all duration-300 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    New Template
                </button>
                <a asp-action="Index" class="bg-neutral-100 hover:bg-neutral-200 text-neutral-800 px-4 py-2 rounded-lg transition-all duration-300">
                    Back to List
                </a>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-success-light border-l-4 border-success text-success p-4 mb-6 rounded-lg">
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- Templates Grid -->
        @if (Model.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                @foreach (var template in Model)
                {
                    <div class="bg-white rounded-xl shadow-sms-md p-6 hover:shadow-sms-lg transition-all duration-300">
                        <div class="flex justify-between items-start mb-4">
                            <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg flex items-center justify-center text-white font-bold text-xl">
                                @template.Name.Substring(0, 1)
                            </div>
                            <form asp-action="DeleteTemplate" asp-route-id="@template.Id" method="post" class="inline"
                                  onsubmit="return confirm('Are you sure you want to delete this template?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="text-error hover:text-red-700" title="Delete">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                </button>
                            </form>
                        </div>

                        <h3 class="text-lg font-bold text-primary-800 mb-2">@template.Name</h3>
                        
                        <div class="flex items-baseline mb-3">
                            <span class="text-3xl font-bold text-primary-600">Rs. @template.Amount.ToString("N0")</span>
                        </div>

                        @if (!string.IsNullOrEmpty(template.Description))
                        {
                            <p class="text-sm text-neutral-600 mb-4">@template.Description</p>
                        }

                        <div class="flex items-center justify-between text-xs text-neutral-500 pt-3 border-t border-neutral-100">
                            <span>Created @template.CreatedDate.ToString("dd MMM yyyy")</span>
                            <span>@template.CreatedBy</span>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="bg-white rounded-xl shadow-sms-md p-12 text-center">
                <svg class="w-20 h-20 text-neutral-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="text-xl font-semibold text-neutral-700 mb-2">No Templates Yet</h3>
                <p class="text-neutral-500 mb-4">Create templates for commonly used charges to save time</p>
                <button onclick="showCreateModal()" class="bg-gradient-primary text-white px-6 py-2 rounded-lg hover:shadow-sms-lg transition-all duration-300">
                    Create Your First Template
                </button>
            </div>
        }

        <!-- Info Section -->
        <div class="mt-8 bg-blue-50 border border-blue-200 rounded-xl p-6">
            <div class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                    <h4 class="font-semibold text-blue-900 mb-2">What are Charge Templates?</h4>
                    <p class="text-sm text-blue-800 mb-2">
                        Templates allow you to quickly add commonly used charges without typing the same information repeatedly. 
                    </p>
                    <p class="text-sm text-blue-800">
                        <strong>Examples:</strong> Late Fee (Rs. 500), Library Fine (Rs. 200), Sports Fee (Rs. 1000), Uniform Charge (Rs. 2500)
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Template Modal -->
<div id="createModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-[9999]">
    <div class="bg-white rounded-lg p-6 max-w-md w-full m-4">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-xl font-semibold text-primary-800">Create New Template</h3>
            <button onclick="closeCreateModal()" class="text-neutral-500 hover:text-neutral-700">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <form asp-action="CreateTemplate" method="post">
            @Html.AntiForgeryToken()

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Template Name *</label>
                    <input type="text" name="name" required placeholder="e.g., Late Fee, Library Fine"
                           class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Default Amount *</label>
                    <div class="relative">
                        <span class="absolute left-3 top-2 text-neutral-500">Rs. </span>
                        <input type="number" name="amount" step="0.01" min="0" required placeholder="0.00"
                               class="w-full pl-8 pr-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400" />
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Description (Optional)</label>
                    <textarea name="description" rows="3" placeholder="Brief description of this charge..."
                              class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400"></textarea>
                </div>
            </div>

            <div class="flex gap-4 mt-6">
                <button type="submit" class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white px-6 py-2 rounded-lg flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Create Template
                </button>
                <button type="button" onclick="closeCreateModal()" class="bg-neutral-100 hover:bg-neutral-200 text-neutral-800 px-6 py-2 rounded-lg">
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function showCreateModal() {
            document.getElementById('createModal').classList.remove('hidden');
            document.getElementById('createModal').classList.add('flex');
        }

        function closeCreateModal() {
            document.getElementById('createModal').classList.add('hidden');
            document.getElementById('createModal').classList.remove('flex');
        }
    </script>
}
