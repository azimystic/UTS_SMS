@using UTS_SMS.Models
@model SMS.ViewModels.StudentAcademicMaterialViewModel

@{
    ViewData["Title"] = Model.Chapter.Name;
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-primary-800">Chapter @Model.Chapter.ChapterNumber: @Model.Chapter.Name</h1>
                <p class="text-neutral-600 mt-2">@Model.Chapter.Subject?.Name</p>
            </div>
            <div class="flex space-x-2 mt-4 md:mt-0">
                <a href="@Url.Action("Chapters", new { id = Model.Chapter.SubjectId })" class="bg-neutral-200 hover:bg-neutral-300 text-neutral-700 px-4 py-2 rounded-lg">
                    â† Back
                </a>
                <a href="@Url.Action("TakeMCQQuiz", new { id = Model.Chapter.Id })" class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded-lg">
                    âœï¸ Take Quiz
                </a>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Chapter.Description))
        {
            <div class="bg-white rounded-2xl shadow-sms-xl p-6 mb-6">
                <h2 class="text-xl font-bold text-primary-700 mb-3"> Overview</h2>
                <p class="text-neutral-700">@Model.Chapter.Description</p>
            </div>
        }

        <!-- Materials -->
        @if (Model.Materials.Any())
        {
            <div class="bg-white rounded-2xl shadow-sms-xl p-6 mb-6">
                <h2 class="text-xl font-bold text-primary-700 mb-4"> Study Materials</h2>
                <div class="space-y-3">
                    @foreach (var material in Model.Materials)
                    {
                        <div class="border border-primary-200 rounded-lg p-4 hover:bg-primary-50 transition-colors">
                            <div class="flex items-center justify-between">
                                <div>
                                    <span class="bg-primary-100 text-primary-700 px-2 py-1 rounded text-sm mr-2">@material.Type</span>
                                    <span class="font-semibold text-neutral-800">@material.Heading</span>
                                    @if (!string.IsNullOrEmpty(material.Description))
                                    {
                                        <p class="text-neutral-600 text-sm mt-1">@material.Description</p>
                                    }
                                </div>
                                <a href="/@material.FilePath" target="_blank" class="bg-primary-500 hover:bg-primary-600 text-white px-4 py-2 rounded-lg text-sm">
                                     View
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Questions by Section -->
        @if (Model.Sections.Any())
        {
            foreach (var chapterSection in Model.Sections)
            {
                var sectionQuestions = Model.Questions.Where(q => q.ChapterSectionId == chapterSection.Id).ToList();
                var sectionMaterials = Model.Materials.Where(m => m.ChapterSectionId == chapterSection.Id).ToList();
                
                if (sectionQuestions.Any() || sectionMaterials.Any())
                {
                    <div class="bg-white rounded-2xl shadow-sms-xl p-6 mb-6">
                        <h2 class="text-xl font-bold text-primary-700 mb-3">ðŸ“‚ @chapterSection.Name</h2>
                        @if (!string.IsNullOrEmpty(chapterSection.Description))
                        {
                            <p class="text-neutral-600 mb-4">@chapterSection.Description</p>
                        }
                        
                        @if (sectionMaterials.Any())
                        {
                            <div class="mb-4">
                                <h3 class="font-semibold text-neutral-700 mb-2">Materials:</h3>
                                <div class="space-y-2">
                                    @foreach (var material in sectionMaterials)
                                    {
                                        <div class="border border-primary-200 rounded-lg p-3">
                                            <div class="flex items-center justify-between">
                                                <div>
                                                    <span class="bg-primary-100 text-primary-700 px-2 py-1 rounded text-xs mr-2">@material.Type</span>
                                                    <span class="font-medium">@material.Heading</span>
                                                </div>
                                                <a href="/@material.FilePath" target="_blank" class="text-primary-600 hover:text-primary-700">
                                                    
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        
                        @if (sectionQuestions.Any())
                        {
                            <div>
                                <h3 class="font-semibold text-neutral-700 mb-2">Questions:</h3>
                                @foreach (var question in sectionQuestions)
                                {
                                    <div class="mb-4 border-l-4 border-primary-500 pl-4 py-2">
                                        <div class="flex items-start">
                                            <span class="bg-primary-100 text-primary-700 px-2 py-1 rounded text-xs mr-2">@question.Type</span>
                                            <div class="flex-1">
                                                <p class="font-medium text-neutral-800">@question.QuestionText</p>
                                                
                                                @if (question.Type == UTS_SMS.Models.QuestionType.MCQ)
                                                {
                                                    <div class="mt-2 space-y-1">
                                                        <p class="text-sm text-neutral-700">A) @question.OptionA</p>
                                                        <p class="text-sm text-neutral-700">B) @question.OptionB</p>
                                                        <p class="text-sm text-neutral-700">C) @question.OptionC</p>
                                                        <p class="text-sm text-neutral-700">D) @question.OptionD</p>
                                                    </div>
                                                }
                                                
                                                @if (!string.IsNullOrEmpty(question.Answer))
                                                {
                                                    <div class="mt-2">
                                                        <button onclick="toggleAnswer(this)" class="text-primary-600 hover:text-primary-700 text-sm font-medium">
                                                             Show Answer
                                                        </button>
                                                        <div class="hidden mt-2 bg-green-50 border-l-4 border-green-500 p-3 rounded">
                                                            @if (question.Type == UTS_SMS.Models.QuestionType.MCQ)
                                                            {
                                                                <p class="font-semibold text-green-700">Correct Answer: @question.CorrectOption</p>
                                                            }
                                                            <p class="text-neutral-700 mt-1">@question.Answer</p>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            }
        }

        <!-- Questions without Section -->
        @{
            var noSectionQuestions = Model.Questions.Where(q => !q.ChapterSectionId.HasValue).ToList();
            var noSectionMaterials = Model.Materials.Where(m => !m.ChapterSectionId.HasValue).ToList();
        }
        
        @if (noSectionQuestions.Any() || noSectionMaterials.Any())
        {
            <div class="bg-white rounded-2xl shadow-sms-xl p-6 mb-6">
                <h2 class="text-xl font-bold text-primary-700 mb-4">â“ Questions & Answers</h2>
                
                @if (noSectionMaterials.Any())
                {
                    <div class="mb-4">
                        <h3 class="font-semibold text-neutral-700 mb-2">Additional Materials:</h3>
                        <div class="space-y-2">
                            @foreach (var material in noSectionMaterials)
                            {
                                <div class="border border-primary-200 rounded-lg p-3">
                                    <div class="flex items-center justify-between">
                                        <div>
                                            <span class="bg-primary-100 text-primary-700 px-2 py-1 rounded text-xs mr-2">@material.Type</span>
                                            <span class="font-medium">@material.Heading</span>
                                        </div>
                                        <a href="/@material.FilePath" target="_blank" class="text-primary-600 hover:text-primary-700">
                                             
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                
                @foreach (var question in noSectionQuestions)
                {
                    <div class="mb-4 border-l-4 border-primary-500 pl-4 py-2">
                        <div class="flex items-start">
                            <span class="bg-primary-100 text-primary-700 px-2 py-1 rounded text-xs mr-2">@question.Type</span>
                            <div class="flex-1">
                                <p class="font-medium text-neutral-800">@question.QuestionText</p>
                                
                                @if (question.Type == UTS_SMS.Models.QuestionType.MCQ)
                                {
                                    <div class="mt-2 space-y-1">
                                        <p class="text-sm text-neutral-700">A) @question.OptionA</p>
                                        <p class="text-sm text-neutral-700">B) @question.OptionB</p>
                                        <p class="text-sm text-neutral-700">C) @question.OptionC</p>
                                        <p class="text-sm text-neutral-700">D) @question.OptionD</p>
                                    </div>
                                }
                                
                                @if (!string.IsNullOrEmpty(question.Answer))
                                {
                                    <div class="mt-2">
                                        <button onclick="toggleAnswer(this)" class="text-primary-600 hover:text-primary-700 text-sm font-medium">
                                             Show Answer
                                        </button>
                                        <div class="hidden mt-2 bg-green-50 border-l-4 border-green-500 p-3 rounded">
                                            @if (question.Type == UTS_SMS.Models.QuestionType.MCQ)
                                            {
                                                <p class="font-semibold text-green-700">Correct Answer: @question.CorrectOption</p>
                                            }
                                            <p class="text-neutral-700 mt-1">@question.Answer</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<script>
    function toggleAnswer(button) {
        const answerDiv = button.nextElementSibling;
        if (answerDiv.classList.contains('hidden')) {
            answerDiv.classList.remove('hidden');
            button.textContent = 'Hide Answer';
        } else {
            answerDiv.classList.add('hidden');
            button.textContent = 'Show Answer';
        }
    }
</script>
