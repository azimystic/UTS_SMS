@using UTS_SMS.Models
@model UTS_SMS.Models.ClassSection

@{
    ViewData["Title"] = "Section Details";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">👥 Class Section Details</h1>
            <p class="text-neutral-600 mt-2">View section information and capacity</p>
        </div>

        <!-- Details Card -->
        <div class="bg-white rounded-2xl shadow-sms-xl overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-primary px-6 py-4 text-white">
                <h2 class="text-xl font-semibold">Section Information</h2>
                <p class="text-blue-100">ID: @Model.Id</p>
            </div>

            <!-- Content -->
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Section Info -->
                    <div class="bg-primary-50 rounded-xl p-4">
                        <h3 class="text-sm font-medium text-primary-800 uppercase tracking-wider mb-3">Section</h3>
                        <div class="flex items-center">
                            <div class="w-12 h-12 bg-gradient-to-r from-pink-400 to-rose-500 rounded-full flex items-center justify-center text-white font-semibold text-lg mr-3">
                                @Model.Name
                            </div>
                            <div>
                                <div class="text-lg font-semibold text-primary-800">@Model.Name Section</div>
                            </div>
                        </div>
                    </div>

                    <!-- Class & Capacity -->
                    <div class="bg-success-light rounded-xl p-4">
                        <h3 class="text-sm font-medium text-success uppercase tracking-wider mb-3">Assignment</h3>
                        <div class="space-y-2">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-success mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                                <span class="font-medium">Class:</span>
                                <span class="ml-2">@Model.Class?.Name</span>
                            </div>
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-success mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                </svg>
                                <span class="font-medium">Capacity:</span>
                                <span class="ml-2">@Model.Capacity Students</span>
                            </div>
                        </div>
                    </div>

                    
                </div>

                <!-- Action Buttons -->
                <div class="flex space-x-4 mt-8 pt-6 border-t border-primary-100">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-gradient-to-r from-blue-500 to-blue-600 hover:from-primary-600 hover:to-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-all duration-300 flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Edit
                    </a>
                    <a asp-action="Index" class="bg-neutral-100 hover:bg-primary-100 text-primary-800 font-medium py-2 px-6 rounded-lg transition-all duration-300 flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
