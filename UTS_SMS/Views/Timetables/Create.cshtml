@using UTS_SMS.Models
@model Timetable

@{
    ViewData["Title"] = "Create Timetable";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">📅 Create Timetable</h1>
            <p class="text-neutral-600 mt-2">Define class schedule structure and periods</p>
        </div>

        <!-- Form -->
        <div class="bg-white rounded-2xl shadow-sms-xl p-6">
            <form asp-action="Create" class="space-y-6">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="bg-error-light border-l-4 border-error text-error p-4 rounded-lg"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Class -->
                    <div>
                        <label asp-for="ClassId" class="block text-sm font-medium text-neutral-700 mb-2">Class</label>
                        <select asp-for="ClassId" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" required>
                            <option value="">-- Select Class --</option>
                            @foreach (var cls in (List<Class>)ViewData["Classes"])
                            {
                                <option value="@cls.Id">@cls.Name (Grade @cls.GradeLevel)</option>
                            }
                        </select>
                        <span asp-validation-for="ClassId" class="text-error text-sm"></span>
                    </div>

                    <!-- Section -->
                    <div>
                        <label asp-for="SectionId" class="block text-sm font-medium text-neutral-700 mb-2">Section</label>
                        <select asp-for="SectionId" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" required>
                            <option value="">-- Select Section --</option>
                            @foreach (var sec in (List<ClassSection>)ViewData["Sections"])
                            {
                                <option value="@sec.Id">@sec.Name</option>
                            }
                        </select>
                        <span asp-validation-for="SectionId" class="text-error text-sm"></span>
                    </div>

                    <!-- Start Time -->
                    <div>
                        <label asp-for="StartTime" class="block text-sm font-medium text-neutral-700 mb-2">Start Time</label>
                        <input asp-for="StartTime" type="time" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400" required />
                        <span asp-validation-for="StartTime" class="text-error text-sm"></span>
                    </div>

                    <!-- Number of Lectures -->
                    <div>
                        <label asp-for="NumberOfLectures" class="block text-sm font-medium text-neutral-700 mb-2">Number of Periods</label>
                        <input asp-for="NumberOfLectures" type="number" min="1" max="10" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400" required />
                        <span asp-validation-for="NumberOfLectures" class="text-error text-sm"></span>
                    </div>

                    <!-- Lecture Duration -->
                    <div>
                        <label asp-for="LectureDuration" class="block text-sm font-medium text-neutral-700 mb-2">Lecture Duration (min)</label>
                        <input asp-for="LectureDuration" type="number" min="1" max="120" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400" required />
                        <span asp-validation-for="LectureDuration" class="text-error text-sm"></span>
                    </div>

                    <!-- Zero Period Duration (Optional) -->
                    <div>
                        <label asp-for="ZeroPeriodDuration" class="block text-sm font-medium text-neutral-700 mb-2">Zero Period (min) <span class="text-gray-400 text-xs">(Optional)</span></label>
                        <input asp-for="ZeroPeriodDuration" type="number" min="0" max="60" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400" />
                        <span asp-validation-for="ZeroPeriodDuration" class="text-error text-sm"></span>
                        <p class="text-xs text-gray-500 mt-1">Leave at 0 if not needed</p>
                    </div>
                </div>

                <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-lg">
                    <p class="text-sm text-blue-800">
                        <i class="fas fa-info-circle mr-2"></i>
                        <strong>Note:</strong> Break configuration can be set later when editing slots. The new system supports multiple breaks with custom durations and titles.
                    </p>
                </div>

                <!-- Actions -->
                <div class="flex space-x-4 pt-6">
                    <button type="submit" class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-medium py-3 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-sms-lg flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Create Timetable
                    </button>
                    <a asp-action="Index" class="bg-neutral-100 hover:bg-primary-100 text-primary-800 font-medium py-3 px-8 rounded-xl transition-all duration-300 flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Cascade sections based on class selection
            const classSelect = document.getElementById('ClassId');
            const sectionSelect = document.getElementById('SectionId');

            classSelect.addEventListener('change', function() {
                const classId = this.value;
                if (classId) {
                    fetch(`/TeacherAssignments/GetSectionsByClass?classId=${classId}`)
                        .then(response => response.json())
                        .then(data => {
                            sectionSelect.innerHTML = '<option value="">-- Select Section --</option>';
                            data.forEach(section => {
                                const option = document.createElement('option');
                                option.value = section.id;
                                option.textContent = section.name;
                                sectionSelect.appendChild(option);
                            });
                        })
                        .catch(error => console.error('Error loading sections:', error));
                } else {
                    sectionSelect.innerHTML = '<option value="">-- Select Section --</option>';
                }
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
  
       
}
