@model Asset

@{
    ViewData["Title"] = "Add New Asset";
}

<div class="min-h-screen bg-neutral-50 p-3 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
            <div>
                <h1 class="text-2xl md:text-3xl font-bold text-primary-800 mb-2">Add New Asset</h1>
                <p class="text-neutral-600">Register a new school asset</p>
            </div>
            <a asp-action="Index" 
               class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition-all duration-300 mt-4 md:mt-0">
                Back to Assets
            </a>
        </div>

        <!-- Form -->
        <div class="bg-white rounded-lg shadow-sm p-6">
            <form asp-action="Create" method="post" class="space-y-6">
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Asset Name -->
                    <div>
                        <label asp-for="Name" class="block text-sm font-medium text-neutral-700 mb-2">Asset Name *</label>
                        <input asp-for="Name" type="text" 
                               class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" 
                               placeholder="Enter asset name" required>
                        <span asp-validation-for="Name" class="text-error text-sm"></span>
                    </div>

                    <!-- Category -->
                    <div>
                        <label asp-for="Category" class="block text-sm font-medium text-neutral-700 mb-2">Category</label>
                        <select asp-for="Category" 
                                class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                            <option value="">Select Category</option>
                            <option value="Furniture">Furniture</option>
                            <option value="Electronics">Electronics</option>
                            <option value="Equipment">Equipment</option>
                            <option value="Vehicles">Vehicles</option>
                            <option value="Books">Books</option>
                            <option value="Computers">Computers</option>
                            <option value="Sports">Sports Equipment</option>
                            <option value="Laboratory">Laboratory Equipment</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Category" class="text-error text-sm"></span>
                    </div>
                </div>

                <!-- Description -->
                <div>
                    <label asp-for="Description" class="block text-sm font-medium text-neutral-700 mb-2">Description</label>
                    <textarea asp-for="Description" rows="3"
                              class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" 
                              placeholder="Describe the asset (optional)"></textarea>
                    <span asp-validation-for="Description" class="text-error text-sm"></span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Price -->
                    <div>
                        <label asp-for="Price" class="block text-sm font-medium text-neutral-700 mb-2">Price *</label>
                        <input asp-for="Price" type="number" step="0.01" min="0" 
                               class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" 
                               placeholder="0.00" required>
                        <span asp-validation-for="Price" class="text-error text-sm"></span>
                    </div>

                    <!-- Purchase Date -->
                    <div>
                        <label asp-for="PurchaseDate" class="block text-sm font-medium text-neutral-700 mb-2">Purchase Date</label>
                        <input asp-for="PurchaseDate" type="date" 
                               class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                        <span asp-validation-for="PurchaseDate" class="text-error text-sm"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Serial Number -->
                    <div>
                        <label asp-for="SerialNumber" class="block text-sm font-medium text-neutral-700 mb-2">Serial Number</label>
                        <input asp-for="SerialNumber" type="text" 
                               class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" 
                               placeholder="Enter serial number (if applicable)">
                        <span asp-validation-for="SerialNumber" class="text-error text-sm"></span>
                    </div>

                    <!-- Condition -->
                    <div>
                        <label asp-for="Condition" class="block text-sm font-medium text-neutral-700 mb-2">Condition</label>
                        <select asp-for="Condition" 
                                class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                            <option value="New">New</option>
                            <option value="Like New">Like New</option>
                            <option value="Good">Good</option>
                            <option value="Fair">Fair</option>
                            <option value="Poor">Poor</option>
                            <option value="Damaged">Damaged</option>
                        </select>
                        <span asp-validation-for="Condition" class="text-error text-sm"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Account -->
                    <div>
                        <label asp-for="AccountId" class="block text-sm font-medium text-neutral-700 mb-2">Account Used</label>
                        <select asp-for="AccountId" asp-items="ViewBag.AccountId" 
                                class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                            <option value="">Select Account</option>
                        </select>
                        <span asp-validation-for="AccountId" class="text-error text-sm"></span>
                        <p class="text-xs text-neutral-500 mt-1">Which account was used to purchase this asset</p>
                    </div>

                    <!-- Campus -->
                    <div>
                        <label asp-for="CampusId" class="block text-sm font-medium text-neutral-700 mb-2">Campus *</label>
                        <select asp-for="CampusId" asp-items="ViewBag.CampusId" 
                                class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" required>
                            <option value="">Select Campus</option>
                        </select>
                        <span asp-validation-for="CampusId" class="text-error text-sm"></span>
                    </div>
                </div>

                <!-- Submit Buttons -->
                <div class="flex flex-col sm:flex-row justify-end space-y-3 sm:space-y-0 sm:space-x-3 pt-6 border-t border-primary-100">
                    <a asp-action="Index" 
                       class="w-full sm:w-auto bg-neutral-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg transition-all duration-300 text-center">
                        Cancel
                    </a>
                    <button type="submit" 
                            class="w-full sm:w-auto bg-gradient-primary hover:bg-primary-700 text-white px-6 py-2 rounded-lg transition-all duration-300">
                        Add Asset
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Set today's date as default for purchase date
        document.addEventListener('DOMContentLoaded', function() {
            const purchaseDateInput = document.querySelector('input[name="PurchaseDate"]');
            if (purchaseDateInput && !purchaseDateInput.value) {
                const today = new Date().toISOString().split('T')[0];
                purchaseDateInput.value = today;
            }
        });
    </script>
}