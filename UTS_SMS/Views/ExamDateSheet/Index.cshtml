@model UTS_SMS.Models.ExamDateSheetCalendarViewModel

@{
    ViewData["Title"] = "Exam Date Sheet Calendar";
    var today = DateTime.Now.Date;
    var selectedMonth = Model.SelectedMonth;
    var firstDayOfMonth = new DateTime(selectedMonth.Year, selectedMonth.Month, 1);
    var lastDayOfMonth = firstDayOfMonth.AddMonths(1).AddDays(-1);
    var firstDayOfWeek = (int)firstDayOfMonth.DayOfWeek;
    var daysInMonth = DateTime.DaysInMonth(selectedMonth.Year, selectedMonth.Month);
    var prevMonth = selectedMonth.AddMonths(-1);
    var nextMonth = selectedMonth.AddMonths(1);
}

<div class="min-h-screen ">
    <div class="max-w-7xl mx-auto">
        <!-- Enhanced Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 bg-white rounded-2xl shadow-sms-lg p-6">
            <div class="flex items-center space-x-4">
                <div class="bg-gradient-primary p-4 rounded-2xl shadow-lg">
                    <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <div>
                    <h1 class="text-3xl font-bold text-primary-800 tracking-tight">Exam Date Sheet Calendar</h1>
                    <p class="text-neutral-600 mt-1">View and manage exam schedules efficiently</p>
                </div>
            </div>
            <div class="flex space-x-3 mt-4 md:mt-0">
                <a asp-action="Create" asp-route-date="@today.ToString("yyyy-MM-dd")"
                   class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white px-6 py-3 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-sms-lg flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Add New Exam
                </a>
            </div>
        </div>

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-gradient-to-r from-green-50 to-green-100 border-l-4 border-green-500 text-green-800 p-4 mb-6 rounded-xl animate-fade-in shadow-md">
                <div class="flex items-center">
                    <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span class="font-medium">@TempData["SuccessMessage"]</span>
                </div>
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Calendar Section -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-sms-xl p-6 border border-primary-100">
                    <!-- Calendar Header -->
                    <div class="flex items-center justify-between mb-6 pb-4 border-b border-primary-100">
                        <a asp-action="Index" asp-route-month="@prevMonth.ToString("yyyy-MM-01")" asp-route-campusId="@Model.SelectedCampusId"
                           class="p-3 hover:bg-gradient-primary hover:text-white rounded-xl transition-all duration-300 bg-primary-50 text-primary-600 shadow-sm">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                            </svg>
                        </a>
                        <div class="text-center">
                            <h2 class="text-2xl font-bold text-primary-800">@selectedMonth.ToString("MMMM yyyy")</h2>
                            <p class="text-sm text-neutral-500 mt-1">Academic Calendar</p>
                        </div>
                        <a asp-action="Index" asp-route-month="@nextMonth.ToString("yyyy-MM-01")" asp-route-campusId="@Model.SelectedCampusId"
                           class="p-3 hover:bg-gradient-primary hover:text-white rounded-xl transition-all duration-300 bg-primary-50 text-primary-600 shadow-sm">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>

                    <!-- Campus Filter (for owners) -->
                    @if (!Model.IsUserCampusLocked && Model.Campuses.Any())
                    {
                        <div class="mb-6">
                            <label class="block text-sm font-semibold text-neutral-700 mb-2">
                                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                                </svg>
                                Filter by Campus
                            </label>
                            <select id="campusFilter" class="w-full px-4 py-3 border-2 border-primary-200 rounded-xl focus:ring-2 focus:ring-primary-400 focus:border-primary-400 bg-gradient-to-r from-white to-primary-50 transition-all duration-300">
                                <option value="">All Campuses</option>
                                @foreach (var campus in Model.Campuses)
                                {
                                    <option value="@campus.Id" selected="@(Model.SelectedCampusId == campus.Id)">@campus.Name</option>
                                }
                            </select>
                        </div>
                    }

                    <!-- Calendar Grid -->
                    <div class="grid grid-cols-7 gap-2">
                        <!-- Day Headers -->
                        @{
                            var dayNames = new[] { "Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat" };
                            foreach (var day in dayNames)
                            {
                                <div class="text-center py-3 text-sm font-bold text-primary-800 bg-gradient-to-br from-primary-50 to-primary-100 rounded-lg shadow-sm">@day</div>
                            }
                        }

                        <!-- Empty cells before first day -->
                        @for (var i = 0; i < firstDayOfWeek; i++)
                        {
                            <div class="min-h-[90px] p-2 bg-neutral-50 rounded-lg opacity-50"></div>
                        }

                        <!-- Calendar Days -->
                        @for (var day = 1; day <= daysInMonth; day++)
                        {
                            var currentDate = new DateTime(selectedMonth.Year, selectedMonth.Month, day);
                            var isToday = currentDate == today;
                            var hasExams = Model.ExamsByDate.ContainsKey(currentDate);
                            var examsForDay = hasExams ? Model.ExamsByDate[currentDate] : new List<ExamDateSheet>();

                            <div class="min-h-[90px] p-2 rounded-lg border-2 cursor-pointer transition-all duration-300 hover:shadow-lg hover:scale-105 calendar-day @(isToday ? "bg-gradient-to-br from-blue-100 to-purple-100 border-primary-500 shadow-md" : hasExams ? "bg-white border-green-300" : "bg-white border-primary-100")"
                                 data-date="@currentDate.ToString("yyyy-MM-dd")"
                                 onclick="selectDate('@currentDate.ToString("yyyy-MM-dd")')">
                                <div class="flex justify-between items-start">
                                    <span class="text-sm font-bold @(isToday ? "text-primary-900 text-base" : "text-neutral-700")">@day</span>
                                    @if (hasExams)
                                    {
                                        <span class="bg-gradient-to-r from-green-500 to-green-600 text-white text-xs px-2 py-0.5 rounded-full font-semibold shadow-sm">@examsForDay.Count</span>
                                    }
                                </div>
                                @if (hasExams)
                                {
                                    <div class="mt-1 space-y-1">
                                        @foreach (var exam in examsForDay.Take(2))
                                        {
                                            <div class="text-xs bg-info-light text-info px-1 py-0.5 rounded truncate" title="@exam.Subject?.Name">
                                                @exam.Subject?.Name
                                            </div>
                                        }
                                        @if (examsForDay.Count > 2)
                                        {
                                            <div class="text-xs text-neutral-500">+@(examsForDay.Count - 2) more</div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Side Panel - Exam Details -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-sms-xl p-6 sticky top-6 border border-primary-100">
                    <div class="flex items-center mb-6 pb-4 border-b border-primary-100">
                        <div class="w-14 h-14 bg-gradient-primary rounded-2xl flex items-center justify-center mr-4 shadow-lg">
                            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2V9a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl font-bold text-primary-800">Exam Details</h2>
                            <p class="text-sm text-neutral-600" id="selectedDateLabel">Select a date to view exams</p>
                        </div>
                    </div>

                    <!-- Selected Date Actions -->
                    <div class="mb-6" id="dateActions" style="display: none;">
                        <a id="addExamForDateLink" href="#" class="w-full bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white px-4 py-3 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-md flex items-center justify-center font-medium">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            Add Exam for This Date
                        </a>
                    </div>

                    <!-- Exams List -->
                    <div id="examsListContainer">
                        <div class="text-center py-8 text-neutral-500" id="noExamsMessage">
                            <svg class="w-16 h-16 mx-auto mb-4 text-neutral-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <p>Click on a date to view scheduled exams</p>
                        </div>
                        <div id="examsList" class="space-y-4" style="display: none;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSRF Token for delete operations -->
@Html.AntiForgeryToken()

@section Scripts {
    <script>
        let selectedDate = null;

        function selectDate(dateStr) {
            selectedDate = dateStr;
            
            // Update UI
            document.querySelectorAll('.calendar-day').forEach(el => {
                el.classList.remove('ring-2', 'ring-primary-500');
            });
            document.querySelector(`[data-date="${dateStr}"]`)?.classList.add('ring-2', 'ring-primary-500');
            
            // Update label
            const date = new Date(dateStr);
            document.getElementById('selectedDateLabel').textContent = date.toLocaleDateString('en-US', { 
                weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' 
            });
            
            // Show add button and update link
            const addLink = document.getElementById('addExamForDateLink');
            if (addLink) {
                addLink.href = '/ExamDateSheet/Create?date=' + dateStr;
            }
            document.getElementById('dateActions').style.display = 'block';
            
            // Load exams for this date
            loadExamsForDate(dateStr);
        }

        function loadExamsForDate(dateStr) {
            const campusId = document.getElementById('campusFilter')?.value || '';
            
            fetch(`/ExamDateSheet/GetExamsByDate?date=${dateStr}&campusId=${campusId}`)
                .then(response => response.json())
                .then(data => {
                    const container = document.getElementById('examsList');
                    const noExamsMessage = document.getElementById('noExamsMessage');
                    
                    if (data.length === 0) {
                        container.style.display = 'none';
                        noExamsMessage.style.display = 'block';
                        noExamsMessage.innerHTML = `
                            <svg class="w-20 h-20 mx-auto mb-4 text-neutral-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <p class="text-neutral-500 font-medium">No exams scheduled for this date</p>
                            <p class="text-sm text-neutral-400 mt-2">Click 'Add Exam' to schedule one</p>
                        `;
                    } else {
                        noExamsMessage.style.display = 'none';
                        container.style.display = 'block';
                        container.innerHTML = data.map(exam => `
                            <div class="bg-gradient-to-br from-white to-blue-50 rounded-xl p-4 border-2 border-primary-200 hover:border-primary-400 hover:shadow-lg transition-all duration-300">
                                    <div class="flex justify-between items-start mb-3">
                                    <h4 class="font-bold text-primary-800 text-lg">${exam.subject}</h4>
                                    <div class="flex gap-2">
                                        <a href="/ExamDateSheet/Edit/${exam.id}" class="p-2 bg-info-light hover:bg-info text-white rounded-lg transition-all duration-300">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                            </svg>
                                        </a>
                                        <button onclick="deleteExam(${exam.id})" class="p-2 bg-error-light hover:bg-error text-white rounded-lg transition-all duration-300">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                                <div class="text-sm text-neutral-700 space-y-2 bg-white bg-opacity-50 rounded-lg p-3">
                                    <p class="flex items-center"><svg class="w-4 h-4 mr-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path></svg> <span class="font-semibold">Category:</span> <span class="ml-1">${exam.examCategory}</span></p>
                                    <p class="flex items-center"><svg class="w-4 h-4 mr-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg> <span class="font-semibold">Exam:</span> <span class="ml-1">${exam.examName}</span></p>
                                    <p class="flex items-center"><svg class="w-4 h-4 mr-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg> <span class="font-semibold">Campus:</span> <span class="ml-1">${exam.campus}</span></p>
                                    <p class="flex items-center"><svg class="w-4 h-4 mr-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg> <span class="font-semibold">Total:</span> ${exam.totalMarks} | <span class="font-semibold">Passing:</span> ${exam.passingMarks}</p>
                                    ${exam.classSections && exam.classSections.length > 0 ? `
                                        <div class="mt-2">
                                            <span class="font-medium">Classes:</span>
                                            <div class="flex flex-wrap gap-1 mt-1">
                                                ${exam.classSections.map(cs => `
                                                    <span class="bg-info-light text-info text-xs px-2 py-0.5 rounded">${cs.className} - ${cs.sectionName}</span>
                                                `).join('')}
                                            </div>
                                        </div>
                                    ` : ''}
                                </div>
                            </div>
                        `).join('');
                    }
                })
                .catch(error => {
                    console.error('Error loading exams:', error);
                });
        }

        // Campus filter change
        document.getElementById('campusFilter')?.addEventListener('change', function() {
            const campusId = this.value;
            const month = '@selectedMonth.ToString("yyyy-MM-01")';
            window.location.href = `/ExamDateSheet?month=${month}&campusId=${campusId}`;
        });

        function deleteExam(examId) {
            if (!confirm('Are you sure you want to delete this exam date sheet entry?')) {
                return;
            }

            const form = document.createElement('form');
            form.method = 'POST';
            form.action = `/ExamDateSheet/Delete/${examId}`;
            
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token.value;
                form.appendChild(tokenInput);
            }
            
            document.body.appendChild(form);
            form.submit();
        }
    </script>

    <style>
        .animate-fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
}
