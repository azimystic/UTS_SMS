@model IEnumerable<StudentCategory>
@{
    ViewData["Title"] = "Student Categories";
}

<div class="min-h-screen bg-neutral-50 p-4 md:p-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
        <h1 class="text-3xl font-bold text-primary-800 mb-4 md:mb-0">Student Categories</h1>
        <a asp-action="Create" class="bg-gradient-primary hover:bg-primary-700 text-white px-4 py-2 rounded-lg transition-all shadow-sms-md flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Category
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-success-light border-l-4 border-success text-success p-4 mb-6 rounded-lg">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-error-light border-l-4 border-error text-error p-4 mb-6 rounded-lg">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        @foreach (var category in Model)
        {
            <div class="bg-white rounded-lg shadow-sms-md overflow-hidden hover:shadow-sms-xl transition-all">
                <div class="bg-gradient-primary px-4 py-3 flex justify-between items-center">
                    <div>
                        <h3 class="text-lg font-semibold text-white">@category.CategoryName</h3>
                        <p class="text-primary-100 text-xs">@category.CategoryType</p>
                    </div>
                    @if (category.IsSystemDefined)
                    {
                        <span class="bg-white/20 text-white text-xs px-2 py-1 rounded-full">System</span>
                    }
                </div>
                
                <div class="p-4 space-y-3">
                    @if (category.CategoryType != "EmployeeParent")
                    {
                        <div class="flex justify-between text-sm">
                            <span class="text-neutral-600">Admission:</span>
                            <span class="font-semibold text-primary-700">@category.DefaultAdmissionFeeDiscount%</span>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="text-neutral-600">Tuition:</span>
                            <span class="font-semibold text-primary-700">@category.DefaultTuitionFeeDiscount%</span>
                        </div>
                    }
                    
                    @if (category.CategoryType == "Sibling" && category.SiblingCount.HasValue)
                    {
                        <div class="pt-2 border-t text-xs">
                            <p class="text-neutral-500 mb-1">Per Sibling (after @category.SiblingCount):</p>
                            <div class="flex justify-between">
                                <span class="text-neutral-600">+Admission:</span>
                                <span class="font-semibold text-success">+@category.PerSiblingAdmissionDiscount%</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-neutral-600">+Tuition:</span>
                                <span class="font-semibold text-success">+@category.PerSiblingTuitionDiscount%</span>
                            </div>
                        </div>
                    }
                    
                    @if (category.CategoryType == "EmployeeParent" && category.EmployeeCategoryDiscounts.Any())
                    {
                        <div class="text-xs space-y-1">
                            <p class="text-neutral-500 mb-1">Employee Tiers (@category.EmployeeCategoryDiscounts.Count):</p>
                            @foreach (var discount in category.EmployeeCategoryDiscounts.OrderByDescending(d => d.AdmissionFeeDiscount).Take(3))
                            {
                                <div class="flex justify-between">
                                    <span class="text-neutral-600">@discount.EmployeeCategory:</span>
                                    <span class="font-semibold text-primary-700">@discount.AdmissionFeeDiscount% / @discount.TuitionFeeDiscount%</span>
                                </div>
                            }
                            @if (category.EmployeeCategoryDiscounts.Count > 3)
                            {
                                <p class="text-primary-600">+@(category.EmployeeCategoryDiscounts.Count - 3) more...</p>
                            }
                        </div>
                    }
                    
                    <div class="flex gap-2 pt-2 border-t">
                        <a asp-action="Edit" asp-route-id="@category.Id" class="flex-1 bg-primary-100 hover:bg-primary-200 text-primary-800 px-3 py-1.5 rounded text-sm text-center transition-all">
                            Edit
                        </a>
                        @if (!category.IsSystemDefined)
                        {
                            <form asp-action="Delete" asp-route-id="@category.Id" method="post" class="flex-1" onsubmit="return confirm('Delete this category?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="w-full bg-error-light hover:bg-error text-error hover:text-white px-3 py-1.5 rounded text-sm transition-all">
                                    Delete
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="bg-white rounded-xl shadow-sms-md p-12 text-center">
            <svg class="w-16 h-16 mx-auto text-neutral-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <p class="text-neutral-600 mb-4">No student categories found</p>
            <a asp-action="Create" class="inline-block bg-gradient-primary hover:bg-primary-700 text-white px-6 py-3 rounded-lg transition-all">
                Create First Category
            </a>
        </div>
    }
</div>
