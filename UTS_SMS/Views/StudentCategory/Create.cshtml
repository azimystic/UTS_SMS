@model StudentCategory
@{
    ViewData["Title"] = "Create Student Category";
}

<div class="min-h-screen bg-neutral-50 p-4 md:p-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-primary-800">Create Student Category</h1>
        <a asp-action="Index" class="bg-primary-100 hover:bg-primary-200 text-primary-800 px-4 py-2 rounded-lg transition-all shadow-sms-md flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back
        </a>
    </div>

    <form asp-action="Create" method="post" id="categoryForm">
        <div class="bg-white rounded-lg shadow-sms-md p-6 mb-4">
            <h2 class="text-lg font-semibold text-primary-700 mb-4">Basic Information</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label asp-for="CategoryName" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                    <input asp-for="CategoryName" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" required />
                    <span asp-validation-for="CategoryName" class="text-error text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="CategoryType" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                    <select asp-for="CategoryType" id="categoryType" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" required>
                        <option value="">-- Select Type --</option>
                        <option value="Regular">Regular</option>
                        <option value="Disabled">Disabled</option>
                        <option value="EmployeeParent">Employee Parent</option>
                        <option value="Sibling">Sibling</option>
                        <option value="Alumni">Alumni</option>
                        <option value="Custom">Custom</option>
                    </select>
                    <span asp-validation-for="CategoryType" class="text-error text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="CampusId" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                    <select asp-for="CampusId" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" asp-items="ViewBag.CampusId" required>
                        <option value="">-- Select Campus --</option>
                    </select>
                    <span asp-validation-for="CampusId" class="text-error text-sm"></span>
                </div>
            </div>
        </div>

        <div id="defaultDiscountSection" class="bg-white rounded-lg shadow-sms-md p-6 mb-4">
            <h2 class="text-lg font-semibold text-primary-700 mb-4">Default Discounts</h2>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label asp-for="DefaultAdmissionFeeDiscount" class="block text-sm font-medium text-neutral-700 mb-1">Admission %</label>
                    <input asp-for="DefaultAdmissionFeeDiscount" type="number" min="0" max="100" step="0.01" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" value="0" required />
                </div>
                
                <div>
                    <label asp-for="DefaultTuitionFeeDiscount" class="block text-sm font-medium text-neutral-700 mb-1">Tuition %</label>
                    <input asp-for="DefaultTuitionFeeDiscount" type="number" min="0" max="100" step="0.01" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" value="0" required />
                </div>
            </div>
        </div>

        <div id="siblingSection" class="bg-white rounded-lg shadow-sms-md p-6 mb-4 hidden">
            <h2 class="text-lg font-semibold text-primary-700 mb-4">Sibling Configuration</h2>
            <div class="grid grid-cols-3 gap-4">
                <div>
                    <label asp-for="SiblingCount" class="block text-sm font-medium text-neutral-700 mb-1">Base Count</label>
                    <input asp-for="SiblingCount" type="number" min="1" max="10" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" value="2" />
                    <span class="text-xs text-neutral-500">After this, add per-sibling discount</span>
                </div>
                
                <div>
                    <label asp-for="PerSiblingAdmissionDiscount" class="block text-sm font-medium text-neutral-700 mb-1">Per Sibling Admission %</label>
                    <input asp-for="PerSiblingAdmissionDiscount" type="number" min="0" max="100" step="0.01" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" value="0" />
                </div>
                
                <div>
                    <label asp-for="PerSiblingTuitionDiscount" class="block text-sm font-medium text-neutral-700 mb-1">Per Sibling Tuition %</label>
                    <input asp-for="PerSiblingTuitionDiscount" type="number" min="0" max="100" step="0.01" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" value="0" />
                </div>
            </div>
        </div>

        <div id="employeeSection" class="bg-white rounded-lg shadow-sms-md p-6 mb-4 hidden">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-lg font-semibold text-primary-700">Employee Role Discounts</h2>
                <button type="button" onclick="addEmployeeTier()" class="bg-primary-600 hover:bg-primary-700 text-white px-3 py-1 rounded text-sm">
                    + Add Role
                </button>
            </div>
            <div id="employeeTiers" class="space-y-3">
            </div>
        </div>

        <div class="flex gap-3">
            <button type="submit" class="bg-gradient-primary hover:bg-primary-700 text-white px-6 py-2 rounded-lg transition-all shadow-sms-md">
                Create Category
            </button>
            <a asp-action="Index" class="bg-neutral-200 hover:bg-neutral-300 text-neutral-800 px-6 py-2 rounded-lg transition-all">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        let tierIndex = 0;

        document.getElementById('categoryType').addEventListener('change', function() {
            const type = this.value;
            const siblingSection = document.getElementById('siblingSection');
            const employeeSection = document.getElementById('employeeSection');
            const defaultSection = document.getElementById('defaultDiscountSection');
            
            siblingSection.classList.add('hidden');
            employeeSection.classList.add('hidden');
            defaultSection.classList.remove('hidden');
            
            if (type === 'Sibling') {
                siblingSection.classList.remove('hidden');
            } else if (type === 'EmployeeParent') {
                employeeSection.classList.remove('hidden');
                defaultSection.classList.add('hidden');
                if (document.getElementById('employeeTiers').children.length === 0) {
                    addEmployeeTier();
                }
            } else {
                // Clear employee data when switching to Regular/Disabled/Alumni/Custom
                clearEmployeeTiers();
            }
        });

        function addEmployeeTier() {
            const container = document.getElementById('employeeTiers');
            const tierHtml = `
                <div class="grid grid-cols-4 gap-3 p-3 border border-primary-200 rounded-lg" id="tier-${tierIndex}">
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1">Employee Role</label>
                        <select name="discounts[${tierIndex}].EmployeeCategory" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400 text-sm role-select" required onchange="updateRoleOptions()">
                            <option value="">-- Select --</option>
                            <option value="Principal">Principal</option>
                            <option value="Teacher">Teacher</option>
                            <option value="Accountant">Accountant</option>
                            <option value="Admin">Admin</option>
                            <option value="Aya">Aya</option>
                            <option value="Guard">Guard</option>
                            <option value="Lab Instructor">Lab Instructor</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1">Admission %</label>
                        <input name="discounts[${tierIndex}].AdmissionFeeDiscount" type="number" min="0" max="100" step="0.01" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400 text-sm" value="0" required />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-1">Tuition %</label>
                        <input name="discounts[${tierIndex}].TuitionFeeDiscount" type="number" min="0" max="100" step="0.01" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400 text-sm" value="0" required />
                    </div>
                    <div class="flex items-end">
                        <button type="button" onclick="removeEmployeeTier(${tierIndex})" class="w-full bg-error-light hover:bg-error text-error hover:text-white px-3 py-2 rounded-md transition-all text-sm">
                            Remove
                        </button>
                    </div>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', tierHtml);
            tierIndex++;
            updateRoleOptions();
        }

        function removeEmployeeTier(index) {
            const tier = document.getElementById(`tier-${index}`);
            if (tier) {
                tier.remove();
                updateRoleOptions();
            }
        }

        function clearEmployeeTiers() {
            const container = document.getElementById('employeeTiers');
            container.innerHTML = '';
            tierIndex = 0;
        }

        function updateRoleOptions() {
            const allSelects = document.querySelectorAll('.role-select');
            const selectedRoles = [];
            
            // Collect all selected roles
            allSelects.forEach(select => {
                if (select.value) {
                    selectedRoles.push(select.value);
                }
            });
            
            // Update options in all selects
            allSelects.forEach(currentSelect => {
                const currentValue = currentSelect.value;
                const options = currentSelect.querySelectorAll('option');
                
                options.forEach(option => {
                    if (option.value === '') {
                        // Keep the placeholder option enabled
                        option.disabled = false;
                        return;
                    }
                    
                    // Disable if role is selected in another dropdown (but not current)
                    if (selectedRoles.includes(option.value) && option.value !== currentValue) {
                        option.disabled = true;
                        option.style.color = '#ccc';
                    } else {
                        option.disabled = false;
                        option.style.color = '';
                    }
                });
            });
        }
    </script>
}
