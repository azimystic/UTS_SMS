@model IEnumerable<UTS_SMS.Models.LeaveRequest>

@{
    ViewData["Title"] = "Leave Requests Management";
}

<div class="min-h-screen p-4 md:p-6">
    <div class="w-full max-w-full">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
            <div>
                <h1 class="text-2xl md:text-3xl font-bold text-primary-800">Leave Requests Management</h1>
                <p class="text-neutral-600 mt-1">Review and manage all employee leave requests</p>
            </div>
        </div>

        <!-- Filter Tabs -->
        <div class="bg-white rounded-2xl shadow-sms-lg mb-6 border border-primary-100">
            <div class="flex border-b border-primary-200" x-data="{ activeTab: 'Pending' }">
                <button @@click="activeTab = 'Pending'" 
                        :class="activeTab === 'Pending' ? 'border-b-2 border-primary-600 text-primary-600' : 'text-neutral-600'"
                        class="flex-1 px-6 py-4 text-sm font-medium transition-colors duration-200 hover:text-primary-600">
                    ⏳ Pending
                    <span class="ml-2 px-2 py-1 text-xs rounded-full bg-yellow-100 text-yellow-800">
                        @Model.Count(r => r.Status == "Pending")
                    </span>
                </button>
                <button @@click="activeTab = 'Approved'" 
                        :class="activeTab === 'Approved' ? 'border-b-2 border-primary-600 text-primary-600' : 'text-neutral-600'"
                        class="flex-1 px-6 py-4 text-sm font-medium transition-colors duration-200 hover:text-primary-600">
                    ✓ Approved
                    <span class="ml-2 px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">
                        @Model.Count(r => r.Status == "Approved")
                    </span>
                </button>
                <button @@click="activeTab = 'Rejected'" 
                        :class="activeTab === 'Rejected' ? 'border-b-2 border-primary-600 text-primary-600' : 'text-neutral-600'"
                        class="flex-1 px-6 py-4 text-sm font-medium transition-colors duration-200 hover:text-primary-600">
                    ✗ Rejected
                    <span class="ml-2 px-2 py-1 text-xs rounded-full bg-red-100 text-red-800">
                        @Model.Count(r => r.Status == "Rejected")
                    </span>
                </button>
            </div>

            <div class="overflow-x-auto">
                @if (Model != null && Model.Any())
                {
                    <div x-show="activeTab === 'Pending'">
                        @await Html.PartialAsync("_LeaveRequestsTable", Model.Where(r => r.Status == "Pending"), new ViewDataDictionary(ViewData) { { "ShowActions", true } })
                    </div>
                    <div x-show="activeTab === 'Approved'" x-cloak>
                        @await Html.PartialAsync("_LeaveRequestsTable", Model.Where(r => r.Status == "Approved"), new ViewDataDictionary(ViewData) { { "ShowActions", false } })
                    </div>
                    <div x-show="activeTab === 'Rejected'" x-cloak>
                        @await Html.PartialAsync("_LeaveRequestsTable", Model.Where(r => r.Status == "Rejected"), new ViewDataDictionary(ViewData) { { "ShowActions", false } })
                    </div>
                }
                else
                {
                    <div class="p-12 text-center">
                        <svg class="w-16 h-16 text-neutral-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                        </svg>
                        <h3 class="text-lg font-medium text-primary-800 mb-2">No leave requests found</h3>
                        <p class="text-neutral-500">No employees have submitted leave requests yet.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Rejection Modal -->
<div id="rejectionModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" onclick="closeRejectionModal(event)">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-2xl bg-white" onclick="event.stopPropagation()">
        <div class="mt-3">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-primary-800">Reject Leave Request</h3>
                <button onclick="closeRejectionModal()" class="text-neutral-500 hover:text-neutral-700">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <form id="rejectionForm" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="rejectLeaveId" name="id" />
                <div class="mb-4">
                    <label for="rejectionReason" class="block text-sm font-medium text-primary-800 mb-2">Rejection Reason *</label>
                    <textarea id="rejectionReason" name="reason" rows="4" required
                              class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-400 resize-none"
                              placeholder="Please provide a reason for rejection..."></textarea>
                </div>
                <div class="flex justify-end space-x-3">
                    <button type="button" onclick="closeRejectionModal()"
                            class="px-4 py-2 bg-neutral-200 text-neutral-700 rounded-lg hover:bg-neutral-300 transition-colors duration-200">
                        Cancel
                    </button>
                    <button type="submit"
                            class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors duration-200">
                        Reject Leave
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script>
        function openRejectionModal(leaveId) {
            document.getElementById('rejectLeaveId').value = leaveId;
            document.getElementById('rejectionForm').action = '@Url.Action("Reject", "LeaveRequests")';
            document.getElementById('rejectionModal').classList.remove('hidden');
        }

        function closeRejectionModal(event) {
            if (!event || event.target === event.currentTarget || !event.target) {
                document.getElementById('rejectionModal').classList.add('hidden');
                document.getElementById('rejectionReason').value = '';
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const rejectionForm = document.getElementById('rejectionForm');
            if (rejectionForm) {
                rejectionForm.addEventListener('submit', function(e) {
                    const reason = document.getElementById('rejectionReason').value.trim();
                    if (!reason) {
                        e.preventDefault();
                        alert('Please provide a rejection reason.');
                    }
                });
            }
        });
    </script>
}
