@using UTS_SMS.Models
@model SubjectsGrouping

@{
    ViewData["Title"] = "Edit Subjects Group";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-2xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">📚 Edit Subjects Group</h1>
            <p class="text-neutral-600 mt-2">Update group information</p>
        </div>

        <!-- Form -->
        <div class="bg-white rounded-2xl shadow-sms-xl p-6">
            <form asp-action="Edit" class="space-y-6">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="bg-error-light border-l-4 border-error text-error p-4 rounded-lg"></div>

                <div class="grid grid-cols-1 gap-6">
                    <!-- Group Name -->
                    <div>
                        <label asp-for="Name" class="block text-sm font-medium text-neutral-700 mb-2">Group Name</label>
                        <input asp-for="Name" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" required />
                        <span asp-validation-for="Name" class="text-error text-sm"></span>
                    </div>

                    <!-- Campus -->
                    <div>
                        <label asp-for="CampusId" class="block text-sm font-medium text-neutral-700 mb-2">Campus</label>
                        <select asp-for="CampusId" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" required>
                            <option value="">-- Select Campus --</option>
                            @foreach (var campus in ViewBag.Campuses as IEnumerable<Campus>)
                            {
                                <option value="@campus.Id" selected="@(campus.Id == Model.CampusId)">@campus.Name</option>
                            }
                        </select>
                        <span asp-validation-for="CampusId" class="text-error text-sm"></span>
                    </div>

                    <!-- Is Active -->
                    <div class="flex items-center">
                        <input asp-for="IsActive" type="checkbox" class="h-4 w-4 text-primary-600 focus:ring-primary-400 border-primary-200 rounded" />
                        <label asp-for="IsActive" class="ml-2 block text-sm text-primary-800">Active Group</label>
                    </div>
                    <span asp-validation-for="IsActive" class="text-error text-sm"></span>
                </div>

                <!-- Actions -->
                <div class="flex space-x-4 pt-6">
                    <button type="submit" class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-medium py-3 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-sms-lg flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Update Group
                    </button>
                    <a asp-action="Index" class="bg-neutral-100 hover:bg-primary-100 text-primary-800 font-medium py-3 px-8 rounded-xl transition-all duration-300 flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
