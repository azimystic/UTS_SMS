@model UTS_SMS.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 p-4 md:p-6">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-800">👑 Admin Dashboard</h1>
                <p class="text-gray-600 mt-2">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
            </div>
            <div class="flex space-x-3 mt-4 md:mt-0">
                <a href="#" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-xl transition-all duration-300 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Quick Action
                </a>
            </div>
        </div>

        <!-- Statistics Row -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- Students Card -->
            <div class="bg-white rounded-2xl shadow-lg p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-600">Total Students</h3>
                        <p class="text-2xl font-bold text-gray-800">@Model.TotalStudents</p>
                    </div>
                </div>
            </div>

            <!-- Employees Card -->
            <div class="bg-white rounded-2xl shadow-lg p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-600">Total Employees</h3>
                        <p class="text-2xl font-bold text-gray-800">@Model.TotalEmployees</p>
                    </div>
                </div>
            </div>

            <!-- Teachers Card -->
            <div class="bg-white rounded-2xl shadow-lg p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14v6l9-5m-9 5l-9-5m9 5v-6m0 0l-9-5m9 5l9-5"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-600">Total Teachers</h3>
                        <p class="text-2xl font-bold text-gray-800">@Model.TotalTeachers</p>
                    </div>
                </div>
            </div>

            <!-- Users Card -->
            <div class="bg-white rounded-2xl shadow-lg p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-600">Total Users</h3>
                        <p class="text-2xl font-bold text-gray-800">@Model.TotalUsers</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
            <!-- User Distribution Chart -->
            <div class="bg-white rounded-2xl shadow-lg p-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">User Distribution</h2>
                <div class="h-64">
                    <canvas id="userDistributionChart"></canvas>
                </div>
            </div>

            <!-- Monthly Growth Chart -->
            <div class="bg-white rounded-2xl shadow-lg p-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Monthly Growth</h2>
                <div class="h-64">
                    <canvas id="growthChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Birthday Section -->
        @if (Model.TodaysBirthdayStudents.Any() || Model.TodaysBirthdayEmployees.Any())
        {
            <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
                <div class="flex items-center mb-6">
                    <div class="w-12 h-12 bg-yellow-100 rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-xl font-semibold text-gray-800">🎉 Today's Birthdays</h2>
                        <p class="text-gray-600">Celebrating special days</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Birthday Students -->
                    @if (Model.TodaysBirthdayStudents.Any())
                    {
                        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-4">
                            <h3 class="text-lg font-semibold text-blue-800 mb-3 flex items-center">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                                </svg>
                                Students (@Model.TodaysBirthdayStudents.Count)
                            </h3>
                            <div class="space-y-2">
                                @foreach (var student in Model.TodaysBirthdayStudents)
                                {
                                    <div class="flex items-center bg-white rounded-lg p-3 shadow-sm">
                                        <div class="w-8 h-8 bg-blue-200 rounded-full flex items-center justify-center mr-3">
                                            <span class="text-blue-800 text-xs font-bold">🎂</span>
                                        </div>
                                        <div class="flex-1">
                                            <p class="font-medium text-gray-800">@student.StudentName</p>
                                            <p class="text-xs text-gray-600">@student.ClassObj?.Name - @student.SectionObj?.Name</p>
                                        </div>
                                        <div class="text-right">
                                            <p class="text-xs text-blue-600 font-medium">Age: @(DateTime.Today.Year - student.DateOfBirth.Year)</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Birthday Employees -->
                    @if (Model.TodaysBirthdayEmployees.Any())
                    {
                        <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-4">
                            <h3 class="text-lg font-semibold text-green-800 mb-3 flex items-center">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                Staff (@Model.TodaysBirthdayEmployees.Count)
                            </h3>
                            <div class="space-y-2">
                                @foreach (var employee in Model.TodaysBirthdayEmployees)
                                {
                                    <div class="flex items-center bg-white rounded-lg p-3 shadow-sm">
                                        <div class="w-8 h-8 bg-green-200 rounded-full flex items-center justify-center mr-3">
                                            <span class="text-green-800 text-xs font-bold">🎂</span>
                                        </div>
                                        <div class="flex-1">
                                            <p class="font-medium text-gray-800">@employee.FullName</p>
                                            <p class="text-xs text-gray-600">@employee.Role</p>
                                        </div>
                                        <div class="text-right">
                                            <p class="text-xs text-green-600 font-medium">Age: @(DateTime.Today.Year - employee.DateOfBirth.Year)</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- No Birthdays Message -->
                    @if (!Model.TodaysBirthdayStudents.Any() && !Model.TodaysBirthdayEmployees.Any())
                    {
                        <div class="col-span-2 text-center py-8">
                            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <p class="text-gray-500 text-lg">No birthdays today</p>
                            <p class="text-gray-400 text-sm">Check back tomorrow!</p>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Recent Activity Section -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
            <!-- Recent Students -->
            <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
                <div class="px-6 py-4 bg-gradient-to-r from-blue-800 to-blue-900 text-white">
                    <h2 class="text-xl font-semibold">Recent Students</h2>
                    <p class="text-blue-200">Latest student registrations</p>
                </div>
                <div class="divide-y divide-gray-200">
                    @foreach (var student in Model.RecentStudents)
                    {
                        <div class="px-6 py-4 transition-all duration-300 hover:bg-blue-50">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-medium text-gray-800">@student.StudentName </h3>
                                    <p class="text-sm text-gray-600">Registered: @student.RegistrationDate.ToString("MMM dd, yyyy")</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="px-6 py-4 bg-gray-50">
                    <a href="#" class="text-blue-600 hover:text-blue-800 font-medium flex items-center justify-center">
                        View All Students
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>

            <!-- Recent Employees -->
            <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
                <div class="px-6 py-4 bg-gradient-to-r from-green-800 to-green-900 text-white">
                    <h2 class="text-xl font-semibold">Recent Employees</h2>
                    <p class="text-green-200">Latest employee registrations</p>
                </div>
                <div class="divide-y divide-gray-200">
                    @foreach (var employee in Model.RecentEmployees)
                    {
                        <div class="px-6 py-4 transition-all duration-300 hover:bg-green-50">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-4">
                                    <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-medium text-gray-800">@employee.FullName </h3>
                                    <p class="text-sm text-gray-600">@employee.Role • Joined: @employee.JoiningDate.ToString("MMM dd, yyyy")</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="px-6 py-4 bg-gray-50">
                    <a href="#" class="text-green-600 hover:text-green-800 font-medium flex items-center justify-center">
                        View All Employees
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // User Distribution Chart
            const userCtx = document.getElementById('userDistributionChart').getContext('2d');
            new Chart(userCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Students', 'Teachers', 'Other Employees'],
                    datasets: [{
                        data: [@Model.TotalStudents, @Model.TotalTeachers, @(Model.TotalEmployees - Model.TotalTeachers)],
                        backgroundColor: [
                            'rgba(59, 130, 246, 0.9)',
                            'rgba(139, 92, 246, 0.9)',
                            'rgba(16, 185, 129, 0.9)'
                        ],
                        borderColor: [
                            'rgb(59, 130, 246)',
                            'rgb(139, 92, 246)',
                            'rgb(16, 185, 129)'
                        ],
                        borderWidth: 3,
                        hoverOffset: 20
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                font: {
                                    size: 14,
                                    weight: '600'
                                }
                            }
                        }
                    },
                    animation: {
                        animateScale: true,
                        animateRotate: true,
                        duration: 2000,
                        easing: 'easeOutQuart'
                    },
                    cutout: '60%'
                }
            });

            // Growth Chart (sample data)
            const growthCtx = document.getElementById('growthChart').getContext('2d');
            new Chart(growthCtx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [{
                        label: 'Student Growth',
                        data: [120, 150, 180, 200, 220, @Model.TotalStudents],
                        borderColor: 'rgb(59, 130, 246)',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        tension: 0.3,
                        fill: true,
                        borderWidth: 3,
                        pointRadius: 5,
                        pointHoverRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                drawBorder: false
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    },
                    animation: {
                        duration: 2000,
                        easing: 'easeOutQuart'
                    }
                }
            });
        });
    </script>
}