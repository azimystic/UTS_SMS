@model SMS.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Enhanced Admin Dashboard";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
            <div>
                <h1 class="text-3xl md:text-4xl font-bold text-primary-800 mb-2">
                    @(Model.IsOwnerDashboard ? "Owner Dashboard" : "Admin Dashboard")
                </h1>
                <p class="text-neutral-600">Welcome back! Here's an overview of your school management system.</p>
            </div>
            
            @if (Model.IsOwnerDashboard && Model.Campuses.Any())
            {
                <div class="mt-4 md:mt-0">
                    <select id="campusSelector" class="px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400">
                        <option value="">All Campuses</option>
                        @foreach (var campus in Model.Campuses)
                        {
                            <option value="@campus.Id" selected="@(Model.SelectedCampusId == campus.Id)">@campus.Name</option>
                        }
                    </select>
                </div>
            }
        </div>

        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- Students Card -->
            <div class="bg-white rounded-2xl shadow-sms-lg p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-neutral-600">Total Students</h3>
                        <p class="text-2xl font-bold text-primary-800">@Model.TotalStudents</p>
                    </div>
                </div>
            </div>

            <!-- Teachers Card -->
            <div class="bg-white rounded-2xl shadow-sms-lg p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-success-light rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-neutral-600">Total Teachers</h3>
                        <p class="text-2xl font-bold text-primary-800">@Model.TotalTeachers</p>
                    </div>
                </div>
            </div>

            <!-- Employees Card -->
            <div class="bg-white rounded-2xl shadow-sms-lg p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-neutral-600">Total Staff</h3>
                        <p class="text-2xl font-bold text-primary-800">@Model.TotalEmployees</p>
                    </div>
                </div>
            </div>

            <!-- Revenue Card -->
            <div class="bg-white rounded-2xl shadow-sms-lg p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-warning-light rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-neutral-600">Monthly Revenue</h3>
                        <p class="text-2xl font-bold text-primary-800">@Model.FinancialSummary.MonthlyRevenueActual.ToString("C")</p>
                        <p class="text-xs text-neutral-500">@Model.FinancialSummary.RevenuePercentage% of expected</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity - Simplified for now -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
            <!-- Recent Students -->
            <div class="bg-white rounded-2xl shadow-sms-lg overflow-hidden">
                <div class="px-6 py-4 bg-gradient-primary text-white">
                    <h2 class="text-xl font-semibold">Recent Students</h2>
                    <p class="text-blue-200">Latest registrations</p>
                </div>
                <div class="divide-y divide-primary-100">
                    @foreach (var student in Model.RecentStudents)
                    {
                        <div class="px-6 py-4 transition-all duration-300 hover:bg-primary-50">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center mr-3">
                                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-medium text-primary-800">@student.StudentName</h3>
                                    <p class="text-sm text-neutral-600">Registered: @student.RegistrationDate.ToString("MMM dd, yyyy")</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="px-6 py-4 bg-neutral-50">
                    <a href="/Students" class="text-primary-600 hover:text-primary-800 font-medium flex items-center justify-center">
                        View All Students
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>

            <!-- Recent Employees -->
            <div class="bg-white rounded-2xl shadow-sms-lg overflow-hidden">
                <div class="px-6 py-4 bg-gradient-warm text-white">
                    <h2 class="text-xl font-semibold">Recent Employees</h2>
                    <p class="text-green-200">Latest joiners</p>
                </div>
                <div class="divide-y divide-primary-100">
                    @foreach (var employee in Model.RecentEmployees)
                    {
                        <div class="px-6 py-4 transition-all duration-300 hover:bg-success-light">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-success-light rounded-full flex items-center justify-center mr-3">
                                    <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-medium text-primary-800">@employee.FullName</h3>
                                    <p class="text-sm text-neutral-600">@employee.Role - Joined: @employee.JoiningDate.ToString("MMM dd, yyyy")</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="px-6 py-4 bg-neutral-50">
                    <a href="/Employees" class="text-success hover:text-success font-medium flex items-center justify-center">
                        View All Employees
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Campus Selector for Owner Dashboard
            @if (Model.IsOwnerDashboard)
            {
                <text>
                document.getElementById('campusSelector').addEventListener('change', function() {
                    const campusId = this.value;
                    const url = new URL(window.location.href);
                    if (campusId) {
                        url.searchParams.set('campusId', campusId);
                    } else {
                        url.searchParams.delete('campusId');
                    }
                    window.location.href = url.toString();
                });
                </text>
            }
        });
    </script>
}