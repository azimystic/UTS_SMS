@model UTS_SMS.Models.CertificateType

@{
    ViewData["Title"] = "Edit Certificate Type";
}

<div class="min-h-screen p-4 md:p-6">
    <div class="max-w-2xl mx-auto">
        <!-- Header -->
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-primary-800">Edit Certificate Type</h1>
            <p class="text-neutral-600 mt-2">Update certificate type details</p>
        </div>

        <!-- Form Card -->
        <div class="bg-white rounded-xl shadow-sms-md p-6">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-error mb-4"></div>
                
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CampusId" />
                <input type="hidden" asp-for="CreatedBy" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="IsActive" />
                
                <div class="mb-4">
                    <label asp-for="CertificateName" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                    <input asp-for="CertificateName" 
                           class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-transparent"
                           placeholder="e.g., Leaving Certificate, Character Certificate" />
                    <span asp-validation-for="CertificateName" class="text-error text-sm"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Price" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                    <input asp-for="Price" type="number" step="0.01" min="0"
                           class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-transparent"
                           placeholder="0.00" />
                    <span asp-validation-for="Price" class="text-error text-sm"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="ReportFileName" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                    <input asp-for="ReportFileName" 
                           class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-transparent"
                           placeholder="e.g., LeavingCertificate.docx" />
                    <span asp-validation-for="ReportFileName" class="text-error text-sm"></span>
                    <p class="text-xs text-neutral-500 mt-1">
                        <i class="fas fa-info-circle"></i> Enter the exact filename of the .docx template uploaded to wwwroot/reports folder
                    </p>
                </div>

                <div class="flex gap-3">
                    <button type="submit" class="bg-gradient-primary hover:shadow-sms-lg text-white px-6 py-2 rounded-lg transition-all duration-300 shadow-sms-md">
                        <i class="fas fa-save mr-2"></i> Update
                    </button>
                    <a asp-action="Index" class="bg-neutral-200 hover:bg-neutral-300 text-neutral-700 px-6 py-2 rounded-lg transition-colors">
                        <i class="fas fa-times mr-2"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
