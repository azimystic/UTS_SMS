@model SMS.Models.EmployeeRole

@{
    ViewData["Title"] = "Role Assignment Details";
    var isActive = Model.IsActive && !Model.ToDate.HasValue;
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-5xl mx-auto">
        
        <!-- Hero Section -->
        <div class="detail-hero">
            <div class="detail-hero-content">
                <!-- Avatar -->
                <div class="detail-avatar-large">
                    <div class="avatar-placeholder bg-gradient-to-r from-indigo-400 to-purple-500 text-white">
                        @(Model.Employee?.FullName?.Substring(0, Math.Min(2, Model.Employee.FullName.Length)).ToUpper() ?? "ER")
                    </div>
                </div>

                <!-- Hero Info -->
                <div class="detail-hero-info">
                    <h1 class="detail-hero-title">@Model.EmployeeRoleConfig?.RoleName</h1>
                    <p class="detail-hero-subtitle">@Model.Employee?.FullName</p>
                    
                    <div class="detail-hero-badges">
                        <span class="detail-hero-badge">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            @Model.EmployeeRoleConfig?.EmployeeType
                        </span>
                        <span class="detail-hero-badge">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                            @Model.Campus?.Name
                        </span>
                        @if (isActive)
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-success-light text-success">
                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                </svg>
                                Active
                            </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-neutral-100 text-neutral-600">
                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                </svg>
                                Ended
                            </span>
                        }
                    </div>
                </div>

                <!-- Hero Actions -->
                <div class="detail-hero-actions">
                    <a asp-controller="Employees" asp-action="Details" asp-route-id="@Model.EmployeeId" class="detail-hero-btn">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        View Employee
                    </a>
                    @if (isActive)
                    {
                        <form asp-action="EndRole" asp-route-id="@Model.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to end this role assignment?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="detail-hero-btn bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-600 hover:to-amber-700">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                                End Role
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>

        <!-- Details Content -->
        <div class="detail-info-grid">
            <!-- Role Information -->
            <div class="detail-info-card">
                <div class="detail-info-card-header">
                    <div class="detail-info-card-icon">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <h3 class="detail-info-card-title">Role Information</h3>
                </div>
                <div class="detail-info-row">
                    <span class="detail-info-label">Role Name</span>
                    <span class="detail-info-value highlight">@Model.EmployeeRoleConfig?.RoleName</span>
                </div>
                <div class="detail-info-row">
                    <span class="detail-info-label">Employee Type</span>
                    <span class="detail-info-value">@Model.EmployeeRoleConfig?.EmployeeType</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.EmployeeRoleConfig?.Description))
                {
                    <div class="detail-info-row">
                        <span class="detail-info-label">Description</span>
                        <span class="detail-info-value">@Model.EmployeeRoleConfig?.Description</span>
                    </div>
                }
                <div class="detail-info-row">
                    <span class="detail-info-label">Campus</span>
                    <span class="detail-info-value">@Model.Campus?.Name</span>
                </div>
            </div>

            <!-- Assignment Timeline -->
            <div class="detail-info-card">
                <div class="detail-info-card-header">
                    <div class="detail-info-card-icon">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <h3 class="detail-info-card-title">Assignment Timeline</h3>
                </div>
                <div class="detail-info-row">
                    <span class="detail-info-label">From Date</span>
                    <span class="detail-info-value">@Model.FromDate.ToString("MMMM dd, yyyy")</span>
                </div>
                <div class="detail-info-row">
                    <span class="detail-info-label">To Date</span>
                    <span class="detail-info-value">
                        @if (Model.ToDate.HasValue)
                        {
                            @Model.ToDate.Value.ToString("MMMM dd, yyyy")
                        }
                        else
                        {
                            <span class="text-success font-medium">Current (Active)</span>
                        }
                    </span>
                </div>
                <div class="detail-info-row">
                    <span class="detail-info-label">Duration</span>
                    <span class="detail-info-value">
                        @{
                            var endDate = Model.ToDate ?? DateTime.Now;
                            var duration = (endDate - Model.FromDate).TotalDays;
                            var years = (int)(duration / 365);
                            var months = (int)((duration % 365) / 30);
                            var days = (int)((duration % 365) % 30);
                            
                            var durationText = "";
                            if (years > 0) durationText += $"{years} year{(years > 1 ? "s" : "")} ";
                            if (months > 0) durationText += $"{months} month{(months > 1 ? "s" : "")} ";
                            if (days > 0 || string.IsNullOrEmpty(durationText)) durationText += $"{days} day{(days != 1 ? "s" : "")}";
                        }
                        @durationText.Trim()
                    </span>
                </div>
                <div class="detail-info-row">
                    <span class="detail-info-label">Status</span>
                    <span class="detail-info-value">
                        @if (isActive)
                        {
                            <span class="text-success font-semibold">Active</span>
                        }
                        else
                        {
                            <span class="text-neutral-600 font-semibold">Ended</span>
                        }
                    </span>
                </div>
            </div>

            <!-- Employee Information -->
            <div class="detail-info-card">
                <div class="detail-info-card-header">
                    <div class="detail-info-card-icon">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                    <h3 class="detail-info-card-title">Employee Information</h3>
                </div>
                <div class="detail-info-row">
                    <span class="detail-info-label">Full Name</span>
                    <span class="detail-info-value highlight">@Model.Employee?.FullName</span>
                </div>
                <div class="detail-info-row">
                    <span class="detail-info-label">Employee ID</span>
                    <span class="detail-info-value">@Model.EmployeeId</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.Employee?.PhoneNumber))
                {
                    <div class="detail-info-row">
                        <span class="detail-info-label">Phone Number</span>
                        <span class="detail-info-value">@Model.Employee.PhoneNumber</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Employee?.Role))
                {
                    <div class="detail-info-row">
                        <span class="detail-info-label">Current Role</span>
                        <span class="detail-info-value">@Model.Employee.Role</span>
                    </div>
                }
            </div>

            <!-- Record Information -->
            <div class="detail-info-card">
                <div class="detail-info-card-header">
                    <div class="detail-info-card-icon">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                    </div>
                    <h3 class="detail-info-card-title">Record Information</h3>
                </div>
                <div class="detail-info-row">
                    <span class="detail-info-label">Created At</span>
                    <span class="detail-info-value">@Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.CreatedBy))
                {
                    <div class="detail-info-row">
                        <span class="detail-info-label">Created By</span>
                        <span class="detail-info-value">@Model.CreatedBy</span>
                    </div>
                }
                @if (Model.UpdatedAt.HasValue)
                {
                    <div class="detail-info-row">
                        <span class="detail-info-label">Updated At</span>
                        <span class="detail-info-value">@Model.UpdatedAt.Value.ToString("MMMM dd, yyyy hh:mm tt")</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.UpdatedBy))
                {
                    <div class="detail-info-row">
                        <span class="detail-info-label">Updated By</span>
                        <span class="detail-info-value">@Model.UpdatedBy</span>
                    </div>
                }
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-8 flex justify-between items-center">
            <a asp-action="Index" class="sms-btn sms-btn-secondary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to List
            </a>
            <div class="flex space-x-3">
                <a asp-controller="Employees" asp-action="Details" asp-route-id="@Model.EmployeeId" class="sms-btn sms-btn-primary">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    View Employee
                </a>
                @if (isActive)
                {
                    <form asp-action="EndRole" asp-route-id="@Model.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to end this role assignment?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-600 hover:to-amber-700 text-white px-6 py-3 rounded-xl transition-all duration-300 shadow-sms-md hover:shadow-sms-lg inline-flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                            End Role
                        </button>
                    </form>
                }
            </div>
        </div>

    </div>
</div>
