<!-- Views/EmployeeAttendance/MyAttendance.cshtml -->
@model List<UTS_SMS.Models.EmployeeAttendance>
@{
    ViewData["Title"] = "My Attendance";
    var employeeName = ViewBag.EmployeeName as string;
    var currentYear = ViewBag.CurrentYear as int? ?? DateTime.Today.Year;
    var currentMonth = ViewBag.CurrentMonth as int? ?? DateTime.Today.Month;
    var monthName = ViewBag.MonthName as string;

    var firstDayOfMonth = new DateTime(currentYear, currentMonth, 1);
    var daysInMonth = DateTime.DaysInMonth(currentYear, currentMonth);
    var startDay = (int)firstDayOfMonth.DayOfWeek;
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-purple-100 p-4 md:p-6">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-primary-800 tracking-tight">📅 My Attendance</h1>
                <p class="text-neutral-600 mt-2 text-sm md:text-base">@employeeName | @monthName @currentYear</p>
            </div>
            <div class="flex space-x-3 mt-4 md:mt-0">
                <a asp-action="MarkMyAttendance"
                   class="bg-gradient-primary hover:bg-primary-700 text-white px-5 py-2.5 rounded-xl shadow-sms-md hover:shadow-sms-lg transition-all duration-300 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Mark My Attendance
                </a>
            </div>
        </div>

        <!-- Month Selection -->
        <div class="bg-white rounded-2xl shadow-sms-lg p-6 mb-8 border border-gray-100">
            <h2 class="text-lg md:text-xl font-semibold text-primary-800 mb-4">Select Month</h2>
            <form asp-action="MyAttendance" method="get" class="flex flex-col md:flex-row items-end space-y-4 md:space-y-0 md:space-x-4">
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Year</label>
                    <select name="year"
                            class="w-full md:w-44 px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300 bg-neutral-50">
                        @for (int y = DateTime.Today.Year - 1; y <= DateTime.Today.Year + 1; y++)
                        {
                            <option value="@y" selected="@(y == currentYear)">@y</option>
                        }
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Month</label>
                    <select name="month"
                            class="w-full md:w-44 px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300 bg-neutral-50">
                        @for (int m = 1; m <= 12; m++)
                        {
                            <option value="@m" selected="@(m == currentMonth)">@(new DateTime(2000, m, 1).ToString("MMMM"))</option>
                        }
                    </select>
                </div>
                <button type="submit"
                        class="bg-gradient-primary hover:bg-primary-700 text-white px-6 py-2.5 rounded-lg shadow-sms-md hover:shadow-sms-lg transition-all duration-300 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    Load Attendance
                </button>
            </form>
        </div>

        <!-- Stats Cards -->
        @{
            var presentCount = Model.Count(a => a.Status == "P");
            var absentCount = Model.Count(a => a.Status == "A");
            var leaveCount = Model.Count(a => a.Status == "L");
            var shortLeaveCount = Model.Count(a => a.Status == "S");
            var totalDays = daysInMonth;
            var attendanceRate = totalDays > 0 ? (presentCount + leaveCount + shortLeaveCount) * 100 / totalDays : 0;
        }

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 mb-8">
            <!-- Present -->
            <div class="bg-white rounded-2xl shadow-sms-md hover:shadow-sms-xl p-6 transform hover:-translate-y-1 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-success-light rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-neutral-600">Present</h3>
                        <p class="text-2xl font-bold text-primary-800">@presentCount</p>
                    </div>
                </div>
            </div>

            <!-- Absent -->
            <div class="bg-white rounded-2xl shadow-sms-md hover:shadow-sms-xl p-6 transform hover:-translate-y-1 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-error-light rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-error" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-neutral-600">Absent</h3>
                        <p class="text-2xl font-bold text-primary-800">@absentCount</p>
                    </div>
                </div>
            </div>

            <!-- Leave -->
            <div class="bg-white rounded-2xl shadow-sms-md hover:shadow-sms-xl p-6 transform hover:-translate-y-1 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-warning-light rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0114 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-neutral-600">Leave</h3>
                        <p class="text-2xl font-bold text-primary-800">@leaveCount</p>
                    </div>
                </div>
            </div>

            <!-- Attendance Rate -->
            <div class="bg-white rounded-2xl shadow-sms-md hover:shadow-sms-xl p-6 transform hover:-translate-y-1 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-neutral-600">Attendance Rate</h3>
                        <p class="text-2xl font-bold text-primary-800">@attendanceRate%</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Calendar View -->
        <div class="bg-white rounded-2xl shadow-sms-lg p-6 mb-8">
            <h2 class="text-lg md:text-xl font-semibold text-primary-800 mb-4">Calendar View</h2>
            <div class="grid grid-cols-7 gap-2 mb-4 text-sm md:text-base">
                @foreach (var day in new[] { "Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat" })
                {
                    <div class="text-center font-medium text-neutral-500 py-2 uppercase">@day</div>
                }

                @for (int i = 0; i < startDay; i++)
                {
                    <div class="h-16 bg-neutral-50 rounded-lg"></div>
                }

                @for (int day = 1; day <= daysInMonth; day++)
                {
                    var currentDate = new DateTime(currentYear, currentMonth, day);
                    var attendance = Model.FirstOrDefault(a => a.Date.Date == currentDate.Date);
                    var status = attendance?.Status;
                    var statusClass = "";

                    if (status == "P") statusClass = "bg-success-light text-success border-green-200";
                    else if (status == "A") statusClass = "bg-error-light text-error border-red-200";
                    else if (status == "L") statusClass = "bg-warning-light text-yellow-800 border-yellow-200";
                    else if (status == "S") statusClass = "bg-primary-100 text-primary-800 border-blue-200";
                    else statusClass = "bg-neutral-50 text-neutral-500 border-primary-100";

                    <div class="h-16 border rounded-lg p-2 flex flex-col items-center justify-center text-xs md:text-sm font-medium @statusClass">
                        <span>@day</span>
                        @if (attendance != null)
                        {
                            <span class="text-[10px] md:text-xs mt-1 text-neutral-700">
                                @if (attendance.TimeIn.HasValue)
                                {
                                    @attendance.TimeIn.Value.ToString("hh:mm tt")
                                }
                                @if (attendance.TimeOut.HasValue)
                                {
                                    <br />
                                    @attendance.TimeOut.Value.ToString("hh:mm tt")
                                }
                            </span>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Detailed List -->
        <div class="bg-white rounded-2xl shadow-sms-lg p-6">
            <h2 class="text-lg md:text-xl font-semibold text-primary-800 mb-4">Detailed Attendance</h2>
            <div class="overflow-x-auto rounded-xl border border-gray-100">
                <table class="w-full text-sm md:text-base">
                    <thead class="bg-neutral-50 text-neutral-700 uppercase tracking-wider">
                        <tr>
                            <th class="px-6 py-3 text-left font-medium">Date</th>
                            <th class="px-6 py-3 text-left font-medium">Day</th>
                            <th class="px-6 py-3 text-left font-medium">Status</th>
                            <th class="px-6 py-3 text-left font-medium">Time In</th>
                            <th class="px-6 py-3 text-left font-medium">Time Out</th>
                            <th class="px-6 py-3 text-left font-medium">Remarks</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-primary-100">
                        @for (int day = 1; day <= daysInMonth; day++)
                        {
                            var currentDate = new DateTime(currentYear, currentMonth, day);
                            var attendance = Model.FirstOrDefault(a => a.Date.Date == currentDate.Date);
                            var status = attendance?.Status ?? "A";

                            <tr class="hover:bg-neutral-50 transition-colors duration-200">
                                <td class="px-6 py-4 whitespace-nowrap text-primary-800">@currentDate.ToString("dd MMM yyyy")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-neutral-500">@currentDate.ToString("dddd")</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (status == "P")
                                    {
                                        <span class="px-2 py-1 text-xs font-semibold bg-success-light text-success rounded-full">Present</span>
                                    }
                                    else if (status == "A")
                                    {
                                        <span class="px-2 py-1 text-xs font-semibold bg-error-light text-error rounded-full">Absent</span>
                                    }
                                    else if (status == "L")
                                    {
                                        <span class="px-2 py-1 text-xs font-semibold bg-warning-light text-yellow-800 rounded-full">Leave</span>
                                    }
                                    else if (status == "S")
                                    {
                                        <span class="px-2 py-1 text-xs font-semibold bg-primary-100 text-primary-800 rounded-full">Short Leave</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-neutral-500">
                                    @if (attendance?.TimeIn.HasValue == true)
                                    {
                                        @attendance.TimeIn.Value.ToString("hh:mm tt")
                                    }
                                    else
                                    {
                                        <span class="text-neutral-400">-</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-neutral-500">
                                    @if (attendance?.TimeOut.HasValue == true)
                                    {
                                        @attendance.TimeOut.Value.ToString("hh:mm tt")
                                    }
                                    else
                                    {
                                        <span class="text-neutral-400">-</span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-neutral-500">@attendance?.Remarks</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
