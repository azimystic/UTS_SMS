@model List<UTS_SMS.Models.EmployeeDailySummaryViewModel>
@{
    ViewData["Title"] = "Daily Attendance Summary";
    var date = ViewBag.Date as DateTime? ?? DateTime.Today;
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-green-50 p-2 md:p-6">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 md:mb-8">
            <div>
                <h1 class="text-2xl md:text-3xl font-bold text-primary-800">📊 Daily Attendance Summary</h1>
                <p class="text-neutral-600 mt-1 md:mt-2 text-sm md:text-base">@date.ToString("dddd, MMMM dd, yyyy")</p>
            </div>
            <div class="flex space-x-2 md:space-x-3 mt-4 md:mt-0">
                <a asp-action="Index" asp-route-date="@date.ToString("yyyy-MM-dd")"
                   class="bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-2 md:px-4 md:py-2 rounded-xl transition-all duration-300 flex items-center text-sm md:text-base">
                    <svg class="w-4 h-4 md:w-5 md:h-5 mr-1 md:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Mark Attendance
                </a>
            </div>
        </div>

        <!-- Date Selection -->
        <div class="bg-white rounded-xl md:rounded-2xl shadow-sms-lg p-4 md:p-6 mb-6 md:mb-8">
            <h2 class="text-lg md:text-xl font-semibold text-primary-800 mb-3 md:mb-4">Select Date</h2>
            <form asp-action="DailySummary" method="get" class="flex flex-col md:flex-row items-start md:items-end space-y-3 md:space-y-0 md:space-x-4">
                <div class="flex-grow w-full md:w-auto">
                    <label class="block text-sm font-medium text-neutral-700 mb-1 md:mb-2">Date</label>
                    <input type="date" name="date" value="@date.ToString("yyyy-MM-dd")"
                           class="w-full px-3 py-2 md:px-4 md:py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300 text-sm md:text-base" />
                </div>
                <button type="submit" class="bg-gradient-primary hover:bg-primary-700 text-white px-4 py-2 md:px-6 md:py-2 rounded-lg transition-all duration-300 flex items-center w-full md:w-auto justify-center">
                    <svg class="w-4 h-4 md:w-5 md:h-5 mr-1 md:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    Load Summary
                </button>
            </form>
        </div>

        <!-- Overall Stats -->
        @{
            var totalPresent = Model.Sum(m => m.Present);
            var totalAbsent = Model.Sum(m => m.Absent);
            var totalLeave = Model.Sum(m => m.Leave);
            var totalLate = Model.Sum(m => m.Late);
            var totalShortLeave = Model.Sum(m => m.ShortLeave);
            var totalEmployees = Model.Sum(m => m.TotalEmployees);
            var present = totalPresent + totalLate + totalShortLeave;
            var overallAttendanceRate = totalEmployees > 0
            ? (int)Math.Round((double)(totalPresent + totalLate + totalShortLeave) / totalEmployees * 100)
            : 0;
        }

        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-6 mb-6 md:mb-8">
            <div class="bg-white rounded-xl md:rounded-2xl shadow-sms-lg p-4 md:p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-10 h-10 md:w-12 md:h-12 bg-success-light rounded-xl flex items-center justify-center mr-3 md:mr-4">
                        <svg class="w-5 h-5 md:w-6 md:h-6 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xs md:text-sm font-medium text-neutral-600">Total Employees</h3>
                        <p class="text-xl md:text-2xl font-bold text-primary-800">@totalEmployees</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl md:rounded-2xl shadow-sms-lg p-4 md:p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-10 h-10 md:w-12 md:h-12 bg-primary-100 rounded-xl flex items-center justify-center mr-3 md:mr-4">
                        <svg class="w-5 h-5 md:w-6 md:h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0114 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xs md:text-sm font-medium text-neutral-600">Present</h3>
                        <p class="text-xl md:text-2xl font-bold text-primary-800">@present</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl md:rounded-2xl shadow-sms-lg p-4 md:p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-10 h-10 md:w-12 md:h-12 bg-error-light rounded-xl flex items-center justify-center mr-3 md:mr-4">
                        <svg class="w-5 h-5 md:w-6 md:h-6 text-error" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14H5.236a2 2 0 01-1.789-2.894l3.5-7A2 2 0 018.736 3h4.018a2 2 0 01.485.06l3.76.94m-7 10v5a2 2 0 002 2h.096c.5 0 .905-.405.905-.904 0-.715.211-1.413.608-2.008L17 13V4m-7 10h2m5-10h2a2 2 0 012 2v6a2 2 0 01-2 2h-2.5"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xs md:text-sm font-medium text-neutral-600">Absent</h3>
                        <p class="text-xl md:text-2xl font-bold text-primary-800">@totalAbsent</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl md:rounded-2xl shadow-sms-lg p-4 md:p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-10 h-10 md:w-12 md:h-12 bg-purple-100 rounded-xl flex items-center justify-center mr-3 md:mr-4">
                        <svg class="w-5 h-5 md:w-6 md:h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xs md:text-sm font-medium text-neutral-600">Attendance Rate</h3>
                        <p class="text-xl md:text-2xl font-bold text-primary-800">@overallAttendanceRate%</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary by Role -->
        <div class="bg-white rounded-xl md:rounded-2xl shadow-sms-lg p-4 md:p-6 mb-6 md:mb-8">
            <h2 class="text-lg md:text-xl font-semibold text-primary-800 mb-3 md:mb-4">Summary by Role</h2>

            <!-- Mobile Card View -->
            <div class="md:hidden space-y-4">
                @foreach (var item in Model)
                {
                    <div class="bg-neutral-50 rounded-lg p-4 shadow-sm">
                        <h3 class="font-semibold text-primary-800 text-sm mb-3">@item.Role</h3>
                        <div class="grid grid-cols-2 gap-2">
                            <div class="text-center">
                                <p class="text-xs text-neutral-600">Present</p>
                                <p class="text-success font-bold">@item.Present</p>
                            </div>
                            <div class="text-center">
                                <p class="text-xs text-neutral-600">Late</p>
                                <p class="text-accent-600 font-bold">@item.Late</p>
                            </div>
                            <div class="text-center">
                                <p class="text-xs text-neutral-600">Absent</p>
                                <p class="text-error font-bold">@item.Absent</p>
                            </div>
                            <div class="text-center">
                                <p class="text-xs text-neutral-600">Leave</p>
                                <p class="text-accent-600 font-bold">@item.Leave</p>
                            </div>
                            <div class="text-center">
                                <p class="text-xs text-neutral-600">Short Leave</p>
                                <p class="text-primary-600 font-bold">@item.ShortLeave</p>
                            </div>
                            <div class="text-center">
                                <p class="text-xs text-neutral-600">Total</p>
                                <p class="text-primary-800 font-bold">@item.TotalEmployees</p>
                            </div>
                            <div class="text-center col-span-2">
                                <p class="text-xs text-neutral-600">Attendance %</p>
                                <span class="px-2 py-1 text-xs font-semibold bg-primary-100 text-primary-800 rounded-full">@item.AttendancePercentage%</span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Desktop Table View -->
            <div class="hidden md:block overflow-x-auto">
                <table class="w-full min-w-full">
                    <thead class="bg-neutral-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-sm font-medium text-neutral-700 uppercase tracking-wider">Role</th>
                            <th class="px-6 py-3 text-center text-sm font-medium text-neutral-700 uppercase tracking-wider">Present</th>
                            <th class="px-6 py-3 text-center text-sm font-medium text-neutral-700 uppercase tracking-wider">Late</th>
                            <th class="px-6 py-3 text-center text-sm font-medium text-neutral-700 uppercase tracking-wider">Absent</th>
                            <th class="px-6 py-3 text-center text-sm font-medium text-neutral-700 uppercase tracking-wider">Leave</th>
                            <th class="px-6 py-3 text-center text-sm font-medium text-neutral-700 uppercase tracking-wider">Short Leave</th>
                            <th class="px-6 py-3 text-center text-sm font-medium text-neutral-700 uppercase tracking-wider">Total</th>
                            <th class="px-6 py-3 text-center text-sm font-medium text-neutral-700 uppercase tracking-wider">%</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-primary-100">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-neutral-50 transition-colors duration-200">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-primary-800">@item.Role</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-success">@item.Present</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-accent-600">@item.Late</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-error">@item.Absent</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-accent-600">@item.Leave</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-primary-600">@item.ShortLeave</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-primary-800">@item.TotalEmployees</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-center">
                                    <span class="px-2 py-1 text-xs font-semibold bg-primary-100 text-primary-800 rounded-full">@item.AttendancePercentage%</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Charts -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
            <!-- Pie Chart -->
            <div class="bg-white rounded-xl md:rounded-2xl shadow-sms-lg p-4 md:p-6">
                <h2 class="text-lg md:text-xl font-semibold text-primary-800 mb-3 md:mb-4">Overall Distribution</h2>
                <div class="h-64 md:h-80">
                    <canvas id="attendancePieChart"></canvas>
                </div>
            </div>

            <!-- Bar Chart -->
            <div class="bg-white rounded-xl md:rounded-2xl shadow-sms-lg p-4 md:p-6">
                <h2 class="text-lg md:text-xl font-semibold text-primary-800 mb-3 md:mb-4">Attendance by Role</h2>
                <div class="h-64 md:h-80">
                    <canvas id="attendanceBarChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/chartjs/chart.min.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Pie Chart
            const pieCtx = document.getElementById('attendancePieChart').getContext('2d');
            const pieChart = new Chart(pieCtx, {
                type: 'pie',
                data: {
                    labels: ['Present', 'Absent', 'Leave', 'Short Leave','Late'],
                    datasets: [{
                        data: [@totalPresent, @totalAbsent, @totalLeave, @totalShortLeave, @totalLate],
                        backgroundColor: [
                            'rgba(16, 185, 129, 0.8)',
                            'rgba(239, 68, 68, 0.8)',
                            'rgba(245, 158, 11, 0.8)',
                            'rgba(59, 130, 246, 0.8)',
                            'rgba(285, 158, 11, 0.8)'
                        ],
                        borderColor: [
                            'rgba(16, 185, 129, 1)',
                            'rgba(239, 68, 68, 1)',
                            'rgba(245, 158, 11, 1)',
                            'rgba(59, 130, 246, 1)',
                            'rgba(285, 158, 11, 0.8)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                font: {
                                    size: window.innerWidth < 768 ? 10 : 12
                                }
                            }
                        }
                    }
                }
            });

            // Bar Chart
            const barCtx = document.getElementById('attendanceBarChart').getContext('2d');
            const barChart = new Chart(barCtx, {
                type: 'bar',
                data: {
                    labels: [@Html.Raw(string.Join(", ", Model.Select(m => $"'{m.Role}'")))],
                    datasets: [
                        {
                            label: 'Present',
                            data: [@string.Join(", ", Model.Select(m => m.Present + m.ShortLeave + m.Late))],
                            backgroundColor: 'rgba(16, 185, 129, 0.8)',
                            borderColor: 'rgba(16, 185, 129, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'Absent',
                            data: [@string.Join(", ", Model.Select(m => m.Absent))],
                            backgroundColor: 'rgba(239, 68, 68, 0.8)',
                            borderColor: 'rgba(239, 68, 68, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            stacked: true,
                            ticks: {
                                font: {
                                    size: window.innerWidth < 768 ? 10 : 12
                                }
                            }
                        },
                        y: {
                            stacked: true,
                            beginAtZero: true,
                            ticks: {
                                font: {
                                    size: window.innerWidth < 768 ? 10 : 12
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            labels: {
                                font: {
                                    size: window.innerWidth < 768 ? 10 : 12
                                }
                            }
                        }
                    }
                }
            });

            // Update chart font sizes on window resize
            window.addEventListener('resize', function() {
                pieChart.options.plugins.legend.labels.font.size = window.innerWidth < 768 ? 10 : 12;
                pieChart.update();

                barChart.options.scales.x.ticks.font.size = window.innerWidth < 768 ? 10 : 12;
                barChart.options.scales.y.ticks.font.size = window.innerWidth < 768 ? 10 : 12;
                barChart.options.plugins.legend.labels.font.size = window.innerWidth < 768 ? 10 : 12;
                barChart.update();
            });
        });
    </script>
}