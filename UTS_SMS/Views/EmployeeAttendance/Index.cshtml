@using UTS_SMS.Models
<!-- Views/EmployeeAttendance/Index.cshtml -->
@model List<UTS_SMS.Models.EmployeeAttendanceViewModel>
@{
    ViewData["Title"] = "Mark Employee Attendance";
    var today = ViewBag.Today as DateTime? ?? DateTime.Today;
    var selectedDate = ViewBag.Date as DateTime? ?? DateTime.Today;
    var roles = ViewBag.Roles as List<string>;
    var roleFilter = ViewBag.RoleFilter as string;
    var searchString = ViewBag.SearchString as string;
    // Add these campus-related variables
    var campuses = ViewBag.Campuses as List<Campus> ?? new List<Campus>();
    var campusFilter = ViewBag.CampusFilter as int?;
    var userCampusId = ViewBag.UserCampusId as int?;
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-primary-800">👥 Employee Attendance</h1>
                <p class="text-neutral-600 mt-2">@selectedDate.ToString("dddd, MMMM dd, yyyy")</p>
            </div>
            <div class="flex space-x-3 mt-4 md:mt-0">
                <a asp-action="DailySummary" asp-route-date="@selectedDate.ToString("yyyy-MM-dd")"
                   class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-xl transition-all duration-300 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                    View Summary
                </a>
            </div>
        </div>

        <!-- Filters -->
        <!-- Filters -->
        <div class="bg-white rounded-2xl shadow-sms-lg p-6 mb-8">
            <h2 class="text-xl font-semibold text-primary-800 mb-4">Filters</h2>
            <form asp-action="Index" method="get" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-5 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-2">Date</label>
                        <input type="date" name="date" value="@selectedDate.ToString("yyyy-MM-dd")"
                               class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-2">Campus</label>
                        <select name="campusFilter"
                                class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300"
                                @(ViewBag.UserCampusId != null ? "disabled" : "")>
                            @if (ViewBag.UserCampusId == null)
                            {
                                <option value="">All Campuses</option>
                            }
                            @foreach (var campus in ViewBag.Campuses as List<Campus>)
                            {
                                <option value="@campus.Id" selected="@(ViewBag.CampusFilter != null && ViewBag.CampusFilter == campus.Id)">
                                    @campus.Name
                                </option>
                            }
                        </select>
                        @if (ViewBag.UserCampusId != null)
                        {
                            <input type="hidden" name="campusFilter" value="@ViewBag.CampusFilter" />
                        }
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-2">Role</label>
                        <select name="roleFilter"
                                class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300">
                            <option value="">All Roles</option>
                            @foreach (var role in roles)
                            {
                                <option value="@role" selected="@(role == roleFilter)">@role</option>
                            }
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-neutral-700 mb-2">Search</label>
                        <input type="text" name="searchString" value="@searchString"
                               placeholder="Name, CNIC, or Phone"
                               class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" />
                    </div>

                    <div class="flex items-end">
                        <button type="submit" class="bg-gradient-primary hover:bg-primary-700 text-white px-6 py-2 rounded-lg transition-all duration-300 flex items-center w-full justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                            Apply Filters
                        </button>
                    </div>
                </div>
            </form>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-success-light border-l-4 border-success text-success p-4 mb-6 rounded-xl animate-fade-in">
                <div class="flex items-center">
                    <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    @TempData["SuccessMessage"]
                </div>
            </div>
        }

        <!-- Attendance Form -->
        <form asp-action="Save" method="post" class="bg-white rounded-2xl shadow-sms-xl overflow-hidden mb-8">
            @Html.AntiForgeryToken()
            <input type="hidden" name="date" value="@selectedDate.ToString("yyyy-MM-dd")" />

            <!-- Header -->
            <div class="bg-gradient-primary px-6 py-4 text-white">
                <h2 class="text-xl font-semibold">Employee Attendance</h2>
                <p class="text-blue-100">Mark attendance for @selectedDate.ToString("dddd, MMMM dd, yyyy")</p>
                <p class="text-blue-100">Total Employees: @Model.Count</p>
                @if (selectedDate.Date != today.Date)
                {
                    <p class="text-blue-200 text-sm mt-1">⚠️ Editing attendance for a past date</p>
                }
            </div>

            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-neutral-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-medium text-neutral-700 uppercase tracking-wider">Employee</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-neutral-700 uppercase tracking-wider">Role</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-neutral-700 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-neutral-700 uppercase tracking-wider">Time In/Out</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-primary-100">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr class="transition-all duration-300 hover:bg-primary-50 group">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <input type="hidden" asp-for="@Model[i].EmployeeId" />
                                        <div class="w-10 h-10 bg-gradient-to-r from-purple-400 to-blue-500 rounded-full flex items-center justify-center text-white font-semibold text-sm mr-3">
                                            @(Model[i].EmployeeName.Split(' ').Select(n => n[0]).Take(2).Aggregate("", (a, b) => a + b))
                                        </div>
                                        <div>
                                            <div class="text-sm font-medium text-primary-800">@Model[i].EmployeeName</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 py-1 text-xs font-semibold bg-neutral-100 text-primary-800 rounded-full">@Model[i].Role</span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex space-x-2">
                                        <!-- Present Button -->
                                        <label class="attendance-btn present @(Model[i].Status == "P" ? "active" : "")">
                                            <input type="radio" asp-for="@Model[i].Status" value="P" class="hidden" />
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0114 0z"></path>
                                            </svg>
                                            <span>Present</span>
                                        </label>

                                        <!-- Absent Button -->
                                        <label class="attendance-btn absent @(Model[i].Status == "A" ? "active" : "")">
                                            <input type="radio" asp-for="@Model[i].Status" value="A" class="hidden" />
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                            </svg>
                                            <span>Absent</span>
                                        </label>

                                        <!-- Leave Button -->
                                        <label class="attendance-btn leave @(Model[i].Status == "L" ? "active" : "")">
                                            <input type="radio" asp-for="@Model[i].Status" value="L" class="hidden" />
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0114 0z"></path>
                                            </svg>
                                            <span>Leave</span>
                                        </label>
                                        @if (Model[i].HasAttendanceRecord)
                                        {
                                            <!-- Short Leave Button -->
                                            <label class="attendance-btn shortleave @(Model[i].Status == "S" ? "active" : "")">
                                                <input type="radio" asp-for="@Model[i].Status" value="S" class="hidden" />
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                          d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                                <span>Short Leave</span>
                                            </label>

                                            <!-- Late Button -->
                                            <label class="attendance-btn late @(Model[i].Status == "T" ? "active" : "")">
                                                <input type="radio" asp-for="@Model[i].Status" value="T" class="hidden" />
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                          d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                                <span>Late</span>
                                            </label>
                                        }

                                        
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-neutral-500">
                                    @if (Model[i].TimeIn.HasValue)
                                    {
                                        <div>In: @Model[i].TimeIn.Value.ToString("hh:mm tt")</div>
                                    }
                                    @if (Model[i].TimeOut.HasValue)
                                    {
                                        <div>Out: @Model[i].TimeOut.Value.ToString("hh:mm tt")</div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer -->
            <div class="px-6 py-4 bg-neutral-50 border-t border-primary-100 flex justify-between items-center">
                <div class="text-sm text-neutral-600">
                    Total Employees: <span class="font-semibold">@Model.Count</span> |
                    Present: <span class="font-semibold text-success">@Model.Count(s => s.Status == "P")</span> |
                    Late: <span class="font-semibold text-primary-600">@Model.Count(s => s.Status == "T")</span> |
                    Absent: <span class="font-semibold text-error">@Model.Count(s => s.Status == "A")</span> |
                    Leave: <span class="font-semibold text-accent-600">@Model.Count(s => s.Status == "L")</span> |
                    Short Leave: <span class="font-semibold text-primary-600">@Model.Count(s => s.Status == "S")</span>
                </div>
                <button type="submit" class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-medium py-3 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-sms-lg flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Save Attendance
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Attendance button interactions
            const attendanceButtons = document.querySelectorAll('.attendance-btn');
            attendanceButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    const row = this.closest('tr');
                    row.classList.add('bg-primary-50');
                    setTimeout(() => row.classList.remove('bg-primary-50'), 300);

                    // Update active state
                    const group = this.closest('.flex.space-x-2');
                    group.querySelectorAll('.attendance-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');

                    // Trigger the radio button
                    const radio = this.querySelector('input[type="radio"]');
                    radio.checked = true;
                });
            });
        });
    </script>

    <style>
        .animate-fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }

        .attendance-btn {
            display: inline-flex;
            align-items: center;
            padding: 0.4rem 0.8rem;
            border: 2px solid #e5e7eb;
            border-radius: 0.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.75rem;
            font-weight: 500;
        }

            .attendance-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }
            /* Keep each status color */
            .attendance-btn.present {
                color: #059669;
                border-color: #059669;
            }

            .attendance-btn.absent {
                color: #dc2626;
                border-color: #dc2626;
            }

            .attendance-btn.leave {
                color: #d97706;
                border-color: #d97706;
            }

            .attendance-btn.shortleave {
                color: #2563eb;
                border-color: #2563eb;
            }

            .attendance-btn.late {
                color: #9333ea;
                border-color: #9333ea;
            }

            /* ACTIVE state: fill background, text white */
            .attendance-btn.present.active {
                background-color: #059669;
                color: #fff;
            }

            .attendance-btn.absent.active {
                background-color: #dc2626;
                color: #fff;
            }

            .attendance-btn.leave.active {
                background-color: #d97706;
                color: #fff;
            }

            .attendance-btn.shortleave.active {
                background-color: #2563eb;
                color: #fff;
            }

            .attendance-btn.late.active {
                background-color: #9333ea;
                color: #fff;
            }

            /* Make SVG white when active */
            .attendance-btn.active svg {
                stroke: #fff;
            }
            .attendance-btn svg {
                margin-right: 0.3rem;
                width: 1rem;
                height: 1rem;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}
