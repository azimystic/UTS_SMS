@using UTS_SMS.Models
@model UTS_SMS.Models.SalaryDefinition

@{
    ViewData["Title"] = "Edit Salary Definition";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">✏️ Edit Salary for @Model.Employee?.FullName</h1>
            <p class="text-neutral-600 mt-2">Update salary components and effective dates</p>
        </div>

        <!-- Form -->
        <div class="bg-white rounded-2xl shadow-sms-xl p-6">
            <form asp-action="Edit" class="space-y-6">
                <input type="hidden" asp-for="Id" />
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="bg-error-light border-l-4 border-error text-error p-4 rounded-lg"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                   
                    <!-- Basic Salary -->
                    <div>
                        <label asp-for="BasicSalary" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="BasicSalary" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" placeholder="0.00" />
                        <span asp-validation-for="BasicSalary" class="text-error text-sm"></span>
                    </div>

                    <!-- Allowances -->
                    <div>
                        <label asp-for="HouseRentAllowance" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="HouseRentAllowance" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" />
                        <span asp-validation-for="HouseRentAllowance" class="text-error text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="MedicalAllowance" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="MedicalAllowance" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" />
                        <span asp-validation-for="MedicalAllowance" class="text-error text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="TransportationAllowance" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="TransportationAllowance" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" />
                        <span asp-validation-for="TransportationAllowance" class="text-error text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="OtherAllowances" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="OtherAllowances" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" />
                        <span asp-validation-for="OtherAllowances" class="text-error text-sm"></span>
                    </div>

                    <!-- Deductions -->
                    <div>
                        <label asp-for="ProvidentFund" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="ProvidentFund" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" />
                        <span asp-validation-for="ProvidentFund" class="text-error text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="TaxDeduction" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="TaxDeduction" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" />
                        <span asp-validation-for="TaxDeduction" class="text-error text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="OtherDeductions" class="block text-sm font-medium text-neutral-700 mb-2"></label>
                        <input asp-for="OtherDeductions" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" />
                        <span asp-validation-for="OtherDeductions" class="text-error text-sm"></span>
                    </div>
                </div>

                <div class="flex space-x-4 pt-6">
                    <button type="submit" class="bg-gradient-to-r from-indigo-500 to-blue-600 hover:from-indigo-600 hover:to-blue-700 text-white font-medium py-3 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-sms-lg flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Save Changes
                    </button>
                    <a asp-action="Index" class="bg-neutral-100 hover:bg-primary-100 text-primary-800 font-medium py-3 px-8 rounded-xl transition-all duration-300 flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
