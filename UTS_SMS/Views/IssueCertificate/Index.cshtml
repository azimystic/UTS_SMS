@model IEnumerable<CertificateRequest>

@{
    ViewData["Title"] = "Issue Certificate";
}

<div class="min-h-screen p-4 md:p-6">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
            <div>
                <h1 class="text-3xl font-bold text-primary-800">Certificate Requests</h1>
                <p class="text-neutral-600 mt-2">Manage and print student certificates</p>
            </div>
            <div class="flex gap-2 mt-4 md:mt-0">
                <a asp-action="Create" class="bg-gradient-primary hover:shadow-sms-lg text-white px-4 py-2 rounded-lg transition-all duration-300 flex items-center shadow-sms-md">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Issue New Certificate
                </a>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-success-light border-l-4 border-success text-success p-4 mb-6 rounded-lg animate-fade-in">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-error-light border-l-4 border-error text-error p-4 mb-6 rounded-lg animate-fade-in">
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Filters -->
        <form asp-action="Index" method="get" class="bg-white p-4 rounded-xl shadow-sms-md mb-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Search</label>
                    <input type="text" name="searchString" value="@ViewData["SearchString"]" 
                           placeholder="Name, Roll No, CNIC..."
                           class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-2">Certificate Type</label>
                    <select name="certificateFilter" class="w-full px-4 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400">
                        <option value="">All Certificates</option>
                        @foreach (var cert in ViewBag.CertificateTypes as IEnumerable<CertificateType>)
                        {
                            <option value="@cert.Id" selected="@(ViewData["CertificateFilter"]?.ToString() == cert.Id.ToString())">@cert.CertificateName</option>
                        }
                    </select>
                </div>
                <div class="flex items-end">
                    <button type="submit" class="w-full bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-lg transition-colors">
                        <i class="fas fa-search mr-2"></i> Search
                    </button>
                </div>
            </div>
        </form>

        <!-- Certificates Table -->
        <div class="bg-white rounded-xl shadow-sms-md overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-neutral-200">
                    <thead class="bg-gradient-primary text-white">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Student Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Roll Number</th>
                            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Class</th>
                            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Certificate Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-neutral-200">
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                var isPaid = item.GeneratedFine?.IsPaid ?? false;
                                <tr class="hover:bg-primary-50 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-neutral-900">@item.Student.StudentName</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-neutral-600">@item.Student.RollNumber</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-neutral-600">
                                            @if (item.Student.ClassObj != null)
                                            {
                                                <span>@item.Student.ClassObj.Name</span>
                                                @if (item.Student.SectionObj != null)
                                                {
                                                    <span> - @item.Student.SectionObj.Name</span>
                                                }
                                            }
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-neutral-900">@item.CertificateType.CertificateName</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-neutral-600">@item.IssueDate.ToString("dd-MM-yyyy")</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @if (isPaid)
                                        {
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-success-light text-success">
                                                Paid
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-error-light text-error">
                                                Unpaid
                                            </span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <div class="flex justify-end gap-2">
                                            @if (isPaid)
                                            {
                                                <button onclick="printCertificate(@item.Id, false)" 
                                                        class="bg-success hover:bg-green-700 text-white px-3 py-1 rounded transition-colors">
                                                    <i class="fas fa-print"></i> Print
                                                </button>
                                            }
                                            else
                                            {
                                                <button onclick="showPaymentWarning(@item.Id)" 
                                                        class="bg-neutral-400 text-white px-3 py-1 rounded cursor-not-allowed">
                                                    <i class="fas fa-print"></i> Print
                                                </button>
                                                <button onclick="forcePrintCertificate(@item.Id)" 
                                                        class="bg-warning hover:bg-yellow-600 text-white px-3 py-1 rounded transition-colors text-xs">
                                                    <i class="fas fa-exclamation-triangle"></i> Force Print
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="px-6 py-4 text-center text-neutral-500">
                                    No certificate requests found. Click "Issue New Certificate" to create one.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function showPaymentWarning(id) {
        Swal.fire({
            icon: 'error',
            title: 'Fee Not Paid',
            text: 'The certificate fee has not been paid. Please collect the fee before printing.',
            confirmButtonText: 'OK',
            confirmButtonColor: '#EF4444'
        });
    }

    function forcePrintCertificate(id) {
        Swal.fire({
            icon: 'warning',
            title: 'Fee is Unpaid',
            text: 'The certificate fee has not been paid. Do you want to force print?',
            showCancelButton: true,
            confirmButtonText: 'Yes, Force Print',
            cancelButtonText: 'Cancel',
            confirmButtonColor: '#F59E0B',
            cancelButtonColor: '#6B7280'
        }).then((result) => {
            if (result.isConfirmed) {
                printCertificate(id, true);
            }
        });
    }

    function printCertificate(id, forcePrint) {
        // Show loading
        Swal.fire({
            title: 'Generating Certificate...',
            text: 'Please wait while we generate your certificate',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

        // Create form and submit
        var form = document.createElement('form');
        form.method = 'POST';
        form.action = '@Url.Action("Print", "IssueCertificate")';
        
        var idInput = document.createElement('input');
        idInput.type = 'hidden';
        idInput.name = 'id';
        idInput.value = id;
        form.appendChild(idInput);
        
        if (forcePrint) {
            var forceInput = document.createElement('input');
            forceInput.type = 'hidden';
            forceInput.name = 'forcePrint';
            forceInput.value = 'true';
            form.appendChild(forceInput);
        }
        
        var token = document.querySelector('input[name="__RequestVerificationToken"]');
        if (token) {
            var tokenInput = document.createElement('input');
            tokenInput.type = 'hidden';
            tokenInput.name = '__RequestVerificationToken';
            tokenInput.value = token.value;
            form.appendChild(tokenInput);
        }
        
        document.body.appendChild(form);
        
        // Use fetch to handle the response
        fetch(form.action, {
            method: 'POST',
            body: new FormData(form)
        })
        .then(response => {
            if (response.ok && response.headers.get('content-type').includes('application/pdf')) {
                return response.blob().then(blob => {
                    Swal.close();
                    // Create download link
                    var url = window.URL.createObjectURL(blob);
                    var a = document.createElement('a');
                    a.href = url;
                    a.download = 'certificate.pdf';
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);
                    
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: 'Certificate generated successfully!',
                        confirmButtonColor: '#10B981'
                    });
                });
            } else {
                return response.json();
            }
        })
        .then(data => {
            if (data && !data.success) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.message || 'Failed to generate certificate',
                    confirmButtonColor: '#EF4444'
                });
            }
        })
        .catch(error => {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'An error occurred while generating the certificate',
                confirmButtonColor: '#EF4444'
            });
        })
        .finally(() => {
            document.body.removeChild(form);
        });
    }
</script>
}
