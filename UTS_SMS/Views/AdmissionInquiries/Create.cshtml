@model UTS_SMS.Models.AdmissionInquiry

@{
    ViewData["Title"] = "Create Admission Inquiry";
}

<div class="min-h-screen  p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
            <div>
                <h1 class="text-2xl font-bold text-primary-800">  New Admission Inquiry</h1>
                <p class="text-neutral-600 mt-1">Create a new admission inquiry record</p>
            </div>
            <a asp-action="Index" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-xl transition-all duration-300 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to List
            </a>
        </div>

        <!-- Form -->
        <div class="bg-white rounded-2xl shadow-sms-lg p-6">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <!-- Student Information -->
                <div class="mb-6">
                    <h3 class="text-lg font-semibold text-primary-800 mb-4">Student Information</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="StudentName" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                            <input asp-for="StudentName" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" />
                            <span asp-validation-for="StudentName" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="FatherName" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                            <input asp-for="FatherName" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" />
                            <span asp-validation-for="FatherName" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="mb-6">
                    <h3 class="text-lg font-semibold text-primary-800 mb-4">Contact Information</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="PhoneNumber" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                            <input asp-for="PhoneNumber" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" />
                            <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="Email" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                            <input asp-for="Email" type="email" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" />
                            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                </div>

                <!-- Academic Information -->
                <div class="mb-6">
                    <h3 class="text-lg font-semibold text-primary-800 mb-4">Academic Information</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="ClassInterestedId" class="block text-sm font-medium text-neutral-700 mb-1">Class Interested</label>
                            <select asp-for="ClassInterestedId" asp-items="ViewBag.ClassInterestedId" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400">
                                <option value="">Select Class</option>
                            </select>
                            <span asp-validation-for="ClassInterestedId" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="CampusId" class="block text-sm font-medium text-neutral-700 mb-1">Campus</label>
                            <select asp-for="CampusId" asp-items="ViewBag.CampusId" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400">
                                <option value="">Select Campus</option>
                            </select>
                            <span asp-validation-for="CampusId" class="text-red-500 text-sm"></span>
                        </div>
                        <div class="md:col-span-2">
                            <label asp-for="PreviousSchool" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                            <input asp-for="PreviousSchool" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" />
                            <span asp-validation-for="PreviousSchool" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                </div>

                <!-- Inquiry Details -->
                <div class="mb-6">
                    <h3 class="text-lg font-semibold text-primary-800 mb-4">Inquiry Details</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="InquiryStatus" class="block text-sm font-medium text-neutral-700 mb-1">Status</label>
                            <select asp-for="InquiryStatus" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400">
                                @foreach (var status in ViewBag.StatusOptions)
                                {
                                    <option value="@status">@status</option>
                                }
                            </select>
                            <span asp-validation-for="InquiryStatus" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="Source" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                            <select asp-for="Source" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400">
                                <option value="">Select Source</option>
                                @foreach (var source in ViewBag.SourceOptions)
                                {
                                    <option value="@source">@source</option>
                                }
                            </select>
                            <span asp-validation-for="Source" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="VisitDate" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                            <input asp-for="VisitDate" type="date" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" />
                            <span asp-validation-for="VisitDate" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label class="flex items-center text-sm font-medium text-neutral-700 mb-1">
                                <input asp-for="FollowUpRequired" type="checkbox" class="mr-2 h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded" id="followUpRequiredCheckbox" />
                                Follow-up Required
                            </label>
                        </div>
                        <div id="followUpDateContainer" style="display: none;">
                            <label asp-for="FollowUpDate" class="block text-sm font-medium text-neutral-700 mb-1">Follow-up Date</label>
                            <input asp-for="FollowUpDate" type="date" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" id="followUpDateInput" />
                            <span asp-validation-for="FollowUpDate" class="text-red-500 text-sm"></span>
                        </div>
                        <div class="md:col-span-2">
                            <label asp-for="Remarks" class="block text-sm font-medium text-neutral-700 mb-1"></label>
                            <textarea asp-for="Remarks" rows="3" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400"></textarea>
                            <span asp-validation-for="Remarks" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                </div>

                <!-- Submit Buttons -->
                <div class="flex justify-end space-x-3">
                    <a asp-action="Index" class="bg-gray-400 hover:bg-neutral-500 text-white px-6 py-2 rounded-md transition-all duration-300">
                        Cancel
                    </a>
                    <button type="submit" class="bg-gradient-primary hover:bg-primary-700 text-white px-6 py-2 rounded-md transition-all duration-300">
                        Create Inquiry
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const followUpCheckbox = document.getElementById('followUpRequiredCheckbox');
            const followUpDateContainer = document.getElementById('followUpDateContainer');
            const followUpDateInput = document.getElementById('followUpDateInput');
            
            function toggleFollowUpDate() {
                if (followUpCheckbox.checked) {
                    followUpDateContainer.style.display = 'block';
                    followUpDateInput.required = true;
                } else {
                    followUpDateContainer.style.display = 'none';
                    followUpDateInput.required = false;
                    followUpDateInput.value = '';
                }
            }
            
            // Check initial state
            toggleFollowUpDate();
            
            // Add event listener
            followUpCheckbox.addEventListener('change', toggleFollowUpDate);
        });
    </script>
}