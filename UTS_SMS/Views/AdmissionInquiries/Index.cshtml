@model IEnumerable<UTS_SMS.Models.AdmissionInquiry>

@{
    ViewData["Title"] = "Admission Inquiries";
}

<!-- Hidden antiforgery token for AJAX requests -->
@Html.AntiForgeryToken()

<div class="min-h-screen  p-4 md:p-6">
    <div class="  mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
            <div>
                <h1 class="text-2xl font-bold text-primary-800">  Admission Inquiries</h1>
                <p class="text-neutral-600 mt-1">Manage student admission inquiries</p>
            </div>
            <a asp-action="Create" class="bg-gradient-primary hover:bg-primary-700 text-white px-4 py-2 rounded-xl transition-all duration-300 flex items-center mt-4 md:mt-0">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                New Inquiry
            </a>
        </div>

        <!-- Filters -->
        <div class="bg-white rounded-2xl shadow-sms-lg p-6 mb-6">
            <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-1">Search</label>
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                           placeholder="Name, phone, email..." 
                           class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-1">Status</label>
                    <select name="statusFilter" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400">
                        <option value="">All Statuses</option>
                        @foreach (var status in ViewBag.StatusOptions)
                        {
                            <option value="@status" selected="@(ViewData["StatusFilter"]?.ToString() == status)">@status</option>
                        }
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-neutral-700 mb-1">Class</label>
                    <select name="classFilter" class="w-full px-3 py-2 border border-primary-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400">
                        <option value="">All Classes</option>
                        @foreach (var classItem in ViewBag.ClassOptions)
                        {
                            <option value="@classItem.Id" selected="@(ViewData["ClassFilter"]?.ToString() == classItem.Id.ToString())">@classItem.Name</option>
                        }
                    </select>
                </div>
                <div class="flex items-end">
                    <button type="submit" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md transition-all duration-300 mr-2">
                        Filter
                    </button>
                    <a asp-action="Index" class="bg-gray-400 hover:bg-neutral-500 text-white px-4 py-2 rounded-md transition-all duration-300">
                        Clear
                    </a>
                </div>
            </form>
        </div>

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-success-light border border-green-400 text-success px-4 py-3 rounded-xl mb-6" role="alert">
                <span class="block sm:inline">@TempData["SuccessMessage"]</span>
            </div>
        }

        <!-- Inquiries Table -->
        <div class="bg-white rounded-2xl shadow-sms-lg overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-primary-100">
                    <thead class="bg-neutral-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Student</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Contact</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Class</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Follow-up</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Source</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-primary-100">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-neutral-50 transition-colors duration-200">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div>
                                        <div class="text-sm font-medium text-primary-800">@item.StudentName</div>
                                        <div class="text-sm text-neutral-500">Father: @item.FatherName</div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-primary-800">@item.PhoneNumber</div>
                                    @if (!string.IsNullOrEmpty(item.Email))
                                    {
                                        <div class="text-sm text-neutral-500">@item.Email</div>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-primary-800">
                                    @item.ClassInterested?.Name
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @{
                                        var statusClass = item.InquiryStatus switch
                                        {
                                            "New" => "bg-primary-100 text-primary-800",
                                            "Contacted" => "bg-warning-light text-yellow-800",
                                            "Visited" => "bg-purple-100 text-purple-800",
                                            "Enrolled" => "bg-success-light text-success",
                                            "Rejected" => "bg-error-light text-error",
                                            _ => "bg-neutral-100 text-primary-800"
                                        };
                                    }
                                    <div class="dropdown">
                                        <button class="px-2 py-1 text-xs font-semibold rounded-full @statusClass cursor-pointer hover:opacity-80 transition-opacity" 
                                                type="button" 
                                                id="statusDropdown@(item.Id)" 
                                                data-bs-toggle="dropdown" 
                                                aria-expanded="false">
                                            @item.InquiryStatus
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="statusDropdown@(item.Id)">
                                            @foreach (var status in ViewBag.StatusOptions)
                                            {
                                                <li>
                                                    <a class="dropdown-item status-change-link" 
                                                       href="#" 
                                                       data-inquiry-id="@item.Id" 
                                                       data-status="@status">
                                                        @status
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (item.FollowUpRequired)
                                    {
                                        <div class="text-sm">
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                âœ“ Required
                                            </span>
                                            @if (item.FollowUpDate.HasValue)
                                            {
                                                <div class="text-xs text-neutral-500 mt-1">@item.FollowUpDate.Value.ToString("MMM dd")</div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-xs text-neutral-400">No</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-primary-800">
                                    @(item.Source ?? "N/A")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-primary-800">
                                    @item.InquiryDate.ToString("MMM dd, yyyy")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                  
                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                       class="text-success hover:text-success transition-colors">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-12">
                    <svg class="w-16 h-16 text-neutral-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    <h3 class="text-lg font-medium text-primary-800 mb-2">No inquiries found</h3>
                    <p class="text-neutral-500">Start by creating a new admission inquiry.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const statusChangeLinks = document.querySelectorAll('.status-change-link');
            
            statusChangeLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const inquiryId = this.getAttribute('data-inquiry-id');
                    const newStatus = this.getAttribute('data-status');
                    
                    // Get CSRF token from meta tag or form
                    const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                    
                    // Create form data for antiforgery token
                    const formData = new FormData();
                    formData.append('id', inquiryId);
                    formData.append('status', newStatus);
                    if (token) {
                        formData.append('__RequestVerificationToken', token);
                    }
                    
                    // Send AJAX request to update status
                    fetch('/AdmissionInquiries/UpdateStatus', {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': token || ''
                        },
                        body: formData
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        if (data.success) {
                            // Reload the page to show updated status
                            location.reload();
                        } else {
                            alert('Failed to update status: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('An error occurred while updating the status.');
                    });
                });
            });
        });
    </script>
}