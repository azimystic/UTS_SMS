@using UTS_SMS.Models
@model UTS_SMS.Models.Class

@{
    ViewData["Title"] = "Class Details";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">📚 Class Details</h1>
            <p class="text-neutral-600 mt-2">View academic class information</p>
        </div>

        <!-- Details Card -->
        <div class="bg-white rounded-2xl shadow-sms-xl overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-primary px-6 py-4 text-white">
                <h2 class="text-xl font-semibold">Class Information</h2>
                <p class="text-blue-100">ID: @Model.Id</p>
            </div>

            <!-- Content -->
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Class Info -->
                    <div class="bg-primary-50 rounded-xl p-4">
                        <h3 class="text-sm font-medium text-primary-800 uppercase tracking-wider mb-3">Class</h3>
                        <div class="flex items-center">
                            <div class="w-12 h-12 bg-gradient-to-r from-green-400 to-teal-500 rounded-full flex items-center justify-center text-white font-semibold text-lg mr-3">
                                @Model.GradeLevel
                            </div>
                            <div>
                                <div class="text-lg font-semibold text-primary-800">@Model.Name</div>
                            </div>
                        </div>
                    </div>

                    <!-- Grade & Campus -->
                    <div class="bg-success-light rounded-xl p-4">
                        <h3 class="text-sm font-medium text-success uppercase tracking-wider mb-3">Academic Info</h3>
                        <div class="space-y-2">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-success mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                </svg>
                                <span class="font-medium">Grade Level:</span>
                                <span class="ml-2">Grade @Model.GradeLevel</span>
                            </div>
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-success mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                                <span class="font-medium">Campus:</span>
                                <span class="ml-2">@Model.Campus?.Name</span>
                            </div>
                        </div>
                    </div>

                    
                </div>

                <!-- Action Buttons -->
                <div class="flex space-x-4 mt-8 pt-6 border-t border-primary-100">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-gradient-to-r from-blue-500 to-blue-600 hover:from-primary-600 hover:to-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-all duration-300 flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Edit
                    </a>
                    <a asp-action="Index" class="bg-neutral-100 hover:bg-primary-100 text-primary-800 font-medium py-2 px-6 rounded-lg transition-all duration-300 flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
