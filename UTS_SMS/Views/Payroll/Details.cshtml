@using UTS_SMS.Models
<!-- Views/Payroll/Details.cshtml -->
@model SMS.ViewModels.PayrollDetailViewModel

@{
    ViewData["Title"] = "Payroll Details";
    var monthName = new DateTime(Model.PayrollMaster.ForYear, Model.PayrollMaster.ForMonth, 1).ToString("MMMM yyyy");
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-primary-800 tracking-tight">💰 Payroll Details</h1>
                <p class="text-neutral-600 mt-2 text-sm md:text-base">@Model.PayrollMaster.Employee.FullName | @monthName</p>
            </div>
            <div class="flex space-x-3 mt-4 md:mt-0">
                <a asp-action="Index" class="bg-primary-100 hover:bg-primary-200 text-primary-800 px-5 py-2.5 rounded-xl shadow-sms-md hover:shadow-sms-lg transition-all duration-300 flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Back to List
                </a>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-2xl shadow-sms-lg p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-neutral-600">Total Payable</h3>
                        <p class="text-2xl font-bold text-primary-800">₨@((Model.PayrollMaster.BasicSalary + Model.PayrollMaster.Allowances - Model.PayrollMaster.Deductions - Model.PayrollMaster.AttendanceDeduction + Model.PayrollMaster.Bonus + Model.PayrollMaster.PreviousBalance).ToString("N0"))</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sms-lg p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-success-light rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-neutral-600">Amount Paid</h3>
                        <p class="text-2xl font-bold text-primary-800">₨@Model.PayrollMaster.AmountPaid.ToString("N0")</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sms-lg p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-error-light rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-error" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-neutral-600">
                            @(Model.PayrollMaster.Balance < 0 ? "Advance" :
                                                        (Model.PayrollMaster.Balance > 0 ? "Dues" : "Cleared"))
                        </h3>
                        <p class="text-2xl font-bold
                      @(Model.PayrollMaster.Balance < 0 ? "text-primary-600" :
                                                   (Model.PayrollMaster.Balance > 0 ? "text-error" : "text-success"))">
                            ₨@Math.Abs(Model.PayrollMaster.Balance).ToString("N0")
                        </p>
                    </div>
                </div>
            </div>


            <div class="bg-white rounded-2xl shadow-sms-lg p-6 transform hover:scale-105 transition-all duration-300">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-neutral-600">Processed On</h3>
                        <p class="text-sm font-bold text-primary-800">@Model.PayrollMaster.CreatedDate.ToString("dd MMM yyyy")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left Column - Salary Breakdown -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-sms-lg p-6 mb-8">
                    <h2 class="text-xl font-semibold text-primary-800 mb-4">Salary Breakdown</h2>

                    <div class="space-y-4">
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <span class="text-neutral-600">Basic Salary</span>
                            <span class="font-medium">₨@Model.PayrollMaster.BasicSalary.ToString("N0")</span>
                        </div>

                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <span class="text-neutral-600">Allowances</span>
                            <span class="font-medium text-success">+ ₨@Model.PayrollMaster.Allowances.ToString("N0")</span>
                        </div>

                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <span class="text-neutral-600">Deductions</span>
                            <span class="font-medium text-error">- ₨@Model.PayrollMaster.Deductions.ToString("N0")</span>
                        </div>

                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <span class="text-neutral-600">Attendance Deduction</span>
                            <span class="font-medium text-error">- ₨@Model.PayrollMaster.AttendanceDeduction.ToString("N0")</span>
                        </div>

                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <span class="text-neutral-600">Bonus</span>
                            <span class="font-medium text-success">+ ₨@Model.PayrollMaster.Bonus.ToString("N0")</span>
                        </div>

                       
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <span class="text-neutral-600">Previous Balance</span>
                            <span class="font-medium @(Model.PayrollMaster.PreviousBalance >= 0 ? "text-success" : "text-error")">
                                @(Model.PayrollMaster.PreviousBalance >= 0 ? "+" : "-") ₨@Math.Abs(Model.PayrollMaster.PreviousBalance).ToString("N0")
                            </span>
                        </div>

                        <div class="flex justify-between items-center py-2 font-bold text-lg mt-4">
                            <span class="text-primary-800">Net Payable</span>
                            <span class="text-primary-600">₨@((Model.PayrollMaster.BasicSalary + Model.PayrollMaster.Allowances - Model.PayrollMaster.Deductions - Model.PayrollMaster.AttendanceDeduction + Model.PayrollMaster.Bonus + Model.PayrollMaster.PreviousBalance).ToString("N0"))</span>
                        </div>
                    </div>
                </div>

                <!-- Payment Transactions -->
                @if (Model.PayrollMaster.Transactions.Any())
                {
                    <div class="bg-white rounded-2xl shadow-sms-lg p-6">
                        <h2 class="text-xl font-semibold text-primary-800 mb-4">Payment Transactions</h2>

                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead class="bg-neutral-50">
                                    <tr>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Date</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Method</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Reference</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Amount</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-primary-100">
                                    @foreach (var transaction in Model.PayrollMaster.Transactions)
                                    {
                                        <tr class="hover:bg-neutral-50 transition-colors duration-300">
                                            <td class="px-4 py-3 text-sm text-neutral-600">@transaction.PaymentDate.ToString("dd MMM yyyy")</td>
                                            <td class="px-4 py-3 text-sm text-neutral-600">
                                                @if (transaction.CashPaid > 0 && transaction.OnlinePaid > 0)
                                                {
                                                    <span>Mixed (Cash + Online)</span>
                                                }
                                                else if (transaction.CashPaid > 0)
                                                {
                                                    <span>Cash</span>
                                                }
                                                else
                                                {
                                                    <span>Online</span>
                                                }
                                            </td>
                                            <td class="px-4 py-3 text-sm text-neutral-600">@transaction.TransactionReference</td>
                                            <td class="px-4 py-3 text-sm font-medium text-success">₨@transaction.AmountPaid.ToString("N0")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>

            <!-- Right Column - Employee Info & Attendance -->
            <div class="space-y-8">
                <!-- Employee Info -->
                <div class="bg-white rounded-2xl shadow-sms-lg p-6">
                    <h2 class="text-xl font-semibold text-primary-800 mb-4">Employee Information</h2>

                    <div class="flex items-center mb-4">
                        <div class="w-16 h-16 bg-gradient-to-r from-blue-400 to-purple-500 rounded-full flex items-center justify-center text-white font-semibold text-xl mr-4">
                            @Model.PayrollMaster.Employee.FullName.Substring(0, 1)
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-primary-800">@Model.PayrollMaster.Employee.FullName</h3>
                            <p class="text-sm text-neutral-600">@Model.PayrollMaster.Employee.Role</p>
                            <p class="text-sm text-neutral-600">@Model.PayrollMaster.Campus.Name</p>
                        </div>
                    </div>

                    <div class="space-y-2 text-sm">
                        <div class="flex items-center">
                            <svg class="w-4 h-4 text-neutral-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                            <span>@Model.PayrollMaster.Employee.PhoneNumber</span>
                        </div>
                         
                        <div class="flex items-center">
                            <svg class="w-4 h-4 text-neutral-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            <span>@Model.PayrollMaster.Employee.CNIC</span>
                        </div>
                    </div>
                </div>

                <!-- Attendance Summary -->
                <div class="bg-white rounded-2xl shadow-sms-lg p-6">
                    <h2 class="text-xl font-semibold text-primary-800 mb-4">Attendance Summary</h2>

                    @{
                        var presentCount = Model.AttendanceRecords.Count(a => a.Status == "P");
                        var absentCount = Model.AttendanceRecords.Count(a => a.Status == "A");
                        var shortLeaveCount = Model.AttendanceRecords.Count(a => a.Status == "S");
                        var leaveCount = Model.AttendanceRecords.Count(a => a.Status == "L");
                        var totalDays = DateTime.DaysInMonth(Model.PayrollMaster.ForYear, Model.PayrollMaster.ForMonth);
                    }

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div class="text-center p-3 bg-success-light rounded-lg">
                            <div class="text-2xl font-bold text-success">@presentCount</div>
                            <div class="text-xs text-neutral-600">Present</div>
                        </div>
                        <div class="text-center p-3 bg-error-light rounded-lg">
                            <div class="text-2xl font-bold text-error">@absentCount</div>
                            <div class="text-xs text-neutral-600">Absent</div>
                        </div>
                        <div class="text-center p-3 bg-primary-50 rounded-lg">
                            <div class="text-2xl font-bold text-blue-700">@shortLeaveCount</div>
                            <div class="text-xs text-neutral-600">Short Leave</div>
                        </div>
                        <div class="text-center p-3 bg-warning-light rounded-lg">
                            <div class="text-2xl font-bold text-yellow-700">@leaveCount</div>
                            <div class="text-xs text-neutral-600">Leave</div>
                        </div>
                    </div>

                    <div class="text-center">
                        <a href="#" class="text-primary-600 hover:text-primary-800 text-sm flex items-center justify-center">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                            View Detailed Attendance
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
