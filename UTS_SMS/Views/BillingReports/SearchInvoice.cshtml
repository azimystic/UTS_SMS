@using UTS_SMS.Models
@{
    ViewData["Title"] = "Search Invoice";
}





<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-2xl mx-auto">
        <!-- Header -->
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-primary-800 flex items-center">
                <svg class="w-8 h-8 mr-3 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                Search Invoice
            </h1>
            <p class="text-neutral-600 mt-2">Search for Fee or Payroll invoice by number</p>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-4 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-4 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Search Form Card -->
        <div class="bg-white rounded-2xl shadow-sms-xl p-6 md:p-8">
            <form asp-action="SearchInvoice" method="post" id="searchForm" onsubmit="return handleFormSubmit(event)">
                <div class="space-y-6">
                    <!-- Invoice Type Selection -->
                    <div>
                        <label class="block text-sm font-semibold text-primary-800 mb-2">
                            <svg class="w-5 h-5 inline mr-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            Invoice Type
                        </label>
                        <select name="invoiceType" id="invoiceType" 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all"
                                required>
                            <option value="">-- Select Invoice Type --</option>
                            <option value="FeeInvoice">Fee Invoice</option>
                            <option value="PayrollInvoice">Payroll Invoice</option>
                        </select>
                    </div>

                    <!-- Invoice Number Input -->
                    <div>
                        <label class="block text-sm font-semibold text-primary-800 mb-2">
                            <svg class="w-5 h-5 inline mr-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l-4-16m2 16l4-16M6 9h14M4 15h14"></path>
                            </svg>
                            Invoice Number
                        </label>
                        <input type="number" 
                               name="invoiceNumber" 
                               id="invoiceNumber" 
                               min="1"
                               placeholder="Enter invoice number (e.g., 123456)"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all"
                               required />
                        <p class="text-sm text-gray-500 mt-2">
                            Enter the invoice/receipt number you want to view
                        </p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex items-center justify-between pt-4 border-t">
                        <a asp-action="Index" 
                           class="text-gray-600 hover:text-gray-800 font-medium flex items-center transition-colors">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Back to Reports
                        </a>
                        
                        <button type="submit" 
                                class="bg-gradient-primary hover:bg-primary-700 text-white px-6 py-3 rounded-lg font-semibold shadow-sms-md hover:shadow-sms-lg transition-all duration-300 flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                            Search & View Receipt
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Info Card -->
        <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div class="text-sm text-blue-800">
                    <p class="font-semibold mb-2">How to use:</p>
                    <ul class="list-disc list-inside space-y-1">
                        <li><strong>Fee Invoice:</strong> Search for student fee payment receipts</li>
                        <li><strong>Payroll Invoice:</strong> Search for employee salary payment receipts</li>
                        <li>The invoice/receipt will open in a new tab for printing</li>
                        <li>Invoice numbers can be found on previous receipts or transaction records</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" asp-append-version="true" />
    <script src="~/lib/sweetalert2/sweetalert2.min.js" asp-append-version="true"></script>
    <script>
        function handleFormSubmit(event) {
            event.preventDefault();
            
            const invoiceType = document.getElementById('invoiceType').value;
            const invoiceNumber = document.getElementById('invoiceNumber').value;

            if (!invoiceType) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Missing Information',
                    text: 'Please select an invoice type',
                    confirmButtonColor: '#3B82F6'
                });
                return false;
            }

            if (!invoiceNumber || invoiceNumber <= 0) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Invalid Input',
                    text: 'Please enter a valid invoice number',
                    confirmButtonColor: '#3B82F6'
                });
                return false;
            }

            // Submit form via AJAX to check if invoice exists
            const formData = new FormData();
            formData.append('invoiceType', invoiceType);
            formData.append('invoiceNumber', invoiceNumber);

            fetch('@Url.Action("SearchInvoice", "BillingReports")', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Open the receipt in a new tab
                    window.open(data.url, '_blank');
                } else {
                    // Show error message with SweetAlert
                    Swal.fire({
                        icon: 'error',
                        title: 'Invoice Not Found',
                        text: data.message || 'The invoice does not exist',
                        confirmButtonColor: '#3B82F6'
                    });
                }
            })
            .catch(error => {
                console.error('Error searching for invoice:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while searching for the invoice',
                    confirmButtonColor: '#3B82F6'
                });
            });

            return false;
        }

        // Auto-focus on invoice type dropdown
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('invoiceType').focus();
        });
    </script>
}
