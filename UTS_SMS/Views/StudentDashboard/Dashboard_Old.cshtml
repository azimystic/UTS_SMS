@using UTS_SMS.Models
@model SMS.Controllers.StudentDashboardController.StudentDashboardViewModel

@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="min-h-screen bg-gray-900 p-3 md:p-4">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
            <div>
                <h1 class="text-2xl font-bold text-white">🎓 Student Dashboard</h1>
                <p class="text-gray-400 mt-1">Welcome back, @Model.Student.StudentName!</p>
            </div>
            <div class="flex space-x-2 mt-4 md:mt-0">
                <a href="#" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-all duration-300 flex items-center text-sm">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    My Profile
                </a>
            </div>
        </div>

        <!-- Student Info & Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <!-- Student Info Card -->
            <div class="bg-white rounded-2xl shadow-sms-lg p-6 md:col-span-1">
                <div class="flex flex-col items-center text-center">
                    <div class="w-24 h-24 bg-primary-100 rounded-full flex items-center justify-center mb-4">
                        <svg class="w-12 h-12 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                    <h2 class="text-xl font-bold text-primary-800">@Model.Student.StudentName </h2>
                    <p class="text-neutral-600">Student ID: @Model.Student.Id</p>
                    <div class="w-full mt-4 p-3 bg-primary-50 rounded-lg">
                        <p class="text-sm text-primary-800">Class: <span class="font-semibold">@Model.Student.Class</span></p>
                        <p class="text-sm text-primary-800 mt-1">Section: <span class="font-semibold">@Model.Student.Section</span></p>
                    </div>
                </div>
            </div>

            <!-- Attendance Stats Card -->
            <div class="bg-white rounded-2xl shadow-sms-lg p-6 md:col-span-1">
                <h3 class="text-lg font-semibold text-primary-800 mb-4">Attendance Summary</h3>
                <div class="flex items-center justify-center mb-4">
                    <div class="relative w-32 h-32">
                        <svg class="w-full h-full" viewBox="0 0 36 36">
                            <path d="M18 2.0845
                                    a 15.9155 15.9155 0 0 1 0 31.831
                                    a 15.9155 15.9155 0 0 1 0 -31.831"
                                  fill="none"
                                  stroke="#eee"
                                  stroke-width="3" />
                            <path d="M18 2.0845
                                    a 15.9155 15.9155 0 0 1 0 31.831
                                    a 15.9155 15.9155 0 0 1 0 -31.831"
                                  fill="none"
                                  stroke="#3B82F6"
                                  stroke-width="3"
                                  stroke-dasharray="@Model.AttendancePercentage, 100" />
                        </svg>
                        <div class="absolute inset-0 flex items-center justify-center">
                            <span class="text-2xl font-bold text-primary-800">@Model.AttendancePercentage%</span>
                        </div>
                    </div>
                </div>
                <p class="text-center text-neutral-600">Overall Attendance Rate</p>
            </div>

            <!-- Quick Stats Card -->
            <div class="bg-white rounded-2xl shadow-sms-lg p-6 md:col-span-1">
                <h3 class="text-lg font-semibold text-primary-800 mb-4">Quick Stats</h3>
                <div class="space-y-4">
                    <div class="flex items-center">
                        <div class="w-10 h-10 bg-success-light rounded-lg flex items-center justify-center mr-3">
                            <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm text-neutral-600">Present Days</p>
                            <p class="font-semibold text-primary-800">@Model.RecentAttendance.Count(a => a.Status == "P")</p>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <div class="w-10 h-10 bg-error-light rounded-lg flex items-center justify-center mr-3">
                            <svg class="w-5 h-5 text-error" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm text-neutral-600">Absent Days</p>
                            <p class="font-semibold text-primary-800">@Model.RecentAttendance.Count(a => a.Status == "A")</p>
                        </div>
                    </div>
                    <div class="flex items-center">
                        <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center mr-3">
                            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm text-neutral-600">Late Arrivals</p>
                            <p class="font-semibold text-primary-800">@Model.RecentAttendance.Count(a => a.Status == "L")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts & Recent Activity Section -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
            <!-- Attendance Trend Chart -->
            <div class="bg-white rounded-2xl shadow-sms-lg p-6">
                <h2 class="text-xl font-semibold text-primary-800 mb-4">Attendance Trend</h2>
                <div class="h-64">
                    <canvas id="attendanceTrendChart"></canvas>
                </div>
            </div>

            <!-- Recent Billing -->
            <div class="bg-white rounded-2xl shadow-sms-lg overflow-hidden">
                <div class="px-6 py-4 bg-gradient-dark text-white">
                    <h2 class="text-xl font-semibold">Recent Payments</h2>
                    <p class="text-primary-200">Your latest transactions</p>
                </div>
                <div class="divide-y divide-primary-100">
                    @if (Model.RecentBilling.Any())
                    {
                        foreach (var transaction in Model.RecentBilling)
                        {
                            <div class="px-6 py-4 transition-all duration-300 hover:bg-purple-50">
                                <div class="flex justify-between items-center">
                                    <div>
                                        <h3 class="font-medium text-primary-800">Payment @transaction.Id</h3>
                                        <p class="text-sm text-neutral-600">@transaction.PaymentDate.ToString("MMM dd, yyyy")</p>
                                    </div>
                                    <span class="px-3 py-1 bg-success-light text-success text-sm font-medium rounded-full">
                                        ₹@transaction.AmountPaid
                                    </span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="px-6 py-8 text-center">
                            <svg class="w-12 h-12 mx-auto text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                            </svg>
                            <p class="mt-2 text-neutral-600">No recent transactions found</p>
                        </div>
                    }
                </div>
                <div class="px-6 py-4 bg-neutral-50">
                    <a href="#" class="text-primary-600 hover:text-purple-800 font-medium flex items-center justify-center">
                        View All Transactions
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>

        <!-- Recent Attendance Table -->
        <div class="bg-white rounded-2xl shadow-sms-lg overflow-hidden mb-8">
            <div class="px-6 py-4 bg-gradient-primary text-white">
                <h2 class="text-xl font-semibold">Recent Attendance</h2>
                <p class="text-blue-200">Last 10 days attendance record</p>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-neutral-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Day</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Remarks</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-primary-100">
                        @foreach (var attendance in Model.RecentAttendance)
                        {
                            <tr class="transition-all duration-300 hover:bg-primary-50">
                                <td class="px-6 py-4 text-sm font-medium text-primary-800">@attendance.Date.ToString("MMM dd, yyyy")</td>
                                <td class="px-6 py-4 text-sm text-neutral-500">@attendance.Date.ToString("dddd")</td>
                                <td class="px-6 py-4 text-sm">
                                    @if (attendance.Status == "P")
                                    {
                                        <span class="px-2 py-1 bg-success-light text-success text-xs font-medium rounded-full">Present</span>
                                    }
                                    else if (attendance.Status == "A")
                                    {
                                        <span class="px-2 py-1 bg-error-light text-error text-xs font-medium rounded-full">Absent</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 bg-warning-light text-yellow-800 text-xs font-medium rounded-full">Late</span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-sm text-neutral-500">@attendance.Remarks</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/chartjs/chart.min.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Attendance Trend Chart (sample data)
            const trendCtx = document.getElementById('attendanceTrendChart').getContext('2d');
            new Chart(trendCtx, {
                type: 'line',
                data: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],
                    datasets: [{
                        label: 'Attendance Status',
                        data: [1, 1, 0, 1, 1, 0], // 1 for present, 0 for absent
                        borderColor: 'rgb(59, 130, 246)',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        tension: 0.3,
                        fill: true,
                        borderWidth: 3,
                        pointRadius: 5,
                        pointHoverRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.raw === 1 ? 'Present' : 'Absent';
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 1,
                            ticks: {
                                callback: function(value) {
                                    return value === 1 ? 'Present' : 'Absent';
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    },
                    animation: {
                        duration: 2000,
                        easing: 'easeOutQuart'
                    }
                }
            });
        });
    </script>
}
