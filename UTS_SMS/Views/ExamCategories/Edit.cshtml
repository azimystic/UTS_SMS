@using UTS_SMS.Models
@model UTS_SMS.Models.ExamCategory

@{
    ViewData["Title"] = "Edit Exam Category";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">📚 Edit Exam Category</h1>
            <p class="text-neutral-600 mt-2">Update exam category details</p>
        </div>

        <!-- Form -->
        <div class="bg-white rounded-2xl shadow-sms-xl p-6">
            <form asp-action="Edit" class="space-y-6">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="bg-error-light border-l-4 border-error text-error p-4 rounded-lg"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Name -->
                    <div class="md:col-span-2">
                        <label asp-for="Name" class="block text-sm font-medium text-neutral-700 mb-2">Category Name</label>
                        <input asp-for="Name" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" required />
                        <span asp-validation-for="Name" class="text-error text-sm"></span>
                    </div>

                    <!-- Campus -->
                    <div>
                        <label asp-for="CampusId" class="block text-sm font-medium text-neutral-700 mb-2">Campus</label>
                        <select asp-for="CampusId" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400">
                            @if (ViewBag.ShowAllCampusesOption == true)
                            {
                                <option value="" selected="@(Model.CampusId == null)">🌐 All Campuses</option>
                            }
                            else
                            {
                                <option value="">-- Select Campus --</option>
                            }
                            @foreach (var campus in ViewBag.Campuses)
                            {
                                <option value="@campus.Id" selected="@(Model.CampusId == campus.Id)">@campus.Name</option>
                            }
                        </select>
                        <span asp-validation-for="CampusId" class="text-error text-sm"></span>
                        <p class="text-sm text-neutral-500 mt-1">@(ViewBag.ShowAllCampusesOption == true ? "Select \"All Campuses\" to make this category available across all campuses" : "Select a campus for this category")</p>
                    </div>

                    <!-- Is Active -->
                    <div>
                        <label asp-for="IsActive" class="block text-sm font-medium text-neutral-700 mb-2">Status</label>
                        <div class="mt-1">
                            <label class="inline-flex items-center">
                                <input asp-for="IsActive" type="checkbox" class="rounded border-primary-200 text-primary-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
                                <span class="ml-2 text-neutral-700">Active</span>
                            </label>
                        </div>
                        <span asp-validation-for="IsActive" class="text-error text-sm"></span>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex space-x-4 pt-6">
                    <button type="submit" class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-medium py-3 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-sms-lg flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Update Category
                    </button>
                    <a asp-action="Index" class="bg-neutral-100 hover:bg-primary-100 text-primary-800 font-medium py-3 px-8 rounded-xl transition-all duration-300 flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
