@model SMS.Models.LeaveConfig

@{
    ViewData["Title"] = "Create Leave Configuration";
}

<div class="min-h-screen bg-gradient-subtle p-4 md:p-6">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-primary-800">ðŸ“‹ Create Leave Configuration</h1>
            <p class="text-neutral-600 mt-2">Define leave allocation policy for employees</p>
        </div>

        <!-- Form -->
        <div class="bg-white rounded-2xl shadow-sms-xl p-6">
            <form asp-action="Create" class="space-y-6">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="bg-error-light border-l-4 border-error text-error p-4 rounded-lg"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Employee Type -->
                    <div>
                        <label asp-for="EmployeeType" class="block text-sm font-medium text-neutral-700 mb-2">Employee Type <span class="text-red-500">*</span></label>
                        <select asp-for="EmployeeType" id="employeeTypeSelect" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" asp-items="ViewBag.EmployeeTypes">
                            <option value="">-- Select Employee Type --</option>
                        </select>
                        <span asp-validation-for="EmployeeType" class="text-error text-sm"></span>
                    </div>

                    <!-- Role Name -->
                    <div>
                        <label asp-for="RoleName" class="block text-sm font-medium text-neutral-700 mb-2">Role Name <span class="text-red-500">*</span></label>
                        <select asp-for="RoleName" id="roleNameSelect" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" disabled>
                            <option value="">-- Select Employee Type First --</option>
                        </select>
                        <span asp-validation-for="RoleName" class="text-error text-sm"></span>
                        <p class="text-xs text-neutral-500 mt-1">Only roles with unconfigured leave types are shown</p>
                    </div>

                    <!-- Leave Type -->
                    <div>
                        <label asp-for="LeaveType" class="block text-sm font-medium text-neutral-700 mb-2">Leave Type</label>
                        <select asp-for="LeaveType" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" asp-items="ViewBag.LeaveTypes">
                            <option value="">-- Select Leave Type --</option>
                        </select>
                        <span asp-validation-for="LeaveType" class="text-error text-sm"></span>
                    </div>

                    <!-- Allocation Period -->
                    <div>
                        <label asp-for="AllocationPeriod" class="block text-sm font-medium text-neutral-700 mb-2">Allocation Period</label>
                        <select asp-for="AllocationPeriod" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300">
                            <option value="">-- Select Period --</option>
                            <option value="Monthly">Monthly</option>
                            <option value="Yearly">Yearly</option>
                        </select>
                        <span asp-validation-for="AllocationPeriod" class="text-error text-sm"></span>
                    </div>

                    <!-- Allowed Days -->
                    <div>
                        <label asp-for="AllowedDays" class="block text-sm font-medium text-neutral-700 mb-2">Allowed Days</label>
                        <input asp-for="AllowedDays" type="number" min="0" step="0.5" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" placeholder="e.g., 15" />
                        <span asp-validation-for="AllowedDays" class="text-error text-sm"></span>
                    </div>

                    <!-- Max Carry Forward Days -->
                    <div>
                        <label asp-for="MaxCarryForwardDays" class="block text-sm font-medium text-neutral-700 mb-2">Max Carry Forward Days (Optional)</label>
                        <input asp-for="MaxCarryForwardDays" type="number" min="0" step="0.5" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" placeholder="e.g., 5" />
                        <span asp-validation-for="MaxCarryForwardDays" class="text-error text-sm"></span>
                    </div>

                    <!-- Campus -->
                    <div>
                        <label asp-for="CampusId" class="block text-sm font-medium text-neutral-700 mb-2">Campus</label>
                        <select asp-for="CampusId" class="w-full px-4 py-3 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-all duration-300" asp-items="ViewBag.CampusId">
                            <option value="">-- Select Campus --</option>
                        </select>
                        <span asp-validation-for="CampusId" class="text-error text-sm"></span>
                    </div>

                    <!-- Is Carry Forward -->
                    <div class="flex items-center">
                        <div class="mt-6">
                            <label class="flex items-center">
                                <input asp-for="IsCarryForward" type="checkbox" class="w-5 h-5 text-primary-600 border-primary-300 rounded focus:ring-primary-500" />
                                <span class="ml-2 text-sm font-medium text-neutral-700">Enable Carry Forward</span>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex space-x-4 pt-6">
                    <button type="submit" class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-medium py-3 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-sms-lg flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Create Configuration
                    </button>
                    <a asp-action="Index" class="bg-neutral-100 hover:bg-primary-100 text-primary-800 font-medium py-3 px-8 rounded-xl transition-all duration-300 flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const employeeTypeSelect = document.getElementById('employeeTypeSelect');
            const roleNameSelect = document.getElementById('roleNameSelect');

            employeeTypeSelect.addEventListener('change', function() {
                const employeeType = this.value;
                
                if (!employeeType) {
                    roleNameSelect.disabled = true;
                    roleNameSelect.innerHTML = '<option value="">-- Select Employee Type First --</option>';
                    return;
                }

                // Fetch available roles for selected employee type
                fetch('@Url.Action("GetAvailableRoles", "LeavesConfig")?employeeType=' + encodeURIComponent(employeeType))
                    .then(response => response.json())
                    .then(data => {
                        roleNameSelect.innerHTML = '<option value="">-- Select Role --</option>';
                        
                        if (data.length === 0) {
                            roleNameSelect.innerHTML = '<option value="">No roles available</option>';
                            roleNameSelect.disabled = true;
                        } else {
                            data.forEach(role => {
                                const option = document.createElement('option');
                                option.value = role.roleName;
                                option.textContent = role.roleName;
                                if (role.configuredLeaveTypes.length > 0) {
                                    option.textContent += ' (' + (6 - role.configuredLeaveTypes.length) + ' leave types available)';
                                }
                                roleNameSelect.appendChild(option);
                            });
                            roleNameSelect.disabled = false;
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching roles:', error);
                        roleNameSelect.innerHTML = '<option value="">Error loading roles</option>';
                        roleNameSelect.disabled = true;
                    });
            });
        });
    </script>
}
