@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using SMS.Services
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext Context
@inject MenuService MenuService

@{
    var currentUser = await UserManager.GetUserAsync(User);
    int? studentId = null;
    
    // Get user roles for menu filtering
    var userRoles = currentUser != null ? await UserManager.GetRolesAsync(currentUser) : new List<string>();
    var appMenus = await MenuService.GetMenusForUserAsync(userRoles);

    if (currentUser != null && User.IsInRole("Student"))
    {
        studentId = currentUser.StudentId;
    }
    
    // Get active academic year - simplified
    var activeAcademicYear = await Context.AcademicYear
        .OrderByDescending(ay => ay.Year)
        .FirstOrDefaultAsync();
}
