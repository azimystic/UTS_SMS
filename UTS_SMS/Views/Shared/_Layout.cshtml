    <script>
        // Page Loader Functions
        function showLoader() {
            document.getElementById('pageLoader').classList.add('active');
        }
        
        function hideLoader() {
            document.getElementById('pageLoader').classList.remove('active');
        }
        
        // Hide loader on page load
        window.addEventListener('load', function() {
            hideLoader();
        });
        
        // Show loader on link clicks (navigation)
        document.addEventListener('click', function(e) {
            const link = e.target.closest('a');
            if (!link) return;
            
            const href = link.getAttribute('href');
            
            // Skip if it's a hash link, javascript:, or has special attributes
            if (!href || 
                href.startsWith('#') || 
                href.startsWith('javascript:') || 
                link.hasAttribute('data-toggle') ||
                link.hasAttribute('data-dismiss') ||
                link.target === '_blank' ||
                link.hasAttribute('onclick')) {
                return;
            }
            
            // Show loader for internal navigation
            if (!href.includes('http://') && !href.includes('https://') && href !== '') {
                showLoader();
            }
        });
        
        // Show loader on form submissions
        document.addEventListener('submit', function(e) {
            if (!e.target.hasAttribute('data-no-loader')) {
                showLoader();
            }
        });
        
        // Hide loader on back/forward navigation
        window.addEventListener('pageshow', function(event) {
            if (event.persisted) {
                hideLoader();
            }
        });
        
        // Sidebar Toggle
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('show');
        }
        
        // Submenu Toggle
        function toggleSubmenu(event, element) {
            event.preventDefault();
            const parent = element.closest('.has-submenu');
            const wasOpen = parent.classList.contains('open');
            document.querySelectorAll('.has-submenu.open').forEach(item => item.classList.remove('open'));
            if (!wasOpen) parent.classList.add('open');
        }
        
        // Close sidebar on outside click (mobile)
        document.addEventListener('click', function(e) {
            const sidebar = document.querySelector('.sidebar');
            const toggleBtn = document.querySelector('.sidebar-toggle-btn');
            const notificationDropdown = document.getElementById('notificationDropdown');
            const bellIcon = document.querySelector('.bell-icon');
            
            // Close sidebar
            if (window.innerWidth <= 992 && !sidebar.contains(e.target) && e.target !== toggleBtn && !toggleBtn?.contains(e.target)) {
                sidebar.classList.remove('show');
            }
            
            // Close notification dropdown when clicking outside
            if (notificationDropdown && !notificationDropdown.contains(e.target) && !bellIcon?.contains(e.target)) {
                notificationDropdown.classList.remove('show');
            }
        });
        
        // Notification System
        let notifications = [];
        let currentFilter = 'today';
        
        function toggleNotifications() {
            const dropdown = document.getElementById('notificationDropdown');
            dropdown.classList.toggle('show');
            if (dropdown.classList.contains('show')) {
                loadNotifications();
            }
        }
        
        function loadNotifications() {
            fetch('/api/notifications')
                .then(response => response.json())
                .then(data => {
                    notifications = data;
                    updateNotificationBadge();
                    renderNotifications();
                })
                .catch(error => {
                    console.error('Error loading notifications:', error);
                    // Show sample notifications if API fails (for development)
                    notifications = getSampleNotifications();
                    updateNotificationBadge();
                    renderNotifications();
                });
        }
        
        function getSampleNotifications() {
            const now = new Date();
            const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());
            const yesterday = new Date(today);
            yesterday.setDate(yesterday.getDate() - 1);
            const twoDaysAgo = new Date(today);
            twoDaysAgo.setDate(twoDaysAgo.getDate() - 2);
            
            return [
                {
                    id: 3,
                    type: 'exam',
                    title: 'Upcoming Exam',
                    message: 'Mathematics exam scheduled for Class 10-A tomorrow at 9:00 AM.',
                    timestamp: yesterday,
                    isRead: true
                },
                {
                    id: 4,
                    type: 'general',
                    title: 'System Update',
                    message: 'The school management system will undergo maintenance this weekend.',
                    timestamp: twoDaysAgo,
                    isRead: true
                }
            ];
        }
        
        function updateNotificationBadge() {
            const unreadCount = notifications.filter(n => !n.isRead).length;
            const badge = document.getElementById('notificationBadge');
            const countElement = document.getElementById('notificationCount');
            
            if (unreadCount > 0) {
                badge.style.display = 'block';
                countElement.textContent = unreadCount;
            } else {
                badge.style.display = 'none';
                countElement.textContent = '0';
            }
        }
        
        function filterNotifications(filter) {
            currentFilter = filter;
            
            // Update active tab
            document.querySelectorAll('.notification-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            event.target.classList.add('active');
            
            renderNotifications();
        }
        
        function renderNotifications() {
            const listElement = document.getElementById('notificationList');
            const now = new Date();
            const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());
            
            let filteredNotifications = notifications;
            
            if (currentFilter === 'today') {
                filteredNotifications = notifications.filter(n => {
                    const notifDate = new Date(n.timestamp);
                    return notifDate >= today;
                });
            } else if (currentFilter === 'earlier') {
                filteredNotifications = notifications.filter(n => {
                    const notifDate = new Date(n.timestamp);
                    return notifDate < today;
                });
            }
            
            if (filteredNotifications.length === 0) {
                listElement.innerHTML = `
                    <div class="notification-empty">
                        <i class="fas fa-bell-slash" style="font-size: 2rem; color: #6B7280; margin-bottom: 0.5rem;"></i>
                        <p>No notifications</p>
                    </div>
                `;
                return;
            }
            
            listElement.innerHTML = filteredNotifications.map(notification => {
                const icon = getNotificationIcon(notification.type);
                const timeAgo = getTimeAgo(new Date(notification.timestamp));
                const unreadClass = notification.isRead ? '' : 'unread';
                
                return `
                    <div class="notification-item ${unreadClass}" onclick="markAsReadAndNavigate(${notification.id}, '${notification.actionUrl || ''}')">
                        <div class="notification-icon ${notification.type}">
                            <i class="${icon}"></i>
                        </div>
                        <div class="notification-content">
                            <div class="notification-text">
                                <strong>${notification.title}</strong><br>
                                ${notification.message}
                            </div>
                            <div class="notification-time">${timeAgo}</div>
                        </div>
                    </div>
                `;
            }).join('');
        }
        
        function getNotificationIcon(type) {
            const icons = {
                'complaint': 'fas fa-exclamation-circle',
                'fee': 'fas fa-dollar-sign',
                'exam': 'fas fa-graduation-cap',
                'marks': 'fas fa-clipboard-check',
                'reminder': 'fas fa-clock',
                'general': 'fas fa-bell'
            };
            return icons[type] || icons['general'];
        }
        
        function getTimeAgo(date) {
            const now = new Date();
            const diffMs = now - date;
            const diffMins = Math.floor(diffMs / 60000);
            const diffHours = Math.floor(diffMs / 3600000);
            const diffDays = Math.floor(diffMs / 86400000);
            
            if (diffMins < 1) return 'Just now';
            if (diffMins < 60) return `${diffMins} minute${diffMins > 1 ? 's' : ''} ago`;
            if (diffHours < 24) return `${diffHours} hour${diffHours > 1 ? 's' : ''} ago`;
            if (diffDays < 7) return `${diffDays} day${diffDays > 1 ? 's' : ''} ago`;
            
            return date.toLocaleDateString();
        }
        
        function markAsRead(notificationId) {
            const notification = notifications.find(n => n.id === notificationId);
            if (notification) {
                notification.isRead = true;
                updateNotificationBadge();
                renderNotifications();
                
                // Send to API
                fetch(`/api/notifications/${notificationId}/read`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                }).catch(error => console.error('Error marking notification as read:', error));
            }
        }
        
        function markAsReadAndNavigate(notificationId, actionUrl) {
            const notification = notifications.find(n => n.id === notificationId);
            if (notification) {
                notification.isRead = true;
                updateNotificationBadge();
                
                // Send to API
                fetch(`/api/notifications/${notificationId}/read`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                }).then(() => {
                    // Close notification dropdown
                    const dropdown = document.getElementById('notificationDropdown');
                    dropdown.classList.remove('show');
                    
                    // Navigate to action URL if available
                    if (actionUrl && actionUrl !== 'null' && actionUrl !== '') {
                        window.location.href = actionUrl;
                    }
                }).catch(error => console.error('Error marking notification as read:', error));
            }
        }
        
        function markAllAsRead() {
            notifications.forEach(n => n.isRead = true);
            updateNotificationBadge();
            renderNotifications();
            
            // Send to API
            fetch('/api/notifications/mark-all-read', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            }).catch(error => console.error('Error marking all as read:', error));
        }
        
        // Load notifications on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadNotifications();
            // Refresh notifications every 60 seconds
            setInterval(loadNotifications, 60000);
        });
        
        // ========================================
        // MAILBOX FUNCTIONALITY
        // ========================================
        let messages = [];
        let currentMessageFilter = 'all';
        
        function toggleMailBox() {
            const dropdown = document.getElementById('mailboxDropdown');
            dropdown.classList.toggle('show');
            if (dropdown.classList.contains('show')) {
                loadMessages();
            }
        }
        
        function loadMessages() {
            fetch('/api/messages?timeFilter=' + currentMessageFilter)
                .then(response => response.json())
                .then(data => {
                    messages = data;
                    updateMailBoxBadge();
                    renderMessages();
                })
                .catch(error => {
                    console.error('Error loading messages:', error);
                });
        }
        
        function updateMailBoxBadge() {
            const unreadCount = messages.filter(m => !m.isRead).length;
            const badge = document.getElementById('mailboxBadge');
            const countElement = document.getElementById('mailboxCount');
            
            if (unreadCount > 0) {
                badge.style.display = 'block';
                countElement.textContent = unreadCount;
            } else {
                badge.style.display = 'none';
                countElement.textContent = '0';
            }
        }
        
        function filterMessages(filter) {
            currentMessageFilter = filter;
            
            // Update active tab
            const mailboxTabs = document.getElementById('mailboxDropdown').querySelectorAll('.notification-tab');
            mailboxTabs.forEach(tab => {
                tab.classList.remove('active');
            });
            event.target.classList.add('active');
            
            loadMessages();
        }
        
        function renderMessages() {
            const listElement = document.getElementById('mailboxList');
            
            if (messages.length === 0) {
                listElement.innerHTML = `
                    <div class="notification-empty">
                        <i class="fas fa-envelope-open" style="font-size: 2rem; color: #6B7280; margin-bottom: 0.5rem;"></i>
                        <p>No messages</p>
                    </div>
                `;
                return;
            }
            
            listElement.innerHTML = messages.map(message => {
                const timeAgo = getTimeAgo(new Date(message.sentDate));
                const unreadClass = message.isRead ? '' : 'unread';
                
                return `
                    <div class="notification-item ${unreadClass}" onclick="viewMessage(${message.id})">
                        <div class="notification-icon general">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="notification-content">
                            <div class="notification-subject">
                                <strong>${escapeHtml(message.subject)}</strong>
                            </div>
                            <div class="notification-text">${escapeHtml(message.body)}</div>
                            <div class="notification-meta">
                                <span class="notification-sender">From: ${escapeHtml(message.senderName)}</span>
                                ${message.attachmentCount > 0 ? `<span class="notification-attachment"><i class="fas fa-paperclip"></i> ${message.attachmentCount}</span>` : ''}
                            </div>
                            <div class="notification-time">${timeAgo}</div>
                        </div>
                    </div>
                `;
            }).join('');
        }
        
        function viewMessage(messageId) {
            // Mark as read
            fetch(`/api/messages/${messageId}/read`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(() => {
                // Load message details
                return fetch(`/api/messages/${messageId}/details`);
            })
            .then(response => response.json())
            .then(message => {
                showMessageModal(message);
                // Reload messages to update read status
                loadMessages();
            })
            .catch(error => console.error('Error viewing message:', error));
        }
        
        function showMessageModal(message) {
            const attachmentsHtml = message.attachments && message.attachments.length > 0
                ? `<div class="message-attachments">
                      <h4>Attachments:</h4>
                      <ul>
                        ${message.attachments.map(a => `
                          <li>
                            <a href="${a.filePath}" download="${a.fileName}" target="_blank">
                              <i class="fas fa-paperclip"></i> ${escapeHtml(a.fileName)} (${formatFileSize(a.fileSize)})
                            </a>
                          </li>
                        `).join('')}
                      </ul>
                   </div>`
                : '';
            
            const modalHtml = `
                <div id="messageModal" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.8); display: flex; align-items: center; justify-content: center; z-index: 10000;">
                    <div style="background: #1F2125; border-radius: 12px; max-width: 600px; width: 90%; max-height: 80vh; overflow-y: auto; border: 1px solid rgba(251, 191, 36, 0.2);">
                        <div style="padding: 1.5rem; border-bottom: 1px solid rgba(251, 191, 36, 0.1); display: flex; justify-content: space-between; align-items: center;">
                            <h3 style="color: #E5E7EB; margin: 0;">${escapeHtml(message.subject)}</h3>
                            <button onclick="closeMessageModal()" style="background: none; border: none; color: #9CA3AF; font-size: 1.5rem; cursor: pointer;">&times;</button>
                        </div>
                        <div style="padding: 1.5rem;">
                            <div style="margin-bottom: 1rem; padding-bottom: 1rem; border-bottom: 1px solid rgba(251, 191, 36, 0.1);">
                                <div style="color: #9CA3AF; font-size: 0.875rem;">
                                    <strong>From:</strong> ${escapeHtml(message.senderName)}<br>
                                    <strong>Date:</strong> ${new Date(message.sentDate).toLocaleString()}
                                </div>
                            </div>
                            <div style="color: #E5E7EB; line-height: 1.6; margin-bottom: 1rem;">
                                ${message.body}
                            </div>
                            ${attachmentsHtml}
                        </div>
                    </div>
                </div>
            `;
            
            document.body.insertAdjacentHTML('beforeend', modalHtml);
        }
        
        function closeMessageModal() {
            const modal = document.getElementById('messageModal');
            if (modal) {
                modal.remove();
            }
        }
        
        function formatFileSize(bytes) {
            if (bytes < 1024) return bytes + ' B';
            if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
            return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
        }
        
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        // Load messages on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadMessages();
            // Refresh messages every 60 seconds
            setInterval(loadMessages, 60000);
        });
        
        // Add data-label attributes to table cells for mobile responsive
        document.addEventListener('DOMContentLoaded', function() {
            const tables = document.querySelectorAll('.table');
            tables.forEach(table => {
                const headers = Array.from(table.querySelectorAll('thead th')).map(th => th.textContent.trim());
                table.querySelectorAll('tbody tr').forEach(row => {
                    Array.from(row.cells).forEach((cell, index) => {
                        if (headers[index]) {
                            cell.setAttribute('data-label', headers[index]);
                        }
                    });
                });
            });
        });
        
        // Search Functionality
        let allViewsData = [];
        
        // Load all views data on page load
        async function loadViewsData() {
            try {
                const response = await fetch('/api/Search/views');
                if (!response.ok) {
                    console.error('Failed to load views data:', response.status, response.statusText);
                    return;
                }
                allViewsData = await response.json();
            } catch (error) {
                console.error('Error loading views data:', error);
                // Optionally show user feedback
                // alert('Search functionality is temporarily unavailable');
            }
        }
        
        // Initialize search
        document.addEventListener('DOMContentLoaded', function() {
            loadViewsData();
            
            const searchInput = document.getElementById('searchInput');
            const searchResults = document.getElementById('searchResults');
            
            if (searchInput) {
                searchInput.addEventListener('input', function(e) {
                    const query = e.target.value.trim().toLowerCase();
                    
                    if (query.length < 2) {
                        searchResults.classList.remove('show');
                        return;
                    }
                    
                    performSearch(query);
                });
                
                // Close search results when clicking outside
                document.addEventListener('click', function(e) {
                    const searchBar = document.querySelector('.search-bar');
                    if (searchBar && !searchBar.contains(e.target)) {
                        searchResults.classList.remove('show');
                    }
                });
                
                // Show results when focusing on search input with existing query
                searchInput.addEventListener('focus', function(e) {
                    const query = e.target.value.trim().toLowerCase();
                    if (query.length >= 2) {
                        performSearch(query);
                    }
                });
            }
        });
        
        function performSearch(query) {
            const searchResults = document.getElementById('searchResults');
            
            // Check if data is loaded
            if (!allViewsData || allViewsData.length === 0) {
                searchResults.innerHTML = `
                    <div class="search-no-results">
                        <i class="fas fa-search" style="font-size: 2rem; color: #6B7280; margin-bottom: 0.5rem;"></i>
                        <p>Loading search data...</p>
                    </div>
                `;
                searchResults.classList.add('show');
                return;
            }
            
            // Filter controllers and views based on query
            const filteredData = allViewsData.filter(item => {
                // Safety check: ensure item and item.Controller exist
                if (!item || !item.Controller) {
                    return false;
                }
                
                const controllerMatch = item.Controller.toLowerCase().includes(query);
                const viewsMatch = item.Views && Array.isArray(item.Views) && 
                                  item.Views.some(view => view && view.toLowerCase().includes(query));
                return controllerMatch || viewsMatch;
            }).map(item => {
                // If controller matches, show all views
                if (item.Controller.toLowerCase().includes(query)) {
                    return item;
                }
                // If only views match, filter to matching views
                return {
                    Controller: item.Controller,
                    Views: item.Views.filter(view => view && view.toLowerCase().includes(query))
                };
            });
            
            if (filteredData.length === 0) {
                searchResults.innerHTML = `
                    <div class="search-no-results">
                        <i class="fas fa-search" style="font-size: 2rem; color: #6B7280; margin-bottom: 0.5rem;"></i>
                        <p>No results found for "${query}"</p>
                    </div>
                `;
                searchResults.classList.add('show');
                return;
            }
            
            // Render search results
            searchResults.innerHTML = filteredData.map(item => {
                const controllerUrl = getControllerIndexUrl(item.Controller);
                // Escape HTML to prevent XSS
                const escapeHtml = (text) => {
                    const div = document.createElement('div');
                    div.textContent = text;
                    return div.innerHTML;
                };
                
                // Show controller and all views in one line
                const controllerName = escapeHtml(item.Controller);
                const viewsHtml = item.Views.map(view => {
                    const viewUrl = getViewUrl(item.Controller, view);
                    return `<a href="${escapeHtml(viewUrl)}" class="search-result-view">${escapeHtml(view)}</a>`;
                }).join('');
                
                return `
                    <div class="search-result-group">
                        <div style="padding: 0.75rem 1rem; display: flex; align-items: center; flex-wrap: wrap; gap: 0.5rem;">
                            <div class="search-result-controller" data-url="${escapeHtml(controllerUrl)}" style="margin: 0; padding: 0; background: transparent; cursor: pointer; display: inline-flex; align-items: center; gap: 0.5rem;">
                                <i class="fas fa-folder"></i>
                                <span>${controllerName}</span>
                                <i class="fas fa-chevron-right" style="font-size: 0.625rem;"></i>
                            </div>
                            <div style="display: inline-flex; flex-wrap: wrap; gap: 0.5rem;">
                                ${viewsHtml}
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
            
            // Add click event listeners to controller names
            searchResults.querySelectorAll('.search-result-controller').forEach(element => {
                element.addEventListener('click', function() {
                    const url = this.getAttribute('data-url');
                    if (url) {
                        navigateToUrl(url);
                    }
                });
            });
            
            searchResults.classList.add('show');
        }
        
        function getControllerIndexUrl(controller) {
            // Special case for Admin controller - Dashboard is the index
            if (controller === 'Admin') {
                return '/Admin/Dashboard';
            }
            // Default to Index action
            return `/${controller}/Index`;
        }
        
        function getViewUrl(controller, view) {
            // Special case for Admin controller
            if (controller === 'Admin' && view === 'Dashboard') {
                return '/Admin/Dashboard';
            }
            // Handle Home controller Index
            if (controller === 'Home' && view === 'Index') {
                return '/';
            }
            // Default URL pattern
            return `/${controller}/${view}`;
        }
        
        function navigateToUrl(url) {
            showLoader();
            window.location.href = url;
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>