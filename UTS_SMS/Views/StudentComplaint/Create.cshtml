@model UTS_SMS.Models.StudentComplaint

@{
    ViewData["Title"] = "Submit Complaint";
    var student = ViewBag.Student as Student;
}

<link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />

<div class="min-h-screen">
    <!-- Header Section -->
    <div class=" shadow-sm border-b border-primary-100">
        <div class="mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div class="flex-1 min-w-0">
                    <h1 class="text-2xl font-bold text-primary-800 sm:text-3xl">Submit Complaint</h1>
                    <p class="mt-1 text-sm text-neutral-500">Share your feedback or report any concerns</p>
                </div>
                <div class="mt-4 md:mt-0">
                    <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-primary-200 rounded-lg shadow-sm text-sm font-medium text-neutral-700 bg-white hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400">
                        <svg class="-ml-1 mr-2 h-5 w-5 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back to My Complaints
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        
         

        <!-- Complaint Form -->
        <div class="bg-white shadow-sm rounded-lg border border-primary-100">
            <div class="px-6 py-4 border-b border-primary-100">
                <h2 class="text-lg font-medium text-primary-800">Complaint Details</h2>
                <p class="mt-1 text-sm text-neutral-600">Please provide clear and detailed information about your concern</p>
            </div>

            <form asp-action="Create" method="post" class="p-6 space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-error"></div>

                <!-- Title -->
                <div>
                    <label asp-for="ComplaintTitle" class="block text-sm font-medium text-neutral-700 mb-2">Complaint Title *</label>
                    <input asp-for="ComplaintTitle" type="text" 
                           class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" 
                           placeholder="Brief summary of your complaint">
                    <span asp-validation-for="ComplaintTitle" class="text-error text-sm"></span>
                </div>

                <!-- Row 1: Type and Priority -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="ComplaintType" class="block text-sm font-medium text-neutral-700 mb-2">Complaint Type *</label>
                        <select asp-for="ComplaintType" 
                                class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                            <option value="">Select Type</option>
                            <option value="Academic">Academic Issues</option>
                            <option value="Behavioral">Behavioral Issues</option>
                            <option value="Financial">Financial Issues</option>
                            <option value="Administrative">Administrative Issues</option>
                            <option value="Facility">Facility Issues</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="ComplaintType" class="text-error text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Priority" class="block text-sm font-medium text-neutral-700 mb-2">Priority Level *</label>
                        <select asp-for="Priority" 
                                class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200">
                            <option value="">Select Priority</option>
                            <option value="Low">Low - General feedback or minor issue</option>
                            <option value="Medium">Medium - Moderate concern requiring attention</option>
                            <option value="High">High - Urgent issue requiring immediate attention</option>
                        </select>
                        <span asp-validation-for="Priority" class="text-error text-sm"></span>
                    </div>
                </div>

                <!-- Row 2: Teacher Search (Optional) -->
                <div>
                    <label for="teacherSearch" class="block text-sm font-medium text-neutral-700 mb-2">Related Teacher (Optional)</label>
                    <input type="text" id="teacherSearch" 
                           class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200"
                           placeholder="Search for a teacher by name..."
                           autocomplete="off">
                    <input type="hidden" id="teacherId" name="teacherId" value="" />
                    
                    <!-- Search Results Dropdown -->
                    <div id="teacherSearchResults" class="absolute z-10 mt-1 w-full bg-white border border-primary-200 rounded-lg shadow-lg hidden max-h-60 overflow-y-auto"></div>
                    
                    <!-- Selected Teacher Display -->
                    <div id="selectedTeacherDisplay" class="mt-2 hidden">
                        <div class="flex items-center justify-between p-3 bg-primary-50 rounded-lg border border-primary-200">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                <div>
                                    <p class="text-sm font-medium text-primary-800" id="selectedTeacherName"></p>
                                    <p class="text-xs text-primary-600" id="selectedTeacherSubjects"></p>
                                </div>
                            </div>
                            <button type="button" onclick="clearTeacherSelection()" class="text-error hover:text-red-700">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                    
                    <p class="mt-1 text-sm text-neutral-500">Select a teacher if your complaint is related to a specific teacher</p>
                </div>

                <!-- Description -->
                <div>
                    <label asp-for="ComplaintDescription" class="block text-sm font-medium text-neutral-700 mb-2">Complaint Description *</label>
                    <textarea asp-for="ComplaintDescription" rows="6" 
                              class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400 transition-colors duration-200" 
                              placeholder="Please provide a detailed description of your complaint. Include any relevant facts, dates, or circumstances that would help us understand and address your concern."></textarea>
                    <p class="mt-1 text-sm text-neutral-500">Be as specific as possible to help us address your concern effectively.</p>
                    <span asp-validation-for="ComplaintDescription" class="text-error text-sm"></span>
                </div>

                <!-- Important Information -->
                <div class="bg-primary-50 border border-blue-200 rounded-lg p-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-primary-800">Important Information</h3>
                            <div class="mt-2 text-sm text-blue-700">
                                <ul class="list-disc list-inside space-y-1">
                                    <li>Your complaint will be reviewed by the administration</li>
                                    <li>You will be notified when your complaint has been noted</li>
                                    <li>Please be respectful and constructive in your feedback</li>
                                    <li>False or malicious complaints may result in disciplinary action</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="flex flex-col sm:flex-row sm:justify-end sm:space-x-3 space-y-3 sm:space-y-0 pt-6 border-t border-primary-100">
                    <a asp-action="Index" 
                       class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-primary-200 shadow-sm text-sm font-medium rounded-lg text-neutral-700 bg-white hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                        Cancel
                    </a>
                    <button type="submit" 
                            class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-gradient-primary hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                        </svg>
                        Submit Complaint
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const titleInput = document.getElementById('ComplaintTitle');
            const descriptionTextarea = document.getElementById('ComplaintDescription');
            const maxTitleLength = 200;
            const maxDescriptionLength = 2000;
            
            // Character counters
            function createCharacterCounter(element, maxLength) {
                const counter = document.createElement('div');
                counter.className = 'mt-1 text-sm text-neutral-500 text-right';
                counter.textContent = `0 / ${maxLength} characters`;
                element.parentNode.insertBefore(counter, element.nextSibling);
                
                element.addEventListener('input', function() {
                    const length = this.value.length;
                    counter.textContent = `${length} / ${maxLength} characters`;
                    
                    if (length > maxLength * 0.9) {
                        counter.classList.remove('text-neutral-500');
                        counter.classList.add('text-accent-600');
                    } else if (length === maxLength) {
                        counter.classList.remove('text-accent-600');
                        counter.classList.add('text-error');
                    } else {
                        counter.classList.remove('text-accent-600', 'text-error');
                        counter.classList.add('text-neutral-500');
                    }
                });
            }
            
            if (titleInput) createCharacterCounter(titleInput, maxTitleLength);
            if (descriptionTextarea) createCharacterCounter(descriptionTextarea, maxDescriptionLength);
            
            // Teacher Search Functionality
            const teacherSearch = document.getElementById('teacherSearch');
            const teacherSearchResults = document.getElementById('teacherSearchResults');
            const selectedTeacherDisplay = document.getElementById('selectedTeacherDisplay');
            const teacherIdInput = document.getElementById('teacherId');
            let searchTimeout;

            if (teacherSearch) {
                // Make search container relative for absolute positioning
                teacherSearch.parentElement.style.position = 'relative';

                teacherSearch.addEventListener('input', function() {
                    const searchTerm = this.value.trim();
                    
                    clearTimeout(searchTimeout);
                    
                    if (searchTerm.length < 2) {
                        teacherSearchResults.classList.add('hidden');
                        return;
                    }
                    
                    searchTimeout = setTimeout(() => {
                        searchTeachers(searchTerm);
                    }, 300);
                });

                // Close dropdown when clicking outside
                document.addEventListener('click', function(e) {
                    if (!teacherSearch.contains(e.target) && !teacherSearchResults.contains(e.target)) {
                        teacherSearchResults.classList.add('hidden');
                    }
                });
            }
            
            // Form validation
            form.addEventListener('submit', function(e) {
                const title = titleInput.value.trim();
                const description = descriptionTextarea.value.trim();
                const type = document.getElementById('ComplaintType').value;
                const priority = document.getElementById('Priority').value;
                
                if (!title) {
                    e.preventDefault();
                    Swal.fire({
                        title: 'Missing Information',
                        text: 'Please enter a complaint title.',
                        icon: 'warning',
                        confirmButtonColor: '#0891b2'
                    });
                    titleInput.focus();
                    return false;
                }
                
                if (!description) {
                    e.preventDefault();
                    Swal.fire({
                        title: 'Missing Information',
                        text: 'Please provide a detailed description of your complaint.',
                        icon: 'warning',
                        confirmButtonColor: '#0891b2'
                    });
                    descriptionTextarea.focus();
                    return false;
                }
                
                if (!type) {
                    e.preventDefault();
                    Swal.fire({
                        title: 'Missing Information',
                        text: 'Please select a complaint type.',
                        icon: 'warning',
                        confirmButtonColor: '#0891b2'
                    });
                    document.getElementById('ComplaintType').focus();
                    return false;
                }
                
                if (!priority) {
                    e.preventDefault();
                    Swal.fire({
                        title: 'Missing Information',
                        text: 'Please select a priority level.',
                        icon: 'warning',
                        confirmButtonColor: '#0891b2'
                    });
                    document.getElementById('Priority').focus();
                    return false;
                }
                
                if (title.length > maxTitleLength) {
                    e.preventDefault();
                    Swal.fire({
                        title: 'Title Too Long',
                        text: `Complaint title must be ${maxTitleLength} characters or less.`,
                        icon: 'error',
                        confirmButtonColor: '#ef4444'
                    });
                    titleInput.focus();
                    return false;
                }
                
                if (description.length > maxDescriptionLength) {
                    e.preventDefault();
                    Swal.fire({
                        title: 'Description Too Long',
                        text: `Complaint description must be ${maxDescriptionLength} characters or less.`,
                        icon: 'error',
                        confirmButtonColor: '#ef4444'
                    });
                    descriptionTextarea.focus();
                    return false;
                }
                
                // Confirmation
                e.preventDefault();
                Swal.fire({
                    title: 'Submit Complaint?',
                    text: 'Please make sure all information is accurate before submitting.',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, Submit',
                    cancelButtonText: 'Review Again',
                    confirmButtonColor: '#0891b2',
                    cancelButtonColor: '#6b7280'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });

        function searchTeachers(term) {
            const studentId = @(student?.Id ?? 0);
            
            fetch(`@Url.Action("SearchTeachers", "StudentComplaint")?term=${encodeURIComponent(term)}&studentId=${studentId}`)
                .then(response => response.json())
                .then(data => {
                    displayTeacherResults(data);
                })
                .catch(error => {
                    console.error('Error searching teachers:', error);
                });
        }

        function displayTeacherResults(teachers) {
            const resultsDiv = document.getElementById('teacherSearchResults');
            
            if (!teachers || teachers.length === 0) {
                resultsDiv.innerHTML = '<div class="p-3 text-sm text-neutral-500">No teachers found</div>';
                resultsDiv.classList.remove('hidden');
                return;
            }
            
            let html = '<div class="py-2">';
            teachers.forEach(teacher => {
                html += `
                    <div class="px-3 py-2 hover:bg-primary-50 cursor-pointer transition-colors duration-150" 
                         onclick="selectTeacher(${teacher.id}, '${teacher.fullName.replace(/'/g, "\\'")}', ${teacher.teaches}, '${(teacher.subjects || []).join(", ").replace(/'/g, "\\'")}')">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-primary-800">${teacher.fullName}</p>
                                ${teacher.subjects && teacher.subjects.length > 0 ? `<p class="text-xs text-neutral-500">${teacher.subjects.join(", ")}</p>` : ''}
                            </div>
                            ${teacher.teaches ? '<span class="px-2 py-1 text-xs font-medium bg-success-light text-success rounded-full">Teaches You</span>' : ''}
                        </div>
                    </div>
                `;
            });
            html += '</div>';
            
            resultsDiv.innerHTML = html;
            resultsDiv.classList.remove('hidden');
        }

        function selectTeacher(id, name, teachesStudent, subjects) {
            document.getElementById('teacherId').value = id;
            document.getElementById('teacherSearch').value = '';
            document.getElementById('teacherSearchResults').classList.add('hidden');
            
            document.getElementById('selectedTeacherName').textContent = name;
            document.getElementById('selectedTeacherSubjects').textContent = subjects || (teachesStudent ? 'Currently teaches you' : '');
            document.getElementById('selectedTeacherDisplay').classList.remove('hidden');
        }

        function clearTeacherSelection() {
            document.getElementById('teacherId').value = '';
            document.getElementById('teacherSearch').value = '';
            document.getElementById('selectedTeacherDisplay').classList.add('hidden');
        }
    </script>
}