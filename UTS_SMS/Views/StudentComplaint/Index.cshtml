@{
    ViewData["Title"] = "My Complaints";
    var student = ViewBag.Student as Student;
    var outgoingComplaints = ViewBag.OutgoingComplaints as List<StudentComplaint> ?? new List<StudentComplaint>();
    var incomingComplaints = ViewBag.IncomingComplaints as List<StudentComplaint> ?? new List<StudentComplaint>();
    var currentTab = ViewBag.CurrentTab as string ?? "open";
}

<div class="min-h-screen ">
    <!-- Header Section -->
    <div class=" shadow-sm border-b border-primary-100">
        <div class=" mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div class="flex-1 min-w-0">
                    <h1 class="text-2xl font-bold text-primary-800 sm:text-3xl">My Complaints</h1>
                    <p class="mt-1 text-sm text-neutral-500">
                        Submit and track your complaints and feedback
                    </p>
                </div>
                
                <div class="mt-4 md:mt-0">
                    <a asp-action="Create" 
                       class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-primary hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        New Complaint
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="mx-auto px-4 sm:px-6 lg:px-8 py-8">
        
         
        <!-- Tab Navigation -->
        <div class="bg-white shadow-sm rounded-lg border border-primary-100 mb-6">
            <div class="border-b border-primary-100">
                <nav class="-mb-px flex" aria-label="Tabs">
                    <a href="@Url.Action("Index", new { tab = "open" })" 
                       class="w-1/3 py-4 px-1 text-center border-b-2 font-medium text-sm @(currentTab == "open" ? "border-primary-400 text-primary-600" : "border-transparent text-neutral-500 hover:text-neutral-700 hover:border-primary-200")">
                         Open Complaints
                    </a>
                    <a href="@Url.Action("Index", new { tab = "all" })" 
                       class="w-1/3 py-4 px-1 text-center border-b-2 font-medium text-sm @(currentTab == "all" ? "border-primary-400 text-primary-600" : "border-transparent text-neutral-500 hover:text-neutral-700 hover:border-primary-200")">
                         All Complaints
                    </a>
                    <a href="@Url.Action("Index", new { tab = "resolved" })" 
                       class="w-1/3 py-4 px-1 text-center border-b-2 font-medium text-sm @(currentTab == "resolved" ? "border-primary-400 text-primary-600" : "border-transparent text-neutral-500 hover:text-neutral-700 hover:border-primary-200")">
                         Resolved
                    </a>
                </nav>
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-6 bg-success-light border border-green-200 rounded-lg p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-success">@TempData["SuccessMessage"]</p>
                    </div>
                </div>
            </div>
        }

        @if (outgoingComplaints.Any() || incomingComplaints.Any())
        {
           

            <!-- Side-by-Side Split View for Complaints -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <div class="bg-white shadow-sm rounded-lg border border-primary-100 flex flex-col">
                    <div class="px-6 py-4 border-b border-primary-100 bg-primary-600">
                        <h3 class="text-lg font-medium text-white flex items-center">
                            <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10m0 0V6a2 2 0 00-2-2H9a2 2 0 00-2 2v2m0 0v8a2 2 0 002 2h8a2 2 0 002-2V8M9 12h6"></path>
                            </svg>
                            My Complaints
                        </h3>
                        <p class="mt-1 text-sm text-primary-100 break-words">Complaints you have submitted</p>
                    </div>
                    <div class="flex-1 overflow-y-auto overflow-x-hidden max-h-[600px] break-words">
                        @if (outgoingComplaints.Any())
                        {
                            @await Html.PartialAsync("_ComplaintList", outgoingComplaints)
                        }
                        else
                        {
                            <div class="p-12 text-center">
                                <svg class="mx-auto h-12 w-12 text-neutral-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                <p class="text-sm text-neutral-500">No complaints submitted yet</p>
                            </div>
                        }
                    </div>
                </div>

                <div class="bg-white shadow-sm rounded-lg border border-primary-100 flex flex-col">
                    <div class="px-6 py-4 border-b border-primary-100 bg-primary-600">
                        <h3 class="text-lg font-medium text-white flex items-center">
                            <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                            </svg>
                            Complaints About Me
                        </h3>
                        <p class="mt-1 text-sm text-orange-100 break-words">Complaints submitted by staff about you</p>
                    </div>
                    <div class="flex-1 overflow-y-auto overflow-x-hidden max-h-[600px] break-words">
                        @if (incomingComplaints.Any())
                        {
                            @await Html.PartialAsync("_ComplaintList", incomingComplaints)
                        }
                        else
                        {
                            <div class="p-12 text-center">
                                <svg class="mx-auto h-12 w-12 text-success mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <p class="text-sm text-success">No complaints against you!</p>
                                <p class="text-xs text-neutral-500 mt-1">Keep up the good work</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- No Complaints -->
            <div class="bg-white shadow-sm rounded-lg border border-primary-100">
                <div class="p-12 text-center">
                    <svg class="mx-auto h-16 w-16 text-neutral-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <h3 class="text-lg font-medium text-primary-800 mb-2">No Complaints @(currentTab == "resolved" ? "Resolved" : currentTab == "all" ? "Found" : "Open")</h3>
                    <p class="text-neutral-600 mb-4">
                        @if (currentTab == "resolved") 
                        {
                            @:You don't have any resolved complaints at the moment.
                        } 
                        else if (currentTab == "all") 
                        {
                            @:You haven't submitted any complaints yet. If you have feedback or concerns, feel free to submit a complaint.
                        } 
                        else 
                        {
                            @:You don't have any open complaints at the moment.
                        }
                    </p>
                    @if (currentTab != "resolved")
                    {
                        <a asp-action="Create" 
                           class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-primary hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            Submit Your First Complaint
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>