@model IEnumerable<SMS.Models.StudentComplaint>

@{
    ViewData["Title"] = "All Student Complaints - Admin View";
    var statusFilter = ViewBag.StatusFilter as string ?? "";
    var searchStudent = ViewBag.SearchStudent as string ?? "";
    var selectedStudentId = ViewBag.SelectedStudentId as int?;
    var students = ViewBag.Students as List<Student> ?? new List<Student>();
    var campuses = ViewBag.Campuses as List<Campus> ?? new List<Campus>();
}

<div class="min-h-screen bg-neutral-50">
    <!-- Header Section -->
    <div class="bg-white shadow-sm border-b border-primary-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                <div class="flex-1 min-w-0">
                    <h1 class="text-2xl font-bold text-primary-800 sm:text-3xl">Student Complaints</h1>
                    <p class="mt-1 text-sm text-neutral-500">
                        Manage and track all student complaints across campuses
                    </p>
                </div>
                
                <div class="mt-4 lg:mt-0">
                    <a asp-action="AdminCreate" 
                       class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-primary hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 transition-colors duration-200">
                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Register Complaint
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="bg-white rounded-lg shadow-sm border border-primary-100 p-4 mb-6">
            <form method="get" class="space-y-4">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                    <!-- Status Filter -->
                    <div>
                        <label for="status" class="block text-sm font-medium text-neutral-700 mb-1">Status</label>
                        <select id="status" name="status" class="block w-full rounded-md border-primary-200 shadow-sm focus:border-primary-400 focus:ring-primary-400 text-sm">
                            <option value="">All Statuses</option>
                            <option value="Open" selected="@(statusFilter == "Open")">Open</option>
                            <option value="In Investigation" selected="@(statusFilter == "In Investigation")">In Investigation</option>
                            <option value="Resolved" selected="@(statusFilter == "Resolved")">Resolved</option>
                            <option value="Closed" selected="@(statusFilter == "Closed")">Closed</option>
                            <option value="Escalated" selected="@(statusFilter == "Escalated")">Escalated</option>
                        </select>
                    </div>

                    <!-- Student Search -->
                    <div>
                        <label for="searchStudent" class="block text-sm font-medium text-neutral-700 mb-1">Search Student</label>
                        <input type="text" id="searchStudent" name="searchStudent" value="@searchStudent" 
                               placeholder="Enter student name..." 
                               class="block w-full rounded-md border-primary-200 shadow-sm focus:border-primary-400 focus:ring-primary-400 text-sm">
                    </div>

                    <!-- Student Dropdown -->
                    <div class="sm:col-span-2 lg:col-span-1">
                        <label for="studentId" class="block text-sm font-medium text-neutral-700 mb-1">Select Student</label>
                        <select id="studentId" name="studentId" class="block w-full rounded-md border-primary-200 shadow-sm focus:border-primary-400 focus:ring-primary-400 text-sm">
                            <option value="">All Students</option>
                            @foreach (var student in students)
                            {
                                <option value="@student.Id" selected="@(selectedStudentId == student.Id)">
                                    @student.StudentName (@student.FatherName)
                                </option>
                            }
                        </select>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-col sm:flex-row lg:flex-col lg:justify-end space-y-2 sm:space-y-0 sm:space-x-2 lg:space-x-0 lg:space-y-2">
                        <button type="submit" class="w-full sm:w-auto lg:w-full px-4 py-2 bg-gradient-primary text-white rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-400 text-sm">
                            üîç Filter
                        </button>
                        <a href="@Url.Action("AdminIndex")" class="w-full sm:w-auto lg:w-full px-4 py-2 bg-gray-300 text-neutral-700 rounded-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 text-center text-sm">
                            üîÑ Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <!-- Complaints List -->
        <div class="bg-white shadow-sm rounded-lg border border-primary-100 overflow-hidden">
            @if (Model.Any())
            {
                <!-- Desktop View -->
                <div class="hidden lg:block overflow-x-auto">
                    <table class="min-w-full divide-y divide-primary-100">
                        <thead class="bg-neutral-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Student</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Complaint</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Type</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Reporter</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Priority</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Campus</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-primary-100">
                            @foreach (var complaint in Model)
                            {
                                <tr class="hover:bg-neutral-50">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-10 w-10">
                                                <div class="h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center">
                                                    <span class="text-sm font-medium text-primary-800">@complaint.Student?.StudentName?.Substring(0, 1).ToUpper()</span>
                                                </div>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-primary-800">@complaint.Student?.StudentName</div>
                                                <div class="text-sm text-neutral-500">@complaint.Student?.FatherName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="text-sm text-primary-800 font-medium">@complaint.ComplaintTitle</div>
                                        <div class="text-sm text-neutral-500">@(complaint.ComplaintDescription.Length > 100 ? complaint.ComplaintDescription.Substring(0, 100) + "..." : complaint.ComplaintDescription)</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-neutral-100 text-primary-800">
                                            @complaint.ComplaintType
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @{
                                            var reporterClass = complaint.ReporterType switch
                                            {
                                                "Student" => "bg-success-light text-success",
                                                "Admin" => "bg-purple-100 text-purple-800",
                                                "Teacher" => "bg-orange-100 text-orange-800",
                                                _ => "bg-neutral-100 text-primary-800"
                                            };
                                        }
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full @reporterClass">
                                            @complaint.ReporterType
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                                            @(complaint.Priority == "High" ? "bg-error-light text-error" : 
                                              complaint.Priority == "Medium" ? "bg-warning-light text-yellow-800" : 
                                              "bg-success-light text-success")">
                                            @complaint.Priority
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                                            @(complaint.Status == "Open" ? "bg-primary-100 text-primary-800" : 
                                              complaint.Status == "In Investigation" ? "bg-warning-light text-yellow-800" : 
                                              complaint.Status == "Resolved" ? "bg-success-light text-success" : 
                                              complaint.Status == "Escalated" ? "bg-error-light text-error" :
                                              "bg-neutral-100 text-primary-800")">
                                            @complaint.Status
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-primary-800">
                                        @complaint.ComplaintDate.ToString("MMM dd, yyyy")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-neutral-500">
                                        @complaint.Campus?.Name
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <div class="flex space-x-2">
                                            <a asp-action="Details" asp-route-id="@complaint.Id" class="text-primary-600 hover:text-primary-800" title="View Details">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                                </svg>
                                            </a>
                                            @if (complaint.Status != "Resolved" && complaint.Status != "Closed")
                                            {
                                                <button onclick="markAsResolved(@complaint.Id)" class="text-success hover:text-success" title="Mark as Resolved">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                    </svg>
                                                </button>
                                            }
                                            <button onclick="softDeleteComplaint(@complaint.Id)" class="text-error hover:text-error" title="Delete Complaint">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Mobile View -->
                <div class="lg:hidden divide-y divide-primary-100">
                    @foreach (var complaint in Model)
                    {
                        <div class="p-4">
                            <!-- Student Info -->
                            <div class="flex items-start mb-3">
                                <div class="flex-shrink-0 h-10 w-10">
                                    <div class="h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center">
                                        <span class="text-sm font-medium text-primary-800">@complaint.Student?.StudentName?.Substring(0, 1).ToUpper()</span>
                                    </div>
                                </div>
                                <div class="ml-3 flex-1 min-w-0">
                                    <div class="text-sm font-medium text-primary-800 truncate">@complaint.Student?.StudentName</div>
                                    <div class="text-xs text-neutral-500 truncate">@complaint.Student?.FatherName</div>
                                    <div class="text-xs text-neutral-400 mt-1">@complaint.Campus?.Name</div>
                                </div>
                                <div class="ml-2 flex-shrink-0">
                                    @{
                                        var mobileStatusClass = complaint.Status switch
                                        {
                                            "Open" => "bg-primary-100 text-primary-800",
                                            "In Investigation" => "bg-warning-light text-yellow-800",
                                            "Resolved" => "bg-success-light text-success",
                                            "Escalated" => "bg-error-light text-error",
                                            _ => "bg-neutral-100 text-primary-800"
                                        };
                                    }
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full @mobileStatusClass">
                                        @complaint.Status
                                    </span>
                                </div>
                            </div>

                            <!-- Complaint Info -->
                            <div class="mb-3">
                                <h3 class="text-sm font-medium text-primary-800 mb-1">@complaint.ComplaintTitle</h3>
                                <p class="text-xs text-neutral-600 break-words">@(complaint.ComplaintDescription.Length > 150 ? complaint.ComplaintDescription.Substring(0, 150) + "..." : complaint.ComplaintDescription)</p>
                            </div>

                            <!-- Tags and Actions -->
                            <div class="flex flex-wrap items-center justify-between gap-2">
                                <div class="flex flex-wrap gap-1">
                                    <span class="inline-flex px-2 py-1 text-xs rounded-full bg-neutral-100 text-primary-800">
                                        @complaint.ComplaintType
                                    </span>
                                    @{
                                        var mobilePriorityClass = complaint.Priority switch
                                        {
                                            "High" => "bg-error-light text-error",
                                            "Medium" => "bg-warning-light text-yellow-800",
                                            "Low" => "bg-success-light text-success",
                                            _ => "bg-neutral-100 text-primary-800"
                                        };
                                        var mobileReporterClass = complaint.ReporterType switch
                                        {
                                            "Student" => "bg-success-light text-success",
                                            "Admin" => "bg-purple-100 text-purple-800",
                                            "Teacher" => "bg-orange-100 text-orange-800",
                                            _ => "bg-neutral-100 text-primary-800"
                                        };
                                    }
                                    <span class="inline-flex px-2 py-1 text-xs rounded-full @mobilePriorityClass">
                                        @complaint.Priority
                                    </span>
                                    <span class="inline-flex px-2 py-1 text-xs rounded-full @mobileReporterClass">
                                        @complaint.ReporterType
                                    </span>
                                </div>
                                
                                <div class="flex items-center space-x-2">
                                    <span class="text-xs text-neutral-500">@complaint.ComplaintDate.ToString("MMM dd")</span>
                                    <div class="flex space-x-1">
                                        <a asp-action="Details" asp-route-id="@complaint.Id" class="text-primary-600 hover:text-primary-800" title="View">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                            </svg>
                                        </a>
                                        @if (complaint.Status != "Resolved" && complaint.Status != "Closed")
                                        {
                                            <button onclick="markAsResolved(@complaint.Id)" class="text-success hover:text-success" title="Resolve">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                            </button>
                                        }
                                        <button onclick="softDeleteComplaint(@complaint.Id)" class="text-error hover:text-error" title="Delete">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-12">
                    <svg class="mx-auto h-12 w-12 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-primary-800">No complaints found</h3>
                    <p class="mt-1 text-sm text-neutral-500">No student complaints match your current filters.</p>
                </div>
            }
        </div>
    </div>
</div>

<script>
function markAsResolved(id) {
    if (confirm('Are you sure you want to mark this complaint as resolved?')) {
        fetch(`/StudentComplaint/MarkAsResolved/${id}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert(data.message);
                location.reload();
            } else {
                alert(data.message || 'Error updating complaint status');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error updating complaint status');
        });
    }
}

function softDeleteComplaint(id) {
    if (confirm('Are you sure you want to delete this complaint? This action cannot be undone.')) {
        fetch(`/StudentComplaint/SoftDelete/${id}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert(data.message);
                location.reload();
            } else {
                alert(data.message || 'Error deleting complaint');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error deleting complaint');
        });
    }
}

function updateStatus(id, status) {
    if (confirm(`Are you sure you want to mark this complaint as ${status}?`)) {
        fetch(`/StudentComplaint/UpdateStatus/${id}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            },
            body: JSON.stringify({ status: status })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert(data.message);
                location.reload();
            } else {
                alert(data.message || 'Error updating complaint status');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error updating complaint status');
        });
    }
}

// Add CSRF token to the page for AJAX requests
document.addEventListener('DOMContentLoaded', function() {
    if (!document.querySelector('input[name="__RequestVerificationToken"]')) {
        const form = document.createElement('form');
        form.style.display = 'none';
        form.innerHTML = '@Html.AntiForgeryToken()';
        document.body.appendChild(form);
    }
});
</script>