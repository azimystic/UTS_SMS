                icon: 'info',
                showCancelButton: true,
                confirmButtonText: 'Proceed to Resolve',
                cancelButtonText: 'Cancel',
                reverseButtons: true,
                customClass: {
                    confirmButton: 'px-4 py-2 bg-success text-white rounded-lg hover:bg-green-700 ml-2',
                    cancelButton: 'px-4 py-2 bg-gray-300 text-neutral-700 rounded-lg hover:bg-gray-400'
                },
                buttonsStyling: false
            });
            
            if (proceed) {
                proceedWithResolution(id, title, false);
            }
            return;
        }
    }
    
    // Scenario A: Outgoing complaint (no teacher) OR other cases
    // Allow resolution immediately
    proceedWithResolution(id, title, false);
}

