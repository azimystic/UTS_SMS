}

// Proceed with complaint resolution
async function proceedWithResolution(id, title, override = false) {
    const { value: comments } = await Swal.fire({
        title: 'Resolve Complaint',
        html: `
            <div class="text-left">
                <p class="mb-4 text-sm text-neutral-600"><strong>Complaint:</strong> ${title}</p>
                <label class="block text-sm font-medium text-neutral-700 mb-2">Resolution Comments *</label>
                <textarea id="resolutionComments" class="w-full px-3 py-2 border border-primary-200 rounded-lg focus:ring-2 focus:ring-primary-400 focus:border-primary-400" 
                          rows="5" placeholder="Provide details about how this complaint was resolved..."></textarea>
                <p class="mt-2 text-xs text-neutral-500">These comments will be visible to both the student and the teacher (if involved).</p>
            </div>
        `,
        showCancelButton: true,
        confirmButtonText: 'Resolve Complaint',
        cancelButtonText: 'Cancel',
        reverseButtons: true,
        customClass: {
            confirmButton: 'px-4 py-2 bg-success text-white rounded-lg hover:bg-green-700 ml-2',
            cancelButton: 'px-4 py-2 bg-gray-300 text-neutral-700 rounded-lg hover:bg-gray-400'
        },
        buttonsStyling: false,
        preConfirm: () => {
            const comments = document.getElementById('resolutionComments').value.trim();
            if (!comments) {
                Swal.showValidationMessage('Please provide resolution comments');
                return false;
            }
            return comments;
        }
    });
    
    if (comments) {
        resolveComplaint(id, comments, override);
    }
}

// Resolve complaint with comments
function resolveComplaint(id, comments, override = false) {
    fetch(`/StudentComplaint/ResolveComplaint/${id}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'RequestVerificationToken': token
        },
        body: JSON.stringify({ 
            resolutionComments: comments,
            overrideTeacherComment: override
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            Swal.fire({
                title: 'Success!',
                text: data.message,
                icon: 'success',
                confirmButtonText: 'OK',
                customClass: {
                    confirmButton: 'px-4 py-2 bg-success text-white rounded-lg hover:bg-green-700'
                },
                buttonsStyling: false
            }).then(() => {
                location.reload();
            });
        } else {
            Swal.fire({
                title: 'Error',
                text: data.message,
                icon: 'error',
                confirmButtonText: 'OK',
                customClass: {
                    confirmButton: 'px-4 py-2 bg-error text-white rounded-lg hover:bg-red-700'
                },
                buttonsStyling: false
            });
        }
    })
    .catch(error => {
        console.error('Error:', error);
        Swal.fire({
            title: 'Error',
            text: 'An error occurred while resolving the complaint',
            icon: 'error',
            confirmButtonText: 'OK',
            customClass: {
                confirmButton: 'px-4 py-2 bg-error text-white rounded-lg hover:bg-red-700'
            },
            buttonsStyling: false
        });
    });
}

