            denyButtonText: 'Proceed Anyway',
            cancelButtonText: 'Cancel',
            reverseButtons: true,
               customClass: {
        confirmButton: 'px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700',
        // Added ml-3 (margin-left) to push it away from the first button
        denyButton: 'px-4 py-2 bg-warning text-white rounded-lg hover:bg-yellow-600 ml-3',
        // Added ml-3 (margin-left) to push it away from the middle button
        cancelButton: 'px-4 py-2 bg-gray-300 text-neutral-700 rounded-lg hover:bg-gray-400 ml-3'
    },
            buttonsStyling: false
        });
        
        if (action === true) {
            // Send reminder to teacher
            sendTeacherReminder(id);
            return;
        } else if (action === false) {
            // Proceed anyway with override
            proceedWithResolution(id, title, true);
            return;
        } else {
            // Cancelled
            return;
        }
    } else if (hasTeacher && hasTeacherComments) {
        // Scenario B: Incoming complaint with teacher AND comments exist
        // Fetch and show teacher comments in modal for review
        const response = await fetch(`/StudentComplaint/GetTeacherComments?id=${id}`);
        const data = await response.json();
        
        if (data.success && data.hasComments) {
            const { value: proceed } = await Swal.fire({
