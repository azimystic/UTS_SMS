@model UTS_SMS.Models.MonthlyCalendarViewModel

@{
    ViewData["Title"] = "Academic Calendar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
        <div class="border-4 border-dashed border-primary-100 rounded-lg p-8">
            
            <!-- Header -->
            <div class="mb-8">
                <div class="flex justify-between items-center">
                    <div>
                        <h1 class="text-3xl font-bold text-primary-800">Academic Calendar</h1>
                        <p class="mt-2 text-sm text-neutral-600">Manage holidays and academic calendar</p>
                    </div>
                    <a asp-action="Create" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Add Holiday
                    </a>
                </div>
            </div>

            <!-- Filters -->
            <form method="get" class="mb-6">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <!-- Year -->
                    <div>
                        <label for="year" class="block text-sm font-medium text-neutral-700">Year</label>
                        <select id="year" name="year" 
                                class="mt-1 block w-full rounded-md border-primary-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                            @for (int y = DateTime.Now.Year - 2; y <= DateTime.Now.Year + 2; y++)
                            {
                                <option value="@y" selected="@(ViewBag.Year == y)">@y</option>
                            }
                        </select>
                    </div>

                    <!-- Month -->
                    <div>
                        <label for="month" class="block text-sm font-medium text-neutral-700">Month</label>
                        <select id="month" name="month" 
                                class="mt-1 block w-full rounded-md border-primary-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                            @for (int m = 1; m <= 12; m++)
                            {
                                var monthName = new DateTime(2000, m, 1).ToString("MMMM");
                                <option value="@m" selected="@(ViewBag.Month == m)">@monthName</option>
                            }
                        </select>
                    </div>

                    <!-- Holiday Type -->
                    <div>
                        <label for="holidayType" class="block text-sm font-medium text-neutral-700">Holiday Type</label>
                        <select id="holidayType" name="holidayType" 
                                class="mt-1 block w-full rounded-md border-primary-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                            <option value="">All Types</option>
                            @foreach (var type in ViewBag.HolidayTypes)
                            {
                                <option value="@type" selected="@(ViewBag.HolidayType == type)">@type</option>
                            }
                        </select>
                    </div>

                    <!-- Campus Filter (only if user can see multiple campuses) -->
                    @if (ViewBag.UserCampusId == null)
                    {
                        <div>
                            <label for="campusFilter" class="block text-sm font-medium text-neutral-700">Campus</label>
                            <select id="campusFilter" name="campusFilter"
                                    class="mt-1 block w-full rounded-md border-primary-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                <option value="">All Campuses</option>
                                @foreach (var campus in ViewBag.Campuses)
                                {
                                    <option value="@campus.Id" selected="@(ViewBag.CampusFilter?.ToString() == campus.Id.ToString())">
                                        @campus.Name
                                    </option>
                                }
                            </select>
                        </div>
                    }
                </div>

                <div class="mt-4">
                    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Filter
                    </button>
                </div>
            </form>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="rounded-md bg-success-light p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-success">@TempData["SuccessMessage"]</p>
                        </div>
                    </div>
                </div>
            }

            <!-- Calendar Navigation -->
            <div class="flex items-center justify-between mb-6">
                <div class="flex items-center space-x-4">
                    <a asp-action="Index" asp-route-year="@(Model.Month == 1 ? Model.Year - 1 : Model.Year)" 
                       asp-route-month="@(Model.Month == 1 ? 12 : Model.Month - 1)"
                       asp-route-campusFilter="@ViewBag.CampusFilter"
                       asp-route-holidayType="@ViewBag.HolidayType"
                       class="inline-flex items-center px-3 py-2 border border-primary-200 shadow-sm text-sm leading-4 font-medium rounded-md text-neutral-700 bg-white hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        ← Previous Month
                    </a>
                    
                    <h2 class="text-2xl font-semibold text-primary-800">@Model.MonthName</h2>
                    
                    <a asp-action="Index" asp-route-year="@(Model.Month == 12 ? Model.Year + 1 : Model.Year)" 
                       asp-route-month="@(Model.Month == 12 ? 1 : Model.Month + 1)"
                       asp-route-campusFilter="@ViewBag.CampusFilter"
                       asp-route-holidayType="@ViewBag.HolidayType"
                       class="inline-flex items-center px-3 py-2 border border-primary-200 shadow-sm text-sm leading-4 font-medium rounded-md text-neutral-700 bg-white hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Next Month →
                    </a>
                </div>
                
                <a asp-action="Index" asp-route-year="@DateTime.Now.Year" asp-route-month="@DateTime.Now.Month"
                   asp-route-campusFilter="@ViewBag.CampusFilter"
                   asp-route-holidayType="@ViewBag.HolidayType"
                   class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    This Month
                </a>
            </div>

            <!-- Calendar Grid -->
            <div class="bg-white shadow overflow-hidden sm:rounded-lg">
                <div class="grid grid-cols-7 gap-px bg-primary-100">
                    <!-- Days of week header -->
                    @foreach (var day in new[] { "Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday" })
                    {
                        <div class="bg-neutral-50 py-2 text-center text-xs font-semibold text-primary-800 uppercase tracking-wide">
                            @day
                        </div>
                    }
                    
                    <!-- Calendar days -->
                    @foreach (var day in Model.CalendarDays)
                    {
                        var bgClass = "bg-white";
                        if (!day.IsCurrentMonth)
                        {
                            bgClass = "bg-neutral-50 text-neutral-400";
                        }
                        else if (day.IsHoliday)
                        {
                            bgClass = "bg-error-light";
                        }
                        else if (day.IsWeekend)
                        {
                            bgClass = "bg-primary-50";
                        }

                        <div class="@bgClass min-h-0 py-2 px-3">
                            <div class="flex flex-col h-full">
                                <span class="text-sm @(day.IsCurrentMonth ? "text-primary-800" : "text-neutral-400")">@day.Day</span>
                                @if (day.IsHoliday)
                                {
                                    <div class="mt-1 space-y-1">
                                        @foreach (var holiday in day.Holidays)
                                        {
                                            <div class="flex items-center justify-between">
                                                <div class="text-xs text-error font-medium truncate">@holiday.HolidayName</div>
                                                
                                            </div>
                                            <div class="text-xs text-neutral-500">@holiday.HolidayType</div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Holiday Legend -->
            <div class="mt-6 grid grid-cols-1 md:grid-cols-4 gap-4">
                <div class="flex items-center">
                    <div class="w-4 h-4 bg-error-light border border-red-200 rounded mr-2"></div>
                    <span class="text-sm text-neutral-600">Holiday</span>
                </div>
                <div class="flex items-center">
                    <div class="w-4 h-4 bg-primary-50 border border-blue-200 rounded mr-2"></div>
                    <span class="text-sm text-neutral-600">Weekend</span>
                </div>
                <div class="flex items-center">
                    <div class="w-4 h-4 bg-white border border-primary-100 rounded mr-2"></div>
                    <span class="text-sm text-neutral-600">Working Day</span>
                </div>
                <div class="flex items-center">
                    <div class="w-4 h-4 bg-neutral-50 border border-primary-100 rounded mr-2"></div>
                    <span class="text-sm text-neutral-600">Other Month</span>
                </div>
            </div>

            <!-- Monthly Holiday List -->
            @if (Model.Holidays.Any())
            {
                <div class="mt-8">
                    <h3 class="text-lg font-medium text-primary-800 mb-4">Holidays in @Model.MonthName</h3>
                    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
                        <table class="min-w-full divide-y divide-primary-200">
                            <thead class="bg-neutral-50">
                                <tr>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Date</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Holiday Name</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Type</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Description</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-primary-100">
                                @foreach (var holiday in Model.Holidays.OrderBy(h => h.Date))
                                {
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-primary-800">
                                            @holiday.Date.ToString("MMM dd, yyyy")
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-primary-800">@holiday.HolidayName</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                                @(holiday.HolidayType == "National" ? "bg-error-light text-error" : 
                                                  holiday.HolidayType == "Religious" ? "bg-success-light text-success" :
                                                  holiday.HolidayType == "Academic" ? "bg-primary-100 text-primary-800" : "bg-neutral-100 text-primary-800")">
                                                @holiday.HolidayType
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 text-sm text-primary-800">
                                            @(holiday.Description ?? "-")
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                            <a asp-action="Edit" asp-route-id="@holiday.Id" class="text-info hover:text-indigo-900 mr-4">Edit</a>
                                            <form asp-action="Delete" asp-route-id="@holiday.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this holiday?')">
                                                <button type="submit" class="text-error hover:text-error">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

        </div>
    </div>
</div>